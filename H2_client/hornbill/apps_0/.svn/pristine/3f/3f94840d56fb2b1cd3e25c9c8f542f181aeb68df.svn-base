@import '../block';

html { .f(62.5%); }
body { .bgwhite; }

.top-image {
	.block; .w(100%); .h(0); .pt(224*@w);
	background-repeat   : no-repeat;
	background-position : center top;
	background-size     : cover;
}

.shop-info {
	.mt(-78*@w); .c;
	.shop-logo {
		.w(100%); .pt(5*@w);
		background      : url(//d04.res.meilishuo.net/pic/_o/ba/6a/c9433f864f3446242b2b28796aa5_639_125.cg.png) center top no-repeat;
		background-size : cover;
	}
	img {
		.w(116*@w); .border-r(50%);
	}
	.shop-name { .mt(1rem); .mb(1.5rem); color: #333; .f(1.4rem); }
}

#goods_wall { .pr; }

.poster { 
	.pa; 
	figure {
		.poster-link {
			.block; .w(100%); .pt(100%);
		}
	}
	figcaption { 
		padding: .4rem; .f(1.3rem);
	}
	.poster-link {
		background-repeat: no-repeat;
		background-position: center center;
		background-size: cover;
	}
	.poster-info-title {
		.h(1.4rem);
		.l(1.4rem);
		color: #333;
		/* 文本折行隐藏 */
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 1;
		-webkit-box-orient: vertical;
	}
	.poster-info-price { color: #f06a77; }
}

.weidian {
	.pt(24*@w);
	.pb(60*@w);
	border-top: 10px solid #f4f4f4;
	.c;
	figure {
		.mb(20*@w);
		img { .w(98*@w); .mb(15*@w); }
	}
	figcaption {
		b, i { .block; }
		b { .f(1.1rem); .fc(#666); .fn; .l(2.1rem); }
		i { .f(.8rem); .fc(#bbb); font-style: normal; }
	}
	.weidian-btn {
		.i_block; 
		.w(193*@w); 
		.pt(58*@w);
		background: url(//d05.res.meilishuo.net/pic/_o/59/3b/5e247e61744f8f18cbf2b092b0e4_193_58.cf.png) center center no-repeat;
		background-size: contain;
	}
}

/*回到顶部*/
#gotop{
	.none;
	.pf;
	right: 20px;
	.w(80*@w);
	img{
		.w(100%);
	}
}

.pullUp;
