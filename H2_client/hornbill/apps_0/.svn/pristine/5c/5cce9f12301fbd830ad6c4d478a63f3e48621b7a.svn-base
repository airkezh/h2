@import "../block.less";

body{ .pr;.w(6.4rem);.f(.24rem);.bgc(#f4f4f4); }

.goTopRem;
.wap_head;
.slide;
.head_img{
	.pf;top: 0;left: 0;.w(6.4rem);.h(1.69rem);.hidden;z-index: 0;
	.mls_desc{ .block;.w(6.4rem); }
}

.none_search{
	padding: .24rem 1rem .2rem;.mb(-.2rem);.bgc(#fff);.l(.36rem);

	img{ .left;.w(.68rem); }
	span{ .fc(#FF7A9A); }
	p{ .ml(1rem);.w(3.3rem);word-break: break-all; }
}

.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-10px);
	}
	&[status="tap"]{
		background:0 none;
		&:before{
			content:"上拉看更多..."
		}
	}
	&[status="stop"]{
		background:0 none;
		&:before{
			content:"木有了...";
		}
	}
}

#attr_block{
	.pf;top: 0;left: 0;.w(6rem);.hidden;z-index: 0;.bgc(#fff);padding: .2rem;.pb(0);

	a{ .left;.mb(.2rem);.w(20%);.c;.f(.22rem);.fc(#666); }
	.bs_load_img{ .block;.w(1.2rem);.h(1.2rem);background: no-repeat center;background-size: cover;opacity: 0; }
}

#poster_blcok{ .pr;z-index: 10;.mt(6.84rem);.bgc(#f4f4f4);box-shadow: 0 -4px 5px 0 rgba(224,224,224,0.35); }

.attr_desc{
	.mt(.2rem);.w(6.4rem);min-height: 2rem;

	img{ .w(100%); }
}

.poster_wrap{
	.bgc(#fff);.mt(.2rem);.pt(.2rem);min-height: 6rem;
	.title{ .f(.26rem);.fc(#666);padding: .2rem;.c; }
	.goods_wall{ .pr; }
	.poster_grid{ .pa;.c;.pb(.25rem); }
	.pic_load{ .hidden;.w(3.05rem);background: #FFF url("http://d03.res.meilishuo.net/pic/_o/41/dd/3bcda8d9d9e92dcd064958fe2643_290_290.ch.jpg") center center no-repeat;background-size: 100%; }
	.bs_load_img{ .block;.w(100%);.h(3.95rem);background: no-repeat;background-size: cover;opacity: 0; }
	.clothesTitle{ .w(90%);.auto;.mt(.1rem);.mb(.14rem);.f(.22rem);.fc(#666);.ellipsis; }
	.price{ .f(.26rem);.fc(#FF7A9A);.pr(.18rem); }
	.like{ .pl(.3rem);.f(.26rem);.fc(#999);background: url(@icon_bg) no-repeat -.1rem 81.8%;background-size: .45rem; }
	.h_mark{ .left;.ml(.08rem);.mt(-1px); }
}

