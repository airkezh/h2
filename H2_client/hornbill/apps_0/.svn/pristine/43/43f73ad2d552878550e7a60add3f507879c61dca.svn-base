@import "../block.less";

html{ .f(10*@f);}
body{ .bgwhite;}
img{ .block; .w(100%);}

.sliderBanner;
// .banner-slider-point{.none;}
// 轮播banner
.sliderBanner;
.banner-slider-point{.pa;.w(100%);left:0;.mb(8px);
	li{float: none;.i_block;background-color:#fff;.vm;.w(5px);.h(5px);.mr(2px);}
	.curr{background-color:transparent;border:1px solid #fff}
}
.banner-slider{.pr;}
// hot-shop
.hot-shop{.bgc(#f6f6f6);padding:15px 0;
	.inner{.bgc(#fff);padding:15px 0 10px 2%;.hidden;}
	h3{.f(1.8rem);.l(1.2);.c;.mb(12px);.fn;}
	li{.left;.w(23%);.mr(2%);.mb(2%);
		// img{.border-r(50%)}
	}
}

.content {
	.pl(20*@px); .pr(20*@px);
	.shop { 
		.clearfix; .pt(20*@px); .pb(20*@px); .block; 
		.logo { .left; .border-r(50%); .w(152/600*100%);}
		.info { 
			.left; .fc(#000); .ml(4%); .w(70%);
			h2 { 
				.f(38*@px); text-transform:uppercase; .pt(10*@px); .pb(10*@px);
				span { .fc(#aeaeae); .f(20*@px); .pl(10*@px);}
			}
			h3 { .f(26*@px); .pb(8*@px); border-bottom: 1px solid #d8d5e3; .l(30*@px);}
			p {
				.clearfix; .pt(22*@px);
				.title {
					.left; .f(18*@px); .fc(#565656); .i_block; .l(30*@px); .fc(#a8a8a8); .w(70%);
				}
				b {
					.w(20*@px); .h(30*@px); .i_block; .vm;
					background: url("@{pic_url}/images/wap/web/korea/icon.png") center center no-repeat;
					background-size: 65%;
				}
				.btn { .i_block; .bgc(#ffba00); .white; .w(108/400*100%); .h(38*@px); .c; .f(22*@px); .right; .l(38*@px);}
			}
		}
	}
	.goods {
		.clearfix;
		a { .block; .pr;} 
		li {
			.left; .w(49%); .mr(2%); .pb(40*@px); 
			h3 { .f(22*@px); .fc(#565656); .pt(20*@px); .pb(10*@px); .l(38*@px); .c; .h(30*@px); .hidden;}
			.price { .fc(#ffa800); .c; .f(24*@px);}
			&:nth-child(2n) { .mr(0);}
		}
		.mark { 
			.pa; top: 0; left: 0;
			img { .w(75%); }
		}
	}
	.more {
		.bgc(#ffba00); .h(90*@px); .l(90*@px); .c; .block; .white; .f(28*@px); .mb(20*@px);
		span { text-transform: uppercase;}
	}
}

/* 分享 */
.starBox { .star_box; }

