@import "block.less";
html,body { .bgc(#f4f4f4);}
img { .w(100%); .block;}
.frame_simple;
.navBan;
.slide;

.userInfo {
	.w(100%); .pt(.5rem);
	background: url(http://d01.res.meilishuo.net/pic/_o/92/2e/beab178c0b1515abdbbb9fbe6159_640_290.cf.jpg) top center no-repeat;
	background-size: 100% 100%;
	dl {
		.c; border-bottom: 1px solid #fba180; .pb(.3rem);
		dt { .border-1(#f36344); border-width: 3px; .border-r(50%); box-shadow: 0px 0px 5px #fa764c; .w(1.14rem); .i_block; .bgc(#fddee9);}
		img { .border-r(100%); .c;}
		dd { .f(0.3rem); .white; .mt(.16rem);}
	}
	.list {
		.clearfix; .pt(.2rem); .pb(.2rem);
		a { .left; .w(40%); .white; .f(0.26rem); .fb; .pl(10%);}
		span { .i_block; .mr(.14rem); .vm;}
		.couponIcon { 
			.w(.22rem); .h(.32rem);
			background: url("http://i.meilishuo.net/css/images/mobile/coupon.png") center no-repeat;
			background-size: 100% 100%;
		}
		.addressIcon {
			.w(.26rem); .h(.33rem);
			background: url("http://i.meilishuo.net/css/images/mobile/address.png") center no-repeat;
			background-size: 100% 100%;
		}
	}
}

.orderTab {
	.clearfix; .pl(3%); .pr(3%); .pt(.25rem); .pb(.25rem); .bgwhite;
	a {
		.left; .w(25%); .fc(#666); .f(.24rem); .c;
	}
	a.current { .fc(#FF7A9A); }
	p { .c; .pb(5px);}
	span { 
		.i_block; 
	}
	.all {
		.w(.25rem); .h(.34rem);
		background: url("http://d04.res.meilishuo.net/pic/_o/3e/3e/bce04a91cceacf020cca9eb35ab7_25_34.ch.png") center no-repeat;
		background-size: 100% 100%;
	}
	.payment {
		.w(.29rem); .h(.28rem);
		background: url("http://d05.res.meilishuo.net/pic/_o/3c/78/f42107f448dd4171296841d428f8_29_28.cg.png") center no-repeat;
		background-size: 100% 100%;
	}
	.send {
		.w(.27rem); .h(.27rem);
		background: url("http://d05.res.meilishuo.net/pic/_o/56/98/fbd3a2f147ee9633fef20ec613e7_27_27.cf.png") center no-repeat;
		background-size: 100% 100%;
	}
	.get {
		.w(.32rem); .h(.25rem);
		background: url("http://d04.res.meilishuo.net/pic/_o/90/a7/9981024cf4e313d44331182846b7_32_25.ch.png") center no-repeat;
		background-size: 100% 100%;
	}
}

.orderList {
	.mt(3%); .bgwhite; .pt(2%); .pl(3%); .pr(.25rem); .fc(#666); border-top: 1px solid #e6e6e6; border-bottom: 1px solid #e6e6e6;
	.shop {
		.pt(3%); .pb(5%); border-bottom: 1px solid #ebebeb;
		a { .f(.26rem); .fc(#666); .fn; .block;}
		span { .fc(#FF7A9A); .right;}
	}

	.goodsInfo {
		.pt(3%); .pb(3%);
		border-bottom: 1px solid #ebebeb;
		img { .w(26%); .left; .mr(2%);}
		dl {
			.f(.24rem); .pt(1%);
			dt { .pb(8%); .l(.34rem);}
			dd { .fc(#999); .clearfix;}
			.num { .left; }
			.price { .right; .fc(#666); }
		}

	}

	.pay {
		.f(.24rem); .pt(6%); .tr; 
		p { .pb(3%);}
		.total { 
			.fc(#333); 
			span { .fc(#FF7A9A); }
		}
		.logistics { .border-1(#666); .l(.50rem); .pl(5%); .pr(5%); .i_block; .fc(#666); .border-r(3px); .mr(2%); .vm;}
		button { .white; .bgc(#FF7A9A); .l(.46rem); .pl(5%); .pr(5%); .i_block; .border-r(3px); .border-n; .vm; .f(.24rem);}
	}
}

.enjoy {
	.mt(3%); .pl(3%); .pr(3%); .pb(5%); .bgwhite;
	h2 { 
		.fc(#666); .fn; .f(.26rem); .l(30*@px); .pb(5%); .pt(5%);
		span { 
			.fc(#999); .f(.22rem); .right; .pl(1.0rem); 
			background: url("http://d05.res.meilishuo.net/pic/_o/6b/79/91042848732700c398147bc7a9f4_25_23.cf.png") .60rem center no-repeat;
			background-size: 18% 90%;
		}
	}
	.itemWrap { overflow-x: scroll;}
	.itemList {
		.clearfix; .pr; .w(38.2rem); .hidden;
		.item {
			.left; .w(2.2rem); .ml(0.2rem);
			&:first-child { .ml(0);}
			a { .block; .c;}
			h3 { .f(.24rem); .fc(#666); .pt(16*@px); .l(.30rem);}
			p { .fc(#FF6799); .f(.22rem); .pt(10*@px);}
		}
	}
}

.noOrder {
	.c; .pt(8%); .pb(8%);
	img { .w(30%); .i_block;}
	h2 { .f(.28rem); .pt(2%); .fn;}
}