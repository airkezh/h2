@import "../block.less";
@import "../doota/shareact_bs_goods.less";

.main{.bgc(#fff7f8);.mb(-14px);}

.head_bg{background-position: center;background-repeat: no-repeat;}
.top_bannar, .seckill{.w(946px);.auto;}


/* 浮动bannar */
.sec_nav_wrap{
	.pf;right: 20px;top: 30%;z-index: 400;.indent;
	.w(150px);.h(210px);.pt(100px);
	background: url('http://d06.res.meilishuo.net/img/_o/f0/ab/1ad7ce0e8562ca8ca57021313e73_200_410.cf.png') no-repeat;background-size: 100%;
	div{.mb(10px);.h(52px);padding-left: 42px;.pt(6px);.cursor;}
	span{
		background: url('http://d05.res.meilishuo.net/img/_o/4d/f4/cfdb7b92b8f6dd17585a02c9748a_143_66.cf.png') no-repeat;background-size: 100%;.none;
		.w(96px);.h(66px);
	}
	.p_tab_active{background: url('http://d01.res.meilishuo.net/img/_o/60/81/c1807a9049cdac54a057813718c1_194_263.ch.png') no-repeat;background-size: 100%;}
	.p_tab_active.tab{
		&0{background-position: -1px -1px;}
		&1{background-position: -1px -71px;}
		&2{background-position: -1px -144px;.mt(12px);}
	}
	div:hover span,
	.p_tab_active span{.block;}
}

.title{
	.bgc(#eb1f5e);.h(73px);.pr;
	img{.pa;left: 50%;.ml(-570px);top: -3px;}
}
.hot_title{.mt(20px);}
.hot{
	.w(1140px);.auto;.mt(20px);.hidden;
	.title{.mb(20px);}
	.shop_wrap{.w(1161px);.ml(-20px);}
	a{
		.ml(20px);.mb(20px);.left;.w(559px);.h(210px);
		span{.w(367px);.h(250px);.i_block;}
	}
}
.rec{
	.w(1140px);.auto;.mt(20px);.pr;.h(980px);.mb(20px);
	a{.pa;}
	.func_{
		&0{top: 0;left: 0;}
		&1{right: 0;top: 0;}
		&2{bottom: 0;left: 0;}
		&3{bottom: 0;right: 0;}
		&4{top: 318px;left: 304px;}
	}
}

.poster{
	.hidden;.w(970px);.auto;.pb(20px);min-height: 350px;
	.bs_tab{.ml(22px);.w(960px);}
	.fx_hidden{.none;.h(52px);.w(100%);}
	.fx_tab{
		.pf;top: 30px;left: 0;.bgc(rgba(0,0,0,.2));z-index: 100;.w(100%);
		.bs_tab{.pr;left: 50%;.ml(-463px);}
	}
	.spinner{.mt(50px);}
}
.goods_unit();
.productCon{.bgc(#fff);}
.productCon .proImg{
	span{.w(220px);.h(200px);}
	img{.w(220px);}
}

.footer_bannar{.w(950px);.auto;.hidden;.pb(20px);}


