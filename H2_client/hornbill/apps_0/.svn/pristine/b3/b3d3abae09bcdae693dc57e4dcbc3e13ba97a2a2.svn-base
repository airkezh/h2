@import "../block.less";
* {
	padding: 0;
	margin: 0;
}

body {
	background: #fff1b2;
	text-align: center;
	width: 6.4rem;
}

img {
	display: block;
	width: 100%;
}

.msg {
	position: relative;
	.msg_content {
		position: absolute;
		top: 0;
		left: 12%;
		width: 76%;
		.box {
			height: .8rem;
			border:1px solid #e93736;
			border-radius: 6*@px;
			font-size: .28rem;
		}
		.require {
			background: #fff;
			text-indent: .28rem;
		}
		.phonenum {
			width: 100%;
			box-sizing: border-box;
		}
		.cell {
			margin-top: .3rem;
		}
		.code {
			width: 266/455*100%;
			display: inline-block;
			position: absolute;
			left: 0;
		}
		.send_btn {
			width: 160/455*100%;
			display: inline-block;
			text-align: center;
			position: absolute;
			right: 0;
			line-height: .8rem;
		}
	}
}

.apply, .download, .middle_pic, .footer {
	position: relative;
}

.apply_wrap, .download_btn {
		position: absolute;
		top: 0;
		border-radius: .08rem;
}

.apply_wrap {
	width: 100%;
}

.apply_inner {
	margin: auto;
	.desc {
		text-align: left;
	}
}

.apply_btn {
	margin: auto;
}

.result {
	width: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.link_btn {
	position: absolute;
	top: 0;
	left: 50%;
	white-space:nowrap;
	transform: translate3d(-50%,0,0);
	-webkit-transform: translate3d(-50%,0,0);
	text-decoration: underline;
}

//覆盖引入的默认alert的样式
.windowDrive {
  .dialog {
    font-size   : .32rem;
    line-height : 1.2;
    width       : 70%;
    background: rgba(250,250,250,.93);
  }
  .dialog-con {
    padding : .28rem 0;
  }
  .dialog-btn {
    line-height : 1;
    span {
      padding : .22rem 0;
    }
  }
}