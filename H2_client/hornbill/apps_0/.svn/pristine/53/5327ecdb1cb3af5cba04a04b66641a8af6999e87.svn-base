@import "wx.less";

body{ .w(6.4rem); }
.ios_simple;
.sliderBanner;
.banner-slider-point{.none;}

body{.bgc(#f0f0f0);}

.pullUp{

	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-35px);
	}
	&[status="tap"]{
		background:0 none;	
	}
	&[status="stop"]{
		background:0 none;	
		.h(2px);
		&:before{.i_block;
			content:"没有更多内容了...";
		}
	}
}
div.pullUp{
	.l(.8rem); .f(.28rem); .h(.8rem); .w(.8rem); background-size: .8rem 1.6rem;
}



/* 顶部搜索 */
.search{.bgc(#fff);.pr;.mb(.2rem);
	#form_search{padding: 0; }
	.ipt{.f(.24rem); .fc(#666); .border-n; padding:.18rem; .w(5.42rem); .pl(.97rem);.border-r(.9rem);  .ml(.16rem);  .mb(.16rem);.mt(.16rem);
		background: #f6f6f6 url(http://d01.res.meilishuo.net/pic/_o/a5/58/ed2d1ee109f0e7f246ad6f55a5fb_20_21.cg.png) no-repeat .66rem center;background-size: auto .22rem; .appearance-n;
	}
	input::-webkit-input-placeholder{.fc(#666);}

	.search-close{ .pa; right:.16rem; top: .35rem;  .f(.24rem);.fc(#666);
	}	
}

/* 每日时尚精选*/
.ad-box{ .bgc(#fff); .f(0); padding: .3rem 0 .16rem .16rem; .hidden;
	.ad-title{.fc(#333); .f(.30rem); .mb(.3rem); .i_block; }

	.w-normal{ display: block;.mt(0); .f(0);.hidden; }
	
	.ul-box{ 
		.li-box{ .left; .mr(.04rem); .mb(.04rem);
			.w(2rem); /*.h(2rem);*/
		}
		/*.fir{
			.h(4.04rem);
		}*/
	}

	.more-box{ .pr;
		.a-more{ .pa;  right:0; top: 0;  .fc(#c2c2c2); .f(.26rem); }
	}
	
	.popular-box{.f(0); 
		.w-normal{ .w(1.4rem); .ml(.16rem); .left;
			&:nth-of-type(1){
				.ml(0);
			}
		}
	}
}
.pd-10{.pr(.16rem); .pb(.16rem); .mt(.2rem); }
.g-wall{.mt(.2rem); .pb(0); }

.new_goods{
	.clearfix; .pr; .bgc(#fff);	
	.goods_li{
		.pa; 
		.hidden;
		.li_border{
			// .ml(20*@w);
			// .mr(20*@w);	
		}
	}
	.li_border {
		.pr;.bgwhite; 
		.list_img {.block; background-size:100%;.hidden;
		}
		.sell_title {.f(.24rem); .c; .fc(#666); .hidden; .nowrap; }
		.list_title {.f(.22rem); .c; .fc(#999); .pt(.06rem); .hidden;.nowrap;}
	}
	.img_bt { border-bottom: .01rem solid #ddd;}
	.list_info { .pt(.14rem); .pl(.04rem);.pr(.04rem); }
	.list_cost { .c; .f(0); .pt(.13rem);.pb(.14rem);
		.money_now {.f(.26rem); .vm; .pr(.18rem); .fc(#ff7a9a);}
		.like-img{ .i_block; .w(.22rem); .h(.2rem); .vm;}
		.like-num{ .vm;  .f(.24rem);  .fc(#9a9a9a); .pl(.07rem);}
	}
	
	.goods_type {.pa; top: 0; left: .1rem; .w(.7rem); .h(.34rem); .l(.34rem); .white; .c; .border-r(0 0 .06rem .06rem);}
	.two_type { left: .9rem;}
	.new {.bgc(#ff96b9);}
	.hot {.bgc(#ff6f80);}
}

//砸蛋弹层
#egg{
	.w(50%);.pf;right: 0;bottom: .21rem; z-index: 2;
	img{
		.w(100%);
	}
	.egg-open{
		.none;
	}
	-webkit-animation:wobble 1s .2s ease both;
	-moz-animation:wobble 1s .2s ease both;
}
