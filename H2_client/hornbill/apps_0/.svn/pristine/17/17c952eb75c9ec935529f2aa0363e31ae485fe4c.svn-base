@import "../block.less";
img{.w(100%);}
body{
	background-image: url("http://d03.res.meilishuo.net/pic/_o/65/34/d0a0e435f099beff6e7892903d73_640_1138.cg.png");
	background-repeat: no-repeat;
	background-size: 100%;
}
.windowDrive .dialog {
    font-size: .32rem;
    line-height: 1;
    width: 70%;
    text-align: justify;
}
.wrap{
	.hidden;
	.f(.26rem);
	.name{
		display: block;
	    margin: 0 auto;
	    border: 1px solid #db7c1c;
	    box-sizing: border-box;
	    -webkit-box-sizing: border-box;
	    .w(3.3rem);
	   	.h(.90rem);
	    .f(35*@px);
	    .c;
	    .fc(#ef9218);
	    .mt(3.5rem);
	   	border-radius: 6px;

	}
	.start{
		display: block;
	    margin: 0 auto;
	    box-sizing: border-box;
	    -webkit-box-sizing: border-box;
	    .w(3.3rem);
	   	.h(.90rem);
	   	.mt(.25rem);
	   	.f(.44rem);
	    background-image: url("http://i.meilishuo.net/css/images/staticbed/button.png");
	    background-repeat:no-repeat;
	    background-size: 100%;
	    border-radius: 6px;
	    color:#fff;
	    border:none;
	}

}