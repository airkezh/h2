@import "bs_base.less";

.slide;

.banner_words{
	padding: 18*@w 20*@w 26*@w;
	font-size: 1.2rem;
	.l(1.8rem);.fc(#666);
}

//优惠券部分
.coupon_bannar{.w(100%);.mb(20*@w);background-position: center;background-size: 100%;background-repeat: no-repeat;}
.wap_fix_coupon();

.countTime{
	.w(600*@w);.auto;padding: 1/30*100% 0;.f(1.3rem);.fc(#666);.c;.mb(30*@w);
	border-bottom: 1px solid #d9d9d9;border-top: 1px solid #d9d9d9;.hidden;
	.time_wrap{
		.bs;.w(50%);.left;.l(15px);
		&:before{
			content: "";
			.w(20px);.h(15px);.i_block;.mb(-3px);
			background: url("http://d06.res.meilishuo.net/img/_o/ff/4a/81f5d5a9d42073b5886d0c6a168a_30_30.c6.png") no-repeat; 
			background-size: 15px;
		}
	}
	.join_wrap{
		.bs;.w(49.9%);.left;border-left: 1px solid #d9d9d9;.l(15px);
		&:before{
			content: "";
			.w(20px);.h(15px);.i_block;.mb(-3px);
			background: url("http://d01.res.meilishuo.net/img/_o/01/4f/4ea51cc1fead3314b7166196a2d3_30_30.c6.png") no-repeat; 
			background-size: 15px;
		}
	}
}

.unit_title{
	.c;.pr;padding: 20*@w;.bs;
	.line{
		.pa;top: 0;left: 20*@w;.h(50%);.w(600*@w);
		border-bottom: 1px solid #d9d9d9;
	}
	.title_text{
		.pr;z-index: 2;.h(100%);.l(100%);.f(2rem);
		.bgc(@white);
	}
	.title_text:before, .title_text:after{
		content: '';
		border-left: 1px solid #d9d9d9;-webkit-transform:rotate(16deg);.i_block;.h(2rem);
		.pr;z-index: 5;.mb(-1%);.mr(30/600*100%);
	}
	.title_text:after{.ml(30/600*100%);.mr(0);}
}


.guide_words{
	padding: 20*@w 0;.hidden;.f(1.2rem);
	p{.pb(20*@w);.pl(35*@w);.f(1.4rem);.fc(#646464);}
	a{.w(170*@w);.left;.fc(#ff679a);.c;box-sizing: border-box;.ml(30*@w);.l(2.4rem);.border-r(3px);border: solid 1px #ff679a;}
	.words0{.ml(35*@w);}
}
.rec_goods{
	padding: 30*@w 20*@w 20*@w;min-height: 150px;
}

.b20_bannar{.block;.pb(20*@w);}

.hide_div{ .none(); }
.rec_bottom_goods_title{.pt(10*@w);.pl(35*@w);.pb(20*@w);.f(1.4rem);.fc(#646464);}
.rec_bottom_goods{padding: 0 20*@w 20*@w;}
.check_history{
	.w(600*@w);.pt(20*@w);.pb(20*@w);.auto;
	span{
		.none;.w(100%);.pt(16/600*100%);.pb(16/600*100%);.bs;.border-1(rgba(0,0,0,.15));.border-r(5px);
		.fc(@red);.c;.bgc(rgba(255,102,153,0));.f(1.4rem);
	}
}

.coupon_wrap{
	.pr;
	.coupon_con{
		.pa;bottom: 0;.w(100%);
		a{.w(219*@w);.block;.auto;.c;.f(1.2rem);padding: .8rem 0;.fc(#ec3969);.border-r(12px);.bgc(#fffde2);}
		p{.c;.f(1rem);.fc(#fff);.pb(2rem);.pt(.8rem);}
		.has_over{.fc(#666);}
	}
}
/*dialog*/
.dialog();
.draw_box{ .c; margin:20px 0; }
.toupdate{ 
	p{ margin:20px 0; .f(1.4rem);}
	.btn3zi{ .act_btn; .border-r(40*@px); .f(38*@px); .h(60*@px); .l(60*@px); .w(180*@px); margin:12*@px auto;}
}

/* 回顶部 */
.gotop;

/*分享*/
.starBox{
	.star_box;
}

.load_all_show{ .none; }

.posterWall{ .hidden;.mb(20*@w);min-height: 1000px; }
.goods_wall{ .pr; }
.goods_units{padding: 0 10*@w 0;.hidden;box-sizing: border-box;}
.goods_box{
	.w(50%);.left;.pa;
	.goods_img{.pr;.block;.w(270/310*100%);.h(270/310*100%);.auto;.hidden;background-image: url("@{pic_url}/images/huodong/tuan/prebg.png");background-size: 100%;}
	span.bs_load_img{.block;opacity: 0;.w(100%);.pt(100%);background: no-repeat center;background-size: cover;}
	.goods_status{
		.pa;top: 50%;left: 50%;.ml(-60/270*100%);.mt(-60/270*100%);.w(120/270*100%);.pt(120/270*100%);
		background: no-repeat center;background-size: 100%;
	}
	.goods_end{background-image: url("@{pic_url}/images/wap/activity/all/bs_over.png");}
	.act_prev{background-image: url("@{pic_url}/images/wap/activity/all/bs_prev.png");}
	.act_over{background-image: url("@{pic_url}/images/wap/activity/all/bs_end.png");}
	.Farm{.pa;top: 0;left: 0;z-index: 5;}
	.Standard{.left;}
}
.desc_box{
	.f(1.1rem);.fc(#999);.bs;
	padding: 1/31*100% 2/31*100% 3/31*100%;
	.desc{.hidden;.f(1.3rem);.l(1.5rem);.fc(#666);}
	.price{
		padding: 15/270*100% 0;border-bottom: 1px solid #d9d9d9;
		.now_price{.f(1.4rem);.fb;}
		.sequence{.pr(20*@px);.pl(5*@px);}
	}
	.like_buy{.hidden;.pt(5/270*100%);}
	.buy_num{.left;}
}
