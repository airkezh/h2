exports.gotoDownload = function(req,res,arr,obj) {
	var ua = req.headers['user-agent'];
	// if (ua && /(iPhone|iPad|iPod|iOS)/i.test(ua) && ua.indexOf('UCBrowser') > 0){
	// 	return false;
	// }
	var cookieHandle = cookie.getHandler(req ,res);
	var channel = cookieHandle.get('channel_mark')
	if(!obj) obj = channel
	var appwel_skip = cookieHandle.get('appwel_skip')
	var screen_skip = cookieHandle.get('screen_skip')
	var wap_daoliu_hidden = cookieHandle.get('wap_daoliu_hidden')

	if(channel && channel == '40106') {
		var expires = new Date
		expires.setHours(expires.getHours() + 1)
		cookieHandle.set('screen_skip',expires)
		cookieHandle.set('banner_hidden',expires)
	}
	
	if(ua && (ua.indexOf('MicroMessenger') > -1 || ua.indexOf('Qzone') > -1 || ua.indexOf('QQ') > -1 || ua.indexOf('Weibo') > -1 || ua.indexOf('TXMicroBlog') > -1)){
		var expires = new Date
		expires.setHours(expires.getHours() + 1)
		cookieHandle.set('screen_skip',expires)
		return false;
	}
	if(appwel_skip || screen_skip || wap_daoliu_hidden){ //已经点击过跳过
		return false;
	} 
	if(arr && arr.length > 0 && obj) {	
	    for (var i = 0; i < arr.length; i++) {
	        if (arr[i] === obj) { //渠道链接
	            return false
	        }
	    }
	}

	var refer = req.headers.referer
	if(refer && refer.indexOf('baidu.com') > 0) return false;

	return true;
}

