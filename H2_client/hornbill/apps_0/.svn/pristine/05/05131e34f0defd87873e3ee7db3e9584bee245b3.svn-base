<% var goodsInfo = this.goods_info;%>
<h3 class="show_tle"><%= goodsInfo.repin%></h3>
<div class="btn_box" style="width: 175px;">
	<div class="tui_heart twiiter_box">
		<p class="hackie">
			<a class="love_pro none_f">这是你自己分享的哦！</a>
			<%if(goodsInfo.beauty_me){%>
			<a class="t_like twitter_like liked" like_twitter_id="<%= goodsInfo.twitter_id%>" isshowlike="<%= this.goods_info.showLike%>" >
				<span class="likes_status">已喜欢</span>
			<%}else{%>
			<a class="t_like twitter_like" isshowlike="<%= this.goods_info.showLike%>" like_twitter_id="<%= goodsInfo.twitter_id%>" >
				<span class="likes_status"><em class="lm_love">&nbsp;</em>喜欢</span>
			<%}%>
				<span class="likeNum poster_like_num"><%= goodsInfo.count_like%></span>
			</a>
			<a class="t_collect twitter_forward"><span><em class="lm_income">&nbsp;</em>收进杂志</span><span class="poster_forward_num"><%= goodsInfo.count_forward%></span></a>
		</p>
	</div>
</div>
<div class="clear_f"></div>
<div class="codepic_box">
	<div class="code_pic">
		<%if(goodsInfo.url.indexOf('?') != -1){
			var str = '&';
		}else{
			var str = '?';
		}%>
		<% if(goodsInfo.is_verify){%>
			<span class="show"></span>
		<%}%>
		<a href="<%= goodsInfo.url%><%= str%>frm=out_pic" target="_blank"><img class="twitter_pic" src="<%= goodsInfo.show_pic%>"></a>	
		<div class="view_pic none_f"><a href="<%= goodsInfo.original%>" target="_blank"><img src="<%=this.PICTURE_URL%>images/original_pic_ico_n.gif"></a></div>
	</div>
</div>

<div class="detail">
	<p class="dtl_l twitter_context"><%= goodsInfo.twitter_htmlcontent;%></p>
	<p class="dtl_r">
		<%if(this.user_id){%>
			<%if(this.userInfo.isjb){%>
				<a href="javascript:void(0)" id="twitter_report">举报</a>|
			<%}%>
		<%}%>
		<%if(goodsInfo.showDelete || goodsInfo.super){%><a <%if(goodsInfo.super){%>isshow="1"<%}else if(goodsInfo.isPolice){%>isshow="2"<%}%> href="javascript:void(0)" class="twitter_del">删除</a>|<%}%>
		<%*{ 418 %>
		<a class="click_pl">评论 (<em class="twitter_comment_num"><%= goodsInfo.count_discuss%></em>)</a> 	
		<%*} %>
	</p>
</div>


