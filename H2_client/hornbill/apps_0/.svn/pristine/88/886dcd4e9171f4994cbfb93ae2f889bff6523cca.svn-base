@import "../block.less";
html {
  font-size : 62.5%; /* 10/16 = 62.5% */
}
body{
	.bgc(#f8f8f8);
}
img{
	.w(100%);
	.block;
} 
a{
	.block;
}

.seckillBox{
	.mt(1rem);
	border-top: solid 1px #efefef;
	border-bottom: solid 1px #efefef;
	.bgc(#fff);
}
.secregion{
	padding: 1rem;
}
.headInfo{
	.pb(1rem);
	border-bottom: solid 1px #efefef;
	.icon{
		.left;
		.w(4.3rem);
		.h(4.3rem);
		background: url(http://d04.res.meilishuo.net/pic/_o/e7/a4/be57cc8c708587e2a4123dcd6d9d_70_70.cg.png) no-repeat;
		background-size: 100%;
	}
	.tm{
		background: url(http://d05.res.meilishuo.net/pic/_o/9e/e4/60077e51eb0ae64dde42ec77d433_70_70.cf.png) no-repeat;
		background-size: 100%;
	}
	.tip{
		.pr;
		.pt(.5rem);
		.ml(5.3rem);
		.title{
			.fc(#adadad);
			.f(1.3rem);
			strong{
				font-weight: normal;
				.f(1.6rem);
				.fc(#000);
				.mr(.4rem);
			}
		}
		.content{
			.dot{
				.w(.4rem);
				.h(.4rem);
				.i_block;
				.bgc(#f69);
				.ml(.5rem);
				.mr(.5rem);
				vertical-align: middle;
				border-radius: 50%;
			}
			.fc(#f69);
			.f(1.4rem);
			.mt(.6rem);
		}
	}
	.tip:after{
		content: '>';
		.block;
		.pa;
		right: 0;
		top: 25%;
		.f(2.4rem);
		.fc(#c8c6cb);
		font-weight: bold;
	}
}
.desc{
	p{
		.mt(.5rem);
	}
	.feature{
		min-height : 1.5rem;
		.fc(#666);
		.f(1.5rem);
	}
	.title{
		min-height : 1.3rem;
		.fc(#a8a8a8);
		.f(1.3rem);
	}
	.price{
		.fc(#fe0000);
		.f(1.1rem);
		span{
			.f(1.9rem);
		}
		del{
			.fc(#d1d1d1);
			.ml(1rem);
		}
	}
}
.secregion .goodsInfo{
	.mt(1rem);
	.desc:before{
		content: '';
		.left;
		.w(3.2rem);
		.h(4.8rem);
		.mr(.8rem);
		// .fc(#fff);
		// .l(3rem);
		// .c;
		background: url(http://d04.res.meilishuo.net/pic/_o/27/57/ffbf21892c41a4c353d8ab40638d_50_79.cf.png) no-repeat;
		background-size: 100% 100%;
		strong{
			font-weight: normal;
			.f(2rem);
		}
	}
	.desc{
		.clearfix;
	}
}
.goodsWall{
	.pl(.5rem);
	.pr(.5rem);
	.pb(2.3rem);
	border-bottom: dashed 1px #e7e7e7;
	.goodsInfo {.left;.w(50%);
		.link_box { .ml(.5rem); .mr(.5rem);}
			.mt(1rem);
		}
	.clearfix;
}
.more{
	.block;
	.pt(1.2rem);
	.pb(1.9rem);
	.c;
	.f(1.5rem);
	.fc(#c0c0c0);
}
.tuanBox{
	.mt(1.5rem);
	.mb(2rem);
	border-top: solid 1px #efefef;
	border-bottom: solid 1px #efefef;
	.bgc(#fff);
	.headInfo{
		padding: 1rem;
		border-bottom: none;
	}
}
.tuanBox > .headIcon .icon{
	background: url(http://d05.res.meilishuo.net/pic/_o/9e/e4/60077e51eb0ae64dde42ec77d433_70_70.cf.png) no-repeat;
	background-size: 100%;
}
.tuanBox .desc{
	.c;
}
.soldout{
	.pr;
}
.soldout:after{
	content: '';
	display: block;
	background: url(http://d03.res.meilishuo.net/pic/_o/67/5e/25041c2c0bb68456b3248edefad3_246_202.ch.png) no-repeat;
	background-size: 100% 100%;
	position: absolute;
	width: 44%;
	height: 28%;
	top: 36%;
	left: 28%;
}
.goodsInfo span.bs_load_img {
  display: block;
  opacity: .75;
  width: 100%;
  padding-top: 140%;
  background-image: url("http://i.meilishuo.net/css/images/huodong/tuan/pre1.png");
  background-size: cover;
}
.gotop{
	.w(12.5%);
	.none;
	right: 1rem;
	position:fixed;
	z-index: 100;
	bottom: 12%;
}
