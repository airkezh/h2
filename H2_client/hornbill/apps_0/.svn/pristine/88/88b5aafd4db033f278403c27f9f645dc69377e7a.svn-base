/*撕名牌样式*/
.cover,.cover_left{
    transition:all 0.09s ease 0s;
    -webkit-transition:all 0.09s ease 0s;
}
.brand_lh{
       background: url("@{pic_url}/images/wap/activity/crackbrand/index_luh_brand.png");
       background-size:100%;
       box-shadow: 0 0 11px rgba(0,0,0,0.5);   
    .cover{
       position:absolute;
       right:0px;
       height: 100%;
        .cover_left{
                position:absolute;
                left:0px;
                height: 100%;
                width:50%;
                background: white;
                opacity:0.95;
                -webkit-box-shadow: 2px 2px 10px #909090;
                z-index:100;
                -webkit-transform-origin: top right;
            .cover_color{
                position: absolute;
                left:0px;
                width: 100%;
                height:100%;
                opacity:0.66;
                overflow: hidden;
            }
            .cover_img{
                width:4rem;
                position: absolute;
                background: url("@{pic_url}/images/wap/activity/crackbrand/index_luh_brand_fan.png");
                background-size:100%;
                height: 100%;
            }
            .cover_black{
                position: absolute;
                right:0px;
                width: 30%;
                height:100%;
                background: -webkit-gradient(linear, right top, left top, from(rgba(0, 0, 0, 0.80)), to(rgba(0,0,0,0)));
            }
        }  
        .cover_right{
            position:absolute;
            right: 0px;
            height: 100%;
            width:50%;
            background: #fff;
            .cover_bgc{
                position:absolute;
                right: 0px;
                height: 100%;
                width:100%;
                background: -webkit-gradient(linear, right top, left top, from(rgba(0, 0, 0, 0)), to(rgba(0,0,0,0.18)));
            }
        }
    }
}