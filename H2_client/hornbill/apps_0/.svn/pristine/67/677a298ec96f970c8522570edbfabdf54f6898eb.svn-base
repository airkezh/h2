@pink: #ff6699;
.pinkbg() {
  background: @pink;
}

@gray456: #f4f5f6;
@g222: #dedede;

.pinkfont() {
  color: @pink;
}

input, button, select, textarea {
  outline: none
}

.t-common {
  color: #999999;
}

.send, .close, .t-a-close {
  cursor: pointer;
}

.t-warn {
  color: red;
}

.t-a-container {
  & .t-a-head {
    height: 42px;
    background: #f6f6f6;
    line-height: 42px;
    position: relative;

    & .t-a-header {
      position: absolute;
      left: 20px;
      top: -20px;
      *top: -40px !important;
      _top: -40px !important;
      width: 83px;
      height: 83px;
      background: url("@{pic_url}/images/robot/header.png") center left no-repeat;
      background-size: 100% 100%;
    }
    & .t-a-txt {
      float: left;
      margin-left: 110px;
    }
  }
  & .t-a-close {
    height: 100%;
    width: 42px;
    float: right;
    border-left: 1px solid white;
    background: url(data:image/png;base64,) center center no-repeat;
  }

  & .t-a-body {
    height: 226px;
    width: 100%;
    position: relative;
    & .t-s-mask {
      position: absolute;
      height: 100%;
      width: 100%;
      z-index: 999;
      display: none;
      top: 0;
      left: 0;
      background: url("@{pic_url}/images/robot/trainingS.png") center center no-repeat;
      background-color: white;
    }
    & .count-calc {
      height: 32px;
      line-height: 32px;
      font-size: 12px;
      text-align: right;
      padding-right: 22px;
    }
    & .t-a-input {
      height: 35px;
      position: relative;
    }
    & .t-a-input img {
      position: absolute;
      left: 33px;
      top: 4px;
    }
    & .t-a-input input {
      position: absolute;
      left: 73px;
      border: 1px solid #dddddd;
      padding: 10px 0px;
      vertical-align: center;
      width: 357px;
      color: #999;
      padding-left: 8px;
    }
    & .t-a-input input:focus {
      border-color: #ff6699;
    }
    & .t-a-question {
      margin-top: 35px;
    }

    & .t-a-ctl {
      margin-top: 54px;
      text-align: center;
      position: relative;

    }

    & .send, & .close {
      width: 85px;
      height: 25px;
      line-height: 25px;
      color: white;
      bottom: 10px;
      position: absolute;
    }
    & .send {
      .pinkbg();
      left: 130px;
    }
    & .close {
      background: #cccccc;
      right: 128px;
    }

  }
  & .t-a-foot {
    height: 42px;
    background: #f6f6f6;
    line-height: 42px;
    color: #999999;
    padding-left: 32px;
    font-size: 12px;
  }

}