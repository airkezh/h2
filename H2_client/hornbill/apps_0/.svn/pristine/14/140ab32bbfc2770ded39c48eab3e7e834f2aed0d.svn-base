.user() {
  .item-wrap {
    padding       : 26*@px 0;
    border-bottom : 1px solid rgba(51, 51, 51, 0.15);
  }

  .rec-person {
    position : relative;
  }

  .head {
    display        : inline-block;
    position       : relative;
    width          : 70*@px;
    height         : 70*@px;
    vertical-align : middle;

    .head-img {
      width         : 100%;
      border-radius : 50%;
    }
    .icon-vip {
      width    : 26*@px;
      height   : 26*@px;
      position : absolute;
      right    : 0;
      bottom   : 0;
    }
  }

  .info {
    display        : inline-block;
    vertical-align : middle;
    width          : 400*@w;
    .name {
      font-size : 28*@px;
      color     : #333;
      padding   : 4*@px;
    }
    .label {
      width       : 100%;
      .ellipsis();
      white-space : nowrap;
      font-size   : 24*@px;
      color       : #999;
      padding     : 4*@px;
      line-height : 28*@px;
    }
  }

  .focus {
    position      : absolute;
    display       : inline-block;
    box-sizing    : border-box;
    right         : 0;
    top           : 50%;
    margin-top    : -26*@px;
    width         : 120/580*100%;
    font-size     : 26*@px;
    text-align    : center;
    padding       : 14*@px 0;
    border-radius : 4px;
  }

  .ready {
    background : #ff7a9a;
    color      : #fff;
  }

  .done {
    background : #fff;
    color      : #999;
    border     : 1px solid #999;
  }

  .share-img {
    margin-top : 20*@px;
    font-size  : 0;
    .img-wrap {
      width   : 184/580*100%;
      display : inline-block;
      span {
        display             : inline-block;
        width               : 100%;
        padding-top         : 100%;
        background-size     : contain;
        background-position : center;
        background-repeat   : no-repeat;
      }
    }
    a:nth-child(2) {
      margin : 0 14/580*100%;
    }
  }
}
