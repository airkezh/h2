@import "block.less";


html,body{
	background:#f4f4f4;
	.w(100%);
}
.main{
	margin:5% 3% 10% 3%;
	.box{
		background:#fff;
		border:1px solid #fff;
		border-radius:4px;
		padding:5px;
		margin-top:3%;
		position:relative;
		h2{
			background:url('http://d03.res.meilishuo.net/pic/_o/1c/eb/6c13d6eb1ec66c6f9df222c82889_250_60.ch.png') no-repeat;
			width:55px;
			height:56px;
			.auto;			
		}
		h3{
			font-weight:normal;
			font-size:18px;
			text-align:center;
			color:#000;	
			margin-top:3%;
			em{
				padding-left:3%;
				padding-right:3%;
				color:#ccc;
				font-size:8px;
				vertical-align:middle;

			}		
		}
		p{
			text-align:center;
			font-size:14px;
			color:#999;
			font-weight:normal;
			line-height:22px;
		}
		.ps_2{
			background-position:-64px -2px;
		}
		.ps_3{
			background-position:-130px -2px;			
		}
		.ps_4{
			background-position:-196px -2px;			
		}
	}
}