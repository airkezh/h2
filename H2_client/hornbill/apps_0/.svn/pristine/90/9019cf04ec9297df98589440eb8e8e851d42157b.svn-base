@import "../common/block.less";
@import "../common/window.less";
@import "../common/dootablock";

.doota;
.order{
	.doota > .frame;
	&_content{
	}
	&_list{
		.doota > .list;
		.order_info{
			td{.bgc(#f2f2f0);}
			.getserviceqq{ background: url("@{pic_url}/images/serviceqq/service_qq.gif") no-repeat; padding: 6px 42px; .ml(5px); .indent; }
		}
		tr.empty{
			td{background:#f2f0f1;border-top:1px solid #ddd;border-bottom:1px solid #ddd;border-right:1px solid #f2f0f1;border-left:1px solid #f2f0f1;}
		}
		tr.header{
			td{background:#ece8e9}
		}
		.last{border-bottom:1px solid #ddd;}
		.button{
			.common_button; .common_button > .redBtn; .border-n; .f(14px);.c();
			.w(100px);.l(32px);.i_block;
          &:hover {
            .bgc(#F05085);
          }
		}
		.button-dis{
			.common_button; .f(14px);
			color: #6f6f6f;
			background-color: #f2f2f2;
			border: 1px solid #c5c5c5;
			.w(100px);.l(32px);.i_block;
		}
        td.x-merged-bar {
          padding: 0;
          height: 50px;
          line-height: 50px;
          .right {.right;
            span {
              .ml(0);
            }
          }
          .x-totalprice { font-weight:700;.f(18px);.fc(#FA6598); }
          .button { .mr(5px); .ml(30px);}
        }
	}
}
.doota > .icon;
.page;
.pageNav{.page > .pageRed; }
.paging_panel{.pt(10px);.pb(30px);}

.pop_window{
	padding: 20px 36px 30px 24px; .clearfix;
	.tex_info{ .left;}
	.img_info{.left; .ml(25px); .w(100px); .h(100px);
		img{ .w(100%);}
	}
}

.complain_cont{
	padding: 20px 40px 0 20px; .l(20px);
	.complain_list{.ml(70px); .w(480px); .clearfix;
		span{.left; .w(140px); .mr(20px); .mb(10px);}
	}
	textarea{.ml(8px); min-height: 86px; max-width: 530px; .w(530px); .gray; .f(12px);}
	.text_num{ .tr;}
	.complain_pic , .complain_txt{.l(28px);}
	.complain_pic{
		p{.w(70px); .tr;}
	}
	.upload_btn {.w(90px);.h(28px);.l(28px);.mr(10px);.c;.bgc(#f2f2f2);.border-1(@color:#c5c5c5);.border-r(@radius:3px);.left;}
	.imgUpload {.left;.w(98px);.h(98px);.border-1(@color:#ccc);margin:10px 0 0 10px;
		img {.w(98px);.h(98px);}
	}
}

.img_wrapper{.mt(-20px);.mb(10px);
	.imgUpload {.left;.w(98px);.h(98px);.border-1(@color:#e6e6e6);.mr(9px);position:relative;
		.close{position:absolute;top:0;right:0;z-index:3;.w(18px);.h(18px);.i_block;background:url("@{pic_url}/images/doota/remove_pic.png")}
		img,a {.w(98px);.h(98px);.block;.cursor;}
	}
}
.img_wrapper.no-mt{
	.mt(0px);
}

.com_submit ,.com_cancel{.w(60px);.h(30px);.border-r(@radius:3px);.f(14px);.cursor; .border-n; .mb(20px); .mt(10px);}
.com_submit {.bgred;.white; .mr(10px);}
.com_cancel {.bgc(@lightGray);}

.sub_suc{padding: 18px 24px;
	.suc_tit{ .auto; .w(100px); .l(26px); .mb(6px); .f(14px);}
	.suc_icon{ background: url("@{pic_url}/images/member/success.png") no-repeat;  .w(25px); .h(25px); .left; .mr(10px);}
	.suc_info{ .gray; .l(26px); .mb(10px);}
	.suc_close{ .border-n; .h(26px); .bgred; .l(26px); .w(60px); .c;.border-r(@radius:3px); .cursor; padding: 0;}
}

/* 取消订单的弹窗 */
.order-cancel-dlg {
  .w(266px);.auto;text-align:left;
  .ckb-container { .mt(20px); }
}
.maga_suc {
  padding: 20px 0;
}

.footer();
