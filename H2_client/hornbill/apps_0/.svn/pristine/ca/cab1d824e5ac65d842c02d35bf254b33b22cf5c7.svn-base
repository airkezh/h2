@import "../block.less";

body{ .w(7.5rem); background-color: #f6f6f6; }
img{ .w(7.5rem); .block; }

.m_auto{ .w(6.54rem); .auto; }
.design_img{ .m_auto; .block; .pr;
	img{ .w(6.54rem); }
	.vote_box{ .pa; .w(1.3rem); .h(1.5rem); top: 6.9rem; right: -0.2rem; .c;
		.vote_btn{ .i_block; } 
		img{ .w(.9rem); .h(.9rem); }
		.vote_num{ .f(.26rem); .c; }
	}
}
.detail{ .m_auto; .mb(.6rem); }

/*dialog*/
.dialog();
.dialog {
	// #maskLayer { background:rgba(0 ,0 ,0 , 0.7);}
	#dialogLayer { 
		background: none;
		box-shadow: none;
		.dialogTitle { .none;}
	}
	.closeIcon { 
		.pa; top: 30*@px; right:30*@px; .w(36*@px); .h(36*@px);
		background: url("http://d02.res.meilishuo.net/pic/_o/d3/70/a76ca952b6f8a9ec993a6427a878_30_31.ch.png") no-repeat;
		background-size: 100% 100%;
	}
}
.dialog_box {
	.pt(6%); .pl(5%); .pr(5%); .pb(5%); .fc(#000); .bgwhite; .pr; max-height: 300px; overflow-y: scroll;
	h2 { .pb(3%); .f(26*@px); }
	p { .pb(5%); .l(40*@px); .f(22*@px);}
}

.dialog_share {
	.c; .mt(-300*@px);
	.share_pic {
		.w(494*@px); .h(514*@px); .i_block; .bgc(#331621);
		background: url("@{pic_url}/images/wap/activity/baoyang/shareLead.png") no-repeat;
		background-size: 100% 100%;
	}
}

.dialog_award {
	.clearfix; .fc(#000); .pt(20%); .pb(25%); .pr; .pl(8%);
	background: url("http://d04.res.meilishuo.net/pic/_o/54/1e/70d1947bb20cefca461254d70583_639_300.cg.jpg") no-repeat;
	background-size: 100% 100%;
	.icon { 
		.w(80*@px); .h(80*@px); .left; .mr(6%); .block;
		background: url("http://d02.res.meilishuo.net/pic/_o/c3/24/eaf27cc5e5b39131111c974f5fb8_74_74.cg.png") no-repeat;
		background-size: 100% 100%;
	}
	.show { .left; .w(70%);}
	h2 { .f(36*@px); .fn;}
	h3 { .f(24*@px); .fn; .l(32*@px); .pt(10*@px);}
}

/* 分享 */
.starBox{ .star_box; }

.fix_btn{  .pf; .w(1.42rem); .h(1.42rem);  background: #fbe32c; .f(.32rem); color:#fff; .c; .border-r(100%);  }
.design_share{ .fix_btn; .l(1.42rem);  bottom: 3.5rem; right:.2rem; background-color: #38c2c4; opacity: 0.9;   }
.more{ .fix_btn; bottom: 1.92rem;  right:.2rem; background-color: #f9d118; opacity: 0.9;
	span{ .i_block; .w(.66rem); .mt(.36rem); }
}


/*二级页面*/
.sub_box{ background-color: #fff; .pt(.5rem);
	.head{ .w(1.4rem); .h(1.4rem); .border-r(50%); .auto; .mb(.5rem); }
	.item_box{ .w(6.84rem); .block; .auto; .mb(.6rem); 
		img{ .w(6.84rem); }
	}
	.end{ .w(2.84rem); .auto; }
	.vote_box{ .w(1.3rem); .h(1.5rem); .c; margin: .5rem auto;
		.vote_btn{ .i_block; } 
		img{ .w(.9rem); .h(.9rem); }
		.vote_num{ .f(.26rem); .c; }
	}
}









