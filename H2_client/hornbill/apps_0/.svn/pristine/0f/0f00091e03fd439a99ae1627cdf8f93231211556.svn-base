		img{
			.w(6.4rem);
		}
	}
	.shareWrap{
		margin: 0 auto;
		.pb(1rem);
		.w(5.5rem);
		// .bgc(#FDF9DD);
		.f(0.22rem);
		border: 5px solid #DD3C33;
		border-radius: 5px;
		background:url('http://d01.res.meilishuo.net/pic/_o/5f/80/fe5fa893deea8facf2f40cf5e630_548_361.ch.png') no-repeat;
		background-size: 5.5rem;
		.shareText{
			padding: 0.3rem 0.3rem 0.3rem 0.5rem;
			ul{
				list-style: disc;
				.coupon{
					.fc(#F1796D);
				}
				.friRegister{
					.fc(#F06156);
				}
				li{
					.l(0.35rem);
				}
			}
		}
		.shareBtn{
			.wxFriends{
				.left;
				.ml(0.5rem);
				img{
					.w(2rem);
				}
			}
			.friendCircle{
				.left;
				.ml(0.5rem);
				img{
					.w(2rem);
				}
			}
		}
	}
}