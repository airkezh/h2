}
.loginbox{
	.pt(.3rem);
	.pb(.3rem);
	.c;
	p{
		.f(.22rem);
		.l(.3rem);
		.fc(#999);
	}
	.btns{
		.mt(.11rem);
		.f(.26rem);
	}
	span{
		.i_block;
		.w(2rem);
		.h(.6rem);
		.l(.6rem);
		.bgc(#eee);
		.fc(#333);
		.ml(.1rem);
		.mr(.1rem);
	}
	.registe{
		.bgc(#fff);
		border: solid 1px #eee;
		border-radius: .04rem;
	}
}
.liketype{
	.f(.26rem);
	.fashion{
		.block;
		.left;
		.l(0.4rem);
		.mr(0.2rem);
	}
	.guessLike{
		.l(0.26rem);
	}

}
.values{
	.f(.24rem);
	// .i_block;
	overflow: hidden;
	.l(.24rem);
	a{
		.block;
		.left;
		.fc(#f66);
		padding: .05rem .1rem;
		.mr(.1rem);
		border:1px solid #f66;
		border-radius: 5px;
	}
}
.guess{
	.mb(0.14rem);
	.mt(0.14rem);
}
.userinfo{
	.pt(.36rem);
	.pb(.36rem);
	.portrait{
		.left;
		.w(1rem);
		.h(1rem);
		.ml(.3rem);
		img{
			border-radius: 50%;
		}
		
	}
	.intro{
		.ml(1.5rem);
		.fc(#333);
		max-width: 4.4rem;
		.hidden();
		.nickname{
			.f(.3rem);
			.mt(.11rem);
		}
		
	}
	.intro > div{
		.mt(.18rem);
		.fc(#666);
	}
	.clearfix;
}
.recommend{
	.mt(.2rem);
	.pr(.2rem);
	.pl(.2rem);
	.pb(.2rem);
	.pt(.5rem);
	.bgc(#fff);
	min-height: 8rem;
	.today:before{
		background: url('http://d01.res.meilishuo.net/pic/_o/bd/d5/bf11da81fedb27c116d6dc5316f4_26_26.cf.png') no-repeat;
		background-size: 100%;
	}

	.yestoday:before{
		background: url('http://d03.res.meilishuo.net/pic/_o/43/b0/e5d437a5793007dab9fb40a541e2_26_26.cf.png') no-repeat;
		background-size: 100%;
	}
	.earlier:before{
		background: url('http://d05.res.meilishuo.net/pic/_o/32/d6/f432330910f90a4f9bbb3b6baf6a_26_26.cf.png') no-repeat;
		background-size: 100%;
	}	
	h1{
		.pt(.04rem);
		.f(.3rem);
		font-weight: normal;
		i{
			.f(.18rem);
			.ml(.06rem);
			 vertical-align: bottom;
		}
	}
	h1:before{
		content: '';
		.i_block;
		.w(.26rem);
		.h(.26rem);
		.mr(.1rem);
	}

}
.contentBox{
	.ml(.12rem);
	.pl(.24rem);
	border-left: solid .02rem #e5e5e5;
	.tip{
		.f(.26rem);
		.pr;
	}
	.tip:before{
		content: '';
		.i_block;
		.w(.15rem);
		.h(.02rem);
		.pa;
		left: -.24rem;
		top: .13rem;
		.bgc(#e5e5e5);
	}
	.browered{
		.pt(.35rem);
		.b-list{
			.mt(.2rem);
			.clearfix;
		}
		a{
			.left;
			.w(.7rem);
			.h(.7rem);
			.mr(.08rem);
			img{
				.h(100%);
			}
		}
	}
	.liked{
		.mt(.3rem);
		.place{
			.pt(.2rem);
			.pb(.27rem);
		}
		.num{
			.c;
			.pt(.2rem);
			.pb(.27rem);
			.f(0);
			b{
				.i_block;
				border: solid 2px #fff;
				.w (.08rem);
				.h (.08rem);
				.ml(.09rem);
				.mr(.09rem);
				.bgc(#e5e5e5);
				-webkit-border-radius: 50%;
				border-radius: 50%;
			}
			.cur{
				border: solid 2px #fe6666;
				.bgc(#fff);
			}

		}
	}
}
.goods-list{
	.mt(.2rem);
	a{
		.pr;
		.w(100%);
		.h(100%);
	}
	.price{
		.pa;
		padding: .04rem .09rem;
		bottom: 0;
		right: 0;
		.f(.2rem);
		.fc(#fff);
		.bgc(#000);
		opacity: .6;
		small{
			.f(.16rem);
			vertical-align: baseline;
		}
	}
	img{.h(100%);}
	.left-b{
		.left;
		.w(3.8rem);
		.h(5.44rem);
	}
	.right-b{
		.right;
		.ml(.02rem);
		.mt(-.02rem);
		.w(1.8rem);
		.h(5.44rem);
		a{
			.h(1.8rem);
			.mt(.02rem);
		}
	}
}
// 轮播
//.imageSlide_wrap{ .w(5.6rem);.hidden; }
.imageSlide{
	border: 0px solid black;
	font-size: 0;
	.w(5.62rem);
	.hidden;
	ul{
		.pr;
		li{
			.w(5.62rem);
			.hidden();
			float: left;
		}
		.clearfix;
	}

}
.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	.w(.4rem);
	.h(.4rem);
	background-size: 100%;
	&:before{
		.nowrap;
		.ml(-.1rem);
	}
	&[status="tap"]{
		background:0 none;	
	}
	&[status="stop"]{
		background:0 none;	
	}
}
.bs_load_img{
	.block;
}
.left-b .bs_load_img{.w(3.8rem);.pt(5.44rem);
	background: url('http://d01.res.meilishuo.net/img/_o/9d/5d/b9da7072c5d622f22edb753d3868_710_1008.ch.png') no-repeat;
	background-size: 100% 100%;
}
.right-b .bs_load_img{.w(1.8rem);.pt(1.8rem);
	background: url('http://d04.res.meilishuo.net/img/_o/20/fa/79662056a47f08c8a1d5924c65ff_334_334.ch.png') no-repeat;
	background-size: 100% 100%;
}
