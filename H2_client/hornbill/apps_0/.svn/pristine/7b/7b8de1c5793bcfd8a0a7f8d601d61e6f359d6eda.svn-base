@import "../block.less";

.go_shop{
	background: url('@{pic_url}/images/biz/apparel/go_shop.png') no-repeat;
}

.main{background: repeat;.mb(-14px);.pr;}

.countdown, .cd_left, .cd_right{background: url('@{pic_url}/images/biz/apparel/back_time_pc.png') no-repeat;}
.countdown{
	.bp(-235px, -2px);.pa;top: 0;left: 50%;.ml(250px);.w(380px);.h(60px);
	.cd_left{.bp(0, 0);.w(40px);.h(40px);.pa;left: 18px;top: 6px;}
	.cd_start{.bp(0, -52px);}
	.cd_right{.w(31px);.h(34px);.pa;left: 143px;top: 8px;}
	.cd_p1{.bp(-32px, -133px);}
	.cd_p2{.bp(-74px, -133px);}
	.cd_p3{.bp(-114px, -133px);}
	.cd_p4{.bp(-156px, -133px);}
	.cd_p5{.bp(-193px, -133px);}
	.cd_p6{.bp(-235px, -133px);}
	.cd_p7{.bp(-273px, -132px);}
	.cd_p8{.bp(-314px, -133px);}
}
.countdown .cd_p0, .countdown_start .cd_p0{background: url('@{pic_url}/images/biz/apparel/countdown_1.png') no-repeat;.w(380px);.h(60px);.pa;left: -110px;top: 0;}
.countdown_start .cd_p0{.bp(0px, -95px);}

.head_wrap{.pa;top: 0;.w(100%);}
.head_bg{
	background: no-repeat center top;
}

.apparel_wrap{
	.w(994px);.auto;.hidden;.pt(30px);.pr;
	.title{.w(100%);.c;}
	.content{.hidden;.pr;}
	.apparel_title{
		.w(958px);.auto;.pr;
		.apparel_title_more{
			.block;.w(80px);.h(100%);.pa;right: 0;top: 0;
			.indent;.hidden;
		}
		.fix_target{.pa;top: -40px;.w(0);}
	}
	.apparel_con{
		.bgc(#fff);
		.w(950px);.pb(10px);
		.auto;.hidden;
		.mb(20px);
	}
	.apparel_icon_box{
		.mt(10px);.ml(15px);.left;.h(418px);.w(218px);.hidden;
	}
	.apparel_box{
		.mt(10px);.ml(15px);.left;.w(218px);.hidden;
		img{border: solid 1px #c6c6c6;border-bottom: none;.w(216px);.h(320px);}
		em{.w(30px);.h(0);border-top: 1px solid #ccc;.i_block;.mb(6px);}
		p{.f(14px);.l(26px);.w(216px);.hidden;.c;.h(26px);}
		span{.f(20px);}
		.goods_img{
			.pr;.block;.h(321px);
			&:hover .mask{.block;.w(216px);.h(320px);}
		}
		.mask{.none;.pa;top: 0;left: 0;}
		.box_con{
			.h(95px);.bgc(#fff);.border-1(#c6c6c6);
			a{.f(18px);.fc(@darkGray);.l(32px);margin: 0 8px;}
			.goods_num{.h(35px);.l(30px);}
			.tuan_goods_num{.f(18px);.l(32px);.h(36px);}
			.tuan_price{.f(28px);}
			.o_price{.f(14px);.fc(@darkGray);.t-through;.pl(15px);}
			.go_shop{.w(84px);.h(25px);.auto;.indent;.bp(0, -37px);.cursor;.block;}
			.pre_go_shop{.bp(0, 0);}
		}
	}
}

.shop_wrap{
	.w(994px);.auto;.hidden;.pt(30px);.pr;.pb(40px);
	.title{.c;.hidden;.pr;}
	.shop_title_more{
		.block;.w(80px);.h(100%);
		.pa;right: 26px;top: 0;.indent;.hidden;
	}
}
.shop_content{
	.w(932px);.bgc(#fff);.hidden;padding: 10px 9px;.auto;
	.shop_box{
		.left;.pr;margin: 7px;
		img{.w(216px);.h(160px);.border-1(#c6c6c5);}
		.shop_attention{.left;.w(147px);.h(43px);.pa;bottom: 16px;left: 36px;border: none;}
	}
}

.fix_nav{
	background: no-repeat;
	.pf;top: 35%;left: 50%;.ml(500px);z-index: 300;.indent;.w(117px);.pt(45px);
	a{.block;.w(100%);.h(78px);}
	li a{.w(100%);.h(34px);}
}
#fixWidget, #goTop{
	display: none !important;
}
