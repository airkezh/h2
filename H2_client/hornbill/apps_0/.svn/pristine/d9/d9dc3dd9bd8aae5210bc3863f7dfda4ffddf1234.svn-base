.item() {
  /*------------------------------------*\

      首屏内容：商品信息，店铺信息

  \*------------------------------------*/
  .item-box {
    position      : relative;
    /* 不加 100% 的话，默认宽度非常窄 */
    width         : 100%;
    /*
      商品图片可能非常小，导致右侧“你可能喜欢”下半部分显示不全
    */
    min-height    : 580px;
    margin-bottom : 20px;
    overflow      : hidden;

    .content {
      float : left;
      width : 970px;
    }

    .sidebar {
      position         : absolute;
      right            : 0;
      height           : 100%;
      width            : 230px;
      background-color : #f9f9f9;
    }
  }

  /*
    商品描述
  */
  .item-sale {
    float        : right;
    width        : 480px;
    margin-right : 20px;

    .price-normal {
      margin-left  : -3px;
      margin-right : 10px;
      font-size    : 14px;
      color        : @pink;
    }

    .timeBox { .bgc(#f9f9f9); .gray; .f(14px); .mt(20px); .h(32px); .l(32px); .pl(10px);
      .big_clock { .bp(-109px, -68px); .left; .h(28px); .w(32px); }
    }
    .sku_meta { .mt(8px); }
    .sku-item { .h(26px); .l(26px);
      .sort { .w(66px); .left;
        em { .i_block; .pl(100%); }
      }
      .btn { .left; .h(16px); .l(16px); .ml(10px); .mt(6px); .pl(5px); .pr(5px); cursor : auto; }
      .del { .t-through; color : #999; }
      .price { .red; .left; .f(24px); }
      .btn_prom { .bgred; .white; .mr(5px); padding : 1px 3px; }
    }
  }

  /*
    商品主标题
  */
  .item-title {
    margin-bottom : 10px;
    font          : bold 20px/32px Arial, sans-serif;
  }

  .item-sub-title {
    margin: 15px 0 20px;
    font-size: 16px;
    line-height : 1.2;
    color: #f69;
  }

  /* 晒单标记 */
  .label-show {
    margin-top : 15px;
    color      : #f93;
  }

  /*
    商品价格相关信息
  */
  .item-price-info {
    margin-bottom : 20px;

    span {
      display : inline-block;
    }
  }

  .price-now {
    font-size : 20px;
    font-weight: bold;
    color     : #f69;

    .num {
      font-size : 36px;
    }
  }

  .price-original {
    margin-right : 10px;
    font-size    : 12px;
    color        : #999;

    .num {
      text-decoration : line-through;
    }
  }

  .label-text {
    display      : inline-block;
    padding      : 2px 5px;
    margin-right : 5px;
    color        : #fff;
  }

  /* 商品价格相关信息 END */
  /* 商品促销信息 */
  .item-promote-infos {
    position : relative;
    z-index  : 8;

    & > li {
      position   : relative;
      margin-top : 10px;
    }
  }

  .countdown-time {
    padding : 0 8px;
    color   : #f69;
  }

  [class^="label-mark"] {
    display      : inline-block;
    width        : 14px;
    height       : 14px;
    margin-right : 10px;
    padding      : 2px;
    color        : #fff;
    text-align   : center;
  }

  .label-mark-limit {
    background-color : #ff84ad;
  }

  .label-mark-coupon {
    background-color : #f66;
    vertical-align   : top;
  }

  .label-mark-dou {
    background-color : #ff6d12;
  }

  /* 满减 */
  .label-mark-discount {
    background-color : #fcc15b;
  }

  /* 包邮 */
  .label-mark-mail {
    background-color : #94d564;
  }

  /* 打折 */
  .label-mark-reduce {
    background-color : #fcc15b;
  }

  .item-promote-btn {
    color : #666;

    &:hover {
      color : #666;
    }

    i {
      color : #f69;
    }
  }

  .item-promote-panel {
    display          : none;
    position         : absolute;
    top              : 24px;
    left             : 0;
    padding          : 12px;
    line-height      : 24px;
    border           : 1px solid #e6e6e6;
    background-color : #fff;
    z-index          : 8;

    &::before, &::after {
      left : 20%;
    }

    i {
      color : #f69;
    }
  }

  /* 商品促销信息 END */
  /* 运费 */
  .item-freight {
    position   : relative;
    margin-top : 15px;
    z-index    : 7;

    label {
      margin-right : 10px;
    }
  }

  /* 运费 END */
  /* 销量/评价/喜欢 */
  .item-data {
    margin       : 12px 0;
    border-width : 1px;
    border-style : solid;
    border-color : #e6e6e6 transparent;
    overflow     : hidden;

    li {
      display     : inline-block;
      width       : 156px;
      height      : 33px;
      line-height : 33px;
      margin      : 5px 0;
      text-align  : center;
    }
  }

  .ie7 .item-data li {
    float : left;
  }

  .item-data-middle {
    border-left  : 1px dotted #e9e9e9;
    border-right : 1px dotted #e9e9e9;
  }

  .item-data-wrap {
    margin-left : 10px;
    color       : #f69;

    a {
      color : #f69;
    }
  }

  /* 销量/评价/喜欢 END */
  /*------------------------------------*\

      商品图片

  \*------------------------------------*/
  .item-pic {
    float : left;
    width : 450px;
  }

  /* 商品原图 */
  .item-pic-origin {
    position   : relative;
    display    : table-cell;
    width      : 450px;
    text-align : center;
    overflow   : hidden;

    .mark {
      position : absolute;
      left     : 5px;
      top      : 0;

      span {
        float        : left;
        margin-right : 1px;
      }
    }

    img {
      max-width      : 450px;
      max-height     : 680px;
      height         : 100%;
      vertical-align : middle;
    }
  }

  /* 商品人气信息 */
  .item-pop-tip {
    position           : absolute;
    right              : 30px;
    bottom             : -40px;
    padding            : 11px 20px;
    border-radius      : 20px;
    background-color   : rgba(249, 248, 248, .8);
    -webkit-transition : all .5s ease-out;
    -moz-transition    : all .5s ease-out;
    -ms-transition     : all .5s ease-out;
    -o-transition      : all .5s ease-out;
    transition         : all .5s ease-out;

    .num {
      color: #f69;
    }
  }

  .icon-people {
    display        : inline-block;
    width          : 20px;
    height         : 18px;
    margin-right   : 7px;
    background     : url("@{pic_url}/images/doota/pop-tip.png") no-repeat;
    vertical-align : bottom;
  }

  /* 商品原图 END */
  /* 商品缩略图 */
  .item-pic-thumb {
    height      : 74px;
    padding-top : 10px;
    text-align  : center;

    span {
      display      : inline-block;
      width        : 68px;
      height       : 68px;
      margin-right : 6px;
      border       : 2px solid #fff;
      cursor       : pointer;

      &:hover {
        border : 2px solid #f69;
      }
    }

    .active {
      border : 2px solid #f69;
    }
  }

  /* 商品缩略图 END */
  /* 限时折扣 */
  .time-limit {
    margin-top : 12px;

    .token {
      float            : left;
      position         : relative;
      width            : 55px;
      height           : 16px;
      line-height      : 16px;
      margin-right     : 10px;
      margin-top       : -1px;
      color            : #fff;
      background-color : #f93;
      text-align       : center;
    }

    .arrow-r-ico {
      position            : absolute;
      top                 : 1px;
      right               : -4px;
      width               : 4px;
      height              : 16px;
      background-position : -162px -145px;
    }

    .time {
      display       : inline-block;
      height        : 16px;
      line-height   : 16px;
      margin        : 0 4px 0 10px;
      padding-right : 6px;
      font-style    : normal;
      font-weight   : bold;
    }
  }

  /*------------------------------------*\
      促销
  \*------------------------------------*/
  .item-promotion {
    display : inline-block;
    width   : 80%;

    li {
      position    : relative;
      line-height : 18px;
      height      : 18px;
    }

    :first-child {
      margin-bottom : 0;
    }

    .item-promotion-multi {
      margin-bottom : 8px;
    }
  }

  .ie7 .item-promotion {
    display  : inline;
    zoom     : 1;
    overflow : hidden;

    li {
      height      : 20px;
      line-height : 20px;
    }

    .item-promotion-multi, .item-promotion-single {
      float : left;
      clear : both;
    }
  }

  /*------------------------------------*\
      优惠券 coupon
      手机专享价 mob-exclusive

      这两者统一具有类似的样式
  \*------------------------------------*/
  .dropdown-wrap {
    display : inline-block;
  }

  .dropdown-wrap-btn {
    display     : inline-block;
    height      : 16px;
    line-height : 16px;
    color       : #f69;
    z-index     : 10;

    &:hover {
      color : #f69;
    }
  }

  .dropdown-panel {
    position         : absolute;
    display          : none;
    top              : 25px;
    left             : 0;
    width            : 288px;
    padding          : 15px;
    border           : 1px solid #e6e6e6;
    background-color : #fff;
    z-index          : 100;

    .hd {
      margin-bottom : 15px;
      line-height   : 1;
      font-size     : 14px;
    }
  }

  .coupon-wrap {
    *display     : inline;
    *line-height : 14px;
    *z-index     : 8;
    *zoom        : 1;

    .dropdown-wrap-btn {
      *width       : 60px;
      *line-height : 14px;
      z-index      : 9;
    }

    .arrow-ico {
      *margin-top : -10px;
    }

    .dropdown-panel {
      *top    : 14px;
      *left   : 0;
      z-index : 8;
    }

    .item {
      margin-bottom : 10px;
      padding       : 5px 0;
      height        : inherit;
      line-height   : inherit;
      overflow      : hidden;

      &:last-child {
        margin-bottom : 0;
      }
    }

    .coupon, .intro {
      float : left;
    }

    /* 优惠券 */
    .coupon {
      width               : 53px;
      height              : 25px;
      line-height         : 25px;
      color               : #fff;
      background-image    : @dootaImage;
      background-position : -176px -144px;
      text-align          : center;
    }

    .intro {
      margin-top  : -4px;
      margin-left : 10px;
    }

    .desc {
      max-width     : 160px;
      margin-bottom : 7px;
      line-height   : 1;
      .ellipsis;
    }

    /* 有效时间 */
    .time {
      line-height : 1;
      color       : #999;
    }

    /* 提示框 */
    .info {
      display          : none;
      position         : absolute;
      left             : 320px;
      width            : 70px;
      height           : 20px;
      line-height      : 20px;
      opacity          : 0;
      border           : 1px solid;
      background-color : #fff;
      text-align       : center;
      z-index          : 10;
    }
  }

  .mob-exclusive {
    margin-top : 2px;

    .dropdown-wrap-btn {
      margin-left  : 8px;
      line-height  : 18px;
      z-index      : 101;
      *width       : 100px;
      *line-height : 14px;
    }

    .arrow-ico {
      margin-top  : 6px;
      *margin-top : -10px;
    }

    .dropdown-panel {
      top        : 19px;
      left       : 8px;
      width      : 180px;
      height     : 190px;
      padding    : 0;
      text-align : center;
      z-index    : 100;

      img {
        margin-top : 10px;
      }
    }
  }

  .item-sale .mob-exclusive .price {
    font-size : 18px;
  }
  /*预售相关*/
  .presale_ico { padding: 2px 5px; .bgc(#f66); .white; .f(14px); .mr(4px); }
  .arrow_ico { .w(10px); .h(6px); background: url("@{pic_url}/images/header/@{mls_ico}") no-repeat -20px -70px;
		.i_block; .ml(3px); 
	}
  .ori_price { .fn; .t-through; .mr(8px); }
  .presale_rule { .right; .pr; .mt(22px);
	.rule_btn { .cursor; .pb(10px); }
	.rule_detail {.none; .border-1(#e6e6e6); z-index: 10; .pa; right:-200px; top: 24px; .p5_10;
		.w(410px); .h(315px); .bgwhite;
		li { list-style-type: decimal; .ml(20px); .l(24px); }
	}	
  }
  .presale_info { .l(28px); .bgc(#fff5f5); .p5_10; 
	  .info_t { .hidden;
		.deposit_price { .red; .ml(5px); }
	  }
	  .info_b { background: url("@{pic_url}/images/doota/presale.gif") no-repeat 0 11px;
		 li { .pl(20px); }
	  }
	}
	.presale_limit { .ml(20px); .l(20px); .f(12px); }
  /* 领取按钮 */
  .coupon-btn {
    float            : right;
    width            : 44px;
    height           : 20px;
    line-height      : 20px;
    color            : @pink;
    background-color : #fff;
    border           : 1px solid @pink;
    text-align       : center;
    cursor           : pointer;

    &:hover {
      color            : #fff;
      background-color : @pink;
    }
  }

  /* 数量及按钮 */
  .item-stock {
    font-size : 0;
  }

  .item-stock-num {
    display        : inline-block;
    width          : 36px;
    height         : 37px;
    line-height    : 37px;
    padding        : 0;
    border         : 1px solid #d2d2d2;
    text-align     : center;
    vertical-align : top;
  }

  .item-stock-btns {
    display             : inline-block;
    width               : 20px;
    height              : 42px;
    *height             : 39px;
    *margin-top         : 1px;
    font-size           : 0;
    -webkit-user-select : none;

    .hidden {
      visibility : hidden;
    }

    span {
      display           : inline-block;
      width             : 19px;
      height            : 18px;
      line-height       : 18px;
      border-style      : solid;
      border-color      : #d2d2d2;
      border-left-width : 0;
      text-align        : center;
      cursor            : pointer;
    }
  }

  .item-stock-plus {
    border-width : 1px 1px 0 0;
  }

  .item-stock-minus {
    border-width : 1px 1px 1px 0;
  }

  .icon-up, .icon-down {
    display        : inline-block;
    width          : 8px;
    height         : 6px;
    *margin-top    : 5px;
    vertical-align : middle;
  }

  .icon-up {
    background-position : -56px -65px;
  }

  .icon-down {
    background-position : -40px -65px;
  }

  .item-stock-reserve {
    margin-left : 20px;
    line-height : 20px;
    font-size   : 12px;
  }

  /* 数量及按钮 END */
  /* TODO rename */
  .goqq {
    cursor      : pointer;
    border      : 1px solid #f69;
    height      : 23px;
    line-height : 23px;
    text-align  : center;
    float       : left;
    color       : #f69;
    width       : 86px;
    transform   : translateZ(0);
  }

  .goqq .qqico {
    background     : url("http://i.meilishuo.net/css/images/doota/doota_im1.gif") no-repeat;
    padding-top    : 2px;
    padding-bottom : 3px;
    padding-left   : 18px;
  }

  /* 实拍认证 */
  .icon-realshot {
    display          : inline-block;
    width            : 18px;
    height           : 18px;
    vertical-align   : middle;
    background-image : url("@{pic_url}/images/doota/real-shot.png");
  }

  .item-real-shot {
    padding        : 4px;
    vertical-align : middle;
  }

  /* 分享，喜欢，收进杂志按钮 */
  .item-spread {
    margin-top : 20px;
  }

  .item-like-wrap {
    position    : relative;
    display     : inline-block;
    height      : 18px;
    line-height : 18px;
    padding     : 7px 10px;
    border      : 1px solid #d2d2d2;
  }

  .item-like-btn {
    *display : block;
    cursor   : pointer;
  }

  .icon-like {
    display             : inline-block;
    width               : 16px;
    height              : 16px;
    margin-right        : 8px;
    background-position : -298px -70px;
    vertical-align      : middle;
  }

  .item-like-num { color : #f69; }

  //TODO
  .addOneLike {
    display   : none;
    position  : absolute;
    left      : 30px;
    top       : -18px;
    font-size : 24px;
    color     : #f69;
    filter    : alpha(opacity=0);
    opacity   : 0;
  }

  /* 『分享』与『收进杂志』 */
  .item-share-btn, .add-in-magazine-btn {
    position       : relative;
    display        : inline-block;
    height         : 18px;
    line-height    : 18px;
    margin-left    : 12px;
    padding        : 7px 10px;
    border         : 1px solid #d2d2d2;
    cursor         : pointer;
    vertical-align : top;
    z-index        : 1;
  }

  .icon-share {
    display             : inline-block;
    width               : 16px;
    height              : 16px;
    margin-right        : 8px;
    background-position : -268px -91px;
  }

  /* 让显示的内容更容易被点到 */
  .item-share-panel-wrap {
    display  : none;
    position : absolute;
    top      : 5px;
    left     : 0;
    width    : 100px;
    height   : 100px;

    a {
      cursor : pointer;
    }
  }

  .item-share-panel {
    position         : absolute;
    top              : 12px;
    left             : -8px;
    width            : 65px;
    padding          : 10px;
    border           : 1px solid #e6e6e6;
    background-color : #fff;

    i {
      display : inline-block;
    }
  }

  /* 收进杂志 */
  .add-in-magazine-btn {
    vertical-align : bottom;
  }

  .icon-magazine {
    display             : inline-block;
    width               : 15px;
    height              : 16px;
    background-position : -268px -112px;
  }

  .ie7 .item-like-wrap, .ie7 .item-share-btn, .ie7 .add-in-magazine-btn {
    display : inline;
    zoom    : 1;
  }

  /* 分享，喜欢，收进杂志按钮 END */

  .ad-banner {
    display    : block;
    margin-top : 20px;
  }

  /* 商品 END */
}
