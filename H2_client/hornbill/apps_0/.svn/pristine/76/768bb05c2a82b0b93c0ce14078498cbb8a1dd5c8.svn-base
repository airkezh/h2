	.option:nth-of-type(2){ 
		.bg{ background-position: -0.54rem 0;}
		span.active{ background-position: -0.54rem -0.6rem;
			&+p{.fc(#f69);}
		} 
	}

	.option:nth-of-type(3){ 
		.bg{ background-position: -1.12rem 0;}
		span.active{ background-position: -1.14rem -0.56rem;
			&+p{.fc(#f69);}
