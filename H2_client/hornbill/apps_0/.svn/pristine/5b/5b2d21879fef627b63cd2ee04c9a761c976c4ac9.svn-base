function imgLoaded(imgdom,callback){
	if(imgdom){
		if (imgdom.complete) {
		   callback();
		} else {
		   imgdom.onload = function() {
		   		callback();
		   }
		}
	}else{
		callback();
	}
}

function navFixed()
{
    scroll.yIn(nav.position().top,function(){
        nav.removeClass('scrollout').addClass('scrollin shadow');
    },
    function(){
        nav.removeClass('scrollin shadow').addClass('scrollout');
    })
}
var isBindLogPoster = false;
var initialize = function(type,sbase,sort) {
	fml.vars.poster.totalColNum = 2 ;
	pin.init({
		containerId: '.goods_wall'
	});
	var posterWall = require('wap/app/posterWalls2');
	var urlData = {
		'frame': 0
	}
	var pullUpAction = function() {
		posterWall.ajaxPoster( posturl + '&tab=' + type + '&sbase=' + sbase + '&sort=' + sort);
	}
	posterWall.testPoster0(urlData, pullUpAction);
	posterWall.scrollPoster(true);
	fml.vars.toLogPoster = true
	if(!isBindLogPoster){
		isBindLogPoster = true;
	fml.eventProxy('logPoster', function(res) {
		if(!res.error_code){
			if (!res.data.tInfo.length) {
				$('.pullUp').hide();
			} else {
				$('.pullUp').show();
			};

			var $_this = this;
			$('.time').each(
				function($_this) {
					var _this = $(this);
					var leftsecond = _this.attr('time');
					d = parseInt(leftsecond / (3600 * 24)); //计算出相差天数
					h = parseInt((leftsecond / 3600) % 24); //扣除相差天数，计算出相差小时数
					m = parseInt((leftsecond / 60) % 60); //扣除相差天数，小时数，计算出相差分钟数
					// s=parseInt(leftsecond%60);//扣除相差天数、小时数、分钟数相差数，计算出相差秒速
					_this.parent('span').html('剩余' + d + '天' + (h < 10 ? '0' + h : h) + '小时' + (m < 10 ? '0' + m : m) + '分');
			});
			lazyer.load();
			console.log(res.data.page_frame)
			if(res.data && res.data.page_frame===0){
				setTimeout(function(){
					lazyer.load()
				},1000)
			}
		}
		else{
			return;
		}
	})
	}
}
