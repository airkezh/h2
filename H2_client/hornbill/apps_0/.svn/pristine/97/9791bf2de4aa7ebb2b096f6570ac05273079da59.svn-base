@import "sq.less";

/* @group general styles
--------------------------------------------------*/
html,body { .bgwhite; .h(100%); }
body { .f(.24rem); }
h1,h2 { .fn; }
i { font-style: normal; }


/* @group page structure
--------------------------------------------------*/

.wrapper {
	.h(100%);
	.goods-container { 
		.mt(.1rem); 
		.ml(.08rem);
		.mr(.08rem);
	}
}

.goods {
	.goods-img {
		display: block;
		background: no-repeat center;
		background-size: cover;
	}

	.goods-desc {
		.pr;
		padding-bottom : .6rem;
		text-align     : center;
	}

	.goods-desc {
		padding     : .15rem .1rem;
		font-size   : .22rem;
		line-height : .22rem;
		.ellipsis;
	}

	.goods-info {
		.c;
		.goods-price, .the-num-of-like-it {
			font-size : .22rem;
		}
		.goods-price {
			color: #f69;
		}
		.the-num-of-like-it {
			color: #999;
			&::before {
				content: '';
				display         : inline-block;
				width           : .2rem;
				height          : .18rem;
				margin-right    : .05rem;
				background      : url("http://d03.res.meilishuo.net/pic/_o/79/48/051f7e0b8712f068eaae0e53d36f_20_18.cf.png") no-repeat center;
				background-size : cover;
			}
		}

	}

	.similar {
		.block;
		.auto;
		.w(2.5rem);
		.l(.9rem);
		.f(.5rem);
		.c;
		.fc(#333);
		border: 1px solid #A8A8A8;
		.border-r(.08rem);
		-webkit-transform:scale3d(.5,.5,.5);
	}

}