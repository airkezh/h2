@import "sq.less";

.warp{
	.bgc(#f0edee); 
	.textarea{
		.area_select{
			.pt(12*@px); .pb(16*@px);
		}
		#hidden{ display: none;}
		p{
			border-bottom: 1px solid #d9d9d9; .ml(30*@px);
			.addres_select{
				.ml(14*@px); .block(); .l(86*@px); .f(32*@px); .fc(#999999);
				select{
					-webkit-appearance: none;
					// vertical-align: middle;
					// .bgnone;
					background: white url("@{pic_url}/images/wap/web/sq/select_bg1.png") no-repeat right center;
					padding: 0px 10*@px 0px 30*@px;
					// background-image: url("@{pic_url}/images/wap/web/sq/select_bg.png");
					// background-repeat: no-repeat;
					// background-position: 420*@px 18*@px;
					background-size: 37*@px 9*@px;
					.border-1(#dad9d9); .border-r(6*@px); .mr(10*@px); .ml(10*@px); .w(80%); .l(60*@px); .f(30*@px); .fc(#b0b0b0);}
			}
		}
		.mt(40*@px); .mb(120*@px); border-top: 1px solid #cccacb; .bgwhite; border-bottom: 1px solid #cccacb; .bgwhite; .w(100%); .hidden;
		.addres_txt{
			.border-n; .block; .f(32*@px); .red; .l(32*@px); .h(86*@px); .bgwhite; .w(100%);
		}
		.addres_txt_last{
			.border-n;
		}
	}
	.save_add{
		.bgwhite; .h(120*@px); .pf; bottom: 0px; left: 0px; .w(100%);
		.save_button{
			.auto(); .w(90.625%); .mt(16*@px); .mb(20*@px); .bgred; .h(88*@px); .border-r();
			p{
				.f(32*@px); .c; .white; .l(80*@px);
			}
		}
	}
}