@import "../block.less";
.my_act_poster(){
	figure {
		.pic_load { 
			.block; .hidden; .pr; background:#fff url("@{pic_url}/images/group/g_loading1.gif") no-repeat center;background-size:64*@px 64*@px;
			img { .pa;top:0px;.w(100%); }
		}
		figcaption {  padding: (20*@px); }
	}
}
html{.f(10*@f);}
img{ width: 100%; .block; }
.win_top {.pr;
    .my_act_poster;
    .win_top_pic {
     	.pic_load { 
     		.pt(340*@w); 
	  	}
    }
	.audio(1);
	.audio_box{ .ml(2%); bottom:10%; }
}
.main { 
	.bgwhite; .pl(20*@w); .pr(20*@w); .pb(40*@w);
	.detail { .f(26*@f); .l(38*@px); .pt(20*@px); .pb(10*@px); }
	.comn_tle;
	.my_act_poster;
	figcaption { 
		.f(20*@px); 
		.like { .right; }
		.heart { background: url("@{pic_url}/images/wap/activity/project/fw_xin.png") no-repeat; 
			background-size: 100%; .left; .mr(4*@px); .mt(2*@px); .h(20*@px); .w(22*@px);
		}
	}
	.big_pic { 
		.mt(10px);
		.pic_load { 
			.pt(800/600*100%); 
			.pr;
			.soldout { 
				.pa; left: 0; top: 0; .w(100%); .h(100%); 
				background: url("@{pic_url}/images/fuider/sold_out.png") 50% 40% no-repeat; 
				background-size: 40% auto;
			}
			.remain { 
				.pa; bottom: 5px; .w(100%); .l(200%); .c; .f(16px); .fc(#fff);
				background-color: rgba(0,0,0,0.3);
			}

		}
		figcaption{ 
			.pl(0); .pr(5px); .pt(5px); .pb(5px);
			.discount { 
				.right; .mt(3.5px); .h(16px); .l(16px); .f(11px); .fc(#fff); .border-1(#ff6666); .bgc(#ff6666); .pr(4px);
				em { .i_block; .h(100%); .bgwhite; .fc(#ff6666); .mr(3px); .pl(4px); .pr(4px);}
			} 
			.price { .left; .pr(4px); .fc(#ff6666); .f(25px); }
			del { .left; .fc(#80737b); .f(12px); .pt(10px); }
			.clearfix;
		}
	}
	.tle_bg{
		.mb(20*@px);
		background: url(http://i.meilishuo.net/css/images/wap/activity/project/fwtle1.png) no-repeat;
		.title{ 
			.w(100%); 
			.pl(0);
			.title_box{ margin: 0 auto; }
		}

	}
	.pic_box { 
		.clearfix;
		.small_pic { 
			.border-1;
			.w(48%); .left; .mt(20*@px);
			.pic_load { .pt(390/290*100%); }	
		}
		.goods_title{
			.mt(20*@px);
			.pl(20*@px);
			.pr(20*@px);
			font-size:1.2rem;
			.l(1.6rem);
			.h(4.8rem);
			.hidden;
		}
		figure {
			&:nth-child(even) { .ml(16*@px); }
		}
	}
	.more { .c; .f(28*@px); .border-1(#bfbfbf); .border-r(10*@px); .l(68*@px); .mt(26*@f); }
}
.s_tle { .fn; .f(22*@f); .fc(#7F3F55); .pt(3%); }
.keywords{ .keyword; .clearfix; .pb(10*@px); 
	a { .ml(0); .mr(3%); }
}
.fw_bot { background-size: 100%; background-color: #EFE7EA;.pl(20*@w); .pr(20*@w); .pb(40*@w); .pr; 
	&:before{ .line; }
	.pic_box { .pt(20*@w); }
}
//分享
.starBox { .star_box; }
#alert{ 
	.f(14px);
	.sureBtn{ .fc(#287dd7); color:#287dd7; }
}
.gotop{
	.none;
	.pf;
	right: 20px;
	.w(80*@w);
	img{
		.w(100%);
	}
}

.rel{.pr;}
.coup{
	.pa;top:0px;right:7%;width: 20%;height: 12%;
	img{.mt(11%);}
}
.couptext{
	font-size: 26*@px;.pa;top:0px;left: 45%;color:#a97d56;padding-top: 4.5%;
}
.past_topic{
	.w(100%);
	.bgwhite;
	.pb(10px);
	h2{ .pl(10px); .f(28*@px); .fn; .mb(5px); }
	div{
		.i_block;
		.left;
		.w(50%);
		a{
			padding:5px;
			.block;
			img{ .w(100%); }
		}
		.topic0{ .pl(10px); }
		.topic1{ .pr(10px); }
	}
	.clearfix;
}
@import "../footer.less";
