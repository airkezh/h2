@import "block.less";

body { .bgc(#f8f8f8); }

.frame_simple;
.navBan;
.slide;

.bindMobile { 
	.title { .fc(#80737b); .pt(30*@px); .pl(30*@px); .f(16px); .fn;}

	.form-wrap { .bgwhite; .pl(30*@px); .mt(30*@px);}
	.form-list { 
		.l(76*@px); border-bottom: 1px solid #eee;
		label { .w(20%); .fc(#666); .f(28*@px); .vm; .i_block;}
		.lipt { .border-n; .w(38%); .f(14px); }
		&:last-of-type { .border-n; }
	}

	.s_button,.s_button2 { .i_block; .border-n; .bgc(#f97a9b); .l(50*@px); .c; .white; .border-r(8*@px); .pl(10px); .pr(10px); .right; .mr(10px); .mt(5px);}
	.ext_submit { .bgc(#f97a9b); .w(90%); .block; .auto; .l(80*@px); .c; .white; .f(30*@px); .border-n; .mt(30*@px); .border-r(8*@px); }
	.bindErrorMessage { .red; .c; .block; .pt(30*@px); .f(14px);}

	.change { .i_block; .vm; .right; .mr(15px);}

	.current { 
		.pt(30*@px); .pb(30*@px); .mt(30*@px); .bgwhite; .c;
		h2 { .fc(#666); .f(28*@px); .pb(10px); .fn;}
		p { .fc(#999); .f(24*@px);}
	}

	.declaration {
		.pt(40*@px); .pl(5%); .pr(5%); .fc(#999); .f(12px);
		p {
			.pb(20*@px); .l(36*@px);
			&:last-of-type { .fc(#666);}
			span { .fc(#FF7A9A); .f(26*@px);}
		}
	}
}