@import "wx-rem.less";
@import "../../circle/component/loading.less";

/* 底部导航 */
.nav-c{
	.nav-c-new();
}

/* qun post less rem version start */
.place-hold{
	.h(.28rem);
	.w(100%);
	.bgc(#f0f0f0);
}
.goods-li{
	a:hover,a:visited{
		.fc(#666);
	}
	.pt(.22rem);
	.bgc(#fff);
	.left{
		.left;
	}
	.li-head{
		.w(600*@w);
		.auto;
		.mb(.2rem);
		.hidden;
		.avatar{
			.w(.6rem);
			.pr;
			img{
				.w(.6rem);
				.h(.6rem);
				.border-r(.6rem);
			}
			span{
				.pa;
				right: 0;
				bottom: 0;
				.w(.25rem);
				.h(.25rem);
				background-image: url('http://d03.res.meilishuo.net/pic/_o/a7/7c/38f006213ead2165e17f42fb1774_26_26.ch.png');
				background-size: cover;
			}
		}
		.name{
			.f(.3rem);
			.l(.6rem);
			.h(.6rem);
			.ml(.1rem);
			.w(320*@w);
		}
		.follow-btn,.follow-btn-ok{
			.c;
			.w(1rem);
			.h(.6rem);
			.f(.26rem);
			.l(.6rem);
			.border-1(#ff7a9a);
			.border-r(.08rem);
		}
		.follow-btn{
			.bgc(#ff7a9a);
			.fc(#fff);
		}
		.follow-btn-ok{
			.bgc(#fff);
			.fc(#ff7a9a);
		}
	}
	.li-info{
		.w(600*@w);
		.auto;
		.hidden;
		a{
			.w(290/6%);
			.block;
			.pr;
			span{
				.pa;
				bottom: .1rem;
				right: .1rem;
				.fc(#fff);
				.f(.32rem);
			}
		}
		a:nth-child(2){
			.ml(10/3%);
		}
	}
	.li-tag{
		.hidden;
		.w(600*@w);
		.auto;
		.mt(.28rem);

		a{
			.mr(.06rem);
			.h(.58rem);
			.block;
			.left;
			img{
				.w(.26rem);
				.inline;
				.mr(.12rem);
				.left;
			}
			span{
				.fc(#ffaabe);
				.f(.26rem);
				.l(.28rem);
			}
			.mr(.1rem);
		}
	}
}
.banner-li{
	.w(100%);
	.block;
}

/* qun post less rem version end */