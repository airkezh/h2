.item_foot(){
	.buy_wrap{
		.w(6.4rem);.h(1rem);.pr;

		.buy_box{
			.pf;left: 0;bottom: 0;.w(6.4rem);.h(1rem);.bgc(rgba(255,255,255,.95));box-shadow: 0px -1px 0px 0px rgba(51,51,51,0.15);

			.buy_btn,
			.add_cart{ .left;.w(1.8rem);.h(.78rem);.mt(.11rem);.border-r(.04rem);.bgc(#FFE817);.f(.26rem);.fc(#666);.l(.78rem);.c; }
			.buy_btn{ .fc(#fff);.bgc(#F66); }
			.buy_btn{ .ml(.3rem);.mr(.4rem); }

			.home_link,
			.cnt_seller{ .left;.w(.44rem);.pt(.4rem);.mt(.2rem);.f(.18rem);.c;.icon(0, 0); }
			.cnt_seller{ background-position: 102% .5%; }
			.home_link{ .ml(.41rem);.mr(.4rem); }
		}
		.fixed_sku{ .w(100%);.h(100%);.pf;top: 0;left: 0;z-index: 500;visibility: hidden;.gpu; }
		.black_mask{ .pf;top: 0;left: 0;.w(100%);.h(100%);.bgc(rgba(0,0,0,.5));z-index: 100;transition: opacity .3s ease; }
		.sku_wrap{ .pf;bottom: 0;left: 0;.w(100%);.bgc(rgba(255,255,255,.95));z-index: 500;transition: -webkit-transform .5s ease;-webkit-transform:translateY(100%);transform:translateY(100%); }
		//进场和退出动画
		.slide_bottom_in{
			.black_mask{opacity: 1;}
			.sku_wrap{
				-webkit-transform: translateY(0);
				transform: translateY(0);
			}
		}
		.slide_bottom_out{
			.black_mask{opacity: 0;}
			.sku_wrap{
				-webkit-transform: translateY(100%);
				transform: translateY(100%);
			}
		}
		.sku_h{
			.pr;padding: .3rem;.bgc(#fff);.hidden;-webkit-box-shadow: 0 1px rgba(89,80,86,.15);box-shadow: 0 1px rgba(89,80,86,.15);

			.img_wrap{ .left;.w(1.2rem);.h(1.2rem);background: no-repeat center;background-size: cover; }
			.title{ .left;padding: .28rem 0 .2rem .2rem;.w(3.7rem);.fc(#666);.ellipsis; }
			.price{ .left;.pl(.2rem);.fc(#FF7A9A); }
			.close{ .pa;top: .3rem;right: .3rem;.w(.4rem);.h(.4rem);background: url('http://d04.res.meilishuo.net/img/_o/14/82/4104a16dfd61fd48bbfec8d3bb37_64_64.cg.png') no-repeat center;background-size: .32rem;.indent;}
		}
		.sku_c{
			max-height: 4.9rem;overflow-y: auto;

			li{ .ml(.3rem);.pt(.3rem);.pr(.3rem);.pb(.1rem);border-bottom: 1px solid #E5E5E5;.hidden; }
			li:last-child{ border-bottom: none; }
			.title{ .fc(#666);.mb(.2rem); }
			.img_btn{
				.left;.w(.78rem);.h(.78rem);.hidden;.mr(.2rem);.mb(.2rem);border: 2px solid #DCDCDC;

				img{ .w(100%); }
			}
			.img_btn.active{ border: 2px solid #FF789F; }
			.text_btn{ .left;padding: 0 .1rem;.h(.56rem);.mr(.2rem);.mb(.2rem);border: 1px solid #999;.border-r(.04rem);.fc(#999);.l(.56rem);.c; }
			.text_btn.active{ border-color: #FF7B9A;.fc(#fff);.bgc(#FF7B9A); }
			.text_btn.out_of_stock{ .fc(#ccc);border-color: #ccc; }

			.numBox{ .pr; }
			.minus,
			.nums,
			.plus{ .left;.w(.56rem);.h(.56rem);border: 1px solid #999;.border-r(.04rem);.ml(.1rem);.c;.l(.56rem);.f(.24rem);.fc(#999); }
			.nums{ padding: 0;.w(1.16rem); }
			.minus.active,
			.plus.active{ .fc(#FF7B9A);border-color: #FF7B9A; }
			.stock{ .left;.l(.56rem);.ml(.1rem);.fc(#CCC); }
			.input_mask{ .pa;left: .79rem;bottom: .11rem;.w(1.16rem);.h(.56rem);background: transparent; }
		}
		.confirm_wrap{
			border-top: 1px solid #E5E5E5;padding: .2rem 0;.bgc(#fff);

			.confirm_btn{ .w(2.1rem);.h(.6rem);.auto;.border-r(.06rem);.bgc(#FF7B9A);.fc(#fff);.c;.l(.6rem); }
			.non_buy{ .bgc(#ccc); }
		}
	}
	.fixed_download{

		.black_mask{ .pf;top: 0;left: 0;.w(100%);.h(100%);.bgc(rgba(0,0,0,.5));z-index: 500; }
		.dialog_box {
			.c;.pl(.26rem);.pr(.26rem);.pt(.10rem);.pf;top: 50%;left: 50%;.w(4rem);.ml(-2rem);.mt(-1.25rem);.bgc(#fff);.border-r(.06rem);z-index: 500;
			.intro {
				.f(.28rem);.c;.fc(#595056);.l(.40rem);.pb(.30rem);
			}
			.btn { .h(.60rem);.w(2.16rem);.l(.60rem);.c;.f(.26rem);.border-r(.10rem); margin-left: auto; margin-right: auto;}
			.downloadBtn {
				.bgred;.white;.mb(.10rem);
			}
			.noDownload { .fc(#ccc2c9);}
		}
	}
}