@import "../common/block.less";
@import "../common/window.less";
@import "../common/dootablock";
@import "../common/block/steps.less";
@import "order_detail";
@import "common/apply";
.steps;
.doota;
.doota > .icon;
.title_icon{background:url("@{pic_url}/images/doota/refund_apply_icon.png") no-repeat;}

.icon_info{.w(1002px);.auto;
	.h_icon{.title_icon;.w(164px);.h(34px);.mt(23px);.mb(22px);}
}
.route{
	width: 1002px;
}
.main{border: 0px;}
.order_area{
	.container{
		.w(1002px);
		margin:20px auto;
		position: relative;
		border-top: 2px solid #ff6699;
		background: #ffffff;
		padding-bottom: 120px;
		.clearfix;
		.refund_steps_wrap{
			.w(660px);
			padding: 10px;
			padding-top: 15px;
			position: relative;
			float: left;
			.steps{
				.clearfix;
				.w(480px);
				padding-left: 27px;
				position: relative;
				margin-left: 105px;
				border-left: 1px solid #e0e0e0;
				.step_content{
					padding-bottom: 35px;
					.step_status{
						color: #999999;
						font-size: 14px;
						line-height: 30px;
						font-weight: bold;
						height: 16px;
						line-height: 16px;
//						padding-bottom: 10px;
					}
					.step_list_wrap{
						padding-top: 10px;
						.step_list{
							line-height: 25px;
							color: #666666;
							font-size: 12px;
							p{
								word-wrap:break-word;
								word-break:break-all;
							}
							input{
//								height: ;
							}
							.proof{
								.w(100%);
								.clearfix;
								padding: 5px 0px;
								ul{
									.w(100%);
									.clearfix;
									li{
										.w(70px);
										.h(70px);
										float: left;
										margin-right: 10px;
										img{
											width: 70px;
											height: 70px;
										}
									}
								}
							}
							.flow{
								p{
									color: #999999;
									span{
										padding-right: 10px;
									}
								}
							}
							.modifyExp{
								color: #ff6699;
								margin-left: 10px;
							}
							.modifyinp{
								color: #666666;
								border: none;
								&:read-only{
									border: none;
								}
							}
						}
						.notice{
							color: #ff6699;
							line-height: 25px;
						}
					}
					&.active{
						.step_status{
							color: #ff6699;
						}
					}
					&.last{
						padding-bottom: 0px;
					}
					.buttons_wrap{
						.w(100%);
						position: relative;
						padding-top: 14px;
						.clearfix;
						.button{
							display: block;
							padding: 0px 10px;
							height: 30px;
							line-height: 30px;
							text-align: center;
							float: left;
							margin-right: 10px;
							&.button_red{
								border: 1px solid #ff6699;
								background: #ff6699;
								color: #ffffff;

							}
							&.button_border{
								border:1px solid #ff6699;
								background: none;
								color: #ff6699;
							}
							&.button_light{
								border: 1px solid #999999;
								color: #999999;
								background: none;
							}
						}
					}
				}
				.step_liststyle{
					width: 18px;
					height: 18px;
					position: absolute;
					top: -1px;
					left: -9px;
					background: #ffffff;
					span{
						display: block;
						width: 16px;
						height: 16px;
						position: absolute;
						top: 1px;
						left: 1px;
						background: url("http://i.meilishuo.net/css/images/refund_liststyle.png") no-repeat;
						background-position: -16px 0px;
						&.active{
							background-position: 0px 0px;
						}
					}

				}
				.step_time{
					.w(90px);
					position: absolute;
					top: 0px;
					left: -105px;
					text-align: center;
					color: #999999;
					line-height: 20px;
					font-weight: bold;
					&.active{
						color: #ff6699;
					}
				}
			}
		}
		.refund_express{
			.refund_add,.refund_reason,.refund_no{
				.clearfix;
				padding: 3px 0px;
			}
			.text{
				height: 20px;
				line-height: 20px;
				width: 144px;
			}
			.mls-select{
				width: 150px;
				border: 1px solid #d2d2d2;
			}
			.labels{
				display: block;
				width: 65px;
				line-height: 20px;
				position: relative;
				color: #999999;
				float: left;
				b{
					color: #ff6699;
				}
			}
			.address{
				float: left;
				width: 380px;
				line-height: 20px;
			}
			.coupontips{
				color: #ff6699;
				line-height: 40px;
			}
		}

	}
	#express_id{
		height: 18px;
		line-height: 18px;
	}
	.company_input{
		height: 19px;
		line-height: 19px;
		width: 116px;
	}
	#edit_express,#cancel_edit_express{
		display: inline-block;
		padding: 0px 10px;
		height: 20px;
		min-width: 50px;
		line-height: 20px;
		text-align: center;
		border: 1px solid #ff6699;
		background: #ff6699;
		color: #ffffff;

	}
}


.footer();
