<%#head_simple.html%>
<%
	var EfnSubstr = _extFn.mSubstr;
%>

</head>
<body>

<section id="catalog_main" class="catalog_main" ismove="0">
	<header class="header">
		<span class="btn_left btn_home"></span>
		<h1><%== this.currentWord%></h1>
		<span class="btn_right btn_aside">类目</span>	
	</header>
	<section id="wrapper_main" class="wrapper">
		<div class="scroller">
			<div class="pullDown" status="normal">
				<span class="icon"></span>
			</div>
			<section class="wrapperInner">
				<div class="goods_wall"></div>
			</section>
			<div class="pullUp" status="normal">
				<span class="icon"></span>
			</div>
		</div>
	</section>
</section>
<aside id="catalog_aside" class="catalog_aside">
	<header class="header">
		<h3>搜索</h3>
		<% if(1==0){ %>
		<form action="/search" method="get">
			<p class="text"><input class="searchKeyCatalog" type="text" name="searchKey" value="" placeholder="去其他关键词"></p>
			<p class="btn"><input type="submit" value="搜索"></p>
		</form>
		<% } %>
	</header>
	<section id="wrapper_aside" class="wrapper">
		<div class="scroller">
			<%# guang/aside.html%>
		</div>
	</section>
</aside>
<%# poster.html%>

<script>
<%= this.poster0? 'Meilishuo.config.poster0 = '+JSON.stringify(this.poster0)+';':'' ;%>
<%= this.catalog.currentWord? 'Meilishuo.config.curWord = "'+this.catalog.currentWord+'";':'';%>
</script>
<% $_ENGINE_SELF.callFn("useModule")("fml.use('wap/page/poster0');", this._JSstack , this._JSmodsFast ); %>
<%! $_ENGINE_SELF.callFn("useModule")("<<<_use:
	fml.use('wap/page/catalog');
_use:", this._JSstack , this._JSmods ); %>
<%#foot_simple.html%>
