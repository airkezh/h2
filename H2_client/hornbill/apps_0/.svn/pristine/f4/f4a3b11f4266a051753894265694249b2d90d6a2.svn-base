@import "../../block.less";
@import "../../lark/jjl.less";


html,body { .h(100%); .bgc(#1c1c22);}
img { .w(100%); .block; }

.wrap {
	.h(100%);
	background: url("http://d01.res.meilishuo.net/pic/_o/58/2e/8c8c1a55d2ed14fda3493dc47350_640_1136.cg.jpg") no-repeat;
	background-size: 100% 100%;

	.result { .w(76%); .auto; .pt(10%);}
	.mark { 
		 .c; .pt(20%); .pb(20%); .mb(2%);
		 background:rgba(22, 23, 31, 0.7);
		.info { 
			.fc(#ff67a6); .f(40*@px); .h(256*@px); .w(254*@px); .auto; .l(120px);
			background: url("http://d03.res.meilishuo.net/pic/_o/39/66/e0e35305bc589a59f677699d5966_253_257.cg.png") no-repeat; 
			background-size: 100% 100%; 
			span { .f(90*@px);}
		}
		h2 { .f(30*@px); .fc(#5e647a); .pt(10%);}
	}
	.btn { .block; .bgc(#ff75af); .l(80*@px); .border-r(10*@px); .c; .fc(#27272c); .fb; .f(38*@px); .mt(7%);}
}