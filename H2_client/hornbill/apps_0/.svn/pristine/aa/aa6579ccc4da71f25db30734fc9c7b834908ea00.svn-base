@import "../../block.less";
body{
	.bgc(#fbd5e3);
}
.zero{
	&_top{
		.pt(340*@w);
		background:url("@{pic_url}/images/activity/fouryears/mob_top2.jpg") no-repeat;
	}
	&_intro{
		.pt(160*@w);.block;
		background:url("@{pic_url}/images/activity/fouryears/mob_intro1.jpg") no-repeat;
	}
	&_info{
		.w(600*@w);.auto;.c;.fc(#b31d30);.fb;.mt(20*@w);.l(20px);	
	}
	&_top, &_intro{
		.w(100%);
		background-size:100%;
	}
	&_ad{
		.w(600*@w);.pt(340*600/640*@w);.mt(30*@px);
		.auto;.block;
		.border-r-a(8*@px);
		&.wyg{
			background:url("@{pic_url}/images/activity/fouryears/wyg131129.jpg") no-repeat;
		}
		&.kj{
			background:url("@{pic_url}/images/activity/fouryears/kj0.jpg") no-repeat;
		}
		&.wyg,&.kj{
			background-size:100%;
		}
	}

	&_dialog{
		.c;
		p{padding:65*@px;.l(44*@px);.f(32*@px);.fc(#000);}
		.btnBox{border-top:1px solid #ccc;
			span{
				.i_block;.w(48%);.pt(30*@px);.pb(30*@px);
				border-left:1px solid #ccc;
				&:nth-of-type(1){.border-n;}	
			}
		}
	}
	&_page{
		.pt(160*@w);.pl(40*@w);.pr(40*@w);
		.btn{.w(300*@px);.auto;}	
		p{.c;.red;
			&:nth-of-type(1){.f(34*@px);.l(90*@px);}	
			&:nth-of-type(2){.f(30*@px);.l(48*@px);.pb(60*@px);}	
		}
	}
}

.dialog;
.dialogTitle{.none;}
#dialogLayer{padding:0px;}

.goods_wall{ 
	.pb(60*@w);
	.poster_grid{
		.w(290*@w);.left;
		.ml(20*@w);.mt(20*@w);
	}
	.goods_title{
		.f(14px);
		padding: 3px;
		background-color: white;
		text-overflow: ellipsis;
		white-space: nowrap;
		overflow: hidden;
	}
	figure{
		.border-r-a(14*@px);
		box-shadow:0px 3px 3px rgba(128,64,85,0.2);
		.pic_load{
			.block;
			.border-r-tr(12*@px);.border-r-tl(12*@px);
			.hidden;.pr;
			background:#fff url("@{pic_url}/images/group/g_loading1.gif") no-repeat;
			background-size:64*@px 64*@px;
			background-position:center center;
			img{
				.border-r-tr(12*@px);.border-r-tl(12*@px);
				.pa;top:0px;.w(100%);
			}
		}
	}

	figcaption{
		.h(80*@px);.pt(10*@px);.pb(10*@px);.pr;
		.bgred;.white;
		.border-r-br(12*@px);.border-r-bl(12*@px);
		p{.pl(13*@w);.pr(13*@w);}
		.num{.f(24*@px);.l(40*@px);}
		.goods_price{.f(20*@px);.t-through;}
		.zero_btn{
			.pa;right:13*@w;.pt(122*@px);.w(122*@px);top:50%;.mt(-122/2*@px);
			background:url("@{pic_url}/images/activity/fouryears/btn_red.png") no-repeat;
			background-size:100%;
		}
	}
	.disable{
		&3{
			.bgc(#b6b6b6);
			.zero_btn{
				background:url("@{pic_url}/images/activity/fouryears/btn_gray3.png") no-repeat;
				background-size:100%;
			}
		}
	}
}


/*分享*/
.starBox{ .star_box; }
