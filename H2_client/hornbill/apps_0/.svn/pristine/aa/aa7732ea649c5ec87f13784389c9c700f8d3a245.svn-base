@import '../block.less';
body{ .f(24*@px); .bgwhite; }
nav{ 
	.w(100%); 
	li{
		.block; 
		.left; 
		.w(1px);
		div.separate_line{ .mt(2em); .h(30px); border-left: 1px solid rgba(0,0,0,0.1);}
	}
	li.nav{ 
		.w(32.8%); 
		//.pt(10*@px);
		.h(156*@px);
		.c; 
		div{
			.mt(30*@px);
			p{ .mt(1px); .mb(1px); }
			p.part1{ .f(30*@px); .fc(#f23d3d); };
			p.part2{ .f(20*@px); .fc(#595056); };
			p.part3{ .f(20*@px); .fc(#c3c3c3); };
		}
	};
	li.current{ 
		div{
			.mt(20*@px);
			p.part1{ .f(50*@px); .fc(#f23d3d); };
			p.part2{ .f(30*@px); .fc(#595056); .fb; };
			p.part3{ 
				.pr;
				.mt(4px);
				.l(120%);
				span{ .pa; top:0; left:50%; .w(6em); .ml(-3em); .block; .c; .f(24*@px); .fc(#ffffff); .bgc(#f23d3d); }; 
			};
		}
	}
	.clearfix;
}
.coupons{
	.pr;
	.pb(8px);
	.w(100%);
	[class*="coupon"]{
		.i_block;
		.w(30%);
		img{ .w(100%); }
	}
	.coupon0{ .pr; top: 0; left: 3%; }
	.coupon1{ .pa; top: 0; left: 35%; }
	.coupon2{ .pa; top: 0; left: 67%; }
	.get{
		.credit{ .fc(#ffffff); }
		.threshold{ .fc(#f9b0b0); }
	}
	.got{ 
		.credit{ .fc(#404040); }
		.threshold{ .fc(#bababa); }
	}
	.out{ 
		.credit{ .fc(#a6a6a6); }
		.threshold{ .fc(#dfdfdf); }
	}
	p.credit{ .pa; top: 11%; left: 0; .w(100%); .c; .f(16px); span{ .f(25px); } }
	span.threshold{ .pa; top: 51%; left: 0; .w(100%); .c; font-size:10px;}
}
.theme{
	.pr; .ml(30*@px); .mr(30*@px);
	img{ .pa; top:3px; left:0; .w(80*@px); .border-r(50%); border: 1px solid rgba(0,0,0,0.1); }
	div.theme_wrapper{
		.pr;
		.ml(96*@px);
		border: 1px dotted rgba(128,115,123,0.5);;
		.border-r(3px);
		div{ 
			padding:0.85em 0.5em; 
			border: 1px solid #ffffff; 
			min-height: 2em;
			.border-r(5px);
			.bgc(#f5f5f5); 
			p{ .block; }
			p.left{ 
				.pr(3em); 
				.fc(#80737b);
			};
			p.right{ 
				.pa; 
				top:10px; 
				right:0; 
				.pl(0.5em); 
				.pr(0.5em); 
				.c; 
				border-left: 1px solid #e6e5e6;
				.f(20*@px);
				.fc(#f23d3d);
				span{ .f(32*@px); }
			};
		};
	}
	.clearfix;
}
.main{
	.goods_wall{
		figure{
			.mt(20*@px); .pr; .w(100%); /*.h(300px);*/.fc(#ffffff); 
			.twitter_img{ .w(100%); }
			a{ .block; }
			span.new_logo { 
				.pa; 
				top: 30*@px; 
				left: 30*@px; 
				img{ .w(90*@px); }
			}
			span.sold_out_logo{
				.pa; 
				top: 50%; 
				left: 50%; 
				.mt(-90*@px);
				.ml(-90*@px);
				img{ .w(180*@px); }
			}
			figcaption{
				.pa; left:0; bottom:2px; .w(100%);
				p{ .c; };
				.remainder{ 
					.l(60*@px); 
					background-color: rgba(242,61,61,0.85); 
				}
				.base_info{
					.l(80*@px); .pl(18*@px); .pr(18*@px);
					background-color: rgba(0,0,0,0.4); 
					p{ .block; }
					p.left{ 
						.left; 
						.price_red{ .f(30*@px); };
						.price{ .t-through; .f(20*@px); color: rgba(255,255,255,0.6); }
					};
					p.right{ 
						.right; 
						span{ .fc(#f23d3d); }
					};
					.clearfix;
				}
			}
		}
	}
}
.tips{
	.l(80*@px); 
	border-bottom: 1px solid rgba(0,0,0,0.1);
	p{ .c; .fc(#ccc2c9); }
}
.separate_tape{ .h(20*@px); .bgc(#f9eff3); }
.txt{  
	.ml(30*@px); 
	.fc(#999999);
	.l(80*@px); 
	.c; 
	border-bottom: 1px solid rgba(0,0,0,0.1); 
}
.attention{
	.pl(30*@px);
	.pr(30*@px);
	div{ 
		.pt(35*@px);
		.l(60*@px); 
		a{ 
			.block; 
			.left; 
			.f(28*@px); 
			.fc(#595056); 
			.l(60*@px);
			span,img{ 
				.i_block;
				.left;
				} 
			span{ .pl(5px); }
			img{ .w(60*@px); .border-r(50%); border: 1px solid rgba(0,0,0,0.1);  }
		}
		p{ 
			.block;
			.right;
			.w(200*@px);
			.h(60*@px);
			.c;
			.red;
			.f(28*@px); 
			border:1px solid @red;
			.border-r(4px);
			span{ 
				img{ .w(22*@px); .h(22*@px); .mr(3px);}
			}
		}
		.clearfix;
	}
}
.att{
	div{
		p.att_btn{ border:1px solid #80737b; .fc(#80737b); }
	}
}
//自定义alert样式
.my_alert{
	h3{ .f(16px); }
	span{ .f(14px); .l(150%); }
	.validity{ .fc(#ff6699) }
}
.sureBtn{ .f(14px); }