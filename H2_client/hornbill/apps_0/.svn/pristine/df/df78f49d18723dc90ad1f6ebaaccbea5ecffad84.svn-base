@import "wx.less";

html,body{
	.bgc(#fff);
	.w(100%);
	.f(10px);
}
.main{
	.pr;
	.hidden;
	min-width: 320px;
	margin: 0 auto;
	max-width: 640px;
}
img{
	.w(100%);
	.block;
}
ul{list-style:none;}
i{font-style:normal;}
.line{
	.pa; 
	top: 30px;
}
.f_14{.f(1.4rem);}
.f_15{.f(1.5rem);}
.f_30{.f(3rem);}
.f_23{.f(2.3rem);}
.f_25{.f(2.5rem);}
.red_f1{.fc(@red);}
.top-bnr{.pr;.hidden;}
.a-desc{
	.none;
	.w(16%);
	.pa;
	right: 0;
	top: 100px;
	.bgc(@red);
	.white;
	.c;
	.h(40*@px);
	.l(40*@px);
}


 .points {
	.pr;
	.w(100%);
	.h(80*@px);
	.auto;
}
.points s {
	width: 64px;
	height: 45.5px;
	position: absolute;
	left: 50%;
	margin-left: -30px;
	background: url('http://d05.res.meilishuo.net/pic/_o/a8/e2/bae13f8d6ffd258a48a406a022a8_128_90.cg.png') bottom center no-repeat;
	background-size: 100%;
	z-index: 10;
}

.points ul {
	list-style: none;
	-webkit-transform: translate3d(0,0,0);
	-webkit-transition: all .3s ease-in-out;
	width: 1000px;
	overflow: hidden;
	position: relative;
	z-index: 10;
}
.points ul li {
	float: left;
	line-height: 17px;
}
.points ul li a {
	.fc(#a6a4a5);
	.f(1.4rem);
	display: block;
	//width: 63px;
	margin-top: 5px;
	text-align: center;
	text-decoration: none;
	font-weight: 700;
	outline: 0;
	font-weight: 400;
	font-family: "Helvetica Neue";
	label{
		.block;
		.f(1rem);
	}
}
.points ul .curr a{
	.fc(#fff);
}


.act-tip{
	.pt(10px);
	.pb(10px);
	.f(1rem);
	.fc(#ababab);
	.bgc(#f5f5f5);
	.split{
		.i_block;
		.w(1px);
		.h(.9rem);
		.ml(14*@w);
		.mr(14*@w);
		.bgc(#dadada);
	}
	.t-c{
		.right;
		.mr(.9rem);
	}
}
#content_box{
	.pl(14*@w);.pr(14*@w);
	
}
img{
	.w(100%);
	.block;
}
.zhengdian{			
	.mt(14px);.pr;.bgc(#fff);min-height:140px;
	>figure{.w(45%);.i_block;.pr;.mt(2px);
	}
	.desc{.w(55%);.right;
		li{.ml(7px);.mr(7px);.pa;.w(53%);}
		li:nth-child(1){top:1%;}
		li:nth-child(2){top:19%;}
		li:nth-child(3){top:44%;.w(20%);border-radius: 5px;right:1%;.white;}
		li:nth-child(4){top:80%;bottom:3px;}
		
	}
	.now_price{
		.ml(-6px);
		.mt(10%);
	}
	.old_price{.ml(-4px);.fc(#adadad);}
	.gcata{
		line-height: 25px;
		width: 38px;
		.f(15px);
		.fc(#adadad);
		i{
			
			.fc(#fff);
			padding: 2px 12px;
			.ml(10px);
		}
	}
	.t_count{
		.f(1rem);
		.fc(#80737b);
	}
	.red_bg{ .bgc(#f66);}
	.yel_bg{
		.bgc(#ff9955);
		.f(10px);
	}
	.mark{
		position: absolute;
		top: -10px;
		left: -10px;
		.w(45px);
		.h(45px);
		background: url('@{pic_url}/images/wap/tuan/mflag.png') center center no-repeat;
		background-size: 100% 100%;
	}
	.saleinfo{
		p{
			.fc(#80737b);
			height: 0.7rem;
			.f(1rem);			
		}
		.rate{
			.mt(10px); background: #ccc;
		}
		.scale{
			background: #ccc;
			.mt(10px);
		}
		.progress{
			display: block;
			height: 0.7rem;
			.bgc(@red);
			margin-top: -0.7rem;
		}
	}
}
.status_btn {
	.pt(10px);
	.pb(10px);
	.f(1.4rem);
	.fc(#fff);
	.block;
	text-align: center;
	background-color: #ff94b7;
}
span.over_btn,li.over_btn{.bgc(#ccc;);}
span.reminded_btn,li.reminded_btn{background:#ccc;}
span.empty_btn,li.empty_btn{.bgc(#b6b6b6);} 
span.buy_btn,li.buy_btn{
	.bgc(#ff94b7); 
	a{.block;.w(100%);
		.h(100%); 
		.fc(#fff);
	}
}

.rbclose{
	.w(50%);
	.h(50%);
    .pa;
    top: 10px;
    right: 10px;
}
.lhp100{
	background-color:#d5d5d5;width:100%;height:1px;-webkit-transform:scaleY(0.5);
}

.dialog();
#dialogLayer .dialogTitle .close{.none;}
.dialog_box{
	.pt(1rem);.c;
	p{ .l(2rem); .f(1.4rem); }
	.mask_btn{.white; .border-r(40*@px); .border-n; .f(1.4rem); padding: 1% 1rem;.w(32%); .left;.ml(28%);.mt(20px);
		}
	//.r_btn{.right;.mr(5%);background:#f69;}
	.l_btn{background:#ffad5c;}
}
.no-goods{
	.w(100%);
	.h(40px);
	font-size: 12px;
	.c;
	.l(40px);


}
.remind_btn a{
	.white;
}