.filter_wrap{.w(1200px); .auto;}
/*面包屑*/
.bread_crumbs{
	.mt(14px); .fc(#999);
	.corner{.ml(6px); .mr(6px);}
	.subcata_text{.mr(10px);}
}

/*排序*/
.sort_box{
	border: solid 1px #e1e1e1; .fc(#333); .bgc(#f8f8f8); .mt(8px);
	ul{
		list-style: none;
		li{
			.left; 
			.theme,.trigger_link{
				.block;
				.w(62px); .c;
				.pt(12px); .pb(12px);
				.ml(-1px);
				border-left: solid 1px #f8f8f8;
				border-right: solid 1px #f8f8f8;
			}
			.trigger_link{.fc(#666);}
			.theme:hover{
				.pr; z-index:1;
				.bgc(#fff);
				border-left: solid 1px #e1e1e1;
				border-right: solid 1px #e1e1e1;
			}

			a.curr{
				.bgc(#fff);
				.pr; z-index:1;
				border-left: solid 1px #e1e1e1;
				border-right: solid 1px #e1e1e1;
			}
			a.first{
				border-left: none;
				.ml(0px);
			}
			a.first:hover{
				border-left: none;
			}
		}
	}
	.arrow_down{
		.i_block; .w(9px); .h(5px); .ml(4px);
		background: url('http://d02.res.meilishuo.net/pic/_o/0c/74/da7edeee0aff2f7f0b3a23192df5_100_42.cg.png') no-repeat;
		background-position: -18px -16px;
	}
	.clearfix;
}

.laypr{
	.pr;
	.pricesort{
		.pa; .none;
		.w(82px); .h(42px);.mt(-1px);.ml(-1px);
		top: 0; border: solid 1px #c5c5c5;
		z-index: 1; padding: 12px 13px; .bgc(#fff);
		li{
			.mb(14px);
		}
	}
}
.laypr:hover{
	.pricesort{
		.block; 
	}
}
.byprice,.bytype{
	.left;
	.input{.w(66px); .h(24px); border: solid 1px #eaeaea; padding: 0 4px;}
	.p_submit{ padding:4px 5px; border: solid 1px #eaeaea; .bgc(#fff); .ml(6px); cursor: pointer;}
	.p_submit:hover{.bgc(#f5f5f5); .fc(#333);}
}
.byother{
	.right; .mr(10px);
	a{
		.left; padding: 12px 10px;
		.icon_filter{
			.left;
			.w(16px); .h(16px); .mt(-2px); .mr(2px);
			background: url('http://d02.res.meilishuo.net/pic/_o/0c/74/da7edeee0aff2f7f0b3a23192df5_100_42.cg.png') no-repeat;
			background-position: -43px -10px;
		}
		
	}
	a:hover,a.selected{
		.fc(#666);
		.icon_filter{
			background-position: -70px -10px;
		}
	}
}
.wavemark{.fc(#d9d9d9); .ml(1px); .mr(1px);}
.byprice{.mt(6px);
	input::-webkit-input-placeholder {
　　color: #aaa;}
　　input::-moz-placeholder {
　　color: #aaa;
　　}
　　input::-moz-placeholder {
　　color: #aaa;
　　}
　　input::-ms-input-placeholder {
　　color: #aaa;
　　}
}

