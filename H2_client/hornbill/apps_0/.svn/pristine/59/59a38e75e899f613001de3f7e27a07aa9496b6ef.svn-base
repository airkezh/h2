@import "../block.less";
@import "../doota/shareact_bs_goods.less";
html,body { .bgwhite; }
.main{ min-height: 1000px;}
.goods_wall { .auto; .w(1200px);
   .productCon{ border: none; .w(220px);}
   .proBtnWrap{ .mb(20px);}
   .not-addToCart{ .border-1(#ccc); .fc(#666);}
   .not-addToCart:hover{ .bgc(#ccc); .fc(#666);}
}

.sec_nav_wrap {position: relative; z-index: 1000; .w(100%); }
.tab_wrap { .w(100%); }
.tab_wrap_fixed { .pf;left:0;top:0;}
.bs_tab_wrap{ .w(1200px); .hidden; .auto; .pl(1px); border-left: 1px solid #d8d8d8;
   a{ .w(105px); .left; .c; .cursor; -webkit-transition: background-color .6s ease-out; border-right: 1px solid #d8d8d8;
   }
}
// shadow
.shadow{box-shadow: 0 -7px 0 white,-7px 0px 0 white,7px 0 0 white,0px 2px 7px #e6e6e6;
    /*兼容IE6、 7、8*/
.w(100%);
filter: progid:DXImageTransform.Microsoft.Shadow(Strength=7, Direction=180, Color='#e6e6e6'); /*for ie6,7,8*/}

.sec-img{ .w(1200px);
   a{ .block; .w(100%);}
}

.poster{
   .hidden;.w(960px);.auto;.pb(20px);min-height: 350px;
   .bs_tab{.ml(22px);.w(960px);}
   .fx_hidden{.none;.h(52px);.w(100%);}
   .fx_tab{
      .pf;top: 30px;left: 0;.bgc(rgba(0,0,0,.2));z-index: 100;.w(100%);
      .bs_tab{.pr;left: 50%;.ml(-463px);}
   }
   .spinner{.mt(50px);}
}
