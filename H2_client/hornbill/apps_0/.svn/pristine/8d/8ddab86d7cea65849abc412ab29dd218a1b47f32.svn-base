@import "../block";

html,body{
	background:#f8f8f8;
}

.main{
	background:#fff;
	margin-top:10px;
	font-size:16px;
	text-align:center;
	p{
		text-align: left;
		padding-left:14px;
		padding-bottom:10px;
	}
}
.box{
	height:70px;
	padding-top:10px;
	.active{
		border:1px solid #f69;
		color:#f69;
	}
}
.box > span{
	padding:9px 3px;
	border:1px solid #000;
	border-radius:3px;
	display:inline-block;
}

.content{
	height:150px;
	position:relative;

	textarea{
		width:92%;
		height:100px;
		border-radius:3px;
		font-size:12px;
	}
	span{
		position:absolute;
		bottom:18px;
		right:14px;
		color:#999;
	}
}
.upload{
	.upImg_box{
		ul{
			li{
				float:left;
				width:80px;
				height:80px;
				overflow:hidden;
				margin-left:18px;
				margin-bottom:10px;
				position:relative;
			}
			b{
				position:absolute;
				top:-1px;
				right:-1px;
				width:25%;
				height:25%;
				background:url('http://d03.res.meilishuo.net/pic/_o/8f/8a/e7576def9d91da412c62377d00a3_40_40.cj.png')no-repeat;
				background-size:100% 100%;
			}
			img{
				width:80px;
				height:80px;
			}
		}
	}
	.btn_load{
		position:relative;
		width:80px;
		height:80px;
		overflow:hidden;
		display:block;
		margin-left:18px;
		float:left;
		margin-bottom:10px;
		img{
			width:100%;
		}
	}

}

.submit{
	clear:both;
	margin:0 auto;
	width:90%;
	height:50px;
	line-height:50px;
	background:#ddd;
	a{
		color:#fff;
	}
}


.feed_foot{
	height:100px;
	margin-top:20px;
	background:#f8f8f8;
	padding-top:20px;
}









