@import "block.less";
* {
	padding: 0;
	margin: 0;
}

body {
	background: #fff1b2;
	text-align: center;
}

img {
	.block();
	width: 100%;
}

.bag {
	.pr();
}
.msg {
	.pa();
	top: 48%;
	left: 90*@w;
	width: 455*@w;
	margin: auto;
	.require {
		background: #fff;
		height: 80*@px;
		border:1px solid #e93736;
		border-radius: 6*@px;
		font-size: 30*@px;
		text-indent: 12*@px;
	}
	.phonenum {
		width: 100%;
		box-sizing: border-box;
	}
	.cell {
		position: relative;
		top: 20*@px;
	}
	.code {
		width: 266/455*100%;
		display: inline-block;
		position: absolute;
		left: 0;
	}
	.send_btn {
		width: 160/455*100%;
		height:80*@px;
		display: inline-block;
		line-height: 80*@px;
		background: #ffda4b;
		border:1px solid #e93736;
		text-align: center;
		color: #ab6a3e;
		position: absolute;
		right: 0;
		font-size: 30*@px;
		border-radius: 6*@px;
	}
}

.btn {
	margin: auto;
	width: 460*@w;
	height: 88*@px;
	line-height: 88*@px;
	background: #fc4f4e;
	border-radius: 6*@px;
}
.apply_btn {
	color: #fff;
	font-size: 42*@px;
}

.advertising {
	width: 600*@w;
	margin: 78*@px auto 0;
}

.download_link {
	width: 350*@w;
	margin: 48*@px auto 0;
}

.logo {
	width: 324*@w;
	margin: 40*@px auto;
}

.rpic {
	margin: 78*@px auto 0;
}

.success {
	width: 406*@w;
}

.had {
	width: 460*@w;	
}

.late {
	width: 564@w;
}

.stop {
	width: 410*@w;
}

.download_btn {
	width: 460*@w;
	margin: auto;
	position: relative;
	top: -160*@px;
}

.note {
	margin-top: 24*@px;
}