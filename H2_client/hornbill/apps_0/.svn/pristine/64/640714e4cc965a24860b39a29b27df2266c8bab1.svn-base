@import "../block.less";

body{ .w(7.5rem); background-color: #f6f6f6; }
img{ .w(7.5rem); .block; }

.m_auto{ .w(6.54rem); .auto; }
.design_img{ .m_auto; .block; .pr;
	img{ .w(6.54rem); }
	.vote_box{ .pa; .w(1.3rem); .h(1.5rem); top: 6.9rem; right: -0.2rem; .c;
		.vote_btn{ .i_block;  } 
		img{ .w(.9rem); .h(.9rem); }
		.vote_num{ .f(.26rem); .c; }
	}
}
.detail{ .m_auto; .mb(.6rem); }

/*dialog*/
.dialog();
.dialog {
	// #maskLayer { background:rgba(0 ,0 ,0 , 0.7);}
	#dialogLayer { 
		background: none;
		box-shadow: none;
		.dialogTitle { .none;}
	}
	.closeIcon { 
		.pa; top: .15rem; right:.15rem; .w(.3rem); .h(.3rem);
		background: url("http://d02.res.meilishuo.net/pic/_o/d3/70/a76ca952b6f8a9ec993a6427a878_30_31.ch.png") no-repeat;
		background-size: 100% 100%;
	}
}
.dialog_box {
	.pt(6%); .pl(5%); .pr(5%); .pb(5%); .fc(#000); .bgwhite; .pr; max-height: 300px; overflow-y: scroll;
	h2 { .pb(3%); .f(26*@px); }
	p { .pb(5%); .l(40*@px); .f(22*@px);}
}

.dialog_share {
	.c; .mt(-300*@px);
	.share_pic {
		.w(494*@px); .h(514*@px); .i_block; .bgc(#331621);
		background: url("@{pic_url}/images/wap/activity/baoyang/shareLead.png") no-repeat;
		background-size: 100% 100%;
	}
}

.dialog_award { .w(6.39rem); .h(3rem); .c;
	.clearfix; .fc(#000);  .pr; 
	background: url("http://d04.res.meilishuo.net/pic/_o/54/1e/70d1947bb20cefca461254d70583_639_300.cg.jpg") no-repeat;
	background-size: 100% 100%;
	
	.show { .pt(.9rem); 
		h2 { .f(.3rem); .fn; .l(.8rem); .clearfix; .w(2.3rem); .auto;  
			img{ .w(.74rem); .left; .mr(.1rem); }
			span{ .left; }
		}
		h3 { .f(.24rem); .fn; .pt(.2rem); }
	}
	
}


.star_box(){
	.w(100%);
	height: 3rem;
	overflow: hidden;
	.bgc(#fff);
	 border-top:0.01rem solid #DCD2D6; 
	h2 { color: #80737A; .c; font-size: 0.32rem; .fn; .l(200%); }
	.share_ico { .share_icons;
		.btncontain{
			margin: 0 0.3rem;
			padding-top: 0.05rem;
			.btn { .bgc(#60DF6E); -webkit-border-radius: 0.06rem; border-radius: 0.06rem; height: 0.74rem; line-height: 0.74rem; font-size: 0.3rem; .c; .block; .white;margin: 0.2rem auto;  }

		}
	}
}
/*share icons*/
.share_icons(){ 
	.w(100%);
	.icons_box{ width: 2.6rem; .auto; .clearfix;}
	a { display: inline-block;width: 1rem; border:0px solid red;color:#80737A; background:url("@{pic_url}/images/wap/activity/project/wxzz.png") no-repeat ; background-size: 480%; .left;margin-left: 0.06rem;margin-right: 0.09rem; width: 1.08rem; padding-top: 1.1rem; .c; .pr(6*@px);font-size: 0.22rem; }
	a.active { background-image: url("@{pic_url}/images/wap/activity/project/xz.png");}
	.weixin { .bp(23.3%,0);  }
	.weixin_timeline { .bp(-2.9%,0);}
}

/* 分享 */
.starBox{ .star_box; }












.fix_btn{  .pf; .w(1.42rem); .h(1.42rem);  background: #fbe32c; .f(.32rem); color:#fff; .c; .border-r(100%);  }
.design_share{ .fix_btn; .l(1.42rem);  bottom: 2.1rem; right:.2rem; background-color: #38c2c4; opacity: 0.9;   }
.more{ .fix_btn; bottom: .6rem;  right:.2rem; background-color: #f9d118; opacity: 0.9;
	span{ .i_block; .w(.66rem); .mt(.38rem); }
}


/*二级页面*/
.sub_box{ background-color: #fff; .pt(.5rem);
	.head{ .w(1.4rem); .h(1.4rem); .border-r(50%); .auto; .mb(.5rem); }
	.item_box{ .w(6.84rem); .block; .auto; .mb(.6rem); 
		img{ .w(6.84rem); }
	}
	.end{ .w(2.84rem); .auto; }
	.vote_box{ .w(1.3rem); .h(1.5rem); .c; margin: .5rem auto;
		.vote_btn{ .i_block; } 
		img{ .w(.9rem); .h(.9rem); }
		.vote_num{ .f(.26rem); .c; }
	}
}









