.windowDrive(){	
	.windowDrive{
		z-index:999;.c; .pf;.w(100%);.h(160%);top:0px;left:0px;
		.overlay{
			.pa;
			top:0px;left:0px;
			bottom:0px;right:0px;
			.bgc(rgba(0,0,0,0.5));
		}
		.dialog {
			z-index:100;
			.pr;.bgwhite;.w(540*@px);.border-r(16*@px);.i_block;
			&-con{ 
				.c;.fc(#000);padding:40*@px;
			}
			&-btn{
				.c;
				.l(90*@px);
				border-top:1px solid @bc;.c;
				span{
					.i_block;.w(49%);.red;.bs;
					&:nth-of-type(2){
						border-left:1px solid @bc;
					}
				}
			}
		}
		#alert{
			.dialog-btn span{.w(100%);}
		}
	}
}

