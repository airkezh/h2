@import "../block.less";
@import "../window.less";


.main{
	.bgc(#fff);
	.w(960px);
	.auto;
	.mt(40px);
	.mb(40px);
	.f(14px);
	h3{
		.c;
		.pt(40px);
		.f(18px);
	}
}
.sur_title{
	margin:35px 50px;
	.l(25px);
	h4{
		font-weight:normal;
	}
	p{
		.ml(35px);
	}
}
.box{
	margin: 0 20px;
	padding: 20px 20px;
	border-top:1px solid #f2f2f2;
}
.list{
	.mt(10px);
	h4{
		display:inline-block;
		.ml(8px);
	}
	span{
		.left;
		.w(100%);
		.hidden;
		.ml(20px);
		.mt(3px);
		.l(25px);
	}
	.textArea{
		.w(700px);
		.h(120px);
		padding:10px;
		text-align:left;
		border:1px solid #f2f2f2;
	}
	.Ipt_text{
		border:1px solid #ccc;
		.w(150px);
		.h(20px);
		.ml(5px);
	}
	.clearfix;
}
.submit{
	text-align:center;
	.h(80px);
	.mt(10px);
	.s_btn{
		padding:10px 40px;
		.bgc(#f69);
		color:#fff;
	}
}