.order_info {
	.mb(.20rem);
	.goods {
		.pr; 
		.pb(.28rem);
		.mt(.2rem);
		.bgc(#fff); 
		.clearfix; 
		.goods_info_wrap { .f(.26rem); .clearfix;}
		.goods_info_top,
		.goods_info_btm { border-bottom:2px solid rgba(230, 229, 230, 0.3); .mb(.3rem); .pl(.3rem); .pr(.3rem); }
	}
}

.goods_info_top { 
	.f(.28rem);
	.l(.85rem); 
	.clearfix; 
	.order_status_text { .right; .fc(#ff7a9a); }
	.shop_name { 
		.left; 
		.fc(#595056);
		.ellipsis; 
		span { .fc(@darkGray); }
	}
}

.goods_info_btm {
	.goods_img { .left; .w(120/560*100%); .mt(.02rem); .block;}
	.goods_list_info { .mr(30/560*100%);.pb(.3rem);}
	.goods_info {
		.ml(150/560*100%); 
		.clearfix;
		p { .l(.36rem); } 
		.goods_title { .f(.28rem); .l(.36rem); }
	}
	.shop_cost,
	.goods_prop { .pt(15*@w); }
	.shop_cost { .fc(@bGray); }
	.goods_prop { .wx_grey { .pr(5*@w); } }
}

.check {
	.c; 
	.pl(.3rem); .f(.28rem);  .clearfix;
	.total_money{
		.pr(.4rem);
		.total_num {.left; .fc(@gray);}
		.total_price {.right; .fc(@darkGray);}
		.clearfix;
	}
	.order_status {
		.pr(.3rem);
		.clearfix;
		.receipt_btn, 
		.check_btn {.right; .l(.56rem); .fc(#666); .border-1r(#9a9a9a); .border-r(.06rem);.c; .i_block; .mt(.24rem); .ml(.2rem);.pl(.12rem);.pr(.12rem);}
	}
};

a:hover,
a:visited { .fc(@darkGray); }
