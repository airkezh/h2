@import "../block.less";

html{ .f(10*@f); }
body{ background:#fff; }
img{ .block; .w(100%); }

.top_banner{ .w(100%); .pr;
	.audio(1);
	.audio_box{ .ml(2%); bottom:10%; }
}
.gray{ color:#b0b0b0; }
.design{ .clearfix; .f(22*@px); .l(30*@px);
	.goods_l{ .left; .w(330/620*100%); }
	.desc_r{ .right; .w(270/620*100%); .mr(10/620*100%);  }
}
.goods_box{ .w(620*@w); .auto; .clearfix; .mt(10*@w); .f(22*@px); .l(30*@px);
	.single_info{ .w(305/620*100%); .left; .mb(20*@w);
		&:nth-child(2n){ .right; }
		.tit{ padding:2px 0; .h(29px); .hidden; }
	}	
}
h3{ .f(28*@px); color:#804055; .mb(10*@w); }
.btn_box{ .c; padding:2% 0; .mt(2%); }
.buy_btn{ padding:2% 3%; .white; background:#ff6699; .f(24*@px); }
