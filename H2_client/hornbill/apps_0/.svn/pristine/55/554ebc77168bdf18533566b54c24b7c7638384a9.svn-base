/* 手Q顶部搜索 */
@sign_icon    : "http://d02.res.meilishuo.net/pic/_o/46/63/635b3b477f84632150d4e8ce4aba_39_48.cg.png";
@search_icon  : "http://d05.res.meilishuo.net/pic/_o/ca/d2/ae5212ac833f60efbed8cb7ba299_27_26.cf.png";
@cart_num_icon: "http://d03.res.meilishuo.net/pic/_o/21/04/d93750d354438523432c4b7fdf27_29_27.ch.png";
@cart_icon    : "http://d03.res.meilishuo.net/pic/_o/fd/3d/fde4f93b0ca548c03f83d1bcad24_35_32.cf.png";

.search {
	position: relative;
	padding-top: .15rem;
	padding-bottom: .15rem;
	color: #999;
	font-size: 0;
	background-color: white;
}

.search-l,
.search-c,
.search-r1,
.search-r2, {
	display: inline-block;
	vertical-align: middle;
}

.search-l {
	width: .6rem;
	padding-top: .5rem;
	margin-left: .2rem;
	background: url(@sign_icon) center center no-repeat;
	background-size: contain;
}

.search-c {
	width: 5.2rem;
	margin-left: .2rem;
	overflow: hidden;
}

.search-c-input {
	width: 5.2rem;
	padding: .18rem .17rem .18rem .6rem;
	font-size: .24rem;
	background: #efefef url(@search_icon) .26rem center no-repeat;
	background-size: auto .24rem;
	border-radius: .6rem;
	border: none;
}

.search-r1 {	
	position: relative;
	display: inline-block;
	width: .55rem;
	height: .46rem;
	margin-left: .3rem;
	background: url(@cart_icon) left bottom no-repeat;
	background-size: .4rem auto;
}

.search-r1-cart {
	position: absolute;
	top: -.1rem;
	right: -.06rem;
	width: .32rem;
	height: .31rem;
	line-height: .34rem;
	text-align: center;
	font-size: .16rem;
	background: url(@cart_num_icon) center center no-repeat;
	background-size: contain;
}

.search-r2 {
	display: none;
	padding: .18rem .22rem;
	font-size: .28rem;
}