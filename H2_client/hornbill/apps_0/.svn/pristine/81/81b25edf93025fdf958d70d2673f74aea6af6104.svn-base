/**
* 定义皮肤类
**/
/**
*
<%var showSkin = (new Date < new Date(2012,11,26));
	if(showSkin){%>

<div class="logo_skin">
	<div class="cent"></div>
</div>

<div class="footer_skin">
	<div class="cent"></div>
</div>

<div class="chrBox">
	<div class="la_box">
		<div class="la_skin">
			<a class="la" id="chrLa" href="javascript:void(0)"><span></span></a>
			<div class="latxt" id="chrLaTxt"><span></span></div>
		</div>
	</div>
	<div class="la_frame" id="chrBox" framed="0"></div>
	<div class="la_back" id="chrLaBack"><span></span>收起页面</div>
</div>




<%}%>
*/
.skin(){
	.christmas(){
		.chrBox{
			.pa;left:0px;top:30px;.w(100%);.none;
		}
		.la_back {.pa;.none;padding:6px;bottom:64px;right:20px;.w(48px);.h(48px);.l(24px);.cursor;.white;border:1px solid #fff;
			span{.block;.h(27px);.w(32px);.auto;
				background: url("@{pic_url}/images/header/skin/chr_header6.png") no-repeat -260px -180px;
			}
		}
		.la_frame{.h(0px);.none;background:#780000;.pr;top:0px;left:0px;}
		.la_box{.pa;.w(100%);left:0px;bottom:30px;
			.la_skin{
				.w(960px);.auto;.pr;
				.la{.cursor;.pa;top:0px;right:160px;.w(42px);.h(74px);
					background: url("@{pic_url}/images/header/skin/la2.png"); _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/header/skin/la2.png', sizingMethod='scale'); _background-image:none;
					span{.block;.w(42px);.h(74px);}
				}
				.latxt{ .pa;top:38px;right:12px;.w(117px);.h(21px);padding:6px 10px 6px 22px;
					background: url("@{pic_url}/images/header/skin/latxtbg2.png"); _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/header/skin/latxtbg2.png', sizingMethod='scale'); _background-image:none;
					span{
						.block;.h(22px);.w(118px);
						background: url("@{pic_url}/images/header/skin/chr_header6.png") no-repeat -100px -160px;
						
					}
				}
			}
		}
		.logo_skin{
			.cent{left:50%;.pa;.ml(-54px);.mt(4px);.h(26px);.w(36px); z-index:461; 
				background: url("@{pic_url}/images/header/skin/chr_header6.png") no-repeat 0px -176px;}
			.logo_new{top:16px;}
		}
		.header_skin{.mt(-52px);.mb(-88px);.h(150px);.w(100%);
			background: url("@{pic_url}/images/header/skin/chr_header6.png") repeat-x center top;
			.cent{.h(66px);.w(100%);.pr;//z-index:410;.pr;
				background: url("@{pic_url}/images/header/skin/chr_header6.png") no-repeat center bottom;
			}
		}	
		.footer_skin{.mt(-726px);.mb(-14px);.h(643px);.w(100%);.pt(223px);
			background: url("@{pic_url}/images/header/skin/chr_bg.png") repeat-x center bottom;
			.cent{.w(100%);.h(643px);background: url("@{pic_url}/images/header/skin/chr_footer8.png") no-repeat center bottom;}	
		}	
	}	
}
