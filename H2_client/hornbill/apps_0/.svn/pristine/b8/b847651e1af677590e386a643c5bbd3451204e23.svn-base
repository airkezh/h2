@import "../../block.less";

body{
	.bgc(#fef7ed);
}
.award-mian{
	.w(100%);
	img{
		.block();
		.w(100%);
	}
	.award-content{
		.w(100%);
		background: url('http://d02.res.meilishuo.net/pic/_o/79/be/0d4697d256c6e436adf85f11fcdf_640_268.ch.jpg');
		text-align: center;
		.pt(10px);
		.pb(10px);
		.money{
			display: inline-block;
			.w(100px);
			.h(60px);
			background: url('http://d02.res.meilishuo.net/pic/_o/73/af/1d833123bcb17e40462f4e5f5088_180_97.cg.png') no-repeat;
			background-size: 100%;
			.f(14px);
			.fc(#fff);
			.pt(4px);
			span{
				.f(26px);
			}
			p{
				.f(10px);
			}
		}
		.friend-money{
			display: inline-block;
			.w(100px);
			.h(60px);
			background: url('http://d02.res.meilishuo.net/pic/_o/73/af/1d833123bcb17e40462f4e5f5088_180_97.cg.png') no-repeat;
			background-size: 100%;
			.f(14px);
			.fc(#fff);
			.pt(4px);
			span{
				.f(26px);
			}
			p{
				.f(10px);
			}
		}
		.txt-thank{
			.f(12px);
			.fc(#fff);
			.mb(8px);
			.originator-name{
				.w(45px);
				text-overflow: ellipsis;
				overflow: hidden;
			}
			.friend-money{
				.fc(#ed026b);
			}
		}
		.friend-txt-thank{
			.f(12px);
			.fc(#fff);
			.mb(8px);
			.originator-name{
				.w(45px);
				text-overflow: ellipsis;
				overflow: hidden;
			}
			.money-friend{
				.fc(#ed026b);
			}
		}
		.guang-btn{
			display: inline-block;
			.w(40%);
			.mt(6px);
		}
		.play-btn{
			display: inline-block;
			.w(40%);
			.mt(6px);
			.ml(10px);
		}
		.friend-play-btn{
			display: inline-block;
			.w(40%);
			.mt(6px);
			.ml(10px);
		}
		.shai-btn{
			display: inline-block;
			.w(40%);
			.mt(6px);
			.ml(10px);
		}
		.search-btn{
			display: inline-block;
			.w(40%);
			.mt(6px);
			.ml(10px);
		}
	}
	.friends-list{
		.w(100%);
		text-align: center;
		.friends-msg{
			display: inline-block;
			.w(83%);
			border-bottom: #fd8aa4 dashed 1px;
			.pt(10px);
			.pb(10px);
			.pl(6px);
			.pr(6px);
			.friend-img{
				.left();
				.w(16%);
				border-radius: 50%;
				.hidden();
			}
			span{
				.left();
				.f(14px);
				.fc(#fc5283);
				.mt(14px);
				.ml(6px);
			}
			.friend-name{
				.left();
				.w(45px);
				text-overflow: ellipsis;
				overflow: hidden;
			}
			.friend-distance{
				.right();
			}
		}
	}
	.first-rules{
		.pa();
		top: 0;
		right: 0;
		.w(18%);
		.h(59px);
	}
	.first-popwin{
		.none();
		.pa();
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		background-color: rgba(0,0,0,.6);
		.first-popwin-rules{
			.w(86%);
			.pa();
			top: 4%;
			left: 50%;
			transform:translateX(-50%);
			-ms-transform:translateX(-50%); 	/* IE 9 */
			-moz-transform:translateX(-50%); 	/* Firefox */
			-webkit-transform:translateX(-50%); /* Safari 和 Chrome */
			-o-transform:translateX(-50%); 	/* Opera */
		}
		.rules-content{
			.w(74%);
			.pa();
			top: 4%;
			left: 50%;
			transform:translateX(-50%);
			-ms-transform:translateX(-50%); 	/* IE 9 */
			-moz-transform:translateX(-50%); 	/* Firefox */
			-webkit-transform:translateX(-50%); /* Safari 和 Chrome */
			-o-transform:translateX(-50%); 	/* Opera */
			.f(15px);
			.fc(#503403);
			overflow: auto;
			.l(21px);
		}
		.first-popwin-know{
			.w(33%);
			.pa();
			top: 71%;
			left: 50%;
			transform:translateX(-50%);
			-ms-transform:translateX(-50%); 	/* IE 9 */
			-moz-transform:translateX(-50%); 	/* Firefox */
			-webkit-transform:translateX(-50%); /* Safari 和 Chrome */
			-o-transform:translateX(-50%); 	/* Opera */
		}
	}
	.share-popwin{
		.none();
		.pa();
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		.pt(60px);
		background-color: rgba(0,0,0,.6);
		img{
			.w(63%);
			.pa();
			top: 0;
			right: 10%;
		}
	}
	.hudie1{
		.pa();
	}
}