@import "block";
@import "block/posternew.less";
body{
	.bgc(#fff);
}
.posternew;
.poster_icons;
.redline;

.page;
.pageNav{.page > .pageRed; }

.wrap{
	margin: 0 auto;
	.w(1200px);
	.f(16px);
	.fc(#373737);
	// 分类选项
	.choiceWrap{
		.mt(25px);
		padding: 15px 5px;
		.f(16px);
		border:1px solid #F0F0F0;
		.choiceContent{
			.clearfix;
			.pb(15px);
			.pt(15px);
			.classify{
				.left;
				margin: 5px 25px;
				.fc(#373737);
				.f(18px);
			}
			.classifyInfo{
				.f(16px);
				.left;
				li{
					.left;
					.w(110px);
					.h(30px);
					.l(30px);
					.c;
					cursor: pointer;
				}
				.cur{
					.bgc(#F9CD00);
					.fc(#fff);
					padding: 5px 10px;
					border-radius: 15px;
				}
			}
		}
	}
	// 排序  筛选
	.sortWrap{
		.clearfix;
		.mt(10px);
		.mb(22px);
		.bgc(#F7F7F7);
		padding-left: 70px;
		.f(16px);
		.sortWayWrap{
			.left;
			padding: 0 15px;
			.sortWay{
				.left;
				.mr(70px);
				padding: 0 3px;
				.h(50px);
				.l(54px);
				cursor: pointer;
			}
			.new{
				margin: 0 60px;
			}
			.onWay{
				border-bottom: 2px solid #F9CD00;
				.fc(#373737);
			}
		}
		.condition{
			padding: 10px 10px 0;
			.clearfix;
			.border{
				.left;
				.w(0);
				.h(30px);
				border:1px solid #E5E5E5;
			}
			.priceSortWrap{
				.left;
				.ml(64px);
				div{
					.left;
					.h(35px);
					.l(35px);
				}
				.priceCHN{
					.mr(48px);
				}
				.inputPrice{
					overflow: hidden;
					.ml(13px);
					.mr(20px);
					.w(100px);
					.h(35px);
					input{
						.block;
						.left;
						.w(100px);
						.h(35px);
						.c;
						.f(16px);
						border:0px;
					}
				}

			}
			.search{
				.left;
				.w(80px);
				.h(35px);
				.l(35px);
				.c;
				.bgc(#F9CD00);
				.fc(#fff);
				border-radius: 20px;
			}
		}
		
	}
	// 瀑布流
	.goods_wall{
		.f(14px);
		.fc(#363636);
		.new_poster{
			.mt(0);
		}
		.hifan{
			padding: 0  10px;
			.title{
				.left;
				.mb(0);
				.h(54px);
				.l(54px);
				a{
					.fc(#363636);
				}
			}
			.desc_box{
				.mt(0);
				.showy_info{
					.right;
					.f(14px);
					.fc(#363636);
					.h(54px);
					.l(54px);
				}
			}
		}
		
	}
}