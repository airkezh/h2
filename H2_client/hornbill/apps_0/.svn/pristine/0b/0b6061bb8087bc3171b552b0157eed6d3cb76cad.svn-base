@import "sq.less";

html, body {
	.h(100%);
	.bgc(#efefef);
}

h3 { .fn; }

.wrapper {
	.w(100%);
	.hidden;
}

.tab-list,
.content {
	-webkit-transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
	transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
}

.tab-list {
	.left;
	.w(1.5rem);
	.f(.26rem);
	li {
		.w(1.5rem);
		.l(.9rem);
		.c;
		border-top: 1px solid #efefef;
		.bgwhite;
		outline: none;
	}
	.selected {
		.f69;
	}
}

.content {
	.right;
	.w(4.8rem);  
	.banner {
		.mt(.08rem);
		.mr(.1rem);
		.pb(.1rem);
		img { .w(100%); }
	}
	.category:last-child {
		.mb(.3rem);
	}
	.category-title {
		.mt(.2rem);
		.f(.26rem);
	}
	.category-content {
		.mt(.2rem);
		.fz0;
		figure {
			.i_block;
			.w(1.5rem);
			.mr(.1rem);
			.mb(.1rem);
			.bgwhite;
		}
		a {
			.block;
			background-repeat: no-repeat;
			background-position: center center;
			background-size: cover;
		}
		figcaption {
			.pt(.1rem);
			.pb(.16rem);
			.f(.22rem);
			.c6;
			.c;
		}
	}
}

.nav-placeholder {
	.none;
}

