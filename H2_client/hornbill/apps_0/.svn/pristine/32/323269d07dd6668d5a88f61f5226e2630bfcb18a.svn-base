@import "block.less";
@import "window.less";

.fM {font-family:'SimSun',Arial;}
.upload_btn i,.r_dot{background: url('@{pic_url}/images/appeal/ap_tb_s.png') no-repeat;}

.appeal_wrap{
	.w(788px);padding: 40px 80px;.mt(28px);.mb(30px);.bgwhite();.auto();.box-shadow-r();.border-1(#E6E4E4);.border-r(10px);.fc(#333);.f(14px);.l(30px);
	.ap_header{.border-bc;.pb(40px);.mb(40px);}
		h3{.f(24px);.mb(10px);}
		.r_dot{background-position: -8px -30px;.left;.w(14px);.h(20px);}
	.ap_content{
		.border-bc;.pb(20px);.mb(40px);
		&>div{.pr;.mb(20px);}
		.upload_ie{z-index: 5;}
		.ap_tb_ex{.pa;z-index: 10;.none;top:30px;left: -15px;.w(791px);.h(281px);background: url("@{pic_url}/images/appeal/ab_tb_ex.png") no-repeat;}
	}
		.con_title{.f(18px);.mb(15px);}
		.r_start{.f(20px);.l(20px);.mt(10px);.fc(#f69);.h(16px);.left;.pr(2px);}

		input, textarea{.w(278px);.h(16px);.border-1;.border-r(2px);.bgc(#fff);padding: 8px;}
		textarea{.h(122px);}
		.upload_block{
			.pr;.left;.mr(22px);.fc(#f69);.c;.w(113px);.h(35px);.l(35px);border: solid 1px #f66c9f;.border-r(5px);
			i{.i_block;.w(30px);.h(22px);.mb(-6px);}
		}

		.qus_notes{.f(12px);.fc(#666);.l(12px);.pt(8px);}
			.find_user{.fc(#f69);}
			.example{.cursor;}
	.ap_submit{
		.block;.w(294px);.h(36px);.l(36px);.border-r(2px);.auto;.bgc(#ccc);.f(16px);.fc(#fff);.c;cursor: default;
		&_ok{.bgc(#f69);.cursor;}
	}
}

.upload_wraper{
	.pa;top: 0;left: 0;.h(37px);.w(116px);.hidden;z-index: 10;zoom: 1;
	input{.cursor;.f(295px);.pa;left: -3em;top: 0;.h(100%);.w(auto);padding: 0;}
}
.preview{max-width: 600px;max-height: 500px;}

.dialog_wrap{
	background: url('@{pic_url}/images/appeal/sub_icon.png') no-repeat 0px 37px;.f(12px);.fc(#666);padding: 52px 0 52px 80px;.ml(36px);
	.dialog_title{.f(18px);.fc(#f69);.l(32px);}
	a{.block;.w(100px);.h(36px);.l(36px);.border-r(3px);.bgc(#f69);.f(16px);.fc(#fff);.c;.mt(26px);.ml(144px);}
}


.errorMsg{
	.h(32px);.border-1;.border-r(2px);.bgc(#ffebf2);display: inline;.pa;padding: 0 10px;.ml(10px);.f(12px);.fc(#666);
	i{background: url('@{pic_url}/images/appeal/ap_tb_s.png') no-repeat -3px -68px;.i_block;.w(25px);.h(22px);.mb(-6px);}
	a{.red;.tunder;}
}
.maga_suc{.pl(20px);.pr(20px);.w(330px);}

@import "footer.less";
