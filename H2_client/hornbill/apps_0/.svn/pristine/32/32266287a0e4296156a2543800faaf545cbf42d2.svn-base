function countFn(nub){
	var n = nub.toString();
	var t = '';
	if(nub < 10){
		t += '<img src="'+ nunImgArr[0] +'" >';
	}
	for (var i = 0 , l=n.length ; i < l; i++) {
		t += '<img src="'+ nunImgArr[ +n[i] ] +'" >';
	};
	$('#game_nub').html(t);
}

function endFn(nub){

	fml.vars.count = nub;
	if(nub < 1){
		openDialog('fail');
	}else if(nub < 20){
		openDialog('success' , nub);
	}else{
		lottery(nub)
	}
}

function lottery(nub){
    $.ajax({
        type : 'get',
        url : '/aj/singleDog/lottery',
        data : {
        	'act_code' : 'single_dog'
        },
        dataType: 'json',
        success : function(data){
            res = JSON.parse(data);
            console.log(res)

            if(res.id ==0){
            	openDialog('success',nub);
            }
            
        	if( res.id ==99 || res.id ==97 || res.id ==95 ){
        		$('#quan').html(res.name);
        		openDialog('win',nub);
        	}
        
        },
        error:  function (XMLHttpRequest, textStatus, errorThrown) {
        	openDialog('success',nub);
        }
    });
}

