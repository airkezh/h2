<%# head_simple.html%>
</head>
<body <%if(this.os.ios){%>class="ios"<%}%>>
<div class="top_bnr" style="padding-top:<%= 300/640*100 %>%;"><img src="<%= this.PICTURE_URL%>images/wap/activity/girl/banner.jpg" /></div>
<section id="wrapper_main" class="wrapper">
	<div class="scroller">
		<span class="colFlag"></span>
		<div class="goods_wall">
			<div class="corner_notic">
				<%if(this.uinfo && this.uinfo.data && this.uinfo.data.user_id){%>
				<div class="vote_show">
					<div class="show_bg" style="padding-top:<%= this.uinfo.data.pic_height/this.uinfo.data.pic_width *100 %>%;"><a href="<%=this.uinfo.data.share_url%>"><img src="<%=this.uinfo.data.pic_url%>" /></a></div>
					<div class="user_info">
					<a class="face"><img src="<%=this.uinfo.data.avatar_url%>" /></a>
						<ul class="num_info">
							<li><span>你的票数</span><b><%=this.uinfo.data.score%></b></li>
							<li><span>你的排名</span><b><%=this.uinfo.data.rank%></b></li>
						</ul>
						<div class="clear_f"></div>
						<p class="btnBox"><a class="btn" href="/activity/girlfriends/upload/invite?<%=this.tokeninfo%>&access_user=<%=this.uinfo.data.user_id%>&pic_url=<%=encodeURIComponent(this.uinfo.data.pic_url)%>">邀请好友来投票</a></p>
						<div class="clear_f"></div>
					</div>
				</div>
				<%} else {%>
				<div class="vote_show">
					<div class="pic_bg" style="padding-top:<%= 375/296 *100 %>%;">
						<img src="<%= this.PICTURE_URL%>images/wap/activity/girl/pic.gif" />
						<p><a class="btn" href="/activity/girlfriends/upload/?<%=this.tokeninfo%>">参赛赢大奖</a></p>
					</div>
				</div>
				<%}%>
			</div>
		</div>
		<div class="pullUp" status="loading"></div>
	</div>
</section>
<%# activity/girlfriends/poster.html%>
<script>
fml.vars.poster = {};
fml.vars.access_token = '<%=this.access_token%>';
fml.vars.mac = '<%=this.mac%>';
</script>
<% $_ENGINE_SELF.callFn("useModule")("fml.use('wap/page/poster0');", this._JSstack , this._JSmodsFast ); %>
<%! $_ENGINE_SELF.callFn("useModule")("<<<_use:
	fml.use('wap/page/activity/girlfriends');
_use:", this._JSstack , this._JSmods ); %>

<%# foot_simple.html%>
