.sidebar() {
  /* 店铺 */
  .shop {
    position    : relative;
    width       : 190px;
    margin      : 0 auto 30px;
    padding-top : 20px;
  }

  .shop-wrap {
    margin-left : 61px;
  }

  /* 认证图标，所有的店铺都是经过认证的 */
  .shop-approve-ico {
    float               : left;
    width               : 51px;
    height              : 39px;
    background-position : 0 -138px;
  }

  /*
    明星店铺标记
    可能会盖住店铺名，店铺名需要做截断
  */
  .shop-label();

  .icon-shop {
    right            : -20px;
    top              : 0;
  }

  .shop-name {
    display       : block;
    margin-bottom : 9px;
    font-size     : 14px;
    font-weight   : bold;
    .ellipsis();
  }

  .competitive-shop {
    .icon-competitive {
      display : block;
    }

    .shop-name {
      width : 110px;
    }
  }

  .star-shop {
    .label-star {
      display : block;
    }

    .shop-name {
      width : 110px;
    }
  }

  /* 店铺头像 */
  .shop-avatar {
    float    : left;
    width    : 48px;
    height   : 48px;
    overflow : hidden;

    img {
      border-radius : 50%;
    }
  }

  /* 关注店铺 */
  .shop-follow-state {
    color : #999;
  }

  .shop-follow-btn {
    display          : inline-block;
    margin-right     : 6px;
    padding          : 4px 5px;
    color            : #666;
    border           : 1px solid #d2d2d2;
    background-color : #fff;
    text-align       : center;
    white-space      : nowrap;
    cursor           : pointer;

    &:hover {
      color : #666;
    }
  }

  .is-followed {
    color            : #666;
    border-color     : #d2d2d2;
    background-color : #fff;

    &:hover {
      color : #666;
    }
  }

  /* 没有切图，用的文字，以后一定要用 iconfont 啊~ */
  .icon-plus {
    display          : inline-block;
    width            : 11px;
    height           : 11px;
    line-height      : 11px;
    margin-right     : 2px;
    font-size        : 20px;
    *font-size       : 13px;
    color            : #f69;
    background-image : none;
    vertical-align   : middle;
    overflow         : hidden;
  }

  .icon-check {
    display             : inline-block;
    width               : 12px;
    height              : 11px;
    background-position : -145px -146px;
  }

  .shop-fans {
    display         : inline-block;
    max-width       : 45px;
    margin-right    : 2px;
    color           : #666;
    .ellipsis;
    vertical-align  : sub;
    *vertical-align : middle;
  }

  .shop-fans-wrap {
    *display    : inline-block;
    line-height : 12px;
    *height     : 17px;
  }

  /* 店铺评分 */
  .shop-assess {
    margin   : 20px 0;
    overflow : hidden;

    li {
      float      : left;
      width      : 32px;
      text-align : center;
    }

    .up {
      color : #fb3f3f;

      .arrow-ico {
        font-size           : 0;
        background-position : -130px -146px;
      }
    }

    /*
      @date: 2014-9-26
      最开始的时候没考虑有『持平』这个状态，也没有对应图标
      后来被提了 bug，临时用 - 代替图标了。
    */
    .fair {
      color : #ff9b28;

      .arrow-ico {
        font-size        : 16px;
        margin           : -3px 0 0 0;
        background-image : none;
      }
    }

    .down {
      color : #94a603;

      .arrow-ico {
        font-size           : 0;
        background-position : -117px -146px;
      }
    }
  }

  .arrow-ico {
    float       : right;
    width       : 11px;
    height      : 13px;
    margin-left : 4px;
  }

  .shop-point {
    display    : block;
    margin-top : 10px;
  }

  .shop-assess-first {
    margin-right : 10px;
  }

  .shop-assess-last {
    margin-left : 10px;
  }

  .shop-assess-middle {
    padding      : 0 9px;
    border-color : #ccc;
    border-width : 0 1px;
    border-style : dotted;
    text-align   : center;
  }

  .shop-info {
    margin-bottom : 20px;
    color         : #999;

    li {
      margin-top : 12px;
    }

    i {
      margin-right: 4px;
    }
  }

  .into-shop-btn {
    position         : relative;
    display          : block;
    height           : 28px;
    line-height      : 28px;
    border           : 1px solid;
    background-color : #fff;
    color            : @pink;
  }

  /* 进入店铺按钮上的图标 */
  .into-shop-ico {
    float               : left;
    width               : 19px;
    height              : 18px;
    margin              : 4px 10px 0 50px;
    background-position : -55px -114px;
  }

  /* 店铺资质 */
  .icon-approve {
    display          : inline-block;
    width            : 18px;
    height           : 18px;
    background-image : url("@{pic_url}/images/doota/icon-approve.png");
    vertical-align   : middle;
  }

  /* 联系客服 */
  .icon-contact {
    display        : inline-block;
    width          : 18px;
    height         : 18px;
    background     : url("@{pic_url}/images/doota/doota_im1.gif") no-repeat;
    vertical-align : middle;
  }
  /* 店铺 END */
  /* 可能喜欢 */
  .maybe-like {
    width  : 190px;
    margin : auto;

    .hd {
      margin-bottom : 15px;
    }

    ul {
      overflow : hidden;
    }

    li {
      float         : left;
      width         : 80px;
      margin-bottom : 20px;
    }

    .odd {
      margin-right : 30px;
    }

    .price {
      margin-top : 10px;
      text-align : center;
      .ellipsis();
    }

    img {
      width : 100%;
    }
  }

  /* 可能喜欢 END */
}
