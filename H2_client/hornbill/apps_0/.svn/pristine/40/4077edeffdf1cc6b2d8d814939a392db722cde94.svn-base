@import "../base.less";
@pink: #FF416C;
@blue: #3E709F;

body{
	.bgc(#f8f8f8);
}
.game-box{
	.pr; z-index: -1;.h(8.4rem);
}
a{
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}
.game-select{
	.mb(.18rem);.auto;.w(4.48rem);.clearfix;
	.game-but1{
		.left;.w(1.1rem);.h(1.1rem);
		background: url('http://d03.res.meilishuo.net/pic/_o/c4/db/20f3e323332f720c76ae6a0821c6_113_113.cj.png') 0  0 no-repeat;
		background-size:100% 100% ;
	}
	.game-but2{
		.right;.w(1.1rem);.h(1.1rem);
		background: url('http://d01.res.meilishuo.net/pic/_o/62/f8/852560545f25be440129f867b965_113_113.cj.png') 0  0 no-repeat;
		background-size:100% 100% ;
	}
}
.game-title{
	.h(.7rem);.l(.7rem);.c;.f(.3rem);.fc(#FF416C); font-weight: normal;
}
.game-answer{
	.auto;.w(5.9rem);.h(.46rem);.pl(.12rem);.border-r(.23rem);border:1px solid #DBDBDB; .bgc(#FFFFFF);.clearfix;
	.answer-show{
		.left;.ml(.16rem);.mt(.09rem);.w(.28rem);.h(.28rem);.bgc(#F4F4F4);.border-r(.2rem);
	}
	.ture{.bgc(@pink);}
	.false{.bgc(@blue);}
}



