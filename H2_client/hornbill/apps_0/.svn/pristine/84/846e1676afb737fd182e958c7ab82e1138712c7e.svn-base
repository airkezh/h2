        <!-- C看到结果 -->
        <%if(love_info.act_user&&love_info.act_user == "C"){%>
            <%for(var j = 0 ; j < 4; j++){%>
                <div class="wait<%= j%> keyword1"><%= keywords[parseInt(love_info.srand)][j]%></div>
            <%}%>
        <%}%>
        <!-- AB再次打开 看到结果 -->
