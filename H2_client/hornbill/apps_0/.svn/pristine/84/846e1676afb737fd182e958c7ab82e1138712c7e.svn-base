        <div class="love_info1" >
            <div class="con_box">
                <div class="male_min" >
                     <img src="<%= love_info.pic_B %>"><span><%= result_data.words[parseInt(love_info.srand)].userA%></span>
                 </div>
                 <br>
                <div class="female_min" >
                     <img src="<%= love_info.pic_A %>"><span><%= result_data.words[parseInt(love_info.srand)].userB%></span>
                </div>
