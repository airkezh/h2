@import "sq.less";
@import "search_md.less";

/** my set */
@bgc: #f6f6f6;
.bg_common (@bg_size: contain) {
	background-repeat: no-repeat;
	background-position: center center;
	background-size: @bg_size;
}


/** common set */
html, body { .bgc(@bgc); }

h2 { 
	.pl(.1rem);
	.pr(.1rem);
	.f(.28rem); 
	.fn;
	.black;
	.clearfix;
	i {
		.right;
		.mt(.08rem);
		font-size: .20rem;
		color: #999;
		font-style: normal;
	}
}

section { .bgwhite; }

.pop,
.new,
.handpick {
	.mt(.2rem); 
	.pt(.2rem);
}

/** page style */

/* 轮播banner */
.banner-slider{
	.pr;.hidden;.auto;.c;
	&-wrap{
		.box;
		li{
			.pr;
			img{.w(100%);}	
			
			&[status="drop"]{
				-webkit-transition:all 0.2s ease-out 0s;
			}
		}
	}
	&-point{ 
		.pa; bottom: 0; left: 50%; .i_block; .clearfix; .mb(.15rem);
		li{ 
			.left; .pr; left: -50%; .w(.1rem); .h(.1rem); .bgwhite; .mr(.12rem); .border-r(50%);
		}
		li:last-child{ .mr(0); }
		.curr{ .bgred; }	
	}
}

.handpick {
	.pl(.1rem);
	.pr(.1rem);
	h2 { .pl(0); .pr(0); }
}

.handpick-content {
	.pt(.1rem);
	.pb(.2rem);
	.clearfix;
	.left {
		.left;
		.w(3.1rem);
		.h(3.4rem);
		.bg_common(cover);
	}
	.right {
		.right;
		.ml(.1rem);
		.right-top,
		.right-bot {
			.block;
			.w(3rem);
			.h(1.65rem);
			.bg_common(cover);
		}
		.right-bot {
			.mt(.1rem);
		}
	}
}

.category-pop-content {
	padding: .1rem .0725rem .2rem;
	.f(0);
	.clearfix;
	a {
		.left;
		margin: .025rem;
		.w(1.5125rem);
		.pt(1.5125rem);
		.bgwhite;
		.bg_common;
	}
}

.category-new-content {
	padding: .1rem .05rem .2rem;
	.f(0);
	.clearfix;
	a {
		.left;
		margin: .05rem;
		.w(2rem);
		.pt(1.2rem);
		.bgwhite;
		.bg_common(cover);
	}
}

/** 单品 */
.goods {
	.mt(.2rem);
	.goods-content{
		.pr; 
		.pt(.2rem); 
	}
}

/* 时间小方块 */
.goods-content-time{ 
	.pa; 
	left: 0; 
	top: .54rem; 
	.w(3.2rem); 
	.c; 
	.hour{ 
		.i_block;
		.pl(.3rem); 
		.f(.3rem); 
		.fc(#ff8cb3);
		vertical-align: middle;
		background: url("http://d04.res.meilishuo.net/pic/_o/67/ad/30a96955fcc5deffc8ac9ef44a3c_27_27.cf.png") no-repeat left center; 
		background-size: auto 83%; 
	}
	.date{ 
		.i_block;
		.h(.4rem);
		.ml(.1rem);
		.pl(.1rem);
		.f(.2rem);
		vertical-align: middle;
		border-left: 1px solid #ccc;  
	}
	.date-m,
	.date-d {
		.f(.2rem); 
		.c; 
		.fc(#bebebe);
	}
}

/* 瀑布流样式 */
.goods-content-g_shelf {
	.pr;
}
/* loading */
.pullUp;

/* goTop btn */
.goTop();
#goTop{ bottom: 1rem; }



/*团购秒杀*/
.end-box{
	.mt(.1rem);
	.pb(.2rem);
	.clearfix;
	width:auto;
	.bgc(@white);
	padding:0 0 .15rem 0;
	.hidden;
}
.end{
	.hidden;
	.end-time{
		.w(49%);
		.left;
		.hidden;
		.pt(.2rem);
		.bgc(#f3f3f3);
		background-size: 100% auto;
		background-position: left top;
		margin-bottom: -10000px ;
		padding-bottom: 10000px ;

	.s-content{
		.w(3rem);
		.pl(.15rem);
		.s-title{
			.fc(#666666);
	        .f(.4rem);
	        font-weight:bolder;
		}
		.s-txt{
			.f(.24rem);.fc(#80737b);.mt(.2rem);
		}
	}

	}
	.end-show{
		.w(49%);
		.right;
		.hidden;
		a { 
			.block; 
			.w(100%);
			//.pt(64%);
			background-repeat: no-repeat;
			background-position: center top;
			background-size: cover;
		}
		.banner_top { .pt(55%); }
		.banner_bot { .mt(.1rem); .pt(55%); }
		margin-bottom: -10000px ;
		padding-bottom: 10000px ;
	}
	dd{
		.left;
		.mr(.2rem);
		background: url('http://d03.res.meilishuo.net/pic/_o/6e/ee/4148fca02ded9b5edb279fe1725f_72_62.cf.png') no-repeat center center;
        background-size:100%;
        .fc(#fff);
        .f(.44rem);
		.w(.72rem);
		.h(1.04rem);
        .l(1.04rem);
        .c;
		letter-spacing: .18rem;
		.pl(.08rem);
	       
	    }
	    dl{	.clearfix;}
	    strong{
			.left;
			.mt(.29rem);
			.f(.44rem);
			.ml(-.18rem);
			.fc(#80737b);

		}
}