@import "../block.less";
body{
	.bgwhite;
	.fc(#333);
}
.sliderBanner;
.banner-slider-point{.none;}

img { .w(100%); .block;}

.title { .f(32*@px); .l(32*@px); .c; .pb(5%); .fn;}
.about { 
	.c; .f(28*@px); .fc(#999); .l(46*@px); .pt(10%); 
}

header {
	.top_banner { .pr;} .pb(12%);
	.rule{
		.pa; top: 20*@px; right: 20*@px; .bgc(#000); .pl(8px); .pr(8px); .l(40*@px); .white; .f(22*@px); .block;
	}
}

.gift {
	.pt(12%);
	p { .fc(#a9a9a9); .c; .pb(20*@px); .f(24*@px);} 
	p.apply { .pt(5%);}
}

.list {
	.pl(30*@px); .pr(30*@px); .pt(12%); border-bottom: 1px dashed #d4d4d4;
	h1.title { .pb(3%);}
	h2 { .f(22*@px); .c; .pb(30*@px); .fn;}
	.designer {
		.pt(38*@px); .clearfix; .w(100%); .pb(20*@px);
		.info { 
			.left; .w(35%);
			.photo {
				.border-r(50%); .w(80%); .auto;
			}
			p { .f(24*@px); .l(24*@px); .c;}
			.shop { .pt(12*@px); .pb(24*@px);}
			.voteBtn { .w(50%); .bgc(#ff0000); .l(40*@px); .c; .white; .f(26*@px); .auto;}
			.person { .pt(12*@px);}
		}
		.intro { 
			.left; .w(65%); 
		}
	}
	ul {
		.clearfix; .w(100%); .pb(48*@px); border-bottom: 1px dashed #d4d4d4;
		li { 
			.left; .w(49%); .mr(2%);
			&:nth-child(2n) {
				.mr(0);
			}
		}
		a { .block; }
		&:last-of-type { border: none;}
	}
	.more { .w(60%); .mb(6%); .block; .auto; .bgc(#000); .l(62*@px); .c; .white; .border-r(10*@px);}
}

.recruit { 
	.pt(12%);
	p.about { .pt(0);}
}

.share{
	.pf; bottom: 50px; right: 20*@px; .w(80*@px); .h(80*@px); .bgc(#ffc424); .white; .f(26*@px); .border-r(100%); .c; .l(80*@px);
}

/*dialog*/
.dialog();
.dialog {
	#maskLayer { background:rgba(0 ,0 ,0 , 0.7);}
	#dialogLayer { 
		background: none;
		box-shadow: none;
		.dialogTitle { .none;}
	}
	.closeIcon { 
		.pa; top: 30*@px; right:30*@px; .w(36*@px); .h(36*@px);
		background: url("http://d02.res.meilishuo.net/pic/_o/d3/70/a76ca952b6f8a9ec993a6427a878_30_31.ch.png") no-repeat;
		background-size: 100% 100%;
	}
}
.dialog_box {
	.pt(6%); .pl(5%); .pr(5%); .pb(5%); .fc(#000); .bgwhite; .pr; max-height: 300px; overflow-y: scroll;
	h2 { .pb(3%); .f(26*@px); }
	p { .pb(5%); .l(40*@px); .f(22*@px);}
}

.dialog_share {
	.c; .mt(-300*@px);
	.share_pic {
		.w(494*@px); .h(514*@px); .i_block; .bgc(#331621);
		background: url("@{pic_url}/images/wap/activity/baoyang/shareLead.png") no-repeat;
		background-size: 100% 100%;
	}
}

.dialog_award {
	.clearfix; .fc(#000); .pt(20%); .pb(25%); .pr; .pl(8%);
	background: url("http://d04.res.meilishuo.net/pic/_o/54/1e/70d1947bb20cefca461254d70583_639_300.cg.jpg") no-repeat;
	background-size: 100% 100%;
	.icon { 
		.w(80*@px); .h(80*@px); .left; .mr(6%); .block;
		background: url("http://d02.res.meilishuo.net/pic/_o/c3/24/eaf27cc5e5b39131111c974f5fb8_74_74.cg.png") no-repeat;
		background-size: 100% 100%;
	}
	.show { .left; .w(70%);}
	h2 { .f(36*@px); .fn;}
	h3 { .f(24*@px); .fn; .l(32*@px); .pt(10*@px);}
}

/* 分享 */
.starBox{ .star_box; }


