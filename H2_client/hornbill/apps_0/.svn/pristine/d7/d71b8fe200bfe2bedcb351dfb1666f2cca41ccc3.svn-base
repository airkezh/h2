/*下拉加载*/
.pullUp{
    // display: none;
    .pullUpDown > .common;.pullUpDown > .loading;
    &:before{
        .nowrap;
        .ml(-10px);
    }   
    &[status="stop"]{
        background:0 none;
        &:before{
            content:"木有了...";
        }
    }   
}





