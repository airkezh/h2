@import "atom.less";
body {
    .bgwhite;
}

.release_fengkong {
	padding: 30px 50px;

	.note_word {
	    .f(14px);
	    .l(24px);
	}

	.set_center {
	    .c;
	}

	.captcha_input{
	    .w(180px);
	    .h(34px);
	    border: 1px solid #eee;
	    .f(14px);
	    .c;
	    padding: 0px;
	    vertical-align: middle;
	}

	.mobile_info{
		margin: 20px 0 12px 0;
	}


	.refresh_btn {
		color: #ff6699;
		.f( 12px );
		vertical-align: bottom;
		.cursor;
	}

	.send_sms {
	    border: none;
	    background: #f5f5f5;
	    color: #666;
	    .f(12px);
	    .h(30px);
	    .ml(8px);
	    .w(96px);
	    vertical-align: middle;
	    .cursor;
	    &.on_reciprocal {
	        .bggray;
	        outline: none;
	    }
	}

	.pic_code_wrapper {
		.mt( 10px );
	}
	.pic_captcha_input {
		vertical-align: bottom;
	}


	#pic_code_img {
	    .w(90px);
	    .h(36px);
		margin: 0 10px;
		vertical-align: bottom;
		.i_block;
		.cursor;
	}

	.error_tip {
	    .red;
	    .f(12px);
	    .h(24px);
	    .l(24px);
	    .ml(10px);
	}

	.submit_btn,.go_to_shopcar_btn {
	    border: none;
	    .bgred;
	    .f(14px);
	    .h(36px);
	    .l(36px);
	    .white;
	    .i_block;
	    padding: 0;
	    outline: none;
	    .cursor;
	}
	.go_to_shopcar_btn {
		.w(160px);
		.mt(20px);
	}
	.submit_btn {
		.w( 90px );
		.mt(22px);
	}
	.go_to_bindmobile {
		color: #ff6699;
		.f(16px);
		.i_block;
		.mt(28px);
	}

	.sms_wrapper {
		text-align: left;
	}
}
