@import "../block.less";
@w:1/640 * 100%;
body{
	background-color: #5a0004;
	color: white;
	font-weight: bold;
	font-family: "黑体","Lucida Grande","Lucida Sans",Helvetica,Arial,Sans;
	text-shadow:1px 1px 4px #ff2763;
}
.main{
	position: relative;
	img{
		.w(100%);
	}
	.inner{
		position: absolute;
		top: 44%;
		.pl(@w * 255);
	}
	.down{
		padding: 0 @w * 45;
		position: absolute;
		top: 82%;
		.w(@w * 550);
		.left{
			float: left;
		}
		.right{
			float: right;
		}
		p{
			.mb(10px);
		}
	}
}