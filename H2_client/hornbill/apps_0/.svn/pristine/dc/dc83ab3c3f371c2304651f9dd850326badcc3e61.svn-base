@import "../../block.less";

body{.bgc(#fff); .w(6.4rem); }
img{ .block; .w(100%); }

.tc{.c;}
.fsn{ font-style: normal;}

.coupon-box{ padding: .25rem .2rem; .bgc(#f1365e); .fb; 
	.mid{ .bgc(#fff); padding: .3rem .33rem; .f(.2rem); .fc(#f6335e);}
	.coupon{ 
	   border: 1px solid #e5e5e5;  .fc(#fff); .bgc(#f3f3f3); .clearfix; .mt(.18rem);
	   .c-left{.w(2.7rem); .pr; .left; .ml(.65rem); .mt(.23rem); .mb(.15rem); }
	   .c-right{.right; border-left: 1px dashed #dbaeb0; .w(1.55rem); .h(1.2rem); .mt(.1rem);.mb(.06rem);  .f(.26rem); .i_block; .c;
	   }
	   .rmb{.f(.26rem); vertical-align: top;}
	   .price{.f(.8rem); .l(.66rem); vertical-align: top;}
	   .info{ .pr; .i_block;
		  em{.f(.34rem);   }
		  i{ .pa; .w(1.4rem); top: 0.4rem; left: 0; }
	   }
	   .amount{ .mt(.04rem); .w(2.6rem); .c; .h(.32rem); }
	   .go{.i_block; }
	}

	.rule{ .fc(#555555); .tr; .mt(.2rem);}
	.bg-red{
		.bgc(#eb051f); 
		.go{.w(.8rem); .tr; .mt(.5rem);}
		.amount{.l(.44rem);}
		.b-red{.pr(.24rem); background: url(http://d05.res.meilishuo.net/pic/_o/a6/0c/0abee2b6d001a047797631cf1a2d_21_25.cf.png) no-repeat center right; background-size: contain;}
		.line{ .pa; bottom: .28rem; left: -0.2rem;}
		.c-left{background: url(http://d01.res.meilishuo.net/pic/_o/5c/8d/57adef7c8c2f19d259095d1ae826_290_1.cg.png) no-repeat left 74%; background-size: contain; }
	}
	.bg-gray{ .fc(#565656);
		.rmb,.price{ .fc(#f6335e); }
		.info{}
		.go{.w(100%); .c; .mt(.35rem);}
		.amount{ .bgc(#565656); .f(.22rem); .fc(#fff); .l(.33rem);}
		.b-gray{.mt(0); .w(1.04rem); text-align: left; background: url(http://d04.res.meilishuo.net/pic/_o/20/b1/395af88b28520b480d0e9c810071_22_23.cf.png) no-repeat center right; background-size: contain;}
		.fc-red{.fc(#f6335e);}

		.over{.l(.5rem);}
	}

}

// .mid-img{ .pr; top: -1px;}

.waterfall{ .pt(.2rem); .f(0); .clearfix; .bgc(#f6f6f6); /*min-height: 5rem; background: red;*/
	.m-box{.left; .block; .ml(.1rem); .mr(.1rem); .w(3rem); .mb(.2rem);}
}

/*活动规则*/
.mark-rule{ .pf; left: 0; .w(100%); .h(100%); top:0;  z-index: 9; .none;
