@import "wx-rem.less";

body{.bgc(#f0f0f0);}
.ios_simple;
.sliderBanner;
.banner-slider{ .mb(.2rem); }
.banner-slider-point{
	left:3.2rem;
	-webkit-transform: translate(-50%,0);
	.i_block; .clearfix; .mb(0.2rem); .mt(0.12rem); .pa; bottom:0;
	li{ 
		.left; .w(0.12rem); .h(0.12rem); .bgc(transparent);border:0.02rem solid #fff;box-sizing:border-box;.mr(0.11rem); .border-r(100%);
	}
	.curr{ .bgc(#fff); }	
};

.pullUp{

	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-35px);
	}
	&[status="tap"]{
		background:0 none;	
	}
	&[status="stop"]{
		background:0 none;	
		.h(2px);
		&:before{.i_block;
			content:"没有更多内容了...";
		}
	}
}
div.pullUp{
	.l(.8rem); .f(.28rem); .h(.8rem); .w(.8rem); background-size: .8rem 1.6rem;
}

/* 每日时尚精选*/
.ad-box{ .bgc(#fff); .f(0); padding: .3rem 0 .16rem .16rem; .hidden;
	.ad-title{.fc(#333); .f(.30rem); .mb(.3rem); .i_block; }

	.w-normal{ display: block;.mt(0); .f(0);.hidden; }
	
	.ul-box{ 
		.li-box{ .left; .mr(.04rem); .mb(.04rem);
			.w(2rem); /*.h(2rem);*/
		}
		/*.fir{
			.h(4.04rem);
		}*/
	}

	.more-box{ .pr;
		.a-more{ .pa;  right:0; top: 0;  .fc(#999); .f(.28rem); .i_block; .h(.24rem); .l(.26rem); background: url(http://d04.res.meilishuo.net/pic/_o/12/40/2e3d4c2a264e510641f372ffe995_24_24.cg.png) no-repeat center right; background-size: contain; .pr(.28rem);  }
	}
	
	.popular-box{.f(0); 
		.w-normal{ .w(1.4rem); .ml(.16rem); .left;
			&:nth-of-type(1){
				.ml(0);
			}
		}
	}
}
.pd-10{.pr(.16rem); .pb(.16rem); .mt(.2rem); }
.g-wall{.mt(.2rem); .pb(0); }

