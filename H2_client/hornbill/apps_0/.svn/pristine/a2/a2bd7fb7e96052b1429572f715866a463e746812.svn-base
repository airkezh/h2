@import "../../block.less";
@import "region99_block.less";

.main{ .pt(.1rem);
	.shopList{
		.shopBanner{ .block; .w(100%); .h(2.4rem);}
		.goodsWrap{ .w(100%); .pt(.1rem); .h(2.7rem); .hidden;
			.goodsIscroll{ .clearfix;}
			.goods{ .left; .w(1.8rem); .mr(.05rem); .pb(.5rem);}
			figure{ .w(1.8rem); .h(1.8rem); .hidden;}
			p{ .mt(.16rem); .c; .h(.24rem); 
				span{ .fc(#ff6666);
					i{ font-style: normal; .f(.18rem);}
				}
				del{ .gray; .f(.18rem);}
			}
			.goods:first-child{ .ml(.1rem);}
			.goods:last-child{ .mr(.1rem);}
		}
	}
}