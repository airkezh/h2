@import "../../block.less";
body{ .bgc(#fafafa); .f(.24rem);}
a{ outline: none; }
img{
	.block;
	.w(100%);
}
.gotop{
	.none;
	.pf;
	right: 20px;
	.w(80*@w);
	z-index: 100;
}
.banner{
	.w(100%); .h(3.4rem); .pr; .hidden; background-size: 100% 100%; background-repeat: no-repeat;
	.rules{ .w(1.24rem); .h(.4rem); .pa; right: 0; top: 1rem; background: url('http://d02.res.meilishuo.net/pic/_o/07/f7/3a89b2f24047ad33a4d0537e6e04_124_39.cj.png') no-repeat; background-size: 100% 100%;}
}
.main{ .w(100%); .mt(.2rem);
	.goods{ .block; .w(100%); .clearfix;
		figure{ .left; .w(50%); .h(4.5rem); .hidden;}
		.details{ .right; .w(50%); .h(4.5rem); .hidden;
			.imgbox{ .w(2.7rem); .h(2.8rem); .mt(.06rem); .auto; .pr;}
			.img{ .pa; .w(1.6rem); .h(1.6rem); .bgwhite; padding: .1rem; .border-r(50%); .hidden;
				img{ .w(1.6rem); .h(1.6rem); .border-r(50%);}
			}
			.fir_img{ left: 0; top: 0; z-index: 10;}
			.sec_img{ right: 0; bottom: 0; z-index: 11;}
			.text{ .f(.22rem); .fc(#000); .pa; white-space:nowrap; z-index: 20;}
			.fir_txt{ left: 1.9rem; top: 0}
			.sec_txt{ left: 0; bottom: .2rem;}
			i.fir_arrow{ .pa; .i_block; left: 1.25rem; top: .14rem; z-index: 20; .w(.65rem); .h(.35rem); background: url('http://d02.res.meilishuo.net/pic/_o/63/f6/e2c9b6f241b27376d45ff6efc595_65_35.cj.png') no-repeat; background-size: 100%;}
			i.sec_arrow{ .pa; .i_block; right: 1.44rem; bottom: .44rem; z-index: 20; .w(.68rem); .h(.34rem); background: url('http://d01.res.meilishuo.net/pic/_o/ee/02/2b8dc31865de2118630f95d7babd_68_34.cj.png') no-repeat; background-size: 100%;}
		}
		.promotion, ul{ .pl(.4rem); .mt(.18rem); .f(.2rem);
			span{ padding: .05rem .2rem; .bgc(#bf1d1d); .white; .border-r(3px);}
			li{ .mb(.16rem); .fc(#bf1d1d);
				i{ vertical-align: 3px; line-height: 0; .f(.4rem); font-style: normal; .pr(.05rem);}
			}
		}
		ul{ .mt(.2rem);}
	}
	.biz_info{ .w(100%); .mt(.5rem); .mb(.66rem); .c;
		p{ .mb(.36rem);}
		.stock{ .ml(.4rem);}
		.btn_buy{ .mt(.2rem); padding: .16rem; .bgc(#bf1d1d); .auto; .white;
			.price{ .f(.32rem); font-style: normal;}
		}
	}
}

/*dialog*/
.dialog();
#dialogLayer .dialogTitle .close{.none;}
#dialogLayer{ .w(70%);
	.rule_txt{ padding: 10px; .l(.32rem);
		p:first-child{ .mb(10px);}
	}
}
.btn_close{ .right; }