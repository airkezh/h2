/**
* 全局footer
**/
.footer(){
	.footer{ .bgc(#f5f5f5); border-top: 1px solid #ddd; .hidden; padding: 15px 6px; .auto; .mt(14px); 
		.foot_con{ .auto; .w(978px); }	
		.f_list{
			.left; .l(26px); padding: 10px 25px 20px 30px;
			h4{ .f(16px);.l(28px); }
			ul{ .left; .l(26px); .pt(6px); }
			.sina_attention { 
				.pr;
				.sina_attention_area { .none; .pl(17px); .pt(6px); .pa; top: -15px; left: 70px; background:url("@{pic_url}/images/header/attention_bg.png") no-repeat; .w(125px); .h(66px);}
			}
			.kefu { 
				.tel_ico { background:url("@{pic_url}/images/header/@{mls_ico}") no-repeat 0 -111px;
					.h(40px); .w(36px); .left;
				}
				p { .ml(48px); .l(20px); }
			}
			.business { .l(22px); .pl(48px); .pt(6px); }
		}
		.rolling {
			border-top: 1px solid #e6e6e6; .h(20px); .l(20px); .p5_10; .hidden;
			h4{ .f(12px); .left; .fn; }
			ul{ 
				.left; .h(20px); .l(20px); .hidden; .w(800px);
				li{
					.left; .hidden; .w(880px);
					a{ .nowrap; .left; .p05; }
				}				
			}
			.link_more{ .right; }
		}
		
		.record { border-top: 1px solid #e6e6e6; .l(22px); .pt(10px); }
		.weixin_code {.right; .pr(0);
			.client_pic { background:url("@{pic_url}/images/header/@{mls_ico}") no-repeat 0 -401px; .block; .h(100px); .mt(10px); .w(132px); }
		}
		.service_info { .pl(0); .pt(16px);}
		.qr-code{
			h4{.c}
			img{.w(115px);.h(115px);.mt(13px)}
			
		}
	}
}

