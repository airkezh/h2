@import "block.less";
body {
    .pr;
    .w(6.4rem);
    .f(.24rem);
    .bgc(#f4f4f4);
}

.goTopRem;

.foot;
.wrapper {
    &.normal {
        .mt(0);
    }
}

.header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    &[status="open"] {
        .openClosed {
            .transform(rotate(0deg));
        }
    }
}

.navTopBan;
.navBan;

.head_normal {
    .h(1.2rem);
}

.head_higher {
    .h(1.6rem);
}

.wap_head;
.poster_wrap {
    .bgc(#fff);
    .pt(.2rem);
    min-height: 8rem;
    .goods_wall {
        .pr;
    }
    .poster_grid {
        .pa;
        .c;
        .pb(.25rem);
    }
    .pic_load {
        .w(3.05rem);
        .auto;
        background: #FFF url("http://i.meilishuo.net/css/images/huodong/tuan/prebg.png") center center no-repeat;
        background-size: 100%;
    }
    .bs_load_img {
        .block;
        .w(100%);
        .pt(3.95rem);
        background: no-repeat;
        background-size: cover;
        opacity: 0;
    }
    .clothesTitle {
        .w(90%);
        .auto;
        .mt(.1rem);
        .mb(.14rem);
        .f(.22rem);
        .fc(#666);
        .ellipsis;
    }
    .price {
        .f(.26rem);
        .fc(#FF7A9A);
        .pr(.18rem);
    }
    .like {
        .pl(.3rem);
        .f(.26rem);
        .fc(#999);
        background: url(@icon_bg) no-repeat -.1rem 81.8%;
        background-size: .45rem;
    }
}

.show {
    display: block;
}

.hide {
    display: none;
}

.pullUp {
    .pullUpDown > .common;
    .pullUpDown > .loading;
    &:before {
        .nowrap;
        .ml(-10px);
    }
    &[status="tap"] {
        background: 0 none;
        &:before {
            content: "上拉看更多..."
        }
    }
    &[status="stop"] {
        background: 0 none;
        &:before {
            content: "木有了...";
        }
    }
}
