@import "../block.less";
@import "../block/common_sale.less";
body{
	.bgc(white);
}
.page;
.pageNav{.page > .pageRed; }

.main{ .w(1200px); .auto;
	.title{ .h(38px); .l(38px); .pl(20px); .mt(40px); .bgc(#bdbdbd); .white; .yahei;}
	.container{
		.clearfix;
		.mb(30px);
	}
	.act-box{
		.left;
		.clearfix;
		dl{
			.left;
			dd{
				.w(550px);
				.h(330px);
				img{ .w(100%); .h(100%);}
			}
			dt{
				.h(54px);
				.l(42px);
				.mt(20px);
				.tr;
				.f(14px);
				.w(550px);
				span{
					.pl(22px);
				}
			}
		}
	}
	.even{
		dl dt{
			.tl;
		}
	}
	.act-line-box{
		.left;
		.c;
		.w(100px);
		.h(404px);
		.act_line{ .h(100%);}
	}
}