@import "wx.less";

body{ .bgwhite;}
.wrap {
	// .bgc(#ffb29a); .pa; .h(100%); .w(100%);
	.bgwhite;
	.try_type1 {
		background:  url("@{pic_url}/images/wap/web/wx/come_onbg.png");
	}
	.try_type2 {
		background:  url("@{pic_url}/images/wap/web/wx/member_bg.png");
	}
	.try_type3 {
		background:  url("@{pic_url}/images/wap/web/wx/try_againbg.png");
	}
	.try_type4 {
		background:  url("@{pic_url}/images/wap/web/wx/no_chancebg.png");
	}
	.try_area {
		.c; .w(100%); .h(270*@px);
		background:  url("@{pic_url}/images/wap/web/wx/scratch_mid.jpg");
		background-size: 100% 100%;
		.try_cnt { 
			.pr; .w(601*@px); .h(190*@px); .i_block; .mt(30*@px);
			background-size: 100% 100%;
		}
		.try_luck {
			.none; .pa; z-index: 5; .w(575*@px); .h(160*@px); top: 16*@px; left: 12*@px;
			background:  url("@{pic_url}/images/wap/web/wx/try_luck.png");
			background-size: 100% 100%;
		}
		.try_info {
			.c; .fc(#7c3500); .pt(30*@px);
			h3 { .f(34*@px); .pt(44*@px);}
			h2 { .f(40*@px); .pt(80*@px);}
		}
		.handle {
			.c; .f(30*@px);
			a,span { .fc(#ff4981); .tunder; .pt(24*@px); .pb(20*@px); .pl(80*@px); .pr(80*@px); .i_block; }
		}
	}
	.btm_cnt {
		/*.bgwhite; .pf; bottom: 0; left: 0; .w(100%); */
		.info { 
			.clearfix; .h(40*@px); .l(40*@px); .bgc(#ff4981); .white; .f(20*@px); .pl(20*@px); .pr(20*@px); .hidden;
			li { .left; .pl(4*@px); .pr(4*@px); }
		}
		.share {
			.c; .pt(20*@px); .pb(20*@px); .block;
			.share_btn { .wx_btn; .h(68*@px); .w(230*@px); .l(68*@px); .f(28*@px); }
		}
	}
}

/*dialog*/
.dialog();
.dialog {
	#maskLayer { background:rgba(0 ,0 ,0 , 0.7);}
	#dialogLayer { 
		background: none;
		box-shadow: none;
		.dialogTitle { .none;}
	}
}
.dialog_box {
	.c;
	.atn_btn {
		.w(429*@px); .h(264*@px); .i_block; 
		background: url("@{pic_url}/images/wap/web/wx/atn_btn.jpg");
		background-size: 100% 100%;
	}
	.share_pic {
		.w(530*@px); .h(244*@px); .i_block; .bgc(#331621);
		background: url("@{pic_url}/images/wap/web/wx/share_lead.png");
		background-size: 100% 100%;
	}
}