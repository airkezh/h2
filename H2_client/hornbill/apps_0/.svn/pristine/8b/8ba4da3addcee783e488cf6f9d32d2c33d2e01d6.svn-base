//menu
function fixFun(outer, inner, isMenu) {
	var navbar = $('#navbar'),
		topnav = navbar.find('.topnav'),
		outerBox = $(outer),
		innerBox = outerBox.find(inner),
		// bannerBox=$('.banner-box'),
		topnavHeight = topnav.height(),
		y = innerBox.offset().top - topnavHeight,
		borderVal = navbar.css('border-bottom');
	if (isMenu) {
		y = innerBox.offset().top - topnavHeight - innerBox.height() - $('#clockBox').height();
	}
	scroll.yIn(y, function() {
		navbar.append(innerBox);
		if (isMenu) {
			navbar.css('border-bottom', 'none');
			// bannerBox.css('margin-bottom','80px');
		}
		topnav.stop().animate({
			'margin-top': -topnavHeight
		})
	}, function() {
		outerBox.prepend(innerBox);
		if (isMenu) {
			navbar.css('border-bottom', borderVal);
			// bannerBox.css('margin-bottom','0px');
		}
		if (!isMenu) {
			topnav.stop().animate({
				'margin-top': 0
			})
		}
	})
}
fixFun('#clockBox', '.time_down', 0);
fixFun('#tabNew', '.menu-inner', 1);