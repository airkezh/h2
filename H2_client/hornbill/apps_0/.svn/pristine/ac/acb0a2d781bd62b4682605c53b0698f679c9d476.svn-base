@import "../block.less";

html{
	.f(10*@f);
}

body{
	.bgc(#f5f5f5);
}

img{
	.block;
	.w(100%);
}

a{
	.block;
	outline:none;
}

ul{
	list-style:none;
}

i{
	font-style:normal;
}

.user_wrap{
	.pr;
	.w(100%);
	.pt(200*@w);
	background:url("http://d02.res.meilishuo.net/pic/_o/c0/1e/1435f322ceefa14d7284bf08940f_640_200.cf.png") no-repeat;
	background-size:100%;

	.user_box{
		.pa;
		.hidden;
		clear:both;
		top:26%;
		left:30*@w;
		right:30*@w;

		.user_head{
			.left;
			.w(14%);
			.h(14%);
			.mr(16*@px);
			.border-r(50%);
			overflow:hidden;
			border:2px solid #e4e5dc;
			img{
				border:0;
				.border-r(50%);
			}
		}

		.user_info{
			.left;
			.l(1.8);
			.fc(#fff);
			.f(28*@px);

			.bean{
				.l(1.2);
				.pl(32*@px);
				background:url("http://d03.res.meilishuo.net/pic/_o/28/22/619933ca43bbe504a0616288d4a5_25_28.cg.png") no-repeat;
				background-size:auto 15px;
			}

			.beauty{
				.l(1.2);
			}
		}
	}
}

.detail_title{
	.fc(#333);
	.f(30*@px);
	.bgc(#fff);
	.h(88*@px);
	.l(88*@px);
	padding:0 40*@w;
	/*border-bottom: 1px solid #f7f6f6;*/
}

.tab_title{
	.hidden;
	clear:both;
	.bgc(#fff);
	.h(88*@px);
	.l(88*@px);
	padding:0 40*@w;
	border-top: 1px solid rgba(0,0,0,0.1);

	.title{
		.left;
		.fc(#595056);
		.f(30*@px);
	}

	.no,.view_more{
		.right;
		.fc(#f69);
		.f(26*@px);
	}

	.no{
		.fc(#ccc2c9);
	}

	.view_more{
		.fc(#f69);
	}
}

.gold_explain{
	.mb(20*@w);
	.bgc(#f7f6f6);
	padding:30*@w 40*@w;
	border-top: 1px solid rgba(0,0,0,0.1);
	border-bottom: 1px solid rgba(0,0,0,0.1);

	p{
		.l(1.6);
		.f(26*@px);
	}

	div{
		.l(1.6);
		.f(26*@px);
		.mb(40*@w);
	}

	.gold{
		.pl(40*@px);
		.fc(#80737b);
		background:url("http://d04.res.meilishuo.net/pic/_o/63/58/52a9ee5180ba6cec4e8c0991234a_32_32.ch.png") no-repeat;
		background-size:32*@px;
	}
}

.pay_list{
	.mb(20*@w);
	.bgc(#f5f5f5);
	padding:0 40*@w;
	border-top: 1px solid rgba(0,0,0,0.1);
	border-bottom: 1px solid rgba(0,0,0,0.1);

	ul li{
		.hidden;
		clear:both;
		.l(40*@px);
		padding:16*@px 0;
		border-bottom: 1px solid rgba(0,0,0,0.1);

		a{
			.i_block;
			.fc(#ff7a9a);
		}

		em{
			.fc(#ccc);
			font-style:normal;
		}

		div{
			.c;
		}

		.title{
			.left;
			.fc(#666);
			.f(26*@px);
		}

		.coin{
			.right;
			.fc(#50b157);
			.f(30*@px);
			.l(80*@px);
		}

		.income{
			.fc(#f66);
		}

		&:last-child{
			border:none;
		}
	}

	ul li.no_detail{
		.c;
		.fc(#666);
		.f(26*@px);
	}

	ul li.no_beans_detail{
		.w(100%);
		.pt(100%);
		background:url("http://d04.res.meilishuo.net/pic/_o/fb/fa/03145f0997f74500f2b9d20ed2f5_640_720.ch.png") no-repeat;
		background-size:100%;
	}
}

.sign_wrap{
	.bgc(#fff);
	padding:0 40*@w 250*@w;
	border-bottom: 1px solid rgba(0,0,0,0.1);
}

.mb0{
	.mb(none);
}

.bb0{
	border-bottom:0;
}

.load_more_btn{
	.c;
	/*.bgc(#fff);*/
	.h(88*@px);
	.l(88*@px);
	.fc(#595056);
	.f(30*@px);
}

.pullUp{
	.mt(20px);
	.mb(20px);
	.pullUpDown > .common;
	.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-10px);
	}
}
