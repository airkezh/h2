@import 'block';

body {
	background: #f4f2f3;
}

.audit_wrap {
	background: #fff;
	margin-top: .2rem;
	padding: .4rem 0;
	.audit_img {
		width: 1.6rem;
		height: 1.7rem;
		background: url('http://d04.res.meilishuo.net/pic/_o/46/63/0c8f5b038c55c08882f26cf8bdf0_160_172.cg.png') no-repeat center;
		background-size: cover;
		margin: 0 auto .4rem;
	}
	.process {
		font-size: 0;
		text-align: center;
		.pro_step {
			display: inline-block;
			vertical-align: middle;
			width: .56rem;
			height: .56rem;
			line-height: .56rem;
			border-radius: .28rem;
			text-align: center;
			font-size: .32rem;
			color: #fff;
		}
		.line {
			display: inline-block;
			width: 1.60rem;
			height: .04rem;
			vertical-align: middle;
		}
		.pass {
			background: #FF7A9A;
		}
		.no-pass {
			background: #ccc;
		}
	}
	
	.pro_note {
		font-size: 0;
		text-align: center;
		margin-top: .22rem;
		span {
			display: inline-block;
			width: 33%;
			font-size: .28rem;
		}
		.pass_red {
			color: #FF7A9A;
		}
		.no-pass_gray {
			color: #ccc;
		}
	}

	.deny_img {
		width: 1.6rem;
		height: 1.5rem;
		background: url('http://d03.res.meilishuo.net/pic/_o/7d/12/c865aee29bb5b0c8aa368c41339d_160_155.ch.png') no-repeat center;
		background-size: contain;
		margin: auto;
	}
	.deny_msg {
		margin: .2rem .2rem 0 ;
		font-size: .26rem;
		text-align: center;
		line-height: .36rem;
	}
	.deny_note{
		color: #ff7a9a;
	}
	.deny_detail {
		color: #666;
	}
}

.btn {
	display: block;
	margin: auto;
	width: 4.6rem;
	color: #fff;
	background: #ff7a9a;
	font-size: .28rem;
	padding: .2rem 0;
	text-align: center;
	margin-top: .3rem;
	border-radius: .04rem;
	border: none;
}
