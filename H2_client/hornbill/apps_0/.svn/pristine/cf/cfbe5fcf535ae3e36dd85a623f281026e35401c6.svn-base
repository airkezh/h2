@import "../block.less";
html,body{ .bgwhite;}
.head-top,.shadow{
		.pt(20px);
		.pb(30px);
		.head-icon{
			.auto;
			.hidden;
			.w(700px);
			li{
				.left;
			}
			a{
				.w(140px);
				.h(110px);
				.block;
			}
