.shadow{
	.mt(-11px);
	box-shadow: 0 -7px 0 white,-7px 0px 0 white,7px 0 0 white,0px 2px 7px #e6e6e6;
	.w(100%); 
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=7, Direction=180, Color='#e6e6e6');}
.goods_wall{ 
	.auto; 
	.c; 
	.mt(25px);
	.w(1000px);
	.new_goods{
		.mb(30px);
		.mt(20px);
		.clearfix;
		a{
			.mr(5px);
			.mb(20px);
			.left;
		}

	}
}
.g-line{
	.h(20px);
	.bgc(#efefef);
}

