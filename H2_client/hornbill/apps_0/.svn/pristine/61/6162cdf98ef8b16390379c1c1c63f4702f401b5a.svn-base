.bs100(){background-size: 100%}
.ellipsis(){.hidden;white-space:nowrap;text-overflow:ellipsis}
.ellipsis-row(n){.hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:n;-webkit-box-orient:vertical;}


// banner
body{.f(0rem)}
