.index-img{.w(96%);.auto;}
// coupon
.coupon{.pl(2%);.hidden;
	li{.left;.w(46%);.mr(2%);padding:2.5% 1% 2.3% 1%;.bgc(#F7F4F4);.mb(2%);
		.price{.f(.9rem);.fc(#F46C6C);.left;.mr(.05rem);.ml(.1rem)}
		.tips{.f(.2rem);.fc(#F46C6C);.pt(.25rem);.pr;
			span{.mt(.1rem);.block}
		}
		.btn{.block;clear:both;.w(95%);.auto;.c;.bgc(#F46C6C);.l(1.8);.f(.2rem);.mt(.1rem);.fc(#fff);}
		.btn-done{.bgc(#808080)}
		.corner{.pa;right:.1rem;top:0;.w(.2rem);.h(.1rem);border-top:2px solid #F46C6C;border-right:2px solid #F46C6C}
	}
}
