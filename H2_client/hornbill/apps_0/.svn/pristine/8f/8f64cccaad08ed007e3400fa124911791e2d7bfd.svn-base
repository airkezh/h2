.shoppingshow(){
	.new_shoppingshow_wrap{ border-bottom: 1px solid #e5e5e5; padding: 30px 0; }
	.new_shoppingshow{
		.w(400px); .l(48px); .bgc(#F69); .fc(#FFF); .block; margin: 0 auto; .f(18px); .c;
		&:hover{ .fc(#FFF); }
	}
	.cnt_item { .mt(18px); .hidden;
		h3 { .w(540px); .ellipsis; }
		.separation { .ml(-20px); .mt(20px); border-bottom: 1px dashed #e5e5e5; }
	}
	.paging_panel { .mt(20px); }
	.user_time { .h(18px); .l(18px;);
		a { .left; .f(14px);.gray;.fb; }
		.time { .right; }
	}
	.best_title{.w(20px);.h(20px);.left;background:  url("@{pic_url}/images/club/besttitle_b.jpg") no-repeat;.mt(10px);.mr(6px);}
	.content_cl { .ml(20px); .left; .w(880px);
		h3 { .f(18px); .mt(12px); .left;
			a { color:#333; }
		}
		.shop_detail { .hidden; .pr; .mt(20px);
			.cnt_r { .left; .l(20px); .f(14px); color:#333;}
			.mb20_f { .mb(20px); }
		}
	}

	.btn_bar { background: #f2f0f0; .h(22px); .l(22px); padding: 0 10px; .block;.left;.mr(1px);.inline;}
	.bar { .mt(22px); .h(22px); }
	.cnt_imgs { 
		a { .mr(20px); .left; }
	}
	.shoppingshow_null{ .l(100px); .c; .f(14px); .l(100px); }
	.love_pro { background: url("@{pic_url}/images/goods/love_pro.png") no-repeat; .red; .pa; top:-30px; left: -150px; .c; .f(12px); .h(30px); .l(25px); .w(130px); .fn; }
}
.ava_r { .border-r(5px); }
.cl_love, .cl_unlove { background: url("@{pic_url}/images/club/s_heart_12_12.png") no-repeat;padding:0 5px;.mr(9px);}
.cl_love { .bp(0,-28px); }
.cl_unlove { .bp(0, 2px); }
.cl_i_comment { background: url("@{pic_url}/images/club/club_icos_2.png") no-repeat; .h(20px); .bp(-1px, 1px); padding: 0 5px;.mr(9px); }
