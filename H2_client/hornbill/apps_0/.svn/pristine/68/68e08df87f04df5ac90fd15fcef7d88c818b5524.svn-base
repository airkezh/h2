@import "../block.less";
* {
	padding: 0;
	margin: 0;
}

body {
	background: #fff1b2;
	text-align: center;
	widdth: 6.4rem;
}

img {
	display: block;
	width: 100%;
}

.msg {
	position: relative;
	.msg_content {
		position: absolute;
		top: 0;
		left: 15%;
		width: 70%;
		.box {
			border:1px solid #e93736;
			border-radius: 6*@px;
			font-size: .3rem;
			line-height: .8rem;
			box-sizing: border-box;
		}
		.require {
			background: #fff;
			line-height: .8rem;
			text-indent: 12*@px;
		}
		.phonenum {
			width: 100%;
		}
		.cell {
			margin-top: .3rem;
		}
		.code {
			width: 266/455*100%;
			display: inline-block;
			position: absolute;
			left: 0;
		}
		.send_btn {
			width: 160/455*100%;
			display: inline-block;
			text-align: center;
			position: absolute;
			right: 0;
		}
	}
}

.apply, .download, .middle_pic, .footer {
	position: relative;
}

.apply_btn, .download_btn {
		position: absolute;
		top: 0;
		border-radius: .08rem;
}

.result, .link_btn {
	position: absolute;
	top: 0;
	left: 0;
}
