@import "../block.less";

body{ .bgwhite; }
.audio;
.top_box{ .pr;.h(420px);.w(948px);.auto; .hidden; }
.desc_box{ .w(100%); border-bottom:1px solid #e6e6e6;
	.desc{ .w(948px); .auto; padding:20px 0; .f(14px); .clearfix;
		.big{ .red; .f(18px); .w(144px); .left; }
		.text{ .pl(15px); .l(19px); .w(773px); .right; border-left:1px solid #ff6699; }
	}
}
.item{ .w(948px); .auto;
	.tit{ .clearfix; .mt(14px);
		h2{ .f(20px); .red; .left; }
		.more{ .right; .f(14px); .pt(8px); }
	}
	.word{ padding:0 5px; .clearfix; .f(16px);
		li{ .left; .w(94px); .h(94px); margin:14px 19px 0 19px; .border-r(50%); .border-1(#e6e6e6); .c; .l(94px); .hidden;
			a{ .block;
				&:hover{ background:#ff6699; color:#fff; }
			}
		}
	}
}
.item1{ .w(960px); .auto;
	.tit{ .clearfix; .mt(14px);
		h2{ .f(20px); .red; .left; .pl(6px); }
		.more{ .right; .f(14px); .pt(8px); .pr(6px); }
	}
	.shop{ .clearfix; .shopItem();
		.groupBox{
			.groupCon{ .mt(14px); }
		}
	}
	.before{ .clearfix;
		li{ .left;
			a{ .block; margin:14px 6px 0 6px; .w(228px); .h(134px); .hidden;
				img{ .w(228px); .h(134px); }
			}
		}
	}
	.img_tit{ padding:0 6px; margin:14px 0; .block; }
}
.goods_box{ .w(960px); .auto; .clearfix;
	.firstPic{ .left; .w(226px); .h(425px); .border-1(@color:#e6e6e6); margin:0 6px 12px 6px;
		img{ .w(226px); .h(423px); }
	}
	.goodsCon{ .left;.w(226px); .h(425px); .border-1(@color:#e6e6e6); margin:0 6px 12px 6px; background:#fff; .hidden; .pr;
		.mark { .w(220px); .pa; left:5px; top:-1px;
			.m_ico { .left; .mr(1px); }
		}
		.pic{ .block; .w(226px); .h(328px); .hidden; border-bottom:1px solid #e6e6e6;
			img{ .w(226px); .h(328px); }
		}
		.goods_tit{ padding:4px 10px; .h(40px); .l(20px); .hidden; .block; }
		.goods_price{ padding:0 10px; .h(14px); .hidden;
			span{ .f(14px); }
			del{ color:#999999; .pl(6px); }
		}
		.likebuy{ .clearfix; padding:10px; .h(15px); .hidden; 
			img{ .mt(-1px); }
		}
	}
}
.attrs_box{ .w(960px); .auto; .clearfix;
	.attrsCon{ .left;.w(226px); .h(378px); .hidden; .border-1(@color:#e6e6e6); margin:0 6px 12px 6px; background:#fff; 
		.pic{ .block; .w(226px); .h(328px); .hidden;
			img{ .w(226px); .h(328px); }
		}
		.info{ .h(50px); background:#f1f1f1; .l(50px); padding:0 10px; .clearfix;
			.likepic{ .mt(17px); }
		}
	}
}




