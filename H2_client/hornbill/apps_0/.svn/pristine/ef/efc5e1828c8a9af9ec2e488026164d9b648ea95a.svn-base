@import "../block.less";

body{
	.f(.24rem);
	background-color: #f8f8f8;
	.w(6.4rem);
	.dgray;
	min-height: 800px;
}

img{ .block; .w(100%);}
a{ outline: none; }
.gotop{ .none;.pf;right: .2rem;.w(.8rem); }
//色块儿
.d_red{ .fc(#e32726);}
.pullUp{ .mt(.2rem);}

.scrollin{
	.pf;top:-1px;left: 0; right: 0; margin: 0 auto; z-index:100;
}
.scrollout{
	.pr;
}

.shop_time_num(){
	.shop_txt{ padding: .16rem 0; .f(0.18rem); .gray; .clearfix;
		.time_box{ .left;}
		i{ .i_block; font-style: normal; padding: 0.08rem 0.04rem; .bgc(#e32726); .white;}
		p{ .mt(.06rem);}
	}
}

.nav_list(){
	.sec_nav{ padding:.32rem .16rem; .bgwhite; .l(.28rem);
		ul{ .clearfix; .hidden; .flexbox;}
		li{ .flex(1); .c; border-right: 1px solid #ccc; .f(.25rem);}
		li:last-child{ border-right: none;}
		li.active{ .fc(#ff7a9a); .f(.28rem);}
	}
}

.goodslist(){
	.goods{ .clearfix; .bgwhite;}
		.gooditem{ .left; .w(2.96rem); .hidden;
			figure{ .pr;
				.mark{ 
					.pa; .w(.6rem); .h(.7rem); top: 0; left: .1rem;
					background-image: url("http://d05.res.meilishuo.net/pic/_o/b4/b2/a22f06f982d6dec22e6b19c175f5_60_70.ch.png");
					background-size: cover;
				}
			}
			.bs_load_img{ 
				.block;
				.w(100%);
				.pt(140%);
				background-image:url("http://d01.res.meilishuo.net/pic/_o/b9/0a/fd965c6f94c2fd9df704e481098f_304_425.cg.png");
				background-size: cover;
			}
			.title{ .ellipsis; .nowrap; .f(.22rem); .mt(.16rem); .c;}
			.price{ padding: .16rem 0; .c; .nowrap; .l(.1rem);
				.now_price{ .f(.26rem);}
				.origin_price{ .gray; .f(.16rem);}
				.meid{ .i_block; .bgc(#ffbb34); .f(.18rem); .white; padding: .04rem .06rem; vertical-align: text-top;
					i{ 
						.i_block;
						.w(.18rem);
						.h(.16rem);
						.mr(.06rem);
						background-size: cover; 
						background-image: url('http://d04.res.meilishuo.net/pic/_o/78/53/52093c802991ee86433141c882c1_18_16.cf.png');
					}
				}
			}
			.sale_num{ .c; .mb(.16rem); .f(.2rem); .gray;}
		}
		.gooditem.odd{ .mr(0.16rem);}
}