@import "../block";
@import "search";

html,body{
	.w(100%);
	.h(100%);
	.bgc(#fff);
	font-family: "Helvetica Neue";
}


.content{
	.pt(10px);
	.list{
		.w(92%);
		.l(35px);
		.ml(8%);
		.mt(3%);
		.mb(3%);
		li{	
			border-bottom:1px solid #e6e5e6;
			.pr;
			&:last-child{
				border-bottom:none;
			}
			a{
				color:#333;	
				display:block;
				&:before {
				content: ''; .pa; top: 10px; right: 20px; .w(20*@px); .h(20*@px); .bgwhite; border-top: 1px solid #ccc; border-left: 1px solid #ccc; -webkit-transform: rotate(138deg); transform: rotate(138deg);
				}
			}
					
		}		
	}
	.title{
		.h(40px);
		.l(40px);
		.pl(8%);
		background-color:#f8f8f8;
	}
	.common-list{
		.w(92%);
		.ml(8%);
		li{ 
			.l(40px);
			border-bottom:1px solid #e6e5e6;
			&:last-child{
				border-bottom:none;
			}
		}
		a{
			.ml(8px);
			display:block;
		}	
		em{
			.w(4px);
			.h(4px);
			.mt(18px);
			.left;
			border-radius:30px;
			background:#d8d8d8;
		}
		.clearfix;

	}	
}
.border-Top{
	border-top:10px solid #f8f8f8;
}