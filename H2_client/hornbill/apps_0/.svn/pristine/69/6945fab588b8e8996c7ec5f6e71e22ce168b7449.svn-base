@import "../../block.less";
@import "region99_block.less";

.actTip{
	.bgc(#F8F8F8); .pt(.15rem); .pb(.15rem); .h(.4rem); .l(.4rem); .clearfix;
	.tipTxt{ border-left: 3px solid #ff6666; .pl(.1rem);}
	.timeBox{ .right; .mr(.1rem); 
		.time{ .ml(.16rem); .i_block;}
		i{ font-style: normal; .i_block; .c; .white; .f(.2rem); .h(.4rem); .w(.3rem); .bgc(#ff6666); .border-r(4px);}
	}
}

.content_box{ padding: 0 2%; .bgwhite;
	.goodsList{ border-top: 1px solid #eee; .pt(.2rem); .pb(.2rem);
		figure{ .w(34%); .i_block; .pr;}
		.goodsInfo{ .w(60%); .right; .mr(3%); min-height:2rem; max-height: 2rem; height: 2rem;
			li{ .w(100%);}
			li:first-child{ .f(.26rem); .bgray; .nowrap; .ellipsis;}
			li:nth-child(2){ .mt(.24rem);}
			li:nth-child(3){ .mt(.24rem); .gray;}
			li:nth-child(4){ .mt(.24rem); }
			li.title{
				a{ .bgray;}
			}
			li.pricebox{ .f(.36rem); .bgray;
				i{ font-style: normal; .f(.3rem);}
				del{ .gray; .f(.2rem);}
				.discount{ .i_block; vertical-align: middle; .f(.16rem); .white; .bgc(#ff6666); padding: .05rem .06rem;}
				.status_sum_empty,.status_sum_over{ .bgc(#ccc); .fc(#fff);}
			}
			.statusInfo{ .block; .h(.46rem); .l(.46rem); border: 1px solid #ff6666; .border-r(.04rem); .hidden;
				.statusBar{ .left; .pr; .w(50%); 
					.scale{ .pr; .f(.2rem); .c; z-index: 10;}
					.progress{ .pa; left: 0; top: 0; opacity: .1; .h(.46rem); .bgc(#ff6666);}
				}
				.statusBtn{ .left; .w(50%); .h(100%); .c; .f(.26rem); .white; .bgc(#ff6666);}
			}
			.statusInfo.status_sum_empty,.statusInfo.status_sum_over{ 
				border: 1px solid #ccc;
				.statusBar{
					.scale{ .white; }
					.progress{ .bgc(#ccc); opacity: 1;}
				}
				.statusBtn{ .bgwhite; .fc(#ff6666);}
			}
		}
	}
	.goodsList:first-child{ border-top: none;}
}

.mark{
	position: absolute;
	top: 16px;
	left: 0;
	.w(45px);
	.h(45px);
}
