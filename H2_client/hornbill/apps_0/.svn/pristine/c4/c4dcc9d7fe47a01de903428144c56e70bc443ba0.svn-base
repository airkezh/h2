//编辑杂志页面
.set_box { .common_shadowBox; .auto; .mt(14px); .w(948px);
    fieldset { padding: 25px 80px;
        ul { .mt(8px); width: 100%;
            li { .f(14px); .p8_0; 
                span { .left; .l(26px); .tr; margin: 3px 5px 0 0; .w(90px); }
               .ipt1,textarea { .border-1; .f(16px); .l(20px); color: #666; padding: 5px; } 
			   .ipt1 { .h(20px); width: 260px; }
			   textarea { height: 120px; width: 410px; }
			   .delete { .border-1; .box-linear; .cursor; .left; _margin-left: 3px; padding: 7px 20px; }
            }
			.red_follow { .border-n; .pb(4px); }
        } 
    } 
}
