@import "../common/block.less";
@import "../common/window.less";
@import "../common/dootablock";
@import "./form";
.doota;

.address_content_box{
	min-height: 410px;
}

.address {
	.doota > .frame;

	&_content {
		form {
			padding: 20px 30px;

			label {
				.w(80px);
				.i_block;
			}
			p {
				.mb(16px);
				.pr;

				span {
					.fc(@red);
					.fb;
					.f(14px);
					.pa;
					top: 4px;
					left: -10px;
				}
			}
			select.mls-select {
				.ml(0px);
				.mr(10px);
			}
			.l_ipt_s {
				.w(360px);
			}
			.submitBox {
				.mt(44px);
				.c;

				.button {
					.common_button;
					.common_button > .redBtn;
					.border-n;
					.f(18px);
					padding: 10px;
					.w(134px);
					.l(28px);
				}
			}
			.good, .bad {
				.pa;
				.ml(8px);
				.w(22px);
				.h(22px);
				background: url("@{pic_url}/images/register/form2.png") no-repeat;
			}
			.good {
				.bp(0px, 0px);
			}
			.bad {
				.bp(-22px, 0px);
			}
			.addressErrorMessage {
				.common_shadowBox;
				.ml(44px);
				.pa;
				.l(18px);
				.border-r(4px);
				.border-1c;
				.inline;
				padding: 10px 8px;
				background-color: #ffffcd;
				.ml(44px);
				.w(160px);
				.mt(-8px);

				span {
					.w(9px);
					.h(17px);
					.pa;
					top: 10px;
					left: -9px;
					background: url("@{pic_url}/images/register/form2.png") no-repeat -46px 0px;
				}
			}
		}
	}
	&_list {
		.mb(24px);

		th, td {
			padding: 14px 8px;
			.c;
			border-top: 1px solid #ddd;
			border-bottom: 1px solid #ddd;
		}
		tr.adrl_update_list {
			background-color: #f7f7f7;
			color: #cccccc;
		}
		.adrl_nickname {
			.pl(20px);
		}
		.adrl_address {
			.tl;
		}
		a.set_default {
			color: #f69;
		}
		.adrl_control {
			.pr(20px);

			a {
				.red;
			}
			samp {
				.ml(20px);
				.mr(20px);
			}
			a.btn-update {
				color: #fff;
				background-color: #f69;
				padding: 5px 5px;
				border-radius: 2px;
			}
		}
	}
	&_warn_content {
		.h(95px);
		text-align: center;
		.pt(50px);
		.pb(50px);

		.warn_container {
			.i_block;
			.l(30px);
		}
		div {
			.warn_icon {
				.mr(10px);
				background-image: url("@{pic_url}/images/register/warn1.png");
				.w(25px);
				.h(25px);
				.left;
			}
		}
		.warntip {
			.left;
		}
		.abtns {
			.mt(25px);

			.abtn {
				.border-r(3px);
				.cursor;
				background: #ff6699;
				.fc(#fff);
				border: solid 1px #e6e6e6;
				.f(16px);
				padding: 6px;
				.w(160px);
				.l(28px);
			}
			.cancelbtn {
				.ml(20px);
				background: #f5f5f5;
				.fc(#ff6699);
			}
		}
	}
	&_add_wrap{
		text-align: right;
		padding:0 20px 22px 0;
		.button{
			text-align: center;
			background-color: #f69;
			padding:10px 40px;
			color:#fff;
			cursor: pointer;
		}

	}

	&_no_data{
		margin-top: 100px;
		vertical-align: middle;
		text-align: center;
		.address_add_wrap{
			text-align: center;
			margin-top: 30px;
		}
	}

	&_top_tips{
		background-color: #fff9d6;
		color:#f69;
		padding:10px 0;
		text-align: center;
	}
}
.footer();