<%#head.html%>
<%
	var tab_list = this.nav_info && this.nav_info.data && this.nav_info.data.tab_list;
%>
<div class="main">
	<section id="bannerBox">
		<%if(this.b_banner && this.b_banner.data.mob_tuan_big_banner && this.b_banner.data.mob_tuan_big_banner.length){
	    	var t_banner = this.b_banner.data.mob_tuan_big_banner;%>
			<!--轮播-->
			<div class="banner_wrap">
				<div class="imageSlide" id="imageSlide">
					<ul>
						<% t_banner.forEach(function(banner){ %>
							<li>
								<a class="top_banner swipe js_track" <%if(banner.link != ''){%>href="<%= banner.link %>"<%}%>><img src="<%= banner.show_pic %>"></a>
							</li>
						<% }); %>
							<li>
								<a href=""><img src="http://d04.res.meilishuo.net/pic/_o/e4/8f/6702d71a9270744f82c1ecbe66ae_640_340.cj.jpg"></a>
							</li>
					</ul>
				</div>
			</div>
		<%}%>
		<div class="activity_wrap">
			<a href=""><img src="http://d02.res.meilishuo.net/img/_o/2e/47/c10e580834fc32e8b761b215dbbb_305_150.cj.jpg"></a>
			<a href=""><img src="http://d02.res.meilishuo.net/img/_o/2e/47/c10e580834fc32e8b761b215dbbb_305_150.cj.jpg"></a>		
		</div>
	</section>
	<section id="nav_wrap" class="nav_wrap">
		<div class="nav_cont">
			<%if(tab_list && tab_list.length > 0){%>
			<div class="nav">
				<ul>
					<%tab_list.slice(0,10).forEach(function(item, index){%>
						<li <%= index == 0 ? 'class="curr"' : ''%> data-cata="<%= item.cata%>"><a href="javascript:void(0)"><%= item.name %></a></li>
					<%});%>
				</ul>
			</div>
			<%}%>
			<div class="range">
				<ul>
					<li sbase="0" sort="0" class="active"><a>默认</a></li>
					<li sbase="1" sort="0"><a>人气</a></li>
					<li sbase="4" sort="0"><a>销量</a></li>
					<li sbase="3" sort="1"><a>价格<i class="arrow_down"></i></a></li>
				</ul>
			</div>
		</div>
	</section>
	<section id="container" class="container">
		<div class="posterWall"></div>
		<div class="pullUp" status="loading"></div>
	</section>
</div>
<a class="gotop" style="bottom:<%if(this.isIphone){%>60<%}else{%>20<%}%>px">
	<img src="<%= this.PICTURE_URL%>/images/wap/tuan/gotop.png" />
</a>
<script type="text/html" id="posterWall">
	<?
		$.each(this.data.tInfo , function(k , v){ 
	?>
		<a class="productBox">
			<figure><span class="bs_load_img" asrc="http://imgtest-dl.meiliworks.com/pic/_o/5d/11/ec969e430fe7a8583f6059dd8fe4_640_960.cf.jpg_1735e2ba_s1_304_425.jpg"></span></figure>
			<figcaption>
				<p class="proTitle">最惹火传达神器</p>
				<p class="proPrice">
					<span class="now_price">￥159.00</span>
					<span class="discount">省：<i class="red_f">33</i></span>
				</p>
				<p class="proSale">销量：18277</p>	
			</figcaption>
		</a>
	<?});?>
</script>

<script>
	fml.vars.poster = {};
	<%= this.list? 'Meilishuo.config.poster0 = '+JSON.stringify(this.list)+';':'' ;%>
	fml.vars.geturl='<%=this.geturl%>';
	fml.vars.hostname='<%=this.hostnm%>';
	fml.vars.appShare = <%= this.appShare%>;
	fml.vars.params = <%= JSON.stringify(this.params) %>;
	fml.vars.popRecommdlen = <%= this.pop_recommend && this.pop_recommend.data && this.pop_recommend.data.goods_list && this.pop_recommend.data.goods_list.length %>;
</script>

<%! $_ENGINE_SELF.callFn("useModule")("<<<_use:
	fml.use('wap/page/tuan/tuan_simple');
	_use:", this._JSstack , this._JSmods ); %>
<%# foot_simple.html%>