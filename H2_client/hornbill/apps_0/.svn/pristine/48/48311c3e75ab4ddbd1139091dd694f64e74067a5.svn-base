@import "./cl_base.less";
@arrow: 'http://d03.res.meilishuo.net/img/_o/6e/3e/764adf9e2679016ff7ad3aafa4e1_13_24.cg.png';
@mmd: 'http://d06.res.meilishuo.net/img/_o/c9/95/bf08d599dda880db4e009e3c40b8_147_26.ch.png';
@mark: 'http://d06.res.meilishuo.net/img/_o/b6/c9/65d3994c73af126ca6eb8693de9d_60_70.cg.png';

body{ .w(6.4rem);.bgc(#f8f8f8);.fc(#666); }


// imageSlide style
.slide_banner{ .pr;.h(2.4rem); }
.imageSlide-rem;

// sec banner
.sec_banner{
	.hidden;

	a{ .w(50%);.left; }
}

// time back
.countdown{
	.c;.l(.3rem);.f(.22rem);padding: .15rem 0;

	span{ .i_block;.bgc(#ed4b4b);.fc(#fff);padding: 0 .04rem;margin: 0 .04rem; }
}

// tab
#slide_nav{
	.bgc(#fff);.w(6.4rem);.hidden;.mb(.01rem);

	.slide_wrap{ .hidden;.pr;padding: .3rem 0; }
	.item{ .c;.w(1.14rem);border-right: .01rem solid #ccc;.f(.24rem);.left;box-sizing: border-box;.l(.28rem); }
	.item:last-child{ border: none; }
	.active{ .fc(#ff7a9a);.f(.28rem); }

	.item{ .w(2.1rem); }
}

#posterWrap{
	.item{ .hidden;.bgc(#fff);.mb(.2rem);.pb(.16rem); }
	.shop{
		padding: .16rem;.w(6.08rem);.hidden;.block;.f(.28rem);.fc(#333);.pr;background: url(@arrow) no-repeat 6.11rem center;background-size: .13rem;

		.shop_icon{ .w(.9rem);.h(.9rem);.border-r(50%);.hidden;.mr(.2rem);.left; }
		.name{ .pt(.08rem); }
		.decorate{ .pa;bottom: .24rem;left: 1.28rem;.hidden;.h(.34rem); }
		.discount,
		.coupon{ padding: .03rem .1rem;.f(.18rem);.fc(#fff);.bgc(#fc4c54);.mr(.1rem);.l(100%); }
		.coupon{ .bgc(#ffb30c); }
	}
	.goods_wrap{ .hidden;.pr;margin: 0 .16rem;.w(6.08rem);.h(5.62rem); }
	.mark{ background: url(@mark) no-repeat;background-size: .6rem;.w(.6rem);.h(.7rem);.pa;left: .1rem;top: -1px;z-index: 100; }
	.big_goods{.w(4.03rem);.h(5.62rem);.left;.mr(.04rem);.pr; }
	.small_goods{ .w(2rem);.h(2.79rem);.hidden;.left;.mb(.04rem);.pr; }
	.price{
		.pa;bottom: 0;left: 0;.w(100%);.bgc(rgba(0,0,0,.3));padding: .1rem .05rem .1rem .1rem;.f(.18rem);.fc(#fff);box-sizing: border-box;

		span{ .f(.14rem);.i_block;.ml(.1rem);text-decoration: line-through; }
	}
	.mmd{ background: url(@mmd) no-repeat;background-size: 1.47rem;.w(1.47rem);.h(.26rem);.pa;bottom: .06rem;right: .06rem; }
	.bs_load_img{ .w(100%);.h(100%);.block;background: center;background-size: cover;opacity: 0; }
}

// pullUp
.fallwall-rem;
.pullUp{ clear: both;.mt(.2rem); }
.gotop{ .none;.pf;right: .2rem;.w(.8rem); }