@import "../common/atom.less";
.steps(){
	.flowStep{
		margin:auto !important;
		.chart{
			position:relative;
			height:18px;
			overflow:hidden;
			margin-bottom: 10px;
			.line{
				position:absolute;
				z-index:1;
				top:8px;
				height:3px;overflow:hidden;
				background:#f69;
				
			}
			.ball{
				position:relative;
				z-index:2;
				border-radius: 9px;
				background-color: #f69;
				// background:url('@{pic_url}/images/store/mls_store131110_1.png') no-repeat -92px -48px;
				width:18px;
				height:18px;
				float:left;
			    line-height: 18px;
			    text-align: center;
				color: #fff;
			}
			.empty{
				background-color: gray;
			}
		}
		.text{
			overflow:hidden;
			
			div{
				text-align:center;
				float:left;
				margin:0;
				color:@gray;
			}
			div.active{
				color:#ff6699;
			}
			margin:0;
		}
	}
}