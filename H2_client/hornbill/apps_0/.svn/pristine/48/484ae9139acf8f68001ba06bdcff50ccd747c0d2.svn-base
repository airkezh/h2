@import "block.less";

body { .bgc(#f4f2f3); }

.frame_simple;
.navBan;
.slide;

.sendCode {
	.title { .bgc(#eee); .pl(.3rem); .pr(.3rem); .pt(.5rem); .pb(.2rem); .f(.24rem); .fc(#b4b4b4); }

	.form_wrap { .pl(.3rem); .pr(.3rem); .bgwhite; }
	.form_list {
		.l(.88rem);
		label { .w(20%); .fc(#797979); .f(.28rem); .vm; .i_block;}
		.lipt { .border-n; .w(38%); .f(.28rem); .bgwhite; outline: none; .fc(#d6cfd4); .l(.4rem);}
		.time { .fc(#fa6a6c); border-left: 2px solid rgba(241,241,241,0.95); .pl(.3rem); .f(.28rem); .vm;}
	}
	
	.next_step { .ml(.2rem); .mr(.2rem); .block; .bgc(#fa799a); .block; .l(.74rem); .c; .white; .f(.3rem); .border-n; .mt(30*@px); .border-r(.1rem);}

	.tips {
		.c; .f(.24rem); .fc(#a5a5a5); .bgwhite; .pt(3%); .pb(2%); .mb(4%);
		p { .l(.36rem);}
		.icon { 
			.w(50%); .auto;
			img { .w(11%); .vm;}
		}
	}

	.error_message { .red; .c; .block; .pt(30*@px); .f(14px);}

}

