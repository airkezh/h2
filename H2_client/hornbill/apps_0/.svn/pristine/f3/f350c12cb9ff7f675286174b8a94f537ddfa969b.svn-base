.goods_wall{
	.clearfix;
}
.productBox {.left;.w(50%);
	.link_box {.block;margin:0 .5rem;}
	.hjfpos{
		.pr;
		.ownh{height:79px;}
		.adenter{.pa;top: 0;left: 0;.h(100%);}
		}
	figure {.pr;
		.zeroflag{ .pa;top: 50%;left: 30%;.w(40%);
			background: no-repeat center;background-size: 120/270*100%;}
		span.bs_load_img{.block;opacity: .75;.w(100%);.pt(139%);background-image: url("@{pic_url}/images/huodong/tuan/pre1.png");background-size: cover;}
		div.new-png{
			.pa;
			.w(100%);
			div{
				.left;
				//.ml(6/290*100%);
				img{
					.border-r(0 0 0 0);
				}
			}
		}
		.countdown{
			span{.ml(4px);}
			.pa;bottom: 0;.w(100%);.c;
		    .fc(#fff);.f(12px);padding:4px 0;z-index:90;
	    }
		.progress{
			.block;
			.pa;
			 bottom:0;
			 .h(12px);
			 opacity: 0.43;
			 padding: 4px 0;
			 .f(10px);
             
	    }
	    .rpbgc{
	    	.bgc(#FF5F5F);
	    	opacity: 0.72;
	    }
	    .gpbgc{
	    	.bgc(#000);
	    }
	    .ypbgc{
	    	.bgc(#ffb414);
	    }
	}
	figcaption {padding:5px;.bgwhite;}
}
.pro {
	&Title {
		.f(22*@px);
		.h(12px);
		.hidden;
		/****超过两行...代替****/
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 1;
		-webkit-box-orient: vertical;
	}
	&Price {
		.c;
		.border-2b(#e6e6e6);
		.pb(5px);.pt(10px);
		.new {.f(34*@px);.red;
			i {font-style:normal;.ml(-5px);}
		}
		.old {.f(20*@px);.gray;.ml(10px);}
	}
	&Statis{
		padding:8px 0;
		.h(12px);
		.hidden;
		.f(18*@px);
		.gray;
		.c;
		.orig_price {.left;.f(24*@px);.gray;}
		b {.red;}
		.clearfix;
	}
	&Clock{.pt(10px);.f(22*@px);.gray;.c;
		i.clock {.mt(1px);.w(16*@px);.h(16*@px);.left;.mr(2px);background:url("@{pic_url}/images/wap/tuan/clock.png") no-repeat;background-size:100%;}
	}
}