@import "block.less";
body{
	.bgc(#fff);
}
.header{
	.pr;.c;.w(100%);z-index: 11;top: 0px;left: 0px;
	.nav_ban{
		.bgc(#f69);.c;.h(44px);overflow: hidden;
		h1{
			.l(44px);.fc(#fff);.fn;
		}
	}
	.icon-home{
		background: url("http://i.meilishuo.net/css/images/wap/web/icon3.png") no-repeat;
		background-size: 120px 130px;
		.w(44px);.h(44px);.pa;right: 0px;top: 0px;background-position: -38px -78px;.mr(5px);
	}
}

.pic_wrap{.pr;
	img{
		.w(100%);vertical-align: top;
	}
	dl{
		.pa;bottom:0px;left:0px;.w(98%);.pl(2%);.pt(2%);;.pb(5px);background: -webkit-linear-gradient(top, rgba(0,0,0,0.0), rgba(0,0,0,0.8));
		dt{
			.left;.mr(6px);.pt(4px);
			img{
				border-radius:50%; 
			}
		}
		dd{
			.left;.fc(#fff);
			&:nth-child(3){
				.right;.pr(26*@px);.pt(10*@px);
				.share{
					.h(14px);.w(16px);
					background: url("http://i.meilishuo.net/css/images/wap/web/icon3.png") no-repeat;
					background-size: 168px 182px;
					background-position: -19.599999999999998px -133px;
				}
				.pt4{
					.pt(4px);
				}
			}
		}
		.fon_10{
			.f(10px);
		}
		.fon_14{
			.f(14px);.l(46*@px);
		}
		.cen{
			.c;
		}
	}
}

.iterm_wrapper{
	h3{
		.fn;.l(67*@px);.f(26*@px);.fc(#000);.pl(13*@px);
	}
	.iterm_list{
		ul{
			display: table;.w(100%);
		}
		li{
			.w(33.1%);border-bottom:1px solid #ededed;.i_block;border-right:1px solid #ededed;
			&:nth-child(3n){border-right:none;border-bottom:1px solid #ededed;}
			a{.block;
				img{
					.w(100%);
				}
				p{
					.l(55*@px);.f(11px);
				}
				span{.fc(#ff007f);.pl(16*@px);}
				del{.fc(#ccc);.right;.pr(10*@px);}
			}
		}
	}
}
.daren_wraper{
	h3{
		.fn;.l(67*@px);.f(26*@px);.fc(#000);.pl(13*@px);border-bottom:1px solid #ededed;
	}
	dl{.pl(30*@px);.pt(30*@px);
		dt{
			.left;
			img{
				border-radius:50%; 
			}
		}
		dd{
			.ml(40px);
			p{
				&:nth-child(1){
					.fc(#ff007f);.f(11px);.l(20px);
				}
				&:nth-child(2){
					.fc(#c6c4c5);.f(10px);
				}
				&:nth-child(3){
					.fc(#797979);.f(12px);.pt(24*@px);.l(32*@px);.pb(30*@px);border-bottom:1px solid #ededed;
				}
			}
		}
		&:last-child{
			dd{
				p{
					.border-n;
				}
			}
		}
	}
}












