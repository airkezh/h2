.bottom_desc_wrap{
	.c;
	.pa;
	left:0;
	bottom:6%;
	.w(100%);
	.fc(#fff);

	.title{
		.l(2);
		.f(1.4rem);

		i{
			.fc(#fffd30);
		}
	}

	.sub_title{
		.l(1.8);
		.f(1.3rem);
	}

	.footprint_desc{
		.mt(3%);
		.w(100%);
		.h(1.6rem);
	}

	.footprint_desc_1{
		background:url("http://d01.res.meilishuo.net/pic/_o/4e/80/43082bc9918e3fa9ec8fda527d3f_640_32.cf.png") no-repeat;
		background-size:100%;
	}

	.footprint_desc_2{
