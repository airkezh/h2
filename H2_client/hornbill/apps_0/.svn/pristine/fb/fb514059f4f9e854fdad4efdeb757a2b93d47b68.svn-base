	}
}

.footprint_desc_box{
	.opacity(0);
}

.layer_shade{
	.pf;
	top:0;
	left:0;
	.w(100%);
	.h(100%);
	z-index:999;
	background:rgba(0,0,0,.85);
}

.layer_main{
	.pf;
	top:0;
	left:0;
	.w(100%);
	.h(auto);
	z-index:999;
}

.windowDrive{
	.dialog{
		.border-r(6px);
	}

	.dialog-con{
		.l(1.8);
		.f(1.4rem);
		.fc(#666);
	}

	.dialog-btn{
	    border-top:1px solid #e5e5e5;

	    span{
	      	.f(1.5rem);
	      	.fc(#f66);
	    }
	}
}

.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-10px);
	}
	&[status="tap"]{
		background:0 none;	
	}
	&[status="stop"]{
		background:0 none;	
	}
}

@media screen and (min-width:360px){
	.bottom_desc_wrap{
		bottom:8%;
	}

	.top_tab_wrap{
		.h(7rem);

		.top_tab_list{
			.mt(5rem);
		}
	}
}

@media screen and (min-width:400px){
	.bottom_desc_wrap{
		bottom:10%;
	}

	.top_tab_wrap{
		.h(7rem);

		.top_tab_list{
			.mt(5rem);
		}
	}
}
