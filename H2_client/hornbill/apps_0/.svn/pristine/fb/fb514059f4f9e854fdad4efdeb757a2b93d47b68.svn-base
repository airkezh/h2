@import "../block.less";

html{
	.f(10*@f);
}

body{
	.bgc(#ff4876);
}

img{
	.block;
	.w(100%);
}

a{
	.block;
	outline:none;
}

ul{
	list-style:none;
}

i{
	font-style:normal;
}

