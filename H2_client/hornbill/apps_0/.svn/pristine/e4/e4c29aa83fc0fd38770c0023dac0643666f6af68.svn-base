@import "../block.less";

body{
	.bgc(#f8f8f8);.w(6.4rem);
}
img{
	.w(100%);
	.block;
} 
a{
	.block;
}

.seckillBox{
	.mt(.2rem);
	border-top: solid 1px #efefef;
	border-bottom: solid 1px #efefef;
	.bgc(#fff);
}
.seckillBox .goodsInfo .imgwrap{
	border: solid 1px #f7f5f5;
}

.secregion{
	padding: .2rem;
}
.headInfo{
	.pb(.30rem);
	.icon{
		.left;
		.w(.72rem);
		.h(.72rem);
		background: url(http://d04.res.meilishuo.net/pic/_o/e7/a4/be57cc8c708587e2a4123dcd6d9d_70_70.cg.png) no-repeat;
		background-size: 100%;
	}
	.tm{
		background: url(http://d05.res.meilishuo.net/pic/_o/9e/e4/60077e51eb0ae64dde42ec77d433_70_70.cf.png) no-repeat;
		background-size: 100%;
	}
	.tip{
		.pr;
		.pt(.1rem);
		.ml(.9rem);
		.title{
			.fc(#adadad);
			.f(.18rem);
			strong{
				font-weight: normal;
				letter-spacing: -0.01rem;
				.f(.24rem);
				.fc(#000);
				.mr(.09rem);
			}
		}
		.content{
			.dot{
				.w(.03rem);
				.h(.03rem);
				.i_block;
				.bgc(#f69);
				.ml(.05rem);
				.mr(.05rem);
				.mt(-0.03rem);
				vertical-align: middle;
				border-radius: 50%;
			}
			.fc(#f69);
			.f(.2rem);
			.mt(.14rem);
		}
	}
	.tip:after{
		content: '';
		.w(.16rem);
		.h(.24rem);
		.block;
		.pa;
		right: 0;
		top: 30%;
		background: url('http://d04.res.meilishuo.net/pic/_o/e2/1e/40e5ea8417eab6a00c2e129428b4_16_25.cg.png') no-repeat;
		background-size: 100% 100%;
	}
}
.desc{
	.mt(.18rem);
	p{
		.mt(.15rem);
	}
	.feature{
		.h(.22rem);
		.l(.23rem);
		overflow: hidden;
		.fc(#666);
		.f(.22rem);
	}
	.title{
		.h(.20rem);
		.l(.21rem);
		overflow: hidden;
		.fc(#a8a8a8);
		.f(.20rem);
	}
	.price{
		.fc(#fe0000);
		.f(.18rem);
		span{
			.f(.28rem);
		}
		del{
			.fc(#d1d1d1);
			.ml(.1rem);
		}
	}
}
.secregion .goodsInfo{
	
	.desc:before{
		content: '';
		.left;
		.w(.50rem);
		.h(.80rem);
		.mr(.16rem);
		.mt(-0.06rem);
		background: url(http://d02.res.meilishuo.net/pic/_o/19/ae/d2c2fa73da5a08b00b63540e3336_50_79.ch.png) no-repeat;
		background-size: 100% 100%;
	}
	.desc{
		.clearfix;
	}
}
.goodsWall{
	.pl(.1rem);
	.pr(.1rem);
	.pb(.46rem);
	.goodsInfo {.left;.w(50%);
		.link_box { .ml(.1rem); .mr(.1rem);}
			.mt(.26rem);
		}
	.clearfix;
}
.more{
	.block;
	.pt(.26rem);
	.pb(.32rem);
	.c;
	.f(.22rem);
	.fc(#606060);
	.ml(.1rem);
	.mr(.1rem);
	border-top: dashed 1px #e7e7e7;
}
.tuanBox{
	.mt(.3rem);
	.mb(.3rem);
	border-top: solid 1px #efefef;
	border-bottom: solid 1px #efefef;
	.bgc(#fff);
	.headInfo{
		padding: .2rem;
		border-bottom: none;
		overflow: hidden;
	}
}
.tuanBox > .headIcon .icon{
	background: url(http://d05.res.meilishuo.net/pic/_o/9e/e4/60077e51eb0ae64dde42ec77d433_70_70.cf.png) no-repeat;
	background-size: 100%;
}
.tuanBox .desc{
	.c;
}
.soldout{
	.pr;
}
.soldout:after{
	content: '';
	display: block;
	background: url(http://d03.res.meilishuo.net/pic/_o/67/5e/25041c2c0bb68456b3248edefad3_246_202.ch.png) no-repeat;
	background-size: 100% 100%;
	position: absolute;
	width: 44%;
	height: 35%;
	top: 36%;
	left: 28%;
}
/*秒杀商品是方图*/
.seckillBox span.bs_load_img {
	display: block;
	opacity: .75;
	width: 100%;
	padding-top: 100%;
	background-image: url("http://i.meilishuo.net/css/images/huodong/tuan/prebg.png");
	background-size: 100% 100%;
}
/*团购商品是长图*/
.tuanBox span.bs_load_img {
	display: block;
	opacity: .75;
	width: 100%;
	padding-top: 140%;
	background-image: url("http://i.meilishuo.net/css/images/huodong/tuan/pre1.png");
	background-size: 100% 100%;
}
.gotop{
	.w(.82rem);
	.h(.82rem);
	.none;
	right: .1rem;
	position:fixed;
	z-index: 100;
	bottom: 12%;
}

