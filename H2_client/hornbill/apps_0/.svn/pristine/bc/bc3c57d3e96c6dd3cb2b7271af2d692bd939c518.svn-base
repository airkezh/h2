@import "../base.less";
@pink: #FF416C;
@blue: #3E709F;

body{
	.bgc(#f8f8f8);
}
.game-box{
	.pr; .h(8.4rem); overflow: hidden;
}
a{
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}
.game-select{
	.mb(.18rem);.auto;.w(4.48rem);.clearfix;
	.game-but0{
		.left;.w(1.1rem);.h(1.1rem);
		background: url('http://d03.res.meilishuo.net/pic/_o/c4/db/20f3e323332f720c76ae6a0821c6_113_113.cj.png') 0  0 no-repeat;
		background-size:100% 100% ;
	}
	.game-but1{
		.right;.w(1.1rem);.h(1.1rem);
		background: url('http://d04.res.meilishuo.net/pic/_o/6e/8c/eb5dc51b2709c7cbe232ac17f2aa_113_113.cj.png') 0  0 no-repeat;
		background-size:100% 100% ;
	}
}
.game-title{
	.h(.7rem);.l(.7rem);.c;.f(.3rem);.fc(#FF416C); font-weight: normal;
}
.game-answer{
	.auto;.w(5.9rem);.h(.46rem);.pl(.12rem);.border-r(.23rem);border:1px solid #DBDBDB; .bgc(#FFFFFF);.clearfix;
	.answer-show{
		.left;.ml(.16rem);.mt(.09rem);.w(.28rem);.h(.28rem);.bgc(#F4F4F4);.border-r(.2rem);
	}
	.true{.bgc(@pink);}
	.false{.bgc(@blue);}
}
.result-msg{
	margin: 2.8rem auto 2.1rem auto;
	.w(2.6rem);.h(2.6rem);
	img{ .w(2.6rem);.h(2.6rem); }
}
.result0,.result1{
	display: none;
}
.result-but{
	margin: 0 auto .3rem auto;
	.block;.w(3rem);.h(.78rem);
}
.result-but.view{
	background:url('http://d04.res.meilishuo.net/pic/_o/51/da/56e3d6e90db88207e1d43f2e43c0_300_78.cj.png');
	background-size: 100% 100%;
}
.result-but.again{
	background:url('http://d05.res.meilishuo.net/pic/_o/79/aa/d6bc3e3864166f52c1c016516e76_300_78.cj.png');
	background-size: 100% 100%;
}

