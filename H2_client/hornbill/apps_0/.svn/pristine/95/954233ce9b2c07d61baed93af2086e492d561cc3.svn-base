@import "wx-rem.less";

body{.bgc(#f0f0f0);}
.ios_simple;
.sliderBanner;
.banner-slider{ .mb(.2rem); }
.banner-slider-point{
	left:3.2rem;
	-webkit-transform: translate(-50%,0);
	.i_block; .clearfix; .mb(0.2rem); .mt(0.12rem); .pa; bottom:0;
	li{ 
		.left; .w(0.12rem); .h(0.12rem); .bgc(transparent);border:0.02rem solid #fff;box-sizing:border-box;.mr(0.11rem); .border-r(100%);
	}
	.curr{ .bgc(#fff); }	
};

.pullUp{

	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-35px);
	}
	&[status="tap"]{
		background:0 none;	
	}
	&[status="stop"]{
		background:0 none;	
		.h(2px);
		&:before{.i_block;
			content:"没有更多内容了...";
		}
	}
}
div.pullUp{
	.l(.8rem); .f(.28rem); .h(.8rem); .w(.8rem); background-size: .8rem 1.6rem;
}

