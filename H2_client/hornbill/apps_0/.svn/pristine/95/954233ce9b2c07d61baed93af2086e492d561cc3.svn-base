/* 新款发布 */
.new-release{.bgwhite; 
	figcaption{ .w(6rem); .auto; }
	.t-img{ .clear; .h(.26rem); .w(3.85rem); .mt(.35rem); .mb(.24rem);  .auto; 
	}
}
.new-item{  .h(5.95rem); .hidden;
	.item{ .hidden; .w(1.97rem);.h(1.97rem); .left; .mb(.03rem); }
	.first{.w(4.2rem);.h(5.95rem); .ml(.1rem); .mr(.03rem);}
}

.old-release{ .pt(.4rem);.clearfix; .f(0);
	figcaption{ .border-td9(#ccc); .pr;.w(6rem); .auto;
		.title{.f(.22rem);font-weight: normal; top: -0.12rem;left: 50%; .pa; .pl(.1rem); .pr(.1rem); .bgc(#fff);
			transform: translate(-50%,0);
			-o-transform: translate(-50%,0);
			-webkit-transform: translate(-50%,0);
		}
	}
	.old-item{ .ml(.03rem); .mt(.34rem);.hidden; .pb(.2rem);
		.item{.w(2.02rem);  .left; .ml(.07rem);}
	}
}

