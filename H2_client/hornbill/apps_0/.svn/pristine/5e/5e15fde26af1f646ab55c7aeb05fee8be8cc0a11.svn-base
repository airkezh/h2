@import "../block.less";
@import "../window.less";

body{
	.bgc(#f9f9f9);
	margin: 0 auto;
}
.wrapper {
	.pr;
	.w(440px);
	margin: 50px auto;
}
.logo {
	.w(106px);
	.h(36px);
	.mb(26px);
	background: url('http://d05.res.meilishuo.net/img/_o/f0/fd/fe20d2538b5677370eed5066f2b0_106_36.cg.png') no-repeat;
}
.bound-box {
	// .box-shadow-r(0, 6px, 2.5em, rgba(0,0,0,0.2));
	 // -webkit-box-shadow: 0 6px 2.5em rgba(0,0,0,0.2);
	.pr;
	.w(440px);
	.border-1(#e8e8e8);
	.bgc(#fff);
	color: #666666;
	border-top: 2px solid #ff6699;
	margin: 14px auto 0px;

	.tip-title, .title, .form-data{
		margin: 0 40px;
	}
	.tip-title {
		.f(20px);
		.fb();
		.mt(20px);
		.mb(20px);
	}
	.mask {
		.f(12px);
		.l(24px);
		.w(100%);
		.h(66px);
		.mb(30px);
		.pt(10px);
		background: url('http://d06.res.meilishuo.net/img/_o/0f/01/8e39654b4fe8994731b1ba3ad529_437_66.cf.png') repeat-x;
	}

	.form-data {
		input {
			.pl(30px);
			.h(36px);
			.border-1(#ddd);
			color: #999;
		}
		.icon {
			.pa;
			.w(14px);
			.h(20px);
			left: 6px;
			top: 10px;
		}
		.reminder {
			.h(30px);
			.l(30px);
			color: #ff6699;
			// .vhidden;
		}
		.phone {
			.pr;
			.w(100%);
			input { .w(327px); }
			span {
				background: url('http://d03.res.meilishuo.net/img/_o/f8/70/d4b79c0fdee7d87f8c3588f97a76_14_154.ch.png') no-repeat top left;
			}
		}
		.verify{
			.pr;
			input {
				.w(170px);
			}
			span.icon {
				background: url('http://d03.res.meilishuo.net/img/_o/f8/70/d4b79c0fdee7d87f8c3588f97a76_14_154.ch.png') no-repeat;
				background-position: left -68px;
			}
			.time {
				.w(141px);
				.i_block();
				padding: 12px 0;
				.c;
				.ml(10px);
				.border-1(#dddddd);
				.bgc(#f5f5f5);

				span {
					.i_block;
					.mr(5px);
					color: #ff6699;
				}
			}
		}
		.pic-code {
			.pr;
			input {
				.w(170px);
			}
			span.icon {
				background: url('http://d03.res.meilishuo.net/img/_o/f8/70/d4b79c0fdee7d87f8c3588f97a76_14_154.ch.png') no-repeat;
				background-position: left bottom;
			}
			img {.vm(); .ml(10px);}
			.exchange {
				.fc(#ff6699);
				.f(12px);
				.tunder;
				.ml(14px);
				.cursor;
			}
		}
		.submit {
			.mb(20px);
			.block();
			.w(100%);
			.h(48px);
			.l(48px);
			.bgc(#ff6699);
			.border-n();
			.f(14px);
			color: #fff;
			.appearance-n;
		}
		.success {
			.l(0);
		}
		
	}
}

