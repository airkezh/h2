#def-nav{
/*	position: relative;
	z-index: 400;*/
	min-width: 1260px;
	height: 48px;
	line-height: 48px;
	border-bottom: 2px solid #f69;
	background-color: #fff;
}
#com-nav.fixed{
	position: fixed;
	z-index: 400;
	width: 100%;
	top: 0;
}
#def-nav .inner{
	width: 1200px;
	margin: 0 auto;
}
#def-nav li{
	float: left;
}
#def-nav a{
	float: left;
    font-size: 14px;
    font-weight: bolder;
    color: #333;
    padding: 0 22px;
}
#def-nav a:hover,#def-nav a.active{
	border-color: #ff6699;
	color: #ff6699;
}