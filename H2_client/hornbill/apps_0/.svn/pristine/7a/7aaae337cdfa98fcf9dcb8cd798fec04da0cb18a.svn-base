@import "../block.less";
html{ .f(10*@f); }
body { background: #ccc; }
body,div,img, a { margin: 0; padding: 0; }
img{.w(100%); }
.wap_body{ .pr; .w(100%); .block;
	.audio(1);
}
.part { .bgwhite; .box-shadow-r; .w(96%); .pt(2%); margin: 1.5% 2% 0 2%; 
	.audio(390/640);
	.tle_bg { .pr; .w(100%);
		img { .pr; left: -1.8%; .w(90%); }
		.title {.pa;top:0px;bottom:0px;
			&_box{display:table;.h(80%);
				.text_tle1{ display:table-row; .h(100%);.w(100%);.white;.fb; .f(30*@f); .t-shadow;
					p{display:table-cell;vertical-align: middle;}
				}
			}
		}
	}
	.text_tle2 {.w(98%);.gray; .f(24*@f); .l(140%);
		p{text-indent:2em;}
	}
	ul{
		img{ .left; }
	}
}
.type4, .type2, .type3 { .w(100%); .mt(2%); .left; .pr;
	.pic { 
		a { .w(100%); .block; .left; .pr;
			.price { background:rgba(102,102,102,0.5); .white; .f(70%); .pa; right: 0; }
		}
		p { .c; .gray; .f(22*@f); .l(240%); }
	}
}
.type4 { 
	li {.pr;
		&:nth-child(1), &:nth-child(2) { .w(31%); left: 1.8%;.pa; 
			.price { padding: 2% 3%; bottom: 12%; }
		}
		&:nth-child(1) { top: 0; }
		&:nth-child(2) { top: 50%; }
		&:nth-child(3) { .w(63.6%);.mr(1.8%); .right; 
			.price { padding: 1% 2%; bottom: 6%; }
		}
	}
}
.type2 {
	li {.pr;
		&:nth-child(1) { .w(63.6%);.ml(1.8%); .left;
			.price { padding: 1% 2%; bottom: 6%; }
		}
		&:nth-child(2), &:nth-child(3) { .w(31%); right: 1.8%;.pa;
			.price { padding: 2% 3%; bottom: 12%; }
		}
		&:nth-child(2) { top: 0; }
		&:nth-child(3) { top: 50%; }
	}
}
.type3 {
	li { .w(31%); .left; .ml(1.8%);
		.price { padding: 2% 3%; bottom: 12%; }
	}
}
.more { background: url("@{pic_url}/images/wap/activity/project/goods_bg.png") no-repeat right bottom; 
	.c; .l(280%); .f(26*@f); 
}
.bot_bnr{ .mt(2%); 
	h2 { background-size: 100%; background-image:url("@{pic_url}/images/wap/activity/project/bnr_bg1.png"); 
		color: #804055; .f(30*@f); .fn; .l(140%); padding: 3% 2% 0; }
	.bnr { background: #F5EDEF; padding: 0 2% 2%; .left; .w(96%); 
		a { .box-shadow(0, 1px, 2px); .bgwhite; .f(0); .block; .mt(2%);}
	}
}
.starBox { .star_box; }
@import "../footer.less";
