@import "wx.less";

.order_info_wrap { .mt(20*@px);}

.more { .f(28*@px); .pt(40*@w);.pb(40*@w);.block; .c; .l(16*@px); }
.eva_more { .l(26*@px); }
.xiala_icon { .w(28*@px); .h(16*@px); .i_block; }

/* === order_empty ==== */ 
.order_empty {
	.c; .pt(160*@px);
	.empty_icon {.wx_icon; .w(68*@px); .h(84*@px); .i_block; float: none;}
	h3 { .f(36*@px); .pt(46*@px); .l(18px); .fn;} 
	p{ .f(24*@px); .pt(20*@px);}
	.btn { .wx_btn; .f(36*@px); .w(280*@w); .h(80*@px); .l(80*@px); .mt(100*@px);}
}

.order_info {
	.mb(20*@px);
	.goods {
		.pr; 
		.pb(28*@px);
		.mt(20*@px);
		.bgc(#fff); 
		.clearfix; 
		.goods_info_wrap { .f(26*@px); .clearfix;}
		.goods_info_top,
		.goods_info_btm { border-bottom:1px solid rgba(230, 229, 230, 0.3); .mb(15px); .pl(15px); .pr(15px); }
	}
}

.goods_info_top { 
	.f(14px);
	.l(85*@px); 
	.clearfix; 
	.order_status_text { .right; .fc(#ff7a9a); }
	.shop_name { 
		.left; 
		.fc(#595056);
		.ellipsis; 
		span { .fc(@darkGray); }
	}
}

.goods_info_btm {
	.goods_img { .left; .w(120/560*100%); .mt(2px); .block; /*.border-1(#d9d9d9);*/}
	.goods_list_info { .mr(30/560*100%);.pb(30*@px);}
	.goods_info {
		.ml(150/560*100%); 
		.clearfix;
		p { .l(36*@px); } 
		.goods_title { .f(28*@px); .l(36*@px); }
	}
	.shop_cost,
	.goods_prop { .pt(15*@w); }
	.shop_cost { .fc(@bGray); }
	.goods_prop { .wx_grey { .pr(5*@w); } }
}

.check {
	.c; 
	.pl(15px); .f(28*@px);  .clearfix;
	.total_money{
		.pr(20px);
		.total_num {.left; .fc(@gray);}
		.total_price {.right; .fc(@darkGray);}
		.clearfix;
	}
	.order_status {
		.pr(15px);
		.clearfix;
		.receipt_btn, 
		.check_btn {.right; .l(56*@px); .fc(#666); .border-1 (#9a9a9a); .border-r(6*@px);.c; .i_block; .mt(12px); .ml(20*@px);.pl(12*@px);.pr(12*@px);}
	}
};

a:hover,
a:visited { .fc(@darkGray); }
