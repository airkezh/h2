							case 3:
								swipeHtml += [
									'<div class="swipe_pic">',
										'<div class="interest_title ' + levelClass + '"></div>',
										'<ul class="interest_box">',
											'<li><div class="interest_8"></div></li>',
											'<li><div class="interest_3"></div></li>',
											'<li><div class="interest_6"></div></li>',
										'</ul>',
									'</div>'
								].join('');
								break;
							case 4:
								swipeHtml += [
									'<div class="swipe_pic">',
										'<div class="interest_title ' + levelClass + '"></div>',
										'<ul class="interest_box">',
											'<li><div class="interest_9"></div></li>',
											'<li><div class="interest_8"></div></li>',
											'<li><div class="interest_3"></div></li>',
										'</ul>',
									'</div>'
								].join('');
								break;
						}
					}
				%>
