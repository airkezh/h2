			.desc_box{.clearfix; .mt(16px);}
			.showy_info{.left; .f(20px);.fc(#f69); .h(29px); .l(29px); span{.left; .mt(1px); .ml(-4px);}}
			// .price{.f(20px); .fc(#f69);}
			.sale_num{.fc(#999); .f(12px); .right; .mt(4px);}
			.wuyougou { background: url("@{pic_url}/images/doota/wuyou.png") no-repeat; .left; .h(59px); .w(59px);
				.pa; left: -2px; top: -2px;
				_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/doota/wuyou.png', sizingMethod='scale'); _background-image:none;
			}
			// .wuyougou { background: url("http://d05.res.meilishuo.net/img/_o/f0/b7/be1be95e4083f3158d7f1f728517_63_83.cc.png") no-repeat; .left; .h(83px); .w(63px);
			// 	.pa; left: 5px; top: 0px;
			// 	_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='http://d05.res.meilishuo.net/img/_o/f0/b7/be1be95e4083f3158d7f1f728517_63_83.cc.png', sizingMethod='scale'); _background-image:none;
			// }
			.comm_num, .promotion { padding: 10px 10px 0; }
			.title { .l(20px); .mb(18px); .f(13px); .fc(#666); 
				p{.ellipsis;}
				.p { .hidden; max-height: 40px;}
				.cpc_hot { background: url("@{pic_url}/images/cpc/cpc_hot.gif") no-repeat 0 1px;
					.left; .h(18px); .w(46px);
				}
			}
			.comm_num{ .l(22px); .clearfix; .pr; 
				.pl{ .gray; .right; }
			}
			.btn { .right; .p05; }
			.origin_price { .gray; .t-through; .ml(5px); }
			.facetableSetxy { .h(10px); .ml(2px); .mr(2px); .w(10px); }
			.np_share, .comm_share, .discuss_one{ .gray; .hidden; }
			.np_share { .border-tc(dotted); .p10_0; margin: 10px 10px 0; }
			.comm_share, .discuss_one{ padding: 0 10px 10px; }
			.np_share span, .np_share a, .comm_share a, .comm_share span, .issue_box a, .issue_box span, .comm_issue p a, .comm_issue p span { .mr(4px); }
			.botcomm_num { .bgc(#f9f9f9); .h(32px); .l(32px); .gray; .c; }
			.ml42_f{.ml(42px);}
			.t_idt { .ml(42px); .l(20px); .pt(4px); }
			.love_pro { background: url("@{pic_url}/images/goods/love_pro.png") no-repeat; .red; .left; .c; .h(30px); .l(25px); .w(130px); .pa; top: -20px; left: 0; }
			//new poster
			.comm_issue, .discuss_two { background: #f9f9f9; border-bottom: 1px solid #ddd; padding: 3px 13px; .gray; .l(18px); .hidden;
				.small_ava { .left; .h(20px); .w(20px); 
					img { .h(20px); .w(20px); }
				}
				p { .ml(28px); }
			}
			.more_comm { background: #f9f9f9; border-bottom: 1px solid #ddd; .c; .h(26px); .l(24px); }
			.cmt_r{ .ml(40px);
				textarea{ .bgwhite;.border-1; .f(12px); .gray; .left; .h(22px); .hidden; padding: 4px; .w(150px); }
			}
			.comment_reply { .red; .nowrap; .l(16px); }
			.discuss{ .h(25px); .l(20px); .pt(5px);
				.pl_btn{ background: url("@{pic_url}/images/header/@{mls_ico}") no-repeat -172px -112px; .c; .cursor; .h(22px); .l(22px); .right; .w(52px); }
			}
