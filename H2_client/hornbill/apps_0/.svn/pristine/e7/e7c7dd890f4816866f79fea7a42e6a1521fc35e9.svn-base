	}
	.trans07 { .border-1; opacity:0.7;filter:Alpha(Opacity=70); 
		&:hover { opacity:1.0;filter:Alpha(Opacity=100); }
	}
}

/**
*定义海报相关icons
**/
.poster_icons(){
	.online, .notonline { background: url("@{pic_url}/images/person/person_icon3.gif") no-repeat; padding: 1px 4px 1px 20px; }
	.online { .bp(0,-83px); }
	.notonline { .bp(0,-58px); }
	.lm_love, .lm_love2, .lm_comm, .lm_shouji, .lm_like, .lm_liked { background: url("@{pic_url}/images/header/@{mls_ico}") no-repeat; .h(12px); }
	.lm_love { .bp(0,-259px); padding: 0 5px 0 6px; } 
	.lm_comm { .bp(-16px,-260px); padding: 0 4px 0 5px; }
	.lm_shouji { .bp(-158px,-68px); padding: 0 6px; }
	.lm_love2 { width: 20px;background: url(http://d04.res.meilishuo.net/img/_o/bb/89/385b24bbdb983711715793a84935_19_16.ch.png) no-repeat; background-size: 100% 100%; padding: 1px 8px 0 7px; }
	.lm_like { .bp(-101px,-67px); padding: 1px 6px; }
	.lm_liked { .bp(-127px,-67px); padding: 1px 6px; }
	.like_merge{ .h(32px); .pa; .none; .hidden; right:0; left:0; top: 6px; .w(224px); 
		.poster_comment, .poster_forward, .poster_likes, .posternew_likes, .poster_del, .poster_dellike { 
		.w(44px);
		border-top-left-radius: 16px;border-bottom-left-radius: 16px;-webkit-border-top-left-radius: 16px;-webkit-border-bottom-left-radius: 16px; 
		.c; .cursor; .f(12px);; .h(20px); .l(20px); .hidden; .p05; .bgc(#f69);.fc(#fff); }
		.line_num { border-left: 1px solid #d6d6d1; .i_block; .pl(5px); }
		.poster_forward:hover { 
			.lm_shouji {.bp(-188px,-68px); }
		}
		
	}
	.likes { .cursor; .h(22px); .l(22px);
		.likes_status { .bgc(#FF74A1); .white; .left; .c; .mr(6px); .h(20px); .l(20px); .w(50px);.border-r(2px); .border-1(#FA5B90);.fn; }
	}
	.mark { .w(220px); .pa; left:5px;
		.m_ico { .left; .white; .c; .hidden; .mr(1px); }
	}
}

