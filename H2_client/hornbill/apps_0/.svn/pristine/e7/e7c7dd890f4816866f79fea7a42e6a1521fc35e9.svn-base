.posternew(){
	.poster_wall{ .pa;left:-2000px;top:0;}
	.poster_grid{ .common_box; .ml(0px); .mr(20px);.w(224px);
		.new_poster{ .bgwhite;.mt(16px); .w(224px);  
			.np_pic{ .c; .w(224px); .pr; }
