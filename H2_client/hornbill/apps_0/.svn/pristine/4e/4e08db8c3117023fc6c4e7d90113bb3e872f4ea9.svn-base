.goods {
	.mod_pd30;.clearfix;.pr;.pr(20*@px);.border-t(rgba(244,240,240,0.5));
	.goods_next { top: 30/120*100%;right:4.25%;}
	.goods_img { .left; .w(120/560*100%); .block; .border-d9;}
	.goods_info_wrap { .pb(20*@w);.pt(20*@w); .clearfix;}
	.goods_des{.pr(10*@px);}
	.goods_info {
		.ml(150/560*100%);.clearfix;
		p { .l(36*@px);} 
		.goods_title { .f(28*@px); .l(36*@px); .pb(30*@px);.fc(#8f655b);}
		.goods_size {
			.left;.f(20*@px);.fc(#baa7a3); .w(100%);
			span {.i_block;.left;.w(50%);
				&:first-child{.pb(10px);}
				&:last-child{.right;}
			}
		}
	}
	.mar_r{.mr(65/560*100%);}
	.leavemsg { .border-d9; padding: 10*@px; .l(100*@px); .fc(#baa7a3); .bgwhite; margin: 0; .border-r(10*@px); .w(565/600*100%); .h(100*@px);}
}
.tips{
	.mod_pd30;.clearfix;.pt(0);
	p{
		&:nth-child(1){
			.fc(#fe9d59);.pb(10*@px)
		}
		&:nth-child(2){
			.fc(#baa7a3);.l(45*@px);
		}
	}
}
.pre_pay_wrap{
	.bgwhite;.mb(20*@px);
	.plat_form{
		.pay_met{.ml(30*@px);.mb(30*@px);.f(26*@px);border-bottom: 1px solid rgba(244,240,240,0.5);.l(84*@px);.fc(#b7a39f);}
		dl{
			.w(90%);.l(60*@px);.hidden;.ml(30*@px);.pb(10*@px);.mb(20*@px);background: url("@{pic_url}/images/md/uncho1.png") no-repeat right 8px;background-size: 7%;
			dt{
				img{.w(106/560*100%);.left; .block;.mt(6*@px);.mb(6*@px);.mr(16*@px);.pl(4*@px);.pr(4*@px);.pt(4*@px);.pb(4*@px);}
			   }
			dd{.ml(106/560*100%);
				p{.l(38px);.fc(#8f655b);
					span{.fc(#fe9d59);.pl(9px);}
				}
			}
		}
		.checked{background: url("@{pic_url}/images/md/cho1.png") no-repeat right 8px;background-size: 7%;}
	}
}

.order_confirm{
	.border-td9; .c; .mod_pd20; .bgwhite; .pf; bottom: 0; .w(100%);
