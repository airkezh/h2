}

.pay_ment{
	h6{.l(25px);}
	.bgwhite;.mb(20*@px);.border-td9;.border-bd9;.l(82*@px);.pl(30*@px)
}

.more { .f(28*@px); .pt(40*@w);.pb(40*@w);.block; .c; .l(16*@px);}
