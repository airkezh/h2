.popup {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, .85);
}
.popup .title
{
	margin: 20px 10px;
	color: white;
	font-size: 20px;
}
.popup input[type=text] {
	height: 25px;
	margin: 5px 10px;
	border: 1px solid gray;
	padding: 5px;
	font-size: 14px;
	display: block;
	width: 90%;
}
.popup input[type=button] {
	display: inline-block;
	border: 0;
	font-size: 16px;
	color: white;
	padding: 10px 50px;
	margin: 20px 0 0 10px;
	background: #d22626;
}
