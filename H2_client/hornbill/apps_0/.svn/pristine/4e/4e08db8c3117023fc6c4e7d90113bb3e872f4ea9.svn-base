.receiver {
	 .pr; .bgc(#baa7a3);.white;
	.receiver_info { 
		 .clearfix; .f(24*@px); .mod_pd30;background: url("@{pic_url}/images/md/right_a.png") no-repeat center right 15px;background-size: 4%;
		p { 
			.l(36*@px); .pt(4*@px); .pb(4*@px); .clearfix;
