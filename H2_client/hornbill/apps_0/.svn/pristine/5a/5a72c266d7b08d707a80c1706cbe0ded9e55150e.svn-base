@import "../block.less";

html,body{
	.w(100%);
	.f(10px);
	.bgc(#fff);
}

img{
	.block;
	.w(100%);
}

ul{
	list-style:none;
}

i{
	font-style:normal;
}

.prize_wrap{
	margin:20*@w;
}

.prize_item{
	.pr;	
	.mb(20*@w);
	.bgc(#fff);
	min-height:140px;

	figure{
		.pr;
		.w(45%);
		.mt(2px);
		.i_block;
		.bgc(#f7f7f7);
		border:1px solid rgba(0,0,0,.05);

		img{
			.w(70%);
			margin:30% auto;
		}
	}

	.desc{
		.right;
		.w(55%);

		li{
			.pa;
			.hidden;
			.w(52%);
			.f(1.1rem);
			margin:0 20*@w;
		}

		.title{
			top:1%;
			.f(1.4rem);
			.l(1.6rem);
			.fc(#333);
			.hidden;
			white-space:nowrap;
		}

		.date{
			top:18%;
			.l(1.4rem);
			.fc(#999);
		}

		.state{
			top:56%;
			.l(1.2rem);
			.fc(#ffa600);
		}

		.btn{
			.c;
			.fc(#fff);
			.pt(10px);
			.pb(10px);
			.f(1.4rem);
			bottom:4px;
			.bgc(#fe6054);
		}
	}
}

@media screen and (min-width:360px){
	html,body{
		.f(12px);
	}
}