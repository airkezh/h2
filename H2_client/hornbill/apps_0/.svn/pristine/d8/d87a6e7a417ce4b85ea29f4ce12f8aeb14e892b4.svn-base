@import "sq.less";

body{.bgc(#fff);}

i,em{ font-style: normal; }

.top_images_wrap { .pr; }

.coupon_box{ 
	.pa;
	left: 0;
	bottom: 0;
	.ml(.2rem);
	.mr(.2rem);
	//.bgc(#f1365e); 
	.fb;
	.content{ 
		padding: .25rem .3rem; 
		.f(.2rem); 
		.fc(#f6335e);
		.bgc(#fff);
		h3 { .c; }
	}
	.coupon_info{ 
		.mt(.18rem); 
		.fc(#fff); 
		.bgc(#eb051f); 
		.hidden; 
		.content-left{
			.left;
			.pl(.56rem); 
			.pt(.42rem); 
			.w(3.1rem); 
			.pr;
			//background: url(http://d01.res.meilishuo.net/pic/_o/5c/8d/57adef7c8c2f19d259095d1ae826_290_1.cg.png) no-repeat left 72%; 
			//background-size: contain;   
		}
		.content-right{
		   .right;
		   .block;
		   .w(1.67rem); 
		   .h(1.5rem); 
		   .f(.26rem);  
		   .c; 
		   .hidden;  
		}
		.rmb{ 
		   .f(.26rem); 
		   vertical-align: top;
		}
		.credit{
			.f(.8rem); 
			.l(.66rem); 
			vertical-align: top;
		}
		.info{ 
			.i_block;
			.pr; 
			em{ .f(.34rem); }
			i{ .pa; .w(1.4rem); top: 0.4rem; left: 0; }
		}
		.amount{ .mt(.2rem); .w(2.6rem); .c; .h(.32rem); }
		.get,
		.got,
		.wait,
		.other,
		.sold_out { .i_block; }
	}

	.rule{ 
		.f(.22rem);
		.fc(#999); 
		.tr; 
		.mt(.2rem);
	}

	.bg_red{
		.content-right {
			border-left: 1px dashed #dbaeb0; 
		}
		.get{ 
			padding: .46rem .44rem .49rem;
			.w(.8rem); 
			.clearfix;
		}
		.get-text {
			.left;
		}
		.get-icon {
			.right;
			.w(.24rem);
			.h(.53rem);
			background: url(http://d05.res.meilishuo.net/pic/_o/51/ef/35fcbe450f4d36f2f12ec8e219d1_20_53.cf.png) center center no-repeat;
			//background-size: .19rem .52rem;
			background-size: contain;
		}
		.amount{ .l(.3rem); }
		.b-red{
			.pr(.24rem); 
			background: url(http://d05.res.meilishuo.net/pic/_o/a6/0c/0abee2b6d001a047797631cf1a2d_21_25.cf.png) no-repeat center right; 
			background-size: contain;
		}
		.line{ 
			.pa; 
			bottom: .28rem; 
			left: -0.2rem;
		}
	}
	.bg_gray{
		.content-right {
			border-left: 1px dashed #fff;
		}
		.bgc(#ccc);
		.sold_out {
			.mt(.6rem);
		}
	}
	.bg_common {
		.content-right {
			.bgc(#ccc);
			.hidden;
		}
		.got {
			padding: .6rem .44rem .6rem .34rem;
			color: #fff;
			background: url(http://d04.res.meilishuo.net/pic/_o/52/7e/6cb0b64c76cf46f9c33d0e701dcf_20_25.cg.png) 1.16rem center no-repeat;
			background-size: .2rem auto;
		}
		.wait { .mt(.46rem); }
		.other { .mt(.37rem); }
	}
}

.goods_wall{ 
	.pt(.2rem); 
	.f(0); 
	.bgc(#fd4347);
	.clearfix;
	.goods_box{
		.left; 
		.w(2.9rem);
		.ml(.2rem); 
		.mb(.2rem);
		.pt(4.3rem);
		background-repeat: no-repeat;
		background-position: center center;
		background-size: cover;
	}
}

/*活动规则*/
.rule_panel{ 
	.pf; 
	top:0;
	left: 0; 
	.none;
	.w(100%); 
	.h(100%);   
	z-index: 9999; 
	background-color: rgba(0, 0, 0, 0.7); 
	.alert{
		margin: .6rem .4rem;
		.border-r(.2rem);
		.bgwhite;
		.hidden;
		.content {
			padding: .3rem .2rem;
		}
		#hide_btn {
			.block;
			.l(.8rem);
			.f(.28rem);
			.c;
			.white;
			.bgc(#ff1361);
		}
	}
}

@media screen and (max-width: 320px){
	.rule_panel {
		.alert{ 
			margin: .6rem; 
		}
	}
}

.windowDrive{
	.dialog{ 
		.pr;
		.i_block;
		.w(5.4rem);
		.f(.24rem);
		.bgwhite;
		.border-r(.16rem);
		z-index:100;
		&-con{ 
			padding:.4rem;
		}
		&-btn{
			.l(.9rem);
		}
	}
	.tag{ .mt(.1rem); }
	.url-box{ 
		.mt(.3rem);
		.alink{ 
			.i_block;
			.mr(.1rem); 
			.ml(.1rem);
			.w(42%); 
			.l(.6rem);   
			.fc(#fff); 
			.border-r(.1rem); 
			.bgc(#f69);  
		}
	}
	
}

.none { .none; }



