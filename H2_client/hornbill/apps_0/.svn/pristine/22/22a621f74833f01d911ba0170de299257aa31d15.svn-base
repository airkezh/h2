@import "../block.less";

body {
  background-color : #f4f4f4;
}

.navBan;

.nav_ban {
  h1 {
    display   : block;
    font-size : .34rem;
    color     : #333;
  }

  .icon-right {
    width     : 1.2rem;
    font-size : .32rem;
    color     : #666;
  }
}

.wrap {
  margin : .2rem 0 1.2rem;
}

.item {
  position : relative;
}

.item-list {
  margin-bottom    : .2rem;
  padding          : 0 .3rem;
  background-color : #fff;
}

.item {
  height        : .54rem;
  padding       : .2rem 0;
  line-height   : .54rem;
  font-size     : 0;
  border-bottom : 1px solid #e1e1e1;

  [class^="icon"] {
    display         : inline-block;
    width           : .6rem;
    height          : .6rem;
    margin-right    : .2rem;
    background      : center no-repeat;
    background-size : contain;
    vertical-align  : middle;
  }

  .icon-blank {
    width  : .6rem;
    height : .6rem;
  }
}

.item-desc {
  display        : inline-block;
  font-size      : 0;
  vertical-align : middle;
}

.item-name {
  display     : block;
  font-size   : .24rem;
  line-height : .34rem;
  color       : #595056;
}

.item-highlight, .item-normal {
  display     : block;
  font-size   : .2rem;
  line-height : .24rem;
}

.item-highlight {
  color : #ff5959;
}

/* 选中状态 */
.state-check::after {
  content         : "";
  position        : absolute;
  right           : .3rem;
  width           : .44rem;
  height          : .44rem;
  background      : url("http://d02.res.meilishuo.net/pic/_o/28/f4/4f4c894548b5d4f7433145ca1568_44_44.cf.png") center no-repeat;
  background-size : contain;
}

.cashier-ft {
  position         : fixed;
  left             : 0;
  bottom           : 0;
  width            : 100%;
  height           : .6rem;
  line-height      : .6rem;
  padding          : .2rem .3rem;
  background-color : #fff;
  border-top       : 1px solid #dddcdc;
  font-size        : .26rem;
  text-align       : center;

  .price-num {
    font-style : normal;
    color      : #f69;
  }

  .btn-pay {
    width            : 1.9rem;
    height           : .6rem;
    line-height      : .6rem;
    margin-left      : .1rem;
    padding          : 0;
    font-size        : .26rem;
    color            : #fff;
    background-color : #f66;
    border-radius    : 3px;
    border           : none;
  }
}

.label-hot {
  display          : inline-block;
  width            : .46rem;
  margin-left      : .1rem;
  font-style       : normal;
  font-size        : .18rem;
  line-height      : .24rem;
  color            : #fff;
  background-color : #ff5959;
  border-radius    : 3px;
  text-align       : center;
  vertical-align   : text-top;
}

/* 弹出框样式修改 */
.windowDrive {
  .dialog {
    width : 89%;
  }

  .dialog-con {
    color       : #333;
    font-size   : .28rem;
    line-height : .36rem;

    h3 {
      margin-bottom : .2rem;
      color         : #666;
      font-size     : .34rem;
      line-height   : .34rem;
      font-weight   : normal;
    }
  }

  .dialog-btn {
    height    : 1rem;
    font-size : 0;

    span {
      font-size   : .3rem;
      line-height : 1rem;
    }

    .cancelBtn {
      color : #666;
    }
  }
}
