@import "../block.less";
@import "../window.less";

body { .bgwhite; }
.sale_container { .w(760px); .auto; .f(14px); }
.sale_top { .w(760px); .h(100px); .hidden; .pr;
	a { .block; }
	ul { .pa; bottom:0; left:0; .clearfix;
		li { .left; .w(103px); .h(30px); .l(30px); .c; .fb; .white; .f(16px); background:url("@{pic_url}/images/app/qqsale/sale_tab.png") no-repeat -103px 0; .cursor; }
		li.current { background:url("@{pic_url}/images/app/qqsale/sale_tab.png") no-repeat 0 0;  }
	}
}
.sale_content { .p10; .hidden; border-bottom: 1px solid #ccc; .clearfix;
	h3 { .f(16px); .l(40px);
		span { .pr(10px); }
	}
}
.through { text-decoration:line-through; }
.sale_pic { .w(310px); .left;
	img { .w(310px); .block; }
}
.describe { .ml(324px); _margin-left:321px;
	.recom { .l(20px); }
	.sale_num { .l(40px);
		a { background:url("@{pic_url}/images/app/qqsale/sale_pic4.png") no-repeat; padding:1px 0 2px 24px; .red; }
		.num1 { background-position:-194px -81px; .mr(20px) }
		.num2 { background-position:-194px -101px; }
	}
	.comment { .l(32px); .h(32px); margin:6px 0; .clearfix;
		img { vertical-align:bottom; .mr(8px); }
	}

}
.price_go { background: url("@{pic_url}/images/share/price_bg.png") no-repeat; .cursor; .white; .block; .h(35px); .l(22px); .pt(9px); .mt(10px);
    .price { .f(20px); .fb; .left; .c; .w(90px) }
	.go { .f(16px); .fb; .left; }
}
.qqshare { background:url("@{pic_url}/images/app/qqsale/sale_pic4.png") no-repeat 0 0; .w(151px); .h(29px); .f(12px); .red; padding:8px 0 0 12px; .pa; top:434px; right:15px; 
div { .mt(-5px); *margin-top:-2px; .ml(62px); }
}


.list_link { .left; .w(226px); margin:20px 0 0 16px; _display:inline; 
	h4 { .f(14px); .fn; .h(40px); .l(20px); .pt(10px); .auto; .w(206px); .hidden;}
	.inner_box { .bgwhite; .border-1c; }
	.pic { .w(200px); .h(200px); .hidden; .auto; .mt(4px); 
		img { .w(200px); .h(200px); }
	}
	.sale_price { background: url("@{pic_url}/images/app/qqsale/sale_pic4.png") no-repeat 0 -40px ; .block; .w(184px); .h(41px); .l(41px); .f(26px); .fb; .white; .pl(28px); }
	.time { padding:4px 0 8px 28px; .f(12px); .l(18px);
		.through { .pr(16px); }
	}
}
