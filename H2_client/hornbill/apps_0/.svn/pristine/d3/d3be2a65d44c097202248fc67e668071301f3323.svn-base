@import "bs_base.less";
.ellipsis-row(@var){ .hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:@var;-webkit-box-orient:vertical; }
@sprite: 'http://d06.res.meilishuo.net/img/_o/4f/9f/f29a0ab8295df8a0489a1db469d2_60_200.ch.png';

.wap_rem;
body{ .bgc(#f0f0f0);.w(6.4rem); }

/* imageSlide style start */
.banner_wrap{ .pr;.h(2.4rem);.w(6.4rem);.hidden; }
.imageSlide{
	.pa;top: 0;left: 0;.w(100%);.h(100%);.hidden;.f(0);

	ul{
		.pa;.w(100%);

		li{ .pr;.left;.inline;.w(100%); }

	}
	.num{
		.w(100%);.c;.pa;left:0;bottom: .08rem;z-index: 10;

		b{ .i_block;.w(.1rem);.h(.1rem);margin: 0 .11rem;.bgc (#fff);.border-r(50%);vertical-align: middle; }
		.cur{ .w(.08rem);.h(.08rem);.border-r(50%);.bgc(rgba(255, 255, 255, 0));border: .02rem solid white; }
	}
}
/* imageSlide style end */

.nav{
	.hidden;padding: .3rem 0;border-bottom: 1px solid #d9d8d9;.bgc(#fff);

	.pk,
	.clrcle{ .w(2.9rem);.h(1rem);.ml(.2rem);.left; }
}

.goods{
	.bgc(#fff);border-top: 1px solid #d9d8d9;border-bottom: 1px solid #d9d8d9;.mt(.18rem);.pb(.2rem);.pr;

	.shoper{
		padding: .2rem 0;.f(.24rem);.fc(#656162);.l(.46rem);

		img{ .w(.46rem);.h(.46rem);.border-r(50%);margin: 0 .1rem 0 .3rem;.left; }
	}
	.show_time{ .pa;top: 0;right: 0;padding: .2rem .3rem;.f(.24rem);.l(.46rem);.fc(#999); }
	.pic{ .h(6.4rem);.w(6.4rem);.bgc(#f0f0f0); }
	.desc{ .f(.24rem);.fc(#80737b);.l(.34rem);text-align: justify;.w(5.8rem);.auto;.mt(.25rem); }
	.price{
		.f(.24rem);.fc(@red);.pl(.3rem);.mt(.17rem);

		.now_price{ .f(.36rem);.mr(.4rem); }
		.origin_price{ .fc(#999);text-decoration: line-through; }
	}
	.rec{
		.mt(.2rem);.pl(.52rem);background: url(@sprite) no-repeat .3rem -.86rem;background-size: .6rem;

		a{ .f(.24rem);.fc(@red);.i_block;padding: .1rem .2rem; }
	}
}
.end{ .l(.6rem);.c; }

.brand_nav{ .pf;right: .3rem;bottom: .3rem;.w(.6rem);.h(.6rem);background: url(@sprite) no-repeat;background-size: .6rem;z-index: 100; }


// pullUp
.fallwall-rem;
.pullUp{ clear: both;.mt(.2rem); }

.guide_wrap{
	.pf;top: 0;left: 0;.w(100%);.h(100%);z-index: 10;

	.mask{ .bgc(rgba(0,0,0,.6));.w(100%);.h(100%); }
	img{ .pf;bottom: 0;left: 0;.w(100%); }
}


