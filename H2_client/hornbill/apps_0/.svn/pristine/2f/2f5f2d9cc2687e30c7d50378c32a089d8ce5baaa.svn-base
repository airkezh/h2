			 .num {.fc(#666);} 

		}
		.strip {
			.h(6*@px); .w(100%); background: #e5e5e5; .mt(1%); .mb(1%);
		}
		.strip_red {
			.w(60%); .bgc(#ee3d30); .block; .h(6*@px);
		}
		// 买手信息新增
		dd{ .f(1.2rem); transform:scale(0.92);}
