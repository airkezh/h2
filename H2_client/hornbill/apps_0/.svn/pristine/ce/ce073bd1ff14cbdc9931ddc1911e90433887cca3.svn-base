@import "sq.less";

li{
	list-style: none;
}
.doota;
.doota > .list;
.doota > .numBox;

.numBox{
	.w(160*@px);
	.h(44*@px);
	.minus, .plus{
		.w(44*@px);
		.h(44*@px);
		.f(26*@px);
		.l(44*@px);
	}
	.nums{
		.f(26*@px);
		.l(26*@px);
	}
}

.cart_null{
	.auto();
	.c();
	.shoppingCart{
		.w(100*@px);
		.auto();
		.mt(244*@px);
	}
	.content{
		.f(36*@px);
		.mt(40*@px);
	}
	.goMallButton{
		.auto();
		.w(360*@px);
		.h(78*@px);
		.border-r();
		.bgc(#ff6699);
		.mt(104*@px);
		.buttonContent{
			.f(30*@px);
			.l(78*@px);
			.fc(#ffffff);
		}
	}
}

.alert{
	.f(20*@px);
	.w(20%);
	.hidden();
	.l(24*@px);
	.h(24*@px);
	.block();
	.ml(65*@px);
	.fc(#FF6699);
	.c();
	.pr();
	top:-10*@px;
}

.cart{
	.header{
		.h(82*@px);
		.delButton{
			.f(24*@px);
			.fc(#666666);
			.right();
			.mt(30*@px);
			.mb(30*@px);
			.mr(40*@px);
		}
	}
	.shopThings{
		.border-tc(solid);
		.bgc(#ffffff);
		.mb(20*@px);
		.singleThing{
			.pr();
			.h(206*@px);
			.border-bc(solid);
			.ml(40*@px);
			.select{
				.pa();
				left: -10*@px;
				top: 80*@px;
				.w(44*@px);
				.h(44*@px);
			}
			.null{
				background: url("@{pic_url}/images/wap/web/sq/cart/null.png") no-repeat;
				background-size: 44*@px;
			}
			.right{
				background: url("@{pic_url}/images/wap/web/sq/cart/right.png") no-repeat;
				background-size: 44*@px;
			}
			img{
				.left();
				.w(18%);
				.h(120*@px);
				.pl(70*@px);
				.pt(30*@px);
			}
			.thingInfo{
				.w(62%);	
				.left();
				.pt(30*@px);
				.pl(20*@px);
				.f(20*@px);
				.thingName{
					.h(56*@px);
					.l(28*@px);
					.f(24*@px);
					.hidden();
					.mb(10*@px);
					color:#666;
				}
				.secondLine{
					.h(48*@px);
					.thingOther{
						.h(44*@px);
						.l(44*@px);
					}
					.mt(10*@px);
				}
				.thingOther{
					.vm();
					.f(20*@px);
					.i_block();
					.h(20*@px);
					.l(20*@px);
					.break-all();
				}
				.otherOne,.otherTwo{.hidden(); .l(24*@px);.h(24*@px);}
				.otherOne{
					.w(55%);
				}
				.otherThree{
					.w(50%);
					.h(44*@px);
					.l(44*@px);
					.hidden();
				}
				.otherTwo{
					.w(40%);
				}
				.otherFive{
					.pl(20*@px);
				}
			}
		}
		.lastThing{
			.border-n();
		}
		.shopBt {
			background: #f0edee url("@{pic_url}/images/wap/web/wx/huabian.png") repeat-x;
			.h(5px);
		}
	}
	.floatRight{
			.right;
		}
	.gap{
		.h(118*@px);
	}
	.float_ctrl{
		.h(98*@px);.pf;bottom:0px;left:0px;.w(100%);background:rgba(255,255,255,1);border-top:1px solid #cccacb;
		.selectAll{
			background: url("@{pic_url}/images/wap/web/sq/cart/null.png") no-repeat left;
			background-size: 44*@px;
		}
		.cancleAll{
			background: url("@{pic_url}/images/wap/web/sq/cart/right.png") no-repeat left;
			background-size: 44*@px;
		}
		li{
			.left;
			&:nth-child(1){
				.w(19%);.c;
				// background: url("@{pic_url}/images/wap/web/sq/cart/right.png") no-repeat left;
				.l(98*@px);
				.ml(15px);
				.pl(20*@px);
			}
			&:nth-child(2){
				.w(39%);
				p{
					&:nth-child(1){
					.fc(#fd6699);
					.l(60*@px);
					}
					&:nth-child(2){
						.f(20*@px);.fc(#b3b3b3);
					}
				}
			}
			&:nth-child(3){
				.w(30%);
				.go_buy_none{
					.bgc(#d1d1d1);
				}
				a{
					.block;background: #fd6699;.border-r(6*@px);.fc(#fff);.c;.l(72*@px);.mt(16*@px);
				}
			}
		}
	}
}






