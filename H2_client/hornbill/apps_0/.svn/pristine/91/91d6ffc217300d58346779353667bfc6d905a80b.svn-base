@import "block.less";
html {
  font-size : 62.5%; /* 10/16 = 62.5% */
}
body{
	.bgc(#f8f8f8);
}
/*公用头部*/
.navBan;
.coupon_tabs{
	.f(1.7rem);
	.bgc(#fff);
	.pt(1rem);
	.pb(1rem);
	a{
		.left;
		.w(17%);
		.fc(#7a7378);
		.pb(.5rem);
		.ml(8%);
		.mr(8%);
		.c;
	}
	.active{
		.fc(#f69);
		border-bottom: solid 1px #f69;
	}
	.clearfix;
}
.coupon_list{
	.mt(1rem);
	.pl(.5%);
	.pr(.5%);
	.clearfix;
	.empty{
		.f(1.5rem);
		.c;
		.fc(#999);
		.mt(4rem);
	}
}
.item{
	.left;
	.w(49%);
	.ml(.5%);
	.mr(.5%);
	.mt(1rem);
}
.item>div{
	padding: .8rem 1rem 1.2rem 1.2rem;
	.info{
		.f(1.7rem);
		.h(4.5rem);
		overflow: hidden;
		border-bottom: solid 1px #e5e5e5;
		.flex{
			.l(5rem);
		}
		.price{
			.right;
			strong{
				font-weight: normal;
				.f(3.9rem);
				.ml(.4rem);
			}
		}
	}
	.desc{
		.f(1.5rem);
		
		.mt(.6rem);
		.mb(.6rem);
		span{.right;}
	}
	.date{
		.f(1.2rem);
		
	}
}
.item{
	.pr;
	.expired{
		background: url(http://d05.res.meilishuo.net/pic/_o/88/85/f1da376c5d8b008091317de822f9_302_189.cg.png) no-repeat;
		background-size: 100% 100%;
		.fc(#ccc)
	}
	.expired:before{
		content: '';
		display: block;
		height: 100%;
		width: 100%;
		position: absolute;
		left: 2%;
		top: 0;
		background: url(http://d04.res.meilishuo.net/pic/_o/db/91/26d3ca946a8ee1b6d6b3de164fa7_132_121.cg.png) no-repeat -3% -60%;
		background-size: 50%;
	}
	.available{
		.desc{
			.fc(#666);
		}
		.date{
			.fc(#ccc);
		}
	}
	.used{
		.fc(#ccc);
	}
}
.shop{
	>div{
		background: url(http://d01.res.meilishuo.net/pic/_o/b4/8b/d46e016b1453ea7899b7ab2224bc_302_189.cg.png) no-repeat;
		background-size: 100% 100%;
	}
	.available{
		.info{
			.fc(#f63631);
		}
	}
	.used{
		.info{
			.fc(#fbadac);
		}
	}
	.used:before{
		content: '';
		display: block;
		height: 100%;
		width: 100%;
		position: absolute;
		left: 2%;
		top: 0;
		background: url(http://d03.res.meilishuo.net/pic/_o/82/d8/758fc173759cbc1d2af376d77159_136_126.cf.png) no-repeat -3% -60%;
		background-size: 50%;
	}
}
.platform{
	>div{
		background: url(http://d02.res.meilishuo.net/pic/_o/e0/77/5ab9743c0d03295c277f8cd5d8af_302_189.ch.png) no-repeat;
		background-size: 100% 100%;
	}
	.available{
		.info{
			.fc(#ffae12);
		}
	}
	.used{
		.info{
			.fc(#ffd9a6);
		}
	}
	.used:before{
		content: '';
		display: block;
		height: 100%;
		width: 100%;
		position: absolute;
		left: 2%;
		top: 0;
		background: url(http://d02.res.meilishuo.net/pic/_o/bd/91/d6bc0228765502b6e77160e36081_136_126.ch.png) no-repeat -3% -60%;
		background-size: 50%;
	}
}
@media screen and (max-width: 340px){
	html{
		font-size: 54%;
	}
	
}

