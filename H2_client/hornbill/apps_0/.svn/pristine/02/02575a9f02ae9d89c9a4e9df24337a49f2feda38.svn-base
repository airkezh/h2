@import 'block';

body {
	background: #f4f2f3;
}

.title {
	font-size: .24rem;
	margin: .2rem;
	color: #999;
}

#msgForm {
	background: #fff;
	.form_wrap {
		margin-left: .2rem;
	}
	.form-list {
		border-bottom:1px solid #eee;
		font-size: 0;
		padding:.14rem 0;
	}
	label {
		color: #999;
		vertical-align: middle;
		font-size: .26rem;
	}
	.lipt {
		width: 60%;
		vertical-align: middle;
		margin-left: .24rem;
		outline: none;
		border: none;
		font-size: .26rem;
		line-height: .5rem;
		padding: 0;
		color: #666;
	}
	.notice {
		font-size: .26rem;
		line-height: .8rem;
	}
	select {
		vertical-align: middle;
	    white-space: nowrap;
	    overflow: hidden;
	    text-overflow: ellipsis;
	    padding: 0;
	    border: none;
	    background-color: transparent;
	    -webkit-appearance: none;
	    text-align: center;
	    font-size: 0.26rem;
	    margin:0 .06rem;
	}
	.before_unit {
		vertical-align: middle;
		font-size: .26rem;
		line-height: .5rem;
	}
	.time_inner,.area_inner {
		display: inline-block;
		margin-left: .2rem;
		vertical-align: middle;
	}
	.select_wrap {
		display: inline-block;
		position: relative;
		width: 1rem;
		text-align: center;
		vertical-align: middle;
		padding: 0 .1rem;
		.select_box {
			font-size: .26rem;
			color: #666;
			vertical-align: middle;
		}
		select {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
		    outline: none;
		    opacity: 0;
		}
	}
	.receive_addr {
		overflow: hidden;
	    white-space: nowrap;
	    text-overflow: ellipsis
	}

}


.address_mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	background: rgba(0,0,0,.3);
	.addr_select_wrap {
		position: absolute;
		width: 4.4rem;	
		background: #fff;
		border-radius: .1rem;
		top: 50%;
		left: 50%;
  		-webkit-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
		padding: .4rem;
		.addr_title {
			font-size: .28rem;
			text-align: center;
			color: #686868;
			margin-bottom: .3rem;
			.desc {
				vertical-align: middle;
			}
			.addr_ico {
				margin-left: .1rem;
				display: inline-block;
				width: .26rem;
				height: .32rem;
				background: url('http://d05.res.meilishuo.net/pic/_o/78/05/0e88aca53f98804f1bc7f8c49e85_26_32.ch.png') no-repeat center;
				background-size: contain;
				vertical-align: middle;
			}
		}
		label {
			width: 2rem;
			color: #ff7a9a;
			font-size: .26rem;
		}
	}
	.addr_unit {
		font-size: 0;
		width: 4.4rem;
		line-height: .5rem;
		margin-top: .2rem;
		label {
			display: inline-block;
			vertical-align: middle;
			width: 1rem;
		}
		.addr_box {
			position: relative;
			display: inline-block;
			vertical-align: middle;
			box-sizing: border-box;
			width: 3.4rem;
			height: .5rem;
			border: 1px solid #ddd;
			background: #f3f3f3;
			border-radius: .06rem;
			font-size: .24rem;
			text-indent: .14rem;
			.choose_item {
				display: inline-block;
				width: 2.7rem;
			}
			.drop_ico {
				display: inline-block;
				width: .26rem;
				height: .14rem;
			    background: url('http://d05.res.meilishuo.net/pic/_o/88/d4/5f3d4ece5a89aad47126fc2c420e_25_14.cg.png') no-repeat center;
			    background-size: contain;
			}
		}
		select {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: .5rem;
			line-height: .5rem;
		    outline: none;
		    border: none;
		    opacity: 0;
		}
	}
	.detail_addr{
		textarea {
			background: #f3f3f3;
			border-radius: .06rem;
			border: 1px solid #ddd;
			width: 4.4rem;
			box-sizing: border-box;
			font-size: .26rem;
			line-height: .34rem;
			padding: .2rem;
			color: #686868;
		}
	}
	.btn_wrap {
		width: 4.4rem;
		font-size: 0;
		text-align: center;
		.addr_error {
			.red; .c; .block;.f(.24rem);
			margin-bottom: .2rem;
		}
		button{
			width: 2rem;
			line-height: .5rem;
			border:none;
			font-size: .24rem;
			color: #fff;
			border-radius: .04rem;
			outline: none;
		}
		.addr_cancel {
			background: #d7d7d7;
		}
		.addr_sure {
			background: #ff7a9a;
			margin-left: .4rem;
		}
	}
}



.submitBox {
	.ErrorMessage {
		display: block;
		text-align: center;
		padding-top: .15rem;
		font-size: .24rem;
		color: #FF7A9A;
		margin: auto;
	}
}

.apply_submit {
	background-color: #f97a9b;
    width: 5rem;
    display: block;
    margin-left: auto;
    margin-right: auto;
    line-height: .6rem;
    text-align: center;
    color: #ffffff;
    font-size: .26rem;
    border: none;
    margin-top: .3rem;
    border-radius: .04rem;
}
