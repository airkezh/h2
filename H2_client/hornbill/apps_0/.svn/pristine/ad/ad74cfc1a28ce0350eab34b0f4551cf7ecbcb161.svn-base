.filter_wrap{.w(1200px); .auto;}
/*面包屑*/
.bread_crumbs{
	.mt(14px); .fc(#999);
	.corner{.ml(6px); .mr(6px);}
	.subcata_text{.mr(10px);}
	.item_tag{
		padding: 4px 6px; border: solid 1px #ddd;
		.icon_x{
			.i_block; .w(11px); .h(11px); .ml(4px);
			background: url('http://d04.res.meilishuo.net/pic/_o/1b/a7/4fe15418c4d449896d4cf3113ce9_150_42.ch.png') no-repeat;
			background-position: -93px -13px;
		}
	}
	.item_tag:hover{
		border: solid 1px #f69;
		.icon_x{
			background: url('http://d04.res.meilishuo.net/pic/_o/1b/a7/4fe15418c4d449896d4cf3113ce9_150_42.ch.png') no-repeat;
			background-position: -113px -13px;
		}
	}
}

/*筛选器*/
.group_box{
	.mt(12px); border: solid 1px #e1e1e1; .pl(16px); .pr(16px); .pr;
}
.inner_box{
	.fc(#999);
	.row{
		.pr; border-top: solid 1px #eee;
	}
	.first{
		border: none;
	}
	.expended{
		.center_content{
			.items_wraper{
				.h(auto); max-height: 116px; overflow: auto;
			}
		}
	}
	.left_cate{
		.pa; left: 0; top: 12px;
	}
	.center_content{
		.ml(50px); .mr(197px);
		a{
			.left; .mt(12px);.mb(12px);.mr(36px);
		}
		.items_wraper{
			.h(38px); .hidden();
			.items:after{
				content: "";
				.block;
				clear: both;
				height: 0;
			}
		}
		// .items_wraper::-webkit-scrollbar{
		// 	width: 10px;  
		// 	-webkit-appearance: none;
		// }
		// .items_wraper::-webkit-scrollbar-thumb{
		// 	border-radius: 8px;
		// 	border: 1px solid #fff;
		// 	background-color: rgba(0,0,0,.5);
		// }
		.operate_btns{
			.c; .mt(6px); .mb(18px); .none;
			span{
				padding: 5px 12px; cursor: pointer; .i_block;
			}
			.enable{
				.bgc(#f7f7f7);
				.fc(#ccc);
			}
			.submit{
				.bgc(#f69);
				.fc(#fff);
			}
			.submit:hover{
				.bgc(#ff84ad);
			}
			.calloff{
				.bgc(#f2f2f2); .ml(10px);
			}
			.calloff:hover{
				.bgc(#f7f7f7);
			}
		}
	}
	.right_selector{
		.pa; right: 0; top: 12px;
		span{
			cursor: pointer;
		}
		.more, .retract{ .none; .ml(16px);}
		.more:hover,.retract:hover{
			.fc(#666);
		}
		.multiply{
			padding:4px 5px; border: solid 1px #ddd;
		}
		.multiply:hover{
			.bgc(#f5f5f5);
		}
	}
}
.moresizer{.none;}

/*排序*/
.sort_box{
	border: solid 1px #e1e1e1; .fc(#333); .bgc(#f8f8f8); .mt(8px);
	ul{
		list-style: none;
		li{
			.left; 
			.theme,.trigger_link{
				.block;
				.w(62px); .c;
				.pt(12px); .pb(12px);
				.ml(-1px);
				border-left: solid 1px #f8f8f8;
				border-right: solid 1px #f8f8f8;
			}
			.trigger_link{.fc(#666);}
			.theme:hover{
				.pr; z-index:1;
				.bgc(#fff);
				border-left: solid 1px #e1e1e1;
				border-right: solid 1px #e1e1e1;
			}

			a.curr{
				.bgc(#fff);
				.pr; z-index:1;
				border-left: solid 1px #e1e1e1;
				border-right: solid 1px #e1e1e1;
			}
			a.first{
				border-left: none;
				.ml(0px);
			}
			a.first:hover{
				border-left: none;
			}
		}
	}
	.clearfix;
}
.arrow_down,.arrow_up{
	.i_block; .w(9px); .h(5px); .ml(4px);
	background: url('http://d05.res.meilishuo.net/pic/_o/20/35/26f210ef7aecc0d1906030069be8_100_42.cg.png') no-repeat;
	background-position: -18px -16px;
}
.arrow_up{
	background: url('http://d05.res.meilishuo.net/pic/_o/20/35/26f210ef7aecc0d1906030069be8_100_42.cg.png') no-repeat;
	background-position: -18px -23px;
}
.laypr{
	.pr;
	.pricesort{
		.pa; .none;
		.w(82px); .h(42px);.mt(-1px);.ml(-1px);
		top: 0; border: solid 1px #c5c5c5;
		z-index: 1; padding: 12px 13px; .bgc(#fff);
		li{
			.mb(14px);
		}
	}
}
.laypr:hover{
	.pricesort{
		.block; 
	}
}
.byprice,.bytype{
	.left;
	.input{.w(66px); .h(24px); border: solid 1px #eaeaea; padding: 0 4px;}
	.p_submit{ padding:4px 5px; border: solid 1px #eaeaea; .bgc(#fff); .ml(6px); cursor: pointer;}
	.p_submit:hover{.bgc(#f5f5f5); .fc(#333);}
}
.byother, .mulcheck{
	.icon_filter{
		.left;
		.w(16px); .h(16px); .mt(-2px); .mr(2px);
		background: url('http://d02.res.meilishuo.net/pic/_o/0c/74/da7edeee0aff2f7f0b3a23192df5_100_42.cg.png') no-repeat;
		background-position: -43px -10px;
	}
	a:hover,a.selected{
		.icon_filter{
			background-position: -70px -10px;
		}
	}
}
.box_expend{
	.w(100px); .auto; .h(26px); .mt(-1px);
	span{
		.pa; padding: 5px 18px; .fc(#999); cursor: pointer;
		border-left: solid 1px #e1e1e1;border-right: solid 1px #e1e1e1;border-bottom: solid 1px #e1e1e1;border-top: solid 1px #fff;
	}
	span:hover{
		.fc(#666);
	}
	.retract{
		.none;
	}
}
.byother{
	.right; .mr(10px); 
	a{
		.left; padding: 12px 10px 7px 10px;
		.promot_img{
			.left;.w(136px);.h(22px);.mt(-4px);
		}
		
	}
	a:hover{
		.fc(#666);
	}
}
.wavemark{.fc(#d9d9d9); .ml(1px); .mr(1px);}
.byprice{.mt(6px);
	input::-webkit-input-placeholder {
　　color: #aaa;}
　　input::-moz-placeholder {
　　color: #aaa;
　　}
　　input::-moz-placeholder {
　　color: #aaa;
　　}
