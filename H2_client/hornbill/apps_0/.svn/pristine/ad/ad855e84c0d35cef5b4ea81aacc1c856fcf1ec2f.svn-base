@import "block.less";

body {
	background: #f4f2f3;
}

.title {
	font-size: .24rem;
	margin: .2rem;
	color: #999;
}

.form_wrap {
	background: #fff;
	.form-list {
		margin: 0 .2rem;
		border-bottom: 1px solid #eee;
		font-size: 0;
		.lipt {
			width: 60%;
			line-height: .8rem;
			padding: 0;
			margin:0;
			outline: none;
			border: none;
			font-size: .24rem;
		}
	}
	.s_button {
	    border: none;
	    background-color: #f97a9b;
	    font-size: .24rem;
	    text-align: center;
	    color: #ffffff;
	    border-radius: .04rem;
	    padding: .1rem .1rem;
	    width: 30%;
	    margin-left: .4rem;
	}
}

#bindMobileForm {
	.submitBox {
		.ErrorMessage {
			display: block;
			text-align: center;
			padding-top: .15rem;
			font-size: .24rem;
			color: #FF7A9A;
			margin: auto;
		}
	}
	.next_step {
		background-color: #f97a9b;
	    width: 4rem;
	    display: block;
	    margin-left: auto;
	    margin-right: auto;
	    line-height: .5rem;
	    text-align: center;
	    color: #ffffff;
	    font-size: .28rem;
	    border: none;
	    margin-top: .14rem;
	    border-radius: .04rem;
	}
}


