@import "../block.less";

body{
	.bgc(#f8f8f8);.fc(#666);
}
img{
	.w(100%);
	.block;
}
.intro-box{
	padding: .3rem .3rem .24rem;
	.bgc(#fff);
	img{ border: solid 1px #eee;}
	p{ .f(.26rem); .mt(.15rem); .l(.32rem);}
}
.goods-box{
	.mt(.13rem); .bgc(#fff); .pr;
	padding: .24rem .15rem .28rem;
	h1{
		.w(1.7rem); .auto; .c; font-weight: normal; .pr; z-index: 1; .bgc(#fff);
		span{.block;}
		span.top{ .f(.32rem);}
		span.bottom{ .f(.24rem); .mt(.04rem);}
	}
	h1:after{
		content: '';
		.block;
	}
	.line{
		.pa; .w(6.9rem); .h(1px); .bgc(#e1e1e1); top: .56rem; left: .3rem;
	}
	.clearfix;
}
.wrap{
	.item {
		.left; .w(50%); .mt(.29rem);
		.inner{
			.pl(.15rem); .pr(.15rem);
		}
	}
	.nomore{
		.pl(.15rem); .pr(.15rem);
	}
	.item-mainpic {
		.block; .pt(100%);
		background: no-repeat;
		background-size : 100% 100%;
	}

	.item-desc {
		font-size : 0; .mt(.13rem); .f(.28rem); .c;
	}
	.item-title {
		.block; .mb(.2rem); font-weight: normal;  .l(.28rem); .ellipsis();
	}
	.down-shelf{.pr;}
	.down-shelf:after{
		content: '';
		.block;
		.pa; top:0; left:0; .w(100%); .h(100%);
		background: rgba(255,255,255,.3) url("http://d04.res.meilishuo.net/pic/_o/14/f7/0de27d90d1845e14ce58904e82b7_86_86.cj.png") center no-repeat;
		background-size: .86rem .86rem;
	}
	.item-price {
		.i_block; .mr(.2rem); .fc(#f69);
	}

	.item-like {
		.f(.28rem); .fc(#999);
	}
	.find-similar{ .i_block; .mt(.16rem); padding: .14rem .44rem; 
		border: solid 1px #999; border-radius: 4px;}
	.icon-like {
		.i_block; .w(.22rem); .h(.19rem); .mr(.05rem);
		background: url("http://d02.res.meilishuo.net/pic/_o/b5/2f/2017ef5e74b4a86cce34729a7424_24_21.cg.png") no-repeat center;
		background-size : 100% 100%;
	}
	.liked{
		background: url("http://d03.res.meilishuo.net/pic/_o/8f/42/299d977697738c6f3f11917991ac_24_21.cg.png") no-repeat center;
		background-size : 100% 100%;
	}

}
.more-box{
	.mt(.2rem);.mb(1.18rem); .bgc(#fff); padding: .22rem 0rem .3rem .3rem;
	h1{
		.f(.32rem); .fc(#333); font-weight: normal;
	}
	.slide-list{.hidden;}
	.wraper{
		a{ .left; .w(3rem); .h(2.59rem); border: solid 1px #eee; .mt(.24rem); .mr(.12rem);}

		.clearfix;
	}
}
.btn_box{
	position: fixed;  .w(100%); bottom: 0; left: 0; .bgc(#fff); .c; font-size: 0; .pt(.24rem); .pb(.24rem);
	border-top: solid 1px #eee;
	a{
		.i_block;
		padding: .13rem .29rem; .bgc(#f69); .fc(#fff); .f(.28rem);
		.ml(.15rem); .mr(.15rem); border-radius: 4px;
	}
	.buy:before, .collect:before{
		content: '';
		.i_block; .w(.34rem);.h(.28rem); .mr(.06rem); vertical-align: bottom;
	}

	a.buy:before{
		background: url('http://d04.res.meilishuo.net/pic/_o/64/f3/b1ed20fa35159c827f7aeffc552d_35_31.cg.png') no-repeat;
		background-size: 100% 100%;
	}
	a.collect:before{
		background: url('http://d05.res.meilishuo.net/pic/_o/16/ef/87d3e1cf203e5999798efd86c87f_34_30.ch.png') no-repeat;
		background-size: 100% 100%;
	}
	.uncollect{
		.bgc(#999);
	}
}