@import "../block.less";
html,body{ .f(12px); .bgc(#ffffff); }
.header{ 
	.w(100%); 
	.h(90px); 
	.bgc(#ff6699);
	.pr();
	img{ 
		.block(); 
		.pa(); 
	}
	.left{ top: 22.5px; left: 10%; z-index:1;}
	.right{ top: 22.5px; right: 10%; z-index:0;}
	.pf();

}
.content{
	.w(80%);
	min-width: 960px;
	min-height: 560px;
	margin: 0 auto;
	.primary{
		.w(68%);
		//min-width:650px;
		.left();
		.head_info{ 
			.w(100%);
			.f(18px); 
			.l(3em); 
			.mt(90px);
			color: #999999; 
			.pl(36px); 
			background: url(http://i.meilishuo.net/css/images/jobs/h.png) no-repeat left center;
			span{ .ml(1em);.f(12px);color: #ff4e78; }
		}
		li{ 
			.block(); 
			.pb(1em);
			.mb(1em);
			border-bottom: 1px solid #cccccc;
			.recruit_info{ 
				.block(); 
				//.w(85%);
				.left();
				color: #c1b6b6; 
				div,p{ .l(2.3em); }
				span{ .f(14px); color: #ff4e78;}
				span.job_name{ .cursor(); }
				p.keywords{ color: #cccccc; }
				div.details{ .none(); }
			}
			.apply_btn{
				.block();
				.right();
				.w(70px);
				//.h(25px);
				.l(25px);
				.c();
				.f(12px);
				.white();
				.border-r();			
				.bgc(#ff6699);
			}
			.clearfix();
			.btn_after{ float: none;  margin: 2em auto 1em auto; }
		}		
	}
	.secondary{
		.w(27%);
		//min-width: 250px;
		.right();
	}
	.clearfix();
	
}
div._2vma{ .w(250px); .h(142px); img{ .il-block(); } position: fixed; top:120px; right: 10%; z-index: 0; }
.footer{ .c(); color:#aaaaaa; .bgc(#ffffff); border: none;}
.addShadow{ 
	-webkit-box-shadow: 0 1.7px 2px rgba(34,25,25,0.4); 
	-moz-box-shadow: 0 1.7px 2px rgba(34,25,25,0.4); 
	box-shadow: 0 1.7px 2px rgba(34,25,25,0.4);
}

