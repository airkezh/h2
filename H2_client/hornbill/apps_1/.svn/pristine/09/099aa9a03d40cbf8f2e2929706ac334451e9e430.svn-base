@import "../block.less";
img{ width:100%; .block; }

.go_shop{
	background: url('@{pic_url}/images/biz/apparel/status_cp2.png') no-repeat;
}

.cd_left, .cd_right{background: url('@{pic_url}/images/biz/apparel/countdown_wap.png') no-repeat;}
.cd_last, .cd_1200, .cd_1200_end{background: url('@{pic_url}/images/biz/apparel/countdown_1200.png') no-repeat;}
.cd_last{
	.pa;top: 0;left: 394*@w;.w(100*@w);.pt(54*@w);background-size: 4*100%;.bp(83%, 0);
}
.cd_1200{
	.pa;top: 0;left: 22.25%;.w(350*@w);.pt(40*@w);background-size: 40/35*100%;.bp(0, 45%);
}
.cd_1200_end{
	.pa;top: 0;left: 22.25%;.w(350*@w);.pt(40*@w);background-size: 40/35*100%;.bp(0, 75%);
}
.countdown{ .pr;
	.down{ .pa; .c; top:165/300*100%; left:180*@w; .f(20*@px); color:#ff3c73; font-family:SimHei; .fb;
		b{ .w(30*@px); .h(36*@px); .l(36*@px); background:url('@{pic_url}/images/huodong/sale420/timebg_wapfz.png') no-repeat; background-size:100%; color:#fff; margin:0 3px; .f(22*@px); .i_block; .c;
		}
	}
}
.btn_status{
	background: url('@{pic_url}/images/huodong/sale420/mbtn.png') no-repeat;
}
.coupon_wrap{
	.bgc(#ff325b); .pb(20*@w);
	.coupon_box{
		.pr;.mb(20/600*100%);.w(620*@w); .auto;
		.coupon_con{
			.w(50%);.h(100%);.c;.f(30*@px);.fc(#b95e05);.hidden;
			p{.pt(20/300*100%);.pb(10/300*100%);}
			span{.fc(#ff3477);}
			.btn_status{
				.w(55%);.pt(64/300*100%);background-size: 100%;.auto;.bp(0, 35%);
			}
			.pa;top: 0;right: 0;
		}
		.has_get .btn_status{.bp(0, 109%);}
		.zero .btn_status{.bp(0, 73%);}
	}
	.coupon_100{
		.pr;.w(620*@w); .auto;
		.timeStamp_wrap{
			.pa;top: 58%;right: 8%;.w(37%);.c;
			.f(50*@px);.fc(#de3743);.fb;
		}
		.coupon_con{.w(50%);.h(100%);.pa;top: 0;right: 0;}
		.btn_status{
			.w(55%);.pt(20%);
			.bp(0, 0);background-size: 100%;.auto;
			.pa;top: 24%;right: 70/300*100%;
		}
		.can_get .btn_status{.bp(0, 30%);}
		.has_over .btn_status{.bp(0, 72%);}
		.has_get .btn_status{.bp(0, 108%);}
	}
}
.odd{.ml(20/600*100%);}

.spring_clothing a{.auto;.block;.mb(20*@w);}

/*dialog*/
.dialog();
.draw_box{ .c; margin:20px 0; }
.toupdate{ 
	p{ margin:20px 0; }
	.btn3zi{ .act_btn; .border-r(40*@px); .f(38*@px); .h(60*@px); .l(60*@px); .w(180*@px); margin:12*@px auto;}
}
/*分享*/
.starBox{ .star_box; }
