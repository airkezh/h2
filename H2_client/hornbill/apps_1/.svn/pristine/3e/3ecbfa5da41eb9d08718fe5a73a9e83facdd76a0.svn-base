@import "../../block.less";
html{.f(10*@f);}
body {background-color: #fffbe5;}
img{ width: 100%; .block;}

figure { a {.block; .pr; }}

.banner {
  .pr;
  padding-top: 54%;
  img {.pa; top:0}
  .bannerText {
    .f(11px); .fc(#6a3d3a); font-weight: bold; display: inline-block; vertical-align: middle;
  }
  .countdown {
    .pa; top:2%; .w(100%);  text-align: center;

    .timerArea {display: inline-block;.w(50%); .pr; .pt(9%); vertical-align: middle;;display: inline-block;background: url("@{pic_url}/images/wap/activity/promotion/11/timerBg.png") no-repeat top center; background-size: 100%;}
    dl dd {.pa; top:22%;}
    dl dd span{.f(14px); .fc(#fff)}
    #day0 { left:3%}
    #day1 {left:7%}
    #hour0 {left:29%}
    #hour1 {left:33%}
    #minute0 {left:59%}
    #minute1 {left:63%}
    #seconds0 {left:81.5%}
    #seconds1 {left:86%}
    display: none;
  }
  .rule {.pa;z-index: 1000;.pt(12%);.w(22%); top:69%;right:0; border: 0px solid red; display: none !important}
  .tip {.pa; .w(100%);.pt(8%); bottom:0; background-size: 100%; display: none}
  .tip0 {background: url("@{pic_url}/images/wap/activity/promotion/11/meet/tip0.png") no-repeat center center; background-size: 100%}
  .tip1 {background: url("@{pic_url}/images/wap/activity/promotion/11/meet/tip1.png") no-repeat center center;background-size: 100%}
  .tip2 {background: url("@{pic_url}/images/wap/activity/promotion/11/meet/tip2.png") no-repeat center center;background-size: 100%}
  .tip3 {background: url("@{pic_url}/images/wap/activity/promotion/11/meet/tip3.png") no-repeat center center;background-size: 100%}
}
.menu {
  .pr; .pt(27%);
  img {.pa; top:0}
  .tab {
    .pa; .w(29%); .pt(11%); border: 0px solid red;
  }
  .tab1 {top: 10% ; left: 2%}
  .tab2 {top: 10%; left: 35%}
  .tab3 {top: 10%; left: 69%}
  .tab4 {top: 52% ; left: 2%}
  .tab5 {top: 52% ; left: 35%}
  .tab6 {top: 52% ; left: 69%}


}

.postWall {

  .clearfix;
  .poster { .pr;.w(47%);.ml(2%); .mt(4%);float: left; .f(11px);
  }

  .bs_load_img{.pa; top:0;.block;.w(100%);}
}


.loadingImg {background: url("@{pic_url}/images/wap/activity/promotion/11/meet/g_loading1.png") no-repeat center center;}
figure a {.pt(134%); .w(100%)}

.gotop{
  .none;
  .pf;
  right: 20px;
  .w(80*@w);
  img{
    .w(100%);
  }
}
