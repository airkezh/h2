@import "../common/block.less";
@import "../common/window.less";
@import "../common/dootablock.less";
@import "../common/block/steps.less";

.well{
	&.route{
		.clearfix();
		margin-top: 0;
		line-height: 28px;
		text-align: center;
		background-color: #ffffcd;
		border: solid 1px #f6e59d;
		a{
			text-decoration: underline;
		}
		.close{
			float: right;
			margin-right: 10px;
			cursor: pointer;
		}
	}
}

.doota;
.steps;
.dis-button{
			.common_button; .common_button > .redBtn; .border-n; .f(14px);
			.w(100px);.l(32px);
			margin: 30px auto 0;.block;
		}
.order_header{
	.mt(20px);.h(34px);.w(978px);.auto;
	.icon{
		.w(122px);.h(34px);.left;
		background:url("@{pic_url}/images/doota/order_logo2.png") no-repeat;
	}
}
.aa{.w(122px);.i_block;.h(30px);.l(30px); .ml(20px);}
.order{
	.area;
	&_status_bar{
		.pb(35px);
	}
	&_comment_bar{.h(54px);line-height:54px;border-bottom:solid 1px #ddd;border-right:solid 1px #ddd;border-left:solid 1px #ddd;.bgc(#ffe8f0);text-align:center;.f(14px);}
	&_gocomment{.w(122px);.i_block;.h(30px);.l(30px); .ml(20px);}
	&_status, &_express, &_address, &_goods, &_connect, &_status_bar{
		.clear{overflow:hidden}
		.bgwhite;border:1px solid #ddd;.mt(10px);.l(24px);.pt(20px);.pl(20px);.pr(20px);
		.status_text{
			text-align:center;.mb(0);
			p{.l(60px);}
			.btn{border:0;.w(100px);.h(30px);.mr(20px);.i_block;.l(30px)}
			.btn.gray{background:silver;color:black;}
		}
		h4{font-size:14px;.l(36px);border-bottom:1px solid #e6e6e6;.mb(10px);}
		ul.l{.pl(10px);}
		.l{float:left;
			li{
				padding:0;border:0;
			}
		}
		div{
			.mb(20px);
			span{.mr(30px)}
			span.red_f{.mr(0)}
		}
		.extend_recv_text{
			margin-left: -20px;
		}
	}
	&_status, &_express, &_address, &_goods{
		li{padding:14px 20px;border-top:1px solid #ddd;overflow:hidden;
			span{.mr(6px);}
		}
		.first{.border-n;}
	}
	&_express{
		a{.red;}
		.l(26px);
		div.express_info{
			overflow:hidden;
			border-top:1px dotted #e6e6e6;
			.mt(20px);
			.pb(20px);
			.pt(20px);
			.ml40{
				.ml(40px);
			}
		}
		p.l{float:left}
		ul li ul{
			float:left;
			li{border:0;padding:0}
			li.current{font-weight:bolder;color:#FF6699}
		}
	}
	&_address{
	a{.red;}
		li{
			p span{.mr(40px);}
		}
	}
	&_goods{
		padding:0;
		li{
			p{
				span{.i_block;.mr(40px);}
				.first{.ml(0px);}
				.last{.mr(0px);}
			}
		}
		.order_timer{
			p span{.mr(30px);}
			.presale-btn{
				.i_block();.h(16px);.w(50px);.bgc(#ff6699);.c();.l(16px);.fc(#ffffff);.ml(5px);
			}
		}
		.order_discount{
			p,span{.i_block;.w(32%);.mr(0px);}
			span.order_discount_item{.w(auto);}
		}
		.order_comment_discount{
			.comment{vertical-align: top;text-align: left;width: 400px;}
			.discount{
				position: relative;
				top: -4px;
				text-align: right;
				width: 500px;
				td img{vertical-align: middle;}
				td span{vertical-align: middle;margin-left: 8px;margin-right: 0px;}
				tr.discount_info{.h(25px);.l(25px);}
			}
		}
		.snap-link{
			
		}
	}
	&_goods{
		border-top:2px solid @red;
	}
	&_connect{
		.h(54px);
		&.redline{border:1px solid #ff6699;}
		.connect{
			.pl(20px);.l(22px);.left;
			.pt(16px);.pb(16px);
			span{.ml(8px);.mr(8px);}
			.getmlsqq{ background:url("@{pic_url}/images/serviceqq/mls_service_1202.png") no-repeat;
				.w(80px);.h(22px);
				.i_block;.indent;
			}
		}
		.control{
			.ml(600px);
			.tr;.l(54px);
			a{.red;.mr(20px);.i_block;}
			.recvOrder, .payOrder{
				background:url("@{pic_url}/images/doota/order_btn.png") no-repeat 0px -54px;
				.w(150px); .h(54px);
				.indent;
				.mr(0px);
			}
			.recvOrder{ .bp(0px,-54px); }
			.payOrder{ .bp(0px, 0px);	}

		}
	}
	&_list{
		.doota > .list;
		.order_info td{ border-bottom:1px solid #ddd;}
		.getserviceqq{ background: url("@{pic_url}/images/serviceqq/service_qq.gif") no-repeat; padding: 6px 42px; .ml(5px); .indent; }
		.bl{border-left:1px solid #e6e6e6}
	}
	&_status{
		.pt(40px);.pb(40px);.c;
		&_info{
			.pl(42px);.tl;
			.i_block;*display:inline; *zoom:1;
			.pr;
			span{left:0px;top:50%;.mt(-21px);}
			p{.f(18px);.l(28px);.ml(10px);}
			a{.red;.ml(10px);.l(20px);}
		}
	}
	&_bind{
		.bgpink;border:1px solid #ddd;display:none;
		.pt(25px);.pb(25px);.c;
		&_info{
			.f(14px);.i_block;*display:inline;
			.button{.common_button; .common_button > .redBtn; .border-n; .f(14px); .fb; .mr(15px); .ml(15px); padding:6px 14px;}
		}
	}
	&_confirm_bar{
		padding:0;
		.pl(20px);
		.h(52px);
		.l(52px);
		.confirm{
			cursor:pointer;
			.i_block;
			.right;
			.mt(-1px);
			.h(54px);
			.w(150px);
			background: url("@{pic_url}/images/doota/confirm_receive.png")
		}
	}

}
.order-link{
	.f(14px);
	.l(40px);
}
.doota > .icon;
.red{color:@red;margin:0 3px !important;}
.download{
	padding:10px 44px;
	line-height:24px;
	background: url("@{pic_url}/images/doota/ico_phone.png") 24px 10px no-repeat;
	.mt(10px);
	border:1px solid #e6e6e6;
	background-color:white;
}

.footer();
