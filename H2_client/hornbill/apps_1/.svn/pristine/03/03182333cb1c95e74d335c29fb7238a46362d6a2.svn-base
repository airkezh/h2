@import "../block.less";
@import "../window.less";

.fluid;
.page;
.pageNav{ .page > .pageRed; }
//海报
.poster_wall{ .pa;left:-2000px;top:0;}
.poster_grid{ .common_box;}

.main{.w(100%);}
.main-cont{.w(1030px);.auto;.pr;.h(100%)}

.pf-{
	&bg1{background:url("@{pic_url}/images/huodong/pf79/bg1.jpg") no-repeat center center; .h(737px);}
	&bg2{background:url("@{pic_url}/images/huodong/pf79/bg2.jpg") no-repeat center center; .h(582px);}
	&bg3{background:url("@{pic_url}/images/huodong/pf79/bg3.jpg") no-repeat center center; .h(746px);
		.upload-box{.pa;left:112px;top:169px;.w(250px);.h(345px);.cursor;
			.next{.pa; .w(314px); .h(74px); bottom:-214px; left:370px; border:0; .cursor; background: transparent}
			.wait{background:url("@{pic_url}/images/huodong/pf79/btn2.png") left bottom no-repeat;}
		}
		.choice-item{.w(277px);.h(525px);.pa;right:64px;bottom:126px;
			span{.i_block;.w(135px);.h(238px);.cursor;
			}
			.s1,.s2{.mb(36px);}
			.s1,.s2,.s3,.s4{
				&.choiced{background:url("@{pic_url}/images/huodong/pf79/choice.png")  no-repeat;}
			}
			.s1.choiced{background-position: left top}
			.s2.choiced{background-position: right top}
			.s3.choiced{background-position: left bottom}
			.s4.choiced{background-position: right bottom}
		}

		.obolaiUpWapper{ .w(244px); .h(344px);  .cursor; position: static;
			input{ .cursor; .f(295px); .pa; .f(15px);*font-size:60px;left:0; top:84; .h(344px); }
		}
		
	}
	&bg4{background:url("@{pic_url}/images/huodong/pf79/bg4.jpg") no-repeat center center; .h(1423px);
		.main-cont{.pt(183px);}
		.hb_box{.w(973px);.h(1155px);.auto;.mt(30px);overflow-y: scroll;overflow-x: hidden;background: #fff;}
		.switch-bar{.c;.pa;left:420px;top:167px;
			a{.i_block;.w(75px);.h(30px);.mr(30px);text-indent: -9999em;}
			#switch{.block;.pa;left:300px;top:-128px;.w(30px);.h(30px)}
		}
	}	
	&bg5{background:url("@{pic_url}/images/huodong/pf79/bg5.jpg") no-repeat center center; .h(412px);
		a{.block;.pa;.w(87px);.h(87px);bottom: 33px;}
		#share_sina{left:318px;}
		#share_qzone{left:444px;}	
		#share_qqwb{left:570px;}
	}
	
	&bg6{background:url("@{pic_url}/images/huodong/pf79/bg6.jpg") no-repeat center center; .h(672px);
		a{.block;.h(100%)}
	}
	&bg7{background:url("@{pic_url}/images/huodong/pf79/bg7.jpg") no-repeat center center; .h(448px);
		a{.block;.h(100%);}
	}






}
.succeed{.w(638px);.mt(60px);.h(431px);background:url("@{pic_url}/images/huodong/pf79/succeed1.png") no-repeat center center;}
.close_btn{ .block; .pa; right:25px; top:86px; .w(56px); .h(47px); .cursor; }
//投票海报
.vote_box{ .w(228px); .mt(14px);background: #fff;border:1px solid #ddd;
	.pic_load{ .w(100%); .block; background:url("@{pic_url}/images/group/g_loading1.gif") no-repeat; }
	.info{ .w(100%); .h(160px); }
	.userInfo{ .w(205px); .h(100px); .f(14px); .pr; top:5px; left:10px;
		.face{ .i_block; border:1px solid #fff;img{.w(34px);.h(34px)} }
		.name{ .pl(6px);.i_block;.h(16px);overflow:hidden;.pl(6px);.w(140px);text-overflow: ellipsis;white-space: nowrap;
		}
		.txt_info{ .mt(2px);border-bottom: 1px dashed #e6e6e6;.pt(3px);.pb(3px);
			li{ .l(22px); }
		}

		.person{
			.pb(5px);border-bottom: 1px dashed #e6e6e6;
		}
	}
	.btnBox{ text-indent:-9999em;.w(148px); .mt(5px);.h(49px); .l(46px); background:url('@{pic_url}/images/huodong/pf79/btn2.png') right top no-repeat; .c; .cursor; .pl(13px)}
	.voted{ background:url('@{pic_url}/images/huodong/pf79/btn2.png') no-repeat right -50px;}
	//.act_vote{background-position: 0 -440px;color: #fff6cc;}
}


