.navBan;

.login {
	padding:40*@px 20*@px;
	fieldset { 
		form{
			p{.mb(20*@px);}
			p, .checkBox{
				input{.f(1.6rem);.common_input;}
			}
			.checkBox{
				input{.w(40%);}
			}
			.checkImage{
				.pa;.inline;.w(148px);.ml(8px);
				span{.left;.l(2);.mr(8px);.cursor;.f(1.4rem);}	
			}
			.loginErrorMessage{.red;.mt(40*@px);.c;.f(1.6rem);}
			.submitBox {.mt(40*@px);.hidden;
				.button{.common_button; .common_button > .redBtn; .border-n; .f(2rem);.fb;.w(100%);padding:20*@px;}
			}
		}
	}
	.exBtn{.mt(20*@px);.c;.f(1.4rem);}
}
