@import "../atom.less";
.steps(){
	.flowStep{
		margin:auto !important;
		
		.chart{
			position:relative;
			height:12px;
			overflow:hidden;
			margin-bottom: 10px;
			.line{
				position:absolute;
				z-index:1;
				top:5px;
				height:1px;overflow:hidden;
				background:#ef7b9d;
				
			}
			.ball{
				position:relative;
				z-index:2;
				background:url('@{pic_url}/images/store/mls_store131110_1.png') no-repeat -92px -48px;
				width:12px;
				height:12px;
				float:left;
			}
			.empty{
				background-position: -109px -48px;
			}
		}
		.text{
			overflow:hidden;
			
			div{
				text-align:center;
				float:left;
				margin:0;
				color:@gray;
			}
			div.active{
				color:#ff6699;
			}
			margin:0;
		}
	}
}