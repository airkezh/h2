@import "../block.less";
@import "../doota/shareact_bs_goods.less";

.main{.bgc(#fff);.mb(-14px);}

.head_bg{background-position: center;}
.top_bannar, .seckill{.w(946px);.auto;}

.seckill{
	.seckill_goods{.left;.w(466px);.hidden;.pt(20px);.pr;border-bottom: 1px dotted #E6E6E6;.pb(20px);}
	.first_kill{.mr(14px);}
	.timeStamp_wrap{.pa;top: 20px;right: 14px;.f(16px);.fb;.red;padding: 0;}
	.soldout{.w(100%);.h(270px);background:url("@{pic_url}/images/huodong/all/bs_over.png") no-repeat center;
	_background:none;
	_filter:~"progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/huodong/all/bs_over.png',sizingMethod='scale')";
	.pa;top: 0;left: 0;}
