.tab(@bgc){
	width: 82px;
	height: 82px;
	-webkit-border-radius: 41px;
	-moz-border-radius: 41px;
	border-radius: 41px;
	background-color: @bgc;
	.left;margin: 0 57px;
}
.poster_tab{
	padding: 20px 0 20px 91px;.pr;border-bottom: 1px solid #e1e1e1;
	.w(875px);.auto;
	.poster_anchor{.pa;top: -40px;}
	a{
		.w(100%);.h(100%);.i_block;.pt(18px);.c;
		span{font-size: 22px;
		color: #fff;
		.l(24px);.w(2em);.i_block;}
	}
	.tab1{.tab(#ffa0c0);}
	.tab2{.tab(#feba95);}
	.tab3{.tab(#fcd78e);}
	.tab4{.tab(#8cdbbf);}
	.tab_choosed{.w(110px);.h(3px);.bgc(#ffa0c0);.pa;bottom: 0;left: 122px; -webkit-transition: background .6s .1s ease,left .6s .1s ease;transition: background .6s .1s ease,left .6s .1s ease;}
	.classics{.bgc(#ffa0c0);left: 122px;}
	.charm{.bgc(#feba95);left: 320px;}
	.fragrance{.bgc(#fcd78e);left: 514px;}
	.sale{.bgc(#8cdbbf);left: 714px;}
}


.poster{.hidden;.w(970px);.auto;.pb(20px);}
