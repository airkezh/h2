    .price-ago{.pr(5*@px);.f(.8rem);.pl(5*@px);}
    .rebate{.right;.bgc(#f69);.fc(#fff);padding:1px 3px;.border-r-a(2px);}
  }
  .buy-num{.hidden;.pt(5/270*100%);text-align:right;}
}
/*gotop*/
.gotop{.none;.pf;right: 20px;bottom:30px;z-index: 20;.w(80*@w);.pt(80*@w);background: url("@{pic_url}/images/wap/tuan/gotop.png") no-repeat;text-indent: -9999em;.crestBS();}