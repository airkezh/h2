/*pro-box*/
.crestBS(){background-size: 100%}
.pro-box {padding:5% 0;
  ul{.hidden;}
}
.pro-list{.w(47%);.ml(2%);.mb(4%);.hidden;.left;.pr;border:1px solid #d9d9d9;.border-r-a(8px);box-sizing:border-box;
