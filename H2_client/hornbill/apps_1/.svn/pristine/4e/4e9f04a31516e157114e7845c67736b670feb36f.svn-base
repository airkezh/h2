  span.bs_load_img{.block;opacity: .75;.w(100%);.pt(100%);background-image: url("@{pic_url}/images/huodong/tuan/prebg.png");.crestBS();}
  img{.border-r-tl(8px);.border-r-tr(8px)}
}
.pro-info{.f(1.1rem);.fc(#999);.bs;padding: 1/31*100% 1/31*100% 3/31*100%;
