fml.define('page/huodong/gana' , ['jquery' , 'app/accordion_slider'] , function(require , exports){
	$ = require('jquery');
	$('#accordion-slider').kwicks({ max : 397 , spacing : 2 , sticky : true });  //max为图片展开的最大宽度，min和max至少要提供一个
	$('#accordion-slider li').mouseenter(function(){
		$(this).find('.focus_text').fadeIn('slow');
	}).mouseleave(function(){
		$(this).find('.focus_text').fadeOut('slow');
	});


	
});
