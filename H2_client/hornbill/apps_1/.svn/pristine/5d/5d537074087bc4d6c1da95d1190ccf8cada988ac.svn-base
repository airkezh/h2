.mask {
  display          : none;
  position         : absolute;
  left             : 0;
  top              : 0;
  right            : 0;
  bottom           : 0;
  background-color : rgba(0, 0, 0, .7);
  z-index          : 20;
}

.tip {
  display       : none;
  position      : fixed;
  width         : 80%;
  left          : 10%;
  top           : 20%;
  border        : 3px solid #b5781d;
  border-radius : 5px;
  z-index       : 20;
}

.icon-close {
  position   : absolute;
  left       : -40*@px;
  top        : -40*@px;
  width      : 108*@px;
  height     : 108*@px;
  background : url("http://d05.res.meilishuo.net/pic/_o/a5/0e/5d96a2331625ffdded04838b4300_108_109.ch.png") no-repeat;
  z-index    : 10;
}

.tip-bd {
  position           : relative;
  height             : 100%;
  border             : 3px solid #d0c5a9;
  border-radius      : 3px;
  background         : #f8eac7 url("http://d03.res.meilishuo.net/pic/_o/70/83/3690d31bb2096ad0b81f2be05995_500_530.cf.png") no-repeat;
  background-size    : contain;
  -webkit-box-sizing : border-box;
  -moz-box-sizing    : border-box;
  box-sizing         : border-box;
  text-align         : center;
}

.tip-kitty {
  position : relative;
  width             : 50%;
  padding-top       : 52%;
  margin            : 10% auto 0;
  background-repeat : no-repeat;
  background-size   : contain;
  z-index : 10;
}

//kitty 表情
.touch-kitty-bingo {
  background-image : url("http://d04.res.meilishuo.net/pic/_o/e9/62/6c8cc2172b8b17b4c9b2ae42188f_278_285.ch.png");
}

.touch-kitty-head {
  background-image : url("http://d03.res.meilishuo.net/pic/_o/93/16/b68801271f57029db4ccfb9b2e6f_254_257.ch.png");
}

.touch-kitty-ear {
  background-image : url("http://d02.res.meilishuo.net/pic/_o/03/f1/03d0c2ff79a6a2c9f7435fda841e_267_259.ch.png");
}

.touch-kitty-stomach {
  background-image : url("http://d05.res.meilishuo.net/pic/_o/44/1d/6dc7e00010ff9ad9c7aecbd8717a_264_280.ch.png");
}

.touch-kitty-paws {
  //图片尺寸不对，这里偷懒 hack 下
  padding-top      : 45%;
  background-image : url("http://d02.res.meilishuo.net/pic/_o/45/1f/f616fba974a2ff8c60849117a33c_301_248.cg.png");
}

.touch-kitty-tail {
  background-image : url("http://d04.res.meilishuo.net/pic/_o/37/9f/92296a6f716bffc8a9ad004fa40a_265_254.cf.png");
}

.tip-title {
  color     : #99591d;
  font-size : 46*@px;
}

.tip-extra-info {
  position         : absolute;
  top              : 20*@px;
  right            : 0;
  padding          : 10*@px 0 10*@px 20*@px;
  font-size        : 22*@px;
  color            : #99591d;
  background-color : #ead496;
  border-radius    : 20px 0 0 20px;
}

.tip-content {
  width       : 72%;
  margin      : 20*@px auto;
  color       : #9b6021;
  line-height : 34*@px;
  font-size   : 26*@px;
}

.tip-btn {
  display          : block;
  width            : 56%;
  height           : 78*@px;
  line-height      : 78*@px;
  margin           : 0 auto 20*@px;
  background-color : #e04d1d;
  color            : #f8eac7;
  font-size        : 38*@px;
  border-radius    : 20px;
}

/*
  微信分享
*/
.icon {
  display : inline-block;
  margin  : 40*@px 30*@px;

  span {
    display : block;
  }
}

.icon-wx, .icon-friends-circle {
  display       : block;
  width         : 130*@px;
  height        : 130*@px;
  margin-bottom : 6*@px;
}

.icon-wx {
  background : url("http://d03.res.meilishuo.net/pic/_o/02/f6/6d7d58c0c3e40de0d09ace444cda_130_133.cf.png");
}

.icon-friends-circle {
  background : url("http://d01.res.meilishuo.net/pic/_o/60/21/54eb4fdbd49f162b9cfa2d08bbda_130_133.ch.png");
}

.tip-wx {
  border-radius : 0 0 5px 5px;

  .tip-btn {
    width            : 100%;
    margin           : 0;
    font-size        : 50*@px;
    color            : #f8eac7;
    background-color : #a76e1b;
    border-radius    : 0 0 5px 5px;
  }
}
