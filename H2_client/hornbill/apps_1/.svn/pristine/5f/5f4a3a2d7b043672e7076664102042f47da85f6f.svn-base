@import "../block.less";

body{
	overflow:scroll;
	overflow-y:hidden;
	.bgc(@white);
	.w(100%);
}

img{
	.w(100%);
}

.gift{
	top: 0px;
	.w(70*@px);
	.pf();
}

.none{
	.none();
}

.score_board{
	.pf();
	left: 20px;
	img{
		.w(46px);
		.h(46px);
		.border-r(23px);
		.bgc(#FFFFFF);
	}
	z-index: 100;
}

.begin_btn{
	.w(60%);
	.block();
	.pf();
	left: 20%;
}

.logo{
	.w(134*@px);
	.h(46*@px);
	.block();
	.auto();
	left: 0;
	right: 0;
	.pf();
	bottom: 5px;
}
.score{
	.fc(@white);
	.f(30px);
	.w(100%);
	.pf();
	top:130px;
	.c();
	z-index: 3;
}

.scoreAlert{
	.fc(#FA0505);
	.f(20px);
	top: 0;
	.pf();
}

.gift_source{
	.pf();
	z-index: 2;
}

.mc{
	position: fixed;
	z-index: 1000;
	height: 100%;
	width: 100%;
	background-color: #067b37;
	top: 0;
	left: 0;
}

.scoreLittle{
	.c();
	img{
		.w(90%);
	}
}

.tree{
	.mt(-180*@px);
}

.footer{
	.w(100%);
	font-size: 0px;
	bottom: 0px;
	.pf();
	.bg_bottom{
		.w(100%);
		.zhalan{
			.w(100%);
			background:url("@{pic_url}/images/wap/wx/20141225/gan.png") no-repeat;
			background-size: 100%;
			.pt(9%);
			.pa();
			top:0;
		}
		background:url("@{pic_url}/images/wap/wx/20141225/bg_bottom.png") no-repeat;
		background-size: 100%;
		.pt(19%);
		// .pr();
	}
	img{
		.pa();
		bottom: 5px;
		width: 20%;
	}
}
.role{
	position: fixed;
	width: 25%;
	bottom: 0px;
	right: 0px;
}

.role_content{
	.pf();
	width: 100%;
	height: 100%;
	z-index: 300;
	top: 0px;
	.pt(100px);
	.c();
	img{
		width: 95%;
	}
	background-color: rgba(0,0,0,0.8);
}

.basket{
	.w(165*@px);
	.h(176*@px);
	.pf();
	background:url("@{pic_url}/images/wap/wx/20141225/car.png") no-repeat;
	background-size: 100%;
}

.sky{
	img{
		.pt(70px);
	}
}
.share-box{.pa;.w(100%);left:0;bottom:20%;text-align: center;
	a{display: inline-block;.w(32%);.pt(9.6%);background:url("http://d05.res.meilishuo.net/img/_o/70/7a/53c02a237c0a296033d85a89e88e_161_49.ch.png");background-size: 100%;position: static;.ml(2%);
	&:last-child{background:url("http://d06.res.meilishuo.net/img/_o/8a/c5/8495f4115b98174a27fbb33af1d4_161_49.cg.png");background-size: 100%}
	}
}
.btn-again{.pa;.w(32%);.pt(9.6%);left:50%;bottom:20%;.ml(-16%);background:url("http://d06.res.meilishuo.net/img/_o/8a/c5/8495f4115b98174a27fbb33af1d4_161_49.cg.png");background-size: 100%}
