@import "../../block.less";

.banner {
  .pr;
  background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/late1.jpg") no-repeat top center; background-size: 100%;
  .pt(86%);
  .bannerText {
    .f(11px); .fc(#6a3d3a); font-weight: bold; display: inline-block; vertical-align: middle;
  }
  .countdown {
    display: none;
    .pa; top:2%; .w(100%);  text-align: center;

    .timerArea {display: inline-block;.w(50%); .pr; .pt(9%); vertical-align: middle;;display: inline-block;background: url("@{pic_url}/images/wap/activity/promotion/11/timerBg.png") no-repeat top center; background-size: 100%;}
    dl dd {.pa; top:16.5%;}
    dl dd span{.f(14px); .fc(#fff)}
    #day0 { left:3%}
    #day1 {left:7%}
    #hour0 {left:29%}
    #hour1 {left:33%}
    #minute0 {left:59%}
    #minute1 {left:63%}
    #seconds0 {left:81.5%}
    #seconds1 {left:86%}
  }
}


.main {
  .pr;
  background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/mmm.jpg") no-repeat top center; background-size: 100%;
  .pt(162%);
  .couponArea {
    .pa; .w(100%); top:28%;.clearfix;
  }
  .coupon {
    .pr;.w(80%); .tl; .ml(10%); .mt(3.5%);
    .couponText {.pa;.w(40%); top:70%; right: 4%; .f(9px); .fc(#6a3d3a); text-align: center }
  }

}

.couponBtn {
  .pa; width:40%; top: 33%; right: 4%;
}


.checkBox{
  .shade{.pf;top:0;left:0;z-index:10;.w(100%);.h(100%);background:rgba(0,0,0,.5);}
  .captchaImgBox {z-index: 1000; left:12%;.pf; top:25%;.w(76%); background: #fff;
    .imgTop {
      .w(100%); .pt(35%); .pr;
      background: url("@{pic_url}/images/wap/activity/promotion/captcha/imgCaptchaTop.png") no-repeat top center; background-size: 100%;
      input {.pa; .f(10px);.w(30%); top:50%; height: 30%; left:14%; border: 1px solid #d9d9d9}
      .captchaImg {.pa; .w(26%); right:25%; top:50%}
      .newImg {.pa; .w(15%); .pt(10%);right: 9%; top:58%; border:0px solid red}
    }
    .imgCenter {
      display: none;.w(100%); .pt(10%); background: url("@{pic_url}/images/wap/activity/promotion/captcha/imgCaptchaError.png") no-repeat top center; background-size: 100%;
    }
    .imgBottom {
      .w(100%); .pt(18%); .pr;
      background: url("@{pic_url}/images/wap/activity/promotion/captcha/imgCaptchaBottom.png") no-repeat top center; background-size: 100%;
      .imgCaptchaCheck { .pa;border:0px solid red;.w(50%); top:0%; right:0; .pt(18%);}
      .imgCaptchaClose { .pa;border:0px solid red;.w(50%); top:0%; left:0; .pt(18%);}
    }

  }




  .captchaMesBox {
    z-index: 1000; .pf; left:12%; top:25%; .w(76%); background: #fff;
    .mesTop {
      .w(100%);  .pt(35%); .mb(2%);;background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/mesTop2.png") no-repeat top center; background-size: 100%;
      .getMesCaptcha {width: 86%; .ml(7%); .pt(5%); .pb(5%); border: 1px solid #ff94b7;color: #ff95b6; text-align: center; border-radius: 4% }
    }
    .mesCenter {
      display: none;.w(100%); .pt(10%); background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/mesError.png") no-repeat top center; background-size: 100%;
    }
    .mesBottom {
      .w(100%); .pt(30%); .pr; .mt(2%);
      .captchaInput {display: block; .pa; top:0; left:7%;.w(50%); .h(30%); border: 1px solid #e6e5e6; border-radius: 4%}
      .captchaCheck {.pa; top:0; right: 7%; .w(32%); padding: 3% 0 ; border-radius: 4%; background-color:#e6e5e6;text-align: center; color: #fff }
    }
  }


}

.checkImage{
  .pa;top:20px;right:20*@px;.w(50%);
  span{.il-block;.right;.cursor;}
}

.remind {
  .pa;top:85%; .pt(10%);.w(80%);left:10%;background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/remind.png") no-repeat top center; background-size: 100%;
  .remind_switch {.w(23%); .pa; top:13%; right:7%;.pt(8%); border: 0px solid #003dff;}
  .remind_o {background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/remind_o.png") no-repeat top center; background-size: 100%;}
  display: none;
}

.zhijian {
  .pa;top:9.5%; .pt(24%);.w(76%);left:12%;background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/zhijian_new.png") no-repeat top center; background-size: 100%;
  display: none;
}

.tips {
  .pr;.pt(32%);.w(100%);background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/late3.jpg") no-repeat top center; background-size: 100%;
}

.get_success {
  .pf; top:30%; .w(90%); .pt(60%); z-index: 1000;left:5%;
  background: url("@{pic_url}/images/wap/activity/promotion/11/coupon/get_succ.jpg") no-repeat top center; background-size: 100%;
  .sure_get_succ {.pa; top:55%; left:26%; .w(48%);.pt(12%); }
  .close_get_succ {.pa; top:4%; right:5%; .w(15%);.pt(9%);}
}
.shade{.pf;top:0;left:0;z-index:10;.w(100%);.h(100%);background:rgba(0,0,0,.5);}