@import "wx.less";
html{.f(10*@f);}
body{.bgc(#fff);}
.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-35px);
	}
	&[status="tap"]{
		background:0 none;	
		/*
		&:before{
			content:"上拉看更多..."	
		}
		*/
	}
	&[status="stop"]{
		background:0 none;	
		.h(2px);
		&:before{.i_block;
			content:"没有更多内容了...";
		}
	}
}
.goTop();

.top_head{ .h(3.8rem); .l(5rem); .border-bd9(#dadada); .tr;.pf;top:0;left:0;.w(100%);z-index: 2;.bgwhite;
