.height-mid(){
	top: 50%;
	-webkit-transform: translateY(-50%);
	transform:translateY(-50%);
}

body{
//	height: 100%;
	background: #f5f5f5;
}

.sepline{
	margin: 1.2rem auto;
	height: 0.2rem;
}
.appeal_container{
	a.button{
		display: inline-block;
		padding: .6rem 1rem;
		min-width: 6rem;
		font-size: 1.2rem;
		border-radius: .2rem;
		color: #666666;
		text-align: center;
		position: relative;
		margin: 0 .1rem;
		.height-mid;
		&.button-red{
			border: .1rem solid #ff6666;
			background: #ff6666;
			color: #ffffff;
		}
		&.button-light{
			border: .1rem solid #dddddd;
			background: none;
			color: #666666;
		}
	}
	.mls_arbitrary {
		.arb_title {
			line-height: 2.2rem;
			color: #ff6699;
			text-align: center;
			font-size: 1.3rem;
			padding: 1rem;
		}
		.arb_item {
			border-top: 1px solid #dddddd;
			border-bottom: 1px solid #dddddd;
			line-height: 2rem;
			padding: .5rem 1.4rem;
			background: #ffffff;
			margin-bottom: 1.4rem;
			.title {
				font-size: 1.3rem;
				color: #666666;
				b {
					color: #ff6699;

				}
			}
			.statetext {
				display: block;
				width: 100%;
				height: 4rem;
				border: 1px solid #dddddd;
				margin: .4rem 0;
			}
			.certificate {
				width: 100%;
				height: 5.5rem;
				//				background: red;
				.img_list {
					.pic {
						.w(50px);
						.h(50px);
						.left;
						.mr(5px);
						.mb(5px);
						.border-r(@radius:5px);
						.hidden;
					}
					.addBtn {
						.w(48px);
						.h(48px);
						background:url("@{pic_url}/images/hirra/upload-cross.png") no-repeat;
						background-size:100%;
					}
				}
				.certimg {
					width: 5.4rem;
					height: 5.4rem;
					border-radius: .4rem;
					background: #f0f0f0;
					overflow: hidden;
					float: left;
					margin-right: 1rem;
					&.certimgBtn {
						background: none;
					}
					img {
						width: 100%;
					}
				}
			}
			p.tip {
				color: #999999;
				line-height: 2.2rem;
				font-size: 1.3rem;
			}

			.arbinput-item {
				margin: .5rem 0;
				.rbinput-label {
					display: inline-block;
					vertical-align: middle;
					font-size: 1.3rem;
					padding: 0 1rem;
				}
				input {
					display: inline-block;
					vertical-align: middle;
					width: 21.5rem;
					height: 4rem;
					border: 1px solid #dddddd;
					border-radius: .4rem;
					position: relative;
				}
			}
		}
		.arb_btn {
			text-align: center;
			height: 4rem;
			position: relative;
		}
	}
}
.hotline{
	margin-top: 0px!important;
}