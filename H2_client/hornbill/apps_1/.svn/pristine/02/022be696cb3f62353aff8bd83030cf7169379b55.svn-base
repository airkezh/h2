@import "block.less";
html,body{ .f(26*@px); }
.content{
	.condition{ 
		.pl(40*@w); .pt(20*@w); .pr(40*@w); .bgc(#efefef);
		border-top: 1px solid #cec9c6;
		
		p{ .l(150%); .fc(#81747d); }
		h3{ .f(26*@px); .fb; .l(200%);  .fc(#595055);}
	}
	form{ 
		input{ .block; border:none; }
		.user_info{ 
			border-top: 1px solid #cec9c6; border-bottom: 1px solid #cec9c6; .bgwhite;
			input{ .h(88*@px); .pl(40*@w); .w(560*@w);} 
			.line{ .h(0); .ml(40*@w); border-bottom:1px solid #e5e5e5; }
		}
		.btn{
			.pl(20*@w); .pr(20*@w); 
			input,button{ .h(78*@px); .border-r; .mt(20*@px); .w(100%);}
			#upload_btn{ 
				.border-r; 
				.bgwhite; 
				border: 1px solid #988d93; 
				color:#988d93;
				span{
					background: url(http://i.meilishuo.net/css/images/club/daren/upload_icon.png) no-repeat;
					background-size: auto 100%;
					.pl(1.8em);
				}
			}
			#submit_btn{ .bgc(#ff94b8); color: #ffffff; .mb(20*@px);}
		}
		p.error_txt{ color: red; .c(); .l(120%); }
		.photo{ margin: 20*@px auto; .c; }
		.warn{ border:1px solid @red; }
	 }
}
