<%#onSale/shareJs.html%>
<%
	var status=this.status || 0;
	var info=this.info.info || [];
%>
<div class="wrap">
	<section class="header <%= status==2 ? 'header2' : '' %>">
		<div class="box">
			<% if(status==2){ %>
				<h3>恭喜你！</h3>
				<p>你已成功开启T恤礼包！</p>
			<% }else{ %>
				<h3>分享成功</h3>
				<p>输入并验证手机号领取T恤礼包</p>
			<% } %>
		</div>
		<img src="http://d05.res.meilishuo.net/img/_o/bf/83/ef5d436943e68706ba2bb299b8ef_640_560.cf.png" alt="">
	</section>
	<% if(status){ %>
		<ul class="list">
			<% info && info.map(function(item){ %>
				<li>
					<img src="<%=item.headimgurl%>" alt="">
					<p><%=item.nickname%></p>
				</li>
			<% }); %>
			<% for(var i=0,len=info.length;i<3-len;i++){ %>
				<li><img src="http://d06.res.meilishuo.net/img/_o/db/c3/23f14c2db179653b08bf15f9ef46_100_100.ch.png" alt=""></li>
			<% } %>
		</ul>
	<% } %>
	<section class="phone-box">
		<div class="box">
			<input type="tel" class="phone" placeholder="输入手机号" id="phoneInput">
		</div>
		<div class="box">
			<input type="tel" class="code" placeholder="输入验证码" id="codeInput">
			<span class="get-code" id="getCode">获取验证码</span>
			<span class="countdown" id="countdown">59s重新获取</span>
		</div>
		<p class="tips">*填写并验证手机号领取T恤礼包</p>
		<p class="popup" id="popup">您输入的验证码有误</p>
	</section>
	<a href="javascript:;" class="btn" id="btn">领取T恤礼包</a>
	<div class="onsale-dialog" id="onsaleDialog"></div>
	<%#onSale/rules.html%>
</div>
<script>
	fml.vars.useid = <%= this.user_id %>;
	fml.vars.from_id = <%= this.from_id %>;
</script>
<%! $_ENGINE_SELF.callFn("useModule")("<<<_use:
	fml.use('wap/page/onSale/phone');
_use:", this._JSstack, this._JSmods); %>
<%# foot.html%>