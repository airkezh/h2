.main { .w(100%); .hidden;.pr; .pb(40*@w);
	.act_poster;
	.pic_box { .clearfix;
		.small_pic { .pa; .ml(5px); }
		figure { .bgwhite;
			figcaption { .pt(14*@px); .pb(14*@px); .ml(14*@px); .mr(14*@px); .border-tc(dotted); .mt(10*@px); .pr;
				.face { .h(44*@px); .w(44*@px); .left; }
				p { .ml(56*@px); }
				.txt { .gray; .l(28*@px); .h(56*@px); .hidden;}
				.approve { background:url("@{pic_url}/images/wap/activity/may_sale/heart_red.png") no-repeat; }
				.approved { background:url("@{pic_url}/images/wap/activity/may_sale/heart_pink.png") no-repeat; }
				.approve, .approved { background-size: 100%; .h(88*@px); .w(135*@px); .pt(22*@px);
					.white; .c; .l(32*@px); .pa; top: -75*@px; right: 8*@px; 
					span { .block; }
					.nums { .f(32*@px); }
				}
			}
		}
	}
}
