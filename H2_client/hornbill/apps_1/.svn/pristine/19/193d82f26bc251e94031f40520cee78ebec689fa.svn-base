@import "../common/atom.less";
@import "../common/dootablock";
@import "../refund/order_detail";

.bg_icons{background:url("@{pic_url}/images/store/mls_store131110_1.png") no-repeat;}
.title_icon{background:url("@{pic_url}/images/doota/refund_apply_icon.png") no-repeat;}

.icon_info{.w(1002px);.auto;
	.h_icon{.title_icon;.w(164px);.h(34px);.mt(23px);.mb(22px);}
}
.wrong_tip{.red;}
.curr_status_text{.ml(20px);}


.appeal_nav{.w(1002px);.auto;.mb(20px);
	.m5{.ml(2px);.mr(2px);}
}

.order_area{
	.container{
		.w(1002px);
		margin:20px auto;
		position: relative;
		border-top: 2px solid #ff6699;
		background: #ffffff;
		padding-bottom: 120px;
		.clearfix;

	}
}

.prove_info{
	.w(620px);
	padding: 20px;
	padding-top: 15px;
	position: relative;
	float: left;
	.prove_item{
		.clearfix;
		margin-top: 10px;
		.labels{
			display:block;
			float: left;
			width: 75px;
			color: #999999;
			line-height: 23px;
			span{
				color: #ff6699;
			}
		}
		.item_content{
			width: 540px;
			float: left;
			position: relative;
			.desc_area{
				width: 368px;
				height: 90px;
				border: 1px solid #d2d2d2;
				padding: 10px;
				float: left;
				overflow: hidden;
				resize: none;
			}
			.prove_list{
				.clearfix;
				.uploadBtn{
					width: 70px;
					height: 70px;
					margin-right: 10px;
					background: url("http://i.meilishuo.net/css/images/addBtnImg.png") no-repeat;
					float: left;
					position: relative;
					.img_wrapper{
						width: 70px;
						height: 70px;
						position: relative;
						img{
							width: 70px;
							height: 70px;
						}
					}
					span.upload_btn{
						display: block;
						width: 70px;
						height: 70px;
						position: absolute;
						top: 0px;
						left: 0px;
					}
					.ntBdaolpu{
						border: none;
						input{
							margin: 0px!important;
							width: 70px;
							height: 70px;
						}
					}
				}
			}
			.tipsul{
				margin-left: 15px;
				padding: 10px 0px;
				padding-bottom: 5px;
				li{
					list-style: disc;
					line-height: 20px;
					color: #999999;
				}
			}
			input{
				width: 130px;
				height: 22px;
				border: 1px solid #d2d2d2;
				vertical-align: middle;
			}
		}
		.error{
			margin-left: 75px;
			color: #ff6699;
			width: 540px;
			line-height: 25px;
			//			display: none;
		}
		.no-margin{
			margin: 0px;
		}
	}
}

.buttons_wrap{
	.w(100%);
	position: relative;
	padding-top: 14px;
	.clearfix;
	.button{
		display: block;
		padding: 0px 10px;
		height: 30px;
		line-height: 30px;
		text-align: center;
		float: left;
		margin-right: 10px;
		min-width: 110px;
		&.button_red{
			border: 1px solid #ff6699;
			background: #ff6699;
			color: #ffffff;

		}
		&.button_border{
			border:1px solid #ff6699;
			background: none;
			color: #ff6699;
		}
		&.button_light{
			border: 1px solid #999999;
			color: #999999;
			background: none;
		}
	}
}
.ml75{
	margin-left: 75px;
}

.imgUpload {position:relative;
	.close{position:absolute;top:0;right:0;z-index:3;.w(18px);.h(18px);.i_block;background:url("@{pic_url}/images/doota/remove_pic.png") no-repeat}

}