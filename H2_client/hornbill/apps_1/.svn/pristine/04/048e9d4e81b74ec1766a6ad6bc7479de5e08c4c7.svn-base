.base(){
	.closeBtn, .cleanPicBtn{
		.h(10px);.w(10px);.border-r(5px);.cursor;.bgc(#dacbd1);.c;.white;.none;.c;.l(10px);.pa;
	}
}
.www(){
	.big_online,.big_offline,.big_leave,.sl_online,.sl_offline,.sl_leave,.i_black,.i_now,.i_history,.i_public,
	.i_smile,.i_upload,.i_screen,.searchBtn{
		background: url("@{pic_url}/images/wap/web/im/im_ico2.png") no-repeat; _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/wap/web/im/im_ico2.png', sizingMethod='scale'); _background-image:none;.pl(14px);
	}
	.sl_online{.bp(0,-76px);}
	.sl_offline{.bp(0,-121px);}
	.sl_leave{.bp(0,-99px);}
	.i_black{.bp(0,-146px);}
	.i_now{.bp(-59px,10px);}
	.i_history{.bp(-96px,10px);}
	.i_public{.bp(-133px,10px);}
	.i_screen{.bp(-105px,-34px);}
	.i_smile{.bp(-30px,-34px);}
	.i_upload{.bp(-68px,-34px);}
	.big_online{.bp(0,-1px);}
	.big_offline{.bp(0,-50px);}
	.big_leave{.bp(0,-26px);}
	.searchBtn{.bp(-32px,2px);}
	.base;
}
.simple(){
	.simple_online,.simple_offline,.simple_leave,.i_smile,.i_upload, .closeFrame{
		background: url("@{pic_url}/images/wap/web/im/im_ico5.png") no-repeat; _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='@{pic_url}/images/wap/web/im/im_ico2.png', sizingMethod='scale'); _background-image:none;.pl(14px);
	}
	.i_smile{.bp(-30px,-30px);}
	.i_upload{.bp(-68px,-30px);}
	.simple_online{.bp(0,-1px);}
	.simple_offline{.bp(0,-50px);}
	.simple_leave{.bp(0,-26px);}
	.closeFrame{.bp(-33px,-75px);}
	.base;
	.closeBtn{top: 50%;.mt(-5px);right: 10px;z-index: 1;}
}
