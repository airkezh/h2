* {
  -webkit-box-sizing : border-box;
  -moz-box-sizing    : border-box;
  box-sizing         : border-box;
}

html, body, #danmu {
  height     : 100%;
  max-height : 100%;
  width      : 100%;
  overflow   : hidden;
}

body {
  position : fixed;
  width    : 100%;
  top      : 0;
  bottom   : 0;
}

html {
  font-size : 62.5%; /* 10/16 = 62.5% */
}

@media (-webkit-min-device-pixel-ratio : 1.5) {
  html {
    font-size : 50%; /* 8/16 = 50% */
  }
}

@media (-webkit-min-device-pixel-ratio : 2) {
  html {
    font-size : 43.75%; /* 7/16 = 43.75% */
  }
}

@media (-webkit-min-device-pixel-ratio : 3) {
  html {
    font-size : 43.75%; /* 5/16 = 31.25% */
  }
}

#danmu {
  position                : absolute;
  top                     : 0;
  left                    : 0;
  width                   : 100%;
  -webkit-background-size : contain;
  background-size         : contain;
  overflow                : hidden;

  .ft {
    position : fixed;
    bottom   : 1%;
    left     : 0;
    width    : 100%;
    height   : 20%;
  }

  .wrap {
    position : relative;
    width    : 90%;
    height   : 100%;
    margin   : auto;
  }
}

.danmu-day {
  background : #cf2523 url(@bgDay) no-repeat center center;
}

.danmu-night {
  background: #28083e url(@bgNight) center center no-repeat;

  .ft .btn{
     color : #310459;
  }

  .inputs .btn-on{
    background-color : #feec22;
  }

  .ft .btns .btn{
      background-color : #feec22;
      color            : #310459;
    }
}

#stage {
  position      : relative;
  height        : 75%;
  margin-bottom : 5%;

  div {
    position : absolute;
    left     : 100%;
  }
}

/*------------------------------------*\

    弹幕中显示的信息
    bg-color: #3c453a

\*------------------------------------*/
[class^="bullet"] {
  position          : relative;
  height            : 5.8rem;
  line-height       : 5.8rem;
  padding           : 0 5.4rem 0 8.4rem;
  font-size         : 2.6rem;
  color             : #fff;
  background-color  : rgb(60, 69, 58);
  background-color  : rgba(60, 69, 58, .8);
  border-radius     : 2.5rem;
  text-align        : center;
  white-space       : nowrap;
  z-index           : 0;
  -webkit-transform : translateZ(0);
  -moz-transform    : translateZ(0);
  -ms-transform     : translateZ(0);
  -o-transform      : translateZ(0);
  transform         : translateZ(0);
}

/*
  在代码中有特殊用途
*/
#bullet-signal {
  position   : absolute;
  left       : -100%;
  visibility : hidden;
}

//自己发的子弹
.bullet-m {
  color            : #553738;
  background-color : #fff;
  z-index          : @mineZIndex;

  span {
    position : relative;
    left     : 3rem;
  }
}

//气泡
[class^="balloon"] {
  position                : absolute;
  left                    : 2rem;
  top                     : -1rem;
  -webkit-background-size : contain;
  background-size         : contain;
}

.balloon-1 {
  width            : 4.8rem;
  height           : 4.8rem;
  background-image : url(@balloon1);
}

.balloon-2 {
  width            : 4.8rem;
  height           : 3.5rem;
  background-image : url(@balloon2);
}

.balloon-3 {
  width            : 5.8rem;
  height           : 4.4rem;
  background-image : url(@balloon3);
}

.balloon-m {
  width            : 8.2rem;
  height           : 6.2rem;
  background-image : url(@balloonM);
}

/*------------------------------------*\

    红包
    HACK：
    bullet 在移动过程中会设置 transform，下方设置的 transform 会被覆盖。
    为了 JS 代码简单，这里设置了子元素 span

\*------------------------------------*/
.bullet-b {
  width            : 14rem;
  height           : 12.7rem;
  z-index          : @bonusZIndex;
  background-color : transparent;

  i {
    position                : absolute;
    left                    : 8.5rem;
    background-repeat       : no-repeat;
    background-position     : center center;
    -webkit-background-size : contain;
    background-size         : contain;
  }

  span {
    position                : absolute;
    left                    : 0;
    width                   : 8.9rem;
    height                  : 12.7rem;
    background              : url(@bonus) no-repeat center center;
    -webkit-background-size : contain;
    background-size         : contain;
  }
}

/**
* 红包点击过一次，就不再显示『点击我有惊喜』
*/
.global-bullet-clicked .bullet-b i {
  display : none;
}

//红包被打开
.bullet-b-opened {
  visibility : hidden;
}

.bonus-0 {
  i {
    top              : 5rem;
    background-image : url(@bonusSurprise1);
    width            : 11.3rem;
    height           : 5.4rem;
  }
}

.bonus-1 {
  i {
    top              : 6rem;
    background-image : url(@bonusSurprise1);
    width            : 11.3rem;
    height           : 5.4rem;
  }

  span {
    -webkit-transform : rotate(20deg);
    -moz-transform    : rotate(20deg);
    -ms-transform     : rotate(20deg);
    -o-transform      : rotate(20deg);
    transform         : rotate(20deg);
  }
}

.bonus-2 {
  i {
    top              : -1rem;
    width            : 14.2rem;
    height           : 7.3rem;
    background-image : url(@bonusSurprise2);
  }

  span {
    -webkit-transform : rotate(-20deg);
    -moz-transform    : rotate(-20deg);
    -ms-transform     : rotate(-20deg);
    -o-transform      : rotate(-20deg);
    transform         : rotate(-20deg);
  }
}

//TODO 信息
#error-msg {
  position         : absolute;
  top              : 0;
  display          : none;
  width            : 100%;
  height           : 3.7rem;
  line-height      : 3.7rem;
  margin-bottom    : 1rem;
  font-size        : 2.1rem;
  color            : #fff;
  background-color : rgb(89, 70, 71);
  background-color : rgba(89, 70, 71, .8);
  border-radius    : .3rem;
  text-align       : center;
}

/*------------------------------------*\

    活动规则与分享按钮

\*------------------------------------*/
.ft {
  -webkit-transform : translateZ(0);
  -moz-transform    : translateZ(0);
  -ms-transform     : translateZ(0);
  -o-transform      : translateZ(0);
  transform         : translateZ(0);

  .btn {
    display    : inline-block;
    color      : #cf2523;
    text-align : center;
  }

  .btns {
    width     : 100%;
    height    : 50%;
    margin    : auto;
    font-size : 0;

    .btn {
      width            : 48%; //210
      height           : 4.5rem;
      line-height      : 4.5rem;
      color            : #cf2523;
      background-color : #efb326;
      font-size        : 2.3rem;
      border-radius    : 1.8rem;
      vertical-align   : top;
    }

    .invite .btn {
      width : 100%;
    }
  }
}

.invite {
  display     : inline-block;
  width       : 48%;
  margin-left : 2%;

  p {
    color       : #fff;
    font-size   : 1.8rem;
    line-height : 2;
    text-align  : center;
    white-space : nowrap;
  }
}

/*------------------------------------*\

    输入框及发射按钮

\*------------------------------------*/
.inputs {
  height     : 40%;
  margin-top : 3%;

  input {
    width          : 75%;
    height         : 5rem;
    padding        : 1rem;
    font-size      : 2.3rem;
    border         : .1rem solid rgba(0,0,0,.28);
    border-radius  : .5rem;
    vertical-align : top;
  }

  .btn {
    width            : 20%;
    height           : 5rem;
    line-height      : 5rem;
    margin-left      : 2%;
    font-size        : 2.5rem;
    border-radius    : .5rem;
    background-color : #c1b7be;
  }

  .btn-on {
    background-color : #efb326;
  }
}

/*------------------------------------*\

     规则说明

\*------------------------------------*/
#rule {
  position         : absolute;
  top              : 0;
  left             : 0;
  right            : 0;
  bottom           : 0;
  display          : none;
  height           : 100%;
  background-color : rgb(0, 0, 0);
  background-color : rgba(0, 0, 0, .8);
  z-index          : @ruleZIndex;

  .bd {
    height : 100%;
  }

  .content {
    box-sizing              : border-box;
    width                   : 92%;
    max-height              : 70%;
    margin                  : 25% auto 0;
    padding                 : 3.5rem 4rem;
    color                   : #fff;
    background-color        : #ce320b;
    border-top-left-radius  : 1.6rem;
    border-top-right-radius : 1.6rem;
    font-size               : 1.7rem;
    line-height             : 1.2;
    overflow                : scroll;
  }

  h3 {
    margin-bottom : 1.2rem;
    font-size     : 2.5rem;
  }

  h4 {
    margin    : 3rem auto .8rem;
    font-size : 2rem;
    color     : #f3cb8d;
  }

  h4:before {
    content        : "●";
    margin-right   : 1.2rem;
    font-size      : 1.3rem;
    vertical-align : middle;
  }

  ol {
    margin-left : 2.5rem;
  }

  .btn {
    width                      : 92%;
    min-height                 : 7rem;
    height                     : 10vh;
    line-height                : 7rem;
    line-height                : 10vh;
    margin                     : auto;
    font-size                  : 2.8rem;
    color                      : #fff;
    background-color           : #af2a0a;
    border-bottom-left-radius  : 1.6rem;
    border-bottom-right-radius : 1.6rem;
    text-align                 : center;
  }
}

/*------------------------------------*\

     弹层
     Flex 支持情况：http://caniuse.com/#feat=flexbox

     Old flexbox:
        display    : box;
        box-pack   : center;
        box-orient : vertical;

\*------------------------------------*/
#panel {
  position         : fixed;
  top              : 0;
  left             : 0;
  right            : 0;
  bottom           : 0;
  display          : none;
  color            : #fff;
  background-color : rgb(0, 0, 0);
  background-color : rgba(0, 0, 0, .8);
  z-index          : @panelZIndex;

  .bd {
    display                 : -webkit-box;
    display                 : -moz-box;
    display                 : -ms-flexbox;
    display                 : -webkit-flex;
    display                 : flex;
    -webkit-box-pack        : center;
    -moz-box-pack           : center;
    -ms-flex-pack           : center;
    -webkit-justify-content : center;
    justify-content         : center;
    -webkit-box-orient      : vertical;
    -webkit-flex-direction  : column;
    flex-direction          : column;
    position                : relative;
    width                   : 90%;
    height                  : 100%;
    max-height              : 47.4rem;
    margin                  : 15% auto 0;
    background-position     : center center;
    background-repeat       : no-repeat;
    -webkit-background-size : contain;
    background-size         : contain;
    text-align              : center;
    overflow                : hidden;
  }

  .btns {
    width      : 60%;
    margin     : 1rem auto 0;
    text-align : center;
  }

  .btn {
    display       : inline-block;
    width         : 45%;
    height        : 5.2rem;
    line-height   : 5.2rem;
    font-size     : 2.8rem;
    border-radius : 2rem;
    text-align    : center;
  }
}

#panel-title {
  height     : 15%;
  margin-top : 25rem;
  font-size  : 4rem;
}

.ios #panel-title {
  margin-top : 10rem;
}

.panel-success #panel-title,
.panel-fail #panel-title {
  margin : 0;
}

#panel-desc {
  height    : 10%;
  font-size : 2.1rem;
}

#hide-panel-btn {
  color            : #ffbeae;
  background-color : #a42000;
}

#share-panel-btn {
  margin-left      : 3%;
  color            : #a42000;
  background-color : #fff;
}

.panel-success .bd {
  background-image : url(@panelSuccessBg);
}

.panel-fail .bd {
  background-image : url(@panelFailBg);
}

@media screen and (max-width : 500px) {
  #panel .btn {
    font-size : 1.8rem;
  }
}

@media screen and (max-width : 400px) {
  #panel-title {
    height    : 10%;
    font-size : 3rem;
  }

  #panel-desc {
    height    : 5%;
    font-size : 1.6rem;
  }

  #panel .btn {
    width  : 10rem;
    height : 5rem;
  }
}

/**
* 微信分享提示
*/
#wx-tips {
  display                 : none;
  position                : fixed;
  top                     : 0;
  bottom                  : 0;
  width                   : 100%;
  background              : url(@wxTipBg) no-repeat top center;
  -webkit-background-size : cover;
  background-size         : cover;
  z-index                 : @panelZIndex;
}

#welcome2015 {
  position         : absolute;
  top              : 0;
  left             : 0;
  right            : 0;
  bottom           : 0;
  height           : 100%;
  width            : 100%;
  background-color : rgba(0, 0, 0, .5);
  text-align       : center;
  z-index          : @welcomeZIndex;
  visibility       : hidden;

  img {
    position   : relative;
    top        : 50%;
    margin-top : -50%;
    width      : 100%;
  }
}

#newYearTime{
  position        : absolute;
  top             : 0;
  left            : 0;
  right           : 0;
  bottom          : 0;
  height          : 90%;
  width           : 100%;
  text-align      : center;
  z-index         : @welcomeZIndex;
  transition      : background-image .3s ease-in;
  background      : rgba(0, 0, 0, .5) no-repeat center;
  background-size : 500/640*100%;
  display         : none;

  &.t10 { background-image: url(@t10); }
  &.t9 { background-image: url(@t9); }
  &.t8 { background-image: url(@t8); }
  &.t7 { background-image: url(@t7); }
  &.t6 { background-image: url(@t6); }
  &.t5 { background-image: url(@t5); }
  &.t4 { background-image: url(@t4); }
  &.t3 { background-image: url(@t3); }
  &.t2 { background-image: url(@t2); }
  &.t1 { background-image: url(@t1); }
  &.t0 { background-image: url(@t0); }

}