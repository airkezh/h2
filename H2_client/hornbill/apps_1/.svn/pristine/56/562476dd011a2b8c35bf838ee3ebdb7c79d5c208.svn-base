@import "../common/block.less";
@import "../common/window.less";
@import "../common/dootablock";
@bStyle: 1px solid #ddd;
.doota;
.mb12_f {
    .mb(12px);
}

.complain {
    .doota > .frame;
    &_content {
        &_box {
            .pb(50px);
        }
    }
    &_title {
        .bgc(#ece8e9);
        .clearfix;
        border: @bStyle;
        .l(44px);
        .h(44px);
        h3 {
            .left;
            .tl;
            .pl(18px);
            .fn;
        }
        p {
            .right;
            .red;
            .mr(20px);
        }
    }
    &_info {
        .pl(40px);
        .pr(50px);
        .mt(0);
        .clearfix;
        .complain_user, .im_service {
            .mt(30px);
        }
        .im_service {
            .hidden;
            .im_msg {
                .w(540px);
                .ml(118px);
                border: 1px solid #F69;
                .pr;
                .l(16px);
                .border-r(10px);
                padding: 10px 24px 14px 20px;
            }
            .im_time {
                .tr;
                .pr(10px);
                .red;
            }
            .im_cont {
                .break-all;
                .pb(10px);
            }
            .img_list {
              .h(100px);
              li {
                .left();
                .pr(10px);
                .w(100px);
                .h(100px);
                img {
                  .w(98px);
                  .h(98px);
                  border:1px solid #e6e6e6;
                }
              }
            }
        }
        .special {
            .pa;
            top: -13px;
            .bgc(@white);
        }
        .red_sp {
            .red;
            right: 50px;
        }
        .gray_sp {
            .fc(#ddd);
            left: 50px;
        }
        .sucess {
            .none;
            .red;
            .f(14px);
        }
    }
    &_msg {
        border: @bStyle;
        .pr;
        .l(16px);
        .w(540px);
        .border-r(10px);
        padding: 10px 24px 14px 20px;
        .order_id {
            .mb(10px);
        }
        .order_cont {
            .break-all;
        }
        .img_list {
            .clearfix;
            .h(100px);
            .mt(6px);
            .img_detail {
                .left;
                .w(98px);
                .h(98px);
                .border-1(@color: #e6e6e6);
                .mr(9px);
                img, a {
                    .w(98px);
                    .h(98px);
                    .block;
                    .cursor;
                }
            }
        }
    }
}

.complain_cont {
    .l(20px);
    .mt(20px);
    .w(550px);
    .none;
    .complain_list {
        .ml(70px);
        .w(480px);
        .clearfix;
        span {
            .left;
            .w(140px);
            .mr(20px);
            .mb(10px);
        }
    }
    textarea {
        .ml(8px);
        min-height: 86px;
        max-width: 530px;
        .w(530px);
        .gray;
        .f(12px);
    }
    .text_num {
        .tr;
    }
    .complain_pic,
    .complain_txt {
        .l(24px);
    }
    .complain_pic {
        p {
            .w(70px);
            .tr;
        }
    }
    .upload_btn {
        .w(90px);
        .h(24px);
        .l(24px);
        .mr(10px);
        .c;
        .bgc(#f2f2f2);
        .border-1(@color: #c5c5c5);
        .border-r(@radius: 3px);
        .left;
    }
    .imgUpload {
        .left;
        .w(98px);
        .h(98px);
        .border-1(@color: #ccc);
        margin: 10px 0 0 10px;
        img {
            .w(98px);
            .h(98px);
        }
    }
    input {
        .border-n;
    }
}

.img_wrapper {
    .mt(-20px);
    .mb(10px);
    .imgUpload {
        .left;
        .w(98px);
        .h(98px);
        .border-1(@color: #e6e6e6);
        .mr(9px);
        position: relative;
        .close {
            position: absolute;
            top: 0;
            right: 0;
            z-index: 3;
            .w(18px);
            .h(18px);
            .i_block;
            background:url("@{pic_url}/images/doota/remove_pic.png")
        }
        img,
        a {
            .w(98px);
            .h(98px);
            .block;
            .cursor;
        }
    }
}

.img_wrapper.no-mt {
    .mt(0px);
}

.footer();
