@import "../block.less";
html,body{.f(10*@f);.bgwhite;}
img{ width: 100%; .block; }
.win_top {.pr;
    .act_poster;
	figure{
		border-radius:0;
		border:0;
	}
    .win_top_pic {
     	.pic_load { 
     		border-radius:0;.pt(340*@w); 
			img{ border-radius:0;}
	  	}
    }
	.audio(1);
	.audio_box{ .ml(2%); bottom:10%; }
}
.main { 
	.pl(20*@w); .pr(20*@w); .pb(40*@w);
	.detail { .f(26*@f); .l(38*@px); .pt(20*@px); }
	.comn_tle;
	.act_poster;
	.big_pic { 
		.mt(20*@px);
		.pic_load { .pt(800/600*100%); }
	}
	.tle_bg{
		.mb(20*@px);
		background: url(http://i.meilishuo.net/css/images/wap/activity/project/fwtle1.png) no-repeat;
	}
	figcaption { .f(20*@px);
		.like { .right; }
		.heart { background: url("@{pic_url}/images/wap/activity/project/fw_xin.png") no-repeat; 
			background-size: 100%; .left; .mr(4*@px); .mt(2*@px); .h(20*@px); .w(22*@px);
		}
	}
	.pic_box { .clearfix;
		.small_pic { .w(48%); .left; .mt(20*@px);
			.pic_load { .pt(390/290*100%); }	
		}
		.goods_title{
			.mt(20*@px);
			.pl(20*@px);
			.pr(20*@px);
			font-size:1.2rem;
			.l(1.6rem);
			.h(4.8rem);
			.hidden;
		}
		figure {
			&:nth-child(even) { .ml(16*@px); }
		}
	}
	.more { .c; .f(28*@px); .border-1(#bfbfbf); .border-r(10*@px); .l(68*@px); .mt(26*@f); }
}
.s_tle { .fn; .f(22*@f); .fc(#7F3F55); .pt(3%); }
.keywords{ .keyword; .clearfix; .pb(10*@px); 
	a { .ml(0); .mr(3%); }
}
.fw_bot { background-size: 100%; background-color: #EFE7EA;.pl(20*@w); .pr(20*@w); .pb(40*@w); .pr; 
	&:before{ .line; }
	.pic_box { .pt(20*@w); }
}
//活动规则
.rule{ 
	//.border-1(#e6e6e6); 
	.pl(20*@w); 
	.pr(20*@w); 
	.pt(10*@w); 
	.pb(10*@w); 
	.bgc(#ffffff); 
	.f(26*@f); 
}
//优惠券
.coupons{
	.pr;
	.mt(8px);
	.pb(8px);
	.w(100%);
	[class*="coupon"]{
		.i_block;
		.w(30%);
		img{ .w(100%); }
	}
	.coupon0{ .pr; top: 0; left: 3%; }
	.coupon1{ .pa; top: 0; left: 35%; }
	.coupon2{ .pa; top: 0; left: 67%; }
	.get{
		.credit{ .fc(#ffffff); }
		.threshold{ .fc(#f9b0b0); }
	}
	.got{ 
		.credit{ .fc(#404040); }
		.threshold{ .fc(#bababa); }
	}
	.out{ 
		.credit{ .fc(#a6a6a6); }
		.threshold{ .fc(#dfdfdf); }
	}
	p.credit{ .pa; top: 11%; left: 0; .w(100%); .c; .f(16px); span{ .f(25px); } }
	span.threshold{ .pa; top: 51%; left: 0; .w(100%); .c; font-size:10px;}
}
.into_shop{
	.f(20*@f);
	.pl(20*@w); 
	.pr(20*@w);
	.pb(20*@px);
	.bgc(#ffffff);
	.text{
		.bgc(#ffffff);
		.mb(0.5em);
		.w(100%);
		.l(1.5em);
		span.shop_name{ 
			.block(); 
			.pl(1.7em); 
			.black();
			.ellipsis();
			background: url(http://i.meilishuo.net/css/images/shop/special2/goods_ico_shop.png) no-repeat left center;
			background-size: auto 100%;
		}
		//.clearfix();
	}
	.btn{
		a{ .block(); .border-r(); .c(); .w(100%); .l(2.8em); .bgc(#ff6699); color: #ffffff; }
		a:hover{ color: #ffffff; }
	}

}
.starBox { .star_box; }
//自定义alert样式
.my_alert{
	.f(14px);
	h3{ .f(16px); }
	span{ .l(150%); }
	.validity{ .fc(#ff6699) }
}
.sureBtn{ .f(14px); }
.gotop{
	.none;
	.pf;
	right: 20px;
	.w(80*@w);
	img{
		.w(100%);
	}
}

.rel{.pr;}
.coup{
	.pa;top:0px;right:7%;width: 20%;height: 12%;
	img{.mt(11%);}
}
.couptext{
	font-size: 26*@px;.pa;top:0px;left: 45%;color:#a97d56;padding-top: 4.5%;
}
@import "../footer.less";
