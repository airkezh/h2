<%#head.html%>
<%  var isAdmins = {};
	var nl2br = _extFn.nl2br;
	function linkUrl(str){
		var reg = /((http\:\/\/)?(\w+\.)+(\w{2,3}))\b/g;
		if(reg.test(str)){
			return str.replace(reg , function(a){
				var href = a.replace('http://' , '');	
				return '<a href="http://'+ href +'" target="_blank">' + a + '</a>';
			});
		}
		return str;
	}
%>
