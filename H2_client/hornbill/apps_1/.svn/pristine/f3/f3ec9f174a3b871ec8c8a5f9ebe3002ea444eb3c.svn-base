<%this.goods.tInfo && this.goods.tInfo.forEach(function(v){ %>
<%var goods_title = v.ginfo ? v.ginfo.goods_title : "";%>
<div class="poster_grid poster_wall" twitter_id="<%=v.twitter_id%>" twitter_author_uid="<%=v.twitter_author_uid%>" twitter_source_tid="<%= v.twitter_source_tid%>" twitter_show_type="<%=v.twitter_show_type%>" like_twitter_id="<%=v.like_twitter_id%>">
<%*为了海报之间间距大2px，增加的层%>
	<div class="new_poster">
		<div class="np_pic">
			<%if(v.isShowPrice && v.ginfo){%>
				<div class="price"><%= v.ginfo.goods_price%></div>
			<%}%>
			<a href="/share/<%= v.like_twitter_id %>" target="_blank"><img class="goods_pic" width="<%=v.poster_width%>" height="<%=v.poster_height%>" src="<%= v.show_pic %>" title="<%= goods_title%>" alt="<%= goods_title%>" /></a>

		</div>
		<div class="comm_box">
			<p class="l18_f posterContent"><%= v.twitter_htmlcontent %> <a href="/book/<%= this.catalogid%>">#<%= this.keywords%>#</a></p>
			<p class="comm_num">
				<%if(v.count_forward ){%>
					<span><b><%= v.count_forward %></b> 收进杂志</span>
				<%}%>
				<%if(v.count_like){%>
					<span><b><%= v.count_like%></b> 喜欢</span>
				<%}%>
				<%if(v.count_reply){%>
					<span><b><%= v.count_reply%></b> 评论</span>
				<%}%>
			</p>
		</div>
		<div class="np_share">
			<a class="avatar32_f trans07" href="/person/u/<%= v.uinfo.user_id %>" user_id="<%= v.uinfo.user_id %>" target="_blank"><img src="<%= v.uinfo.avatar_c %>" /></a>
			<p class="ml40_f">
				<a class="fb_f" href="/person/u/<%= v.uinfo.user_id %>" target="_blank">
					<%= v.uinfo.nickname %>
				</a>
				<%= v.repin%> 
			</p>
			<div class="clear_f"></div>
		</div>
	</div>
</div>
<%});%>

