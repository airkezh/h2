/*welcome and dict book page*/
.top100() {
	.box-inset; .auto; .mt(14px); .w(948px); padding: 2px 0;
	.top_con { background: url("@{pic_url}/images/welcome/wlc_top1.png") no-repeat 18px 7px; .box-inset; height: 36px; padding: 7px 0;
		a { .left; .indent; height: 36px; margin-left: 2px; width: 135px;
			&:hover {  background: url("@{pic_url}/images/welcome/wlc_top1.png") no-repeat 18px 44px; }
		}
		.t_hot, .jiaju { width: 127px; }
		.t_hot:hover { background-position: 0 -44px; margin-left: 18px; .inline; width: 109px; }
		.dress:hover { background-position: -113px -44px; }
		.shoes:hover { background-position: -250px -44px; }
		.bag:hover { background-position: -387px -44px; }
		.access:hover { background-position: -524px -44px; }
		.beauty:hover { background-position: -661px -44px; }
		.jiaju:hover { background-position: -798px -44px; }
	}
}

/*排行榜*/
.itemspop() { .mt(10px); 
	li { .h(20px); .l(20px); .mt(5px); .hidden; .pr(10px);
		a { .block; .zoom; }
		.num1, .num2 { .border-r(2px); .c; .white; .f(14px); .fb; .left; .mr(8px); .inline; .w(20px); }
		.num1 { .bgred; }
		.num2 { .common_button > .grayBtn; }
	}   
	.odd_num { background: #f2f0f0; }
}
