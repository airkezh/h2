@import "../block.less";
@import "rules.less";

// wrap
.wrap{
	.pb(10px);
}
// header
.header{background:#fff url('http://d06.res.meilishuo.net/img/_o/b2/26/8b23291c61c1bc6a3afdb84e879d_538_472.cg.png') 55% 0 no-repeat;background-size: 85% 85%;.pr;
	.box{.pa;.c;left:0;top:5%;.w(100%)}
	h3{.fc(#f23456);.f(2.6rem);.fb;.mb(2%)}
	p{.fc(#000);.f(1.5rem);
		span{.bgc(#ffed26);padding:.1rem .6rem;.border-r(100%);.fc(#f23456)}
	}
	img{}
}
// list
.list{.hidden;.w(100%);
	li{
		.w(19%);.left;.ml(10.75%);
		p{.fc(#818181);.f(1.2rem);.mt(5px);.c;.ellipsis;}
		img{.border-r(100%)}
	}
}
// tips
.tips{.mt(5%);
	p{.f(1.3rem);.fc(#000);.l(1.5);.c}
	.line{.w(0);.auto;border:1px dashed #333;.pt(10%);.mt(8px)}
	.circle{.w(8px);.h(8px);.auto;.bgc(#fff);border:1px solid #333;.border-r(100%);.mb(8px)}
}
// btn
.btn{.block;.w(80%);.bgc(#f23456);.c;.f(2rem);.fc(#fff);.l(2.5);.fb;.border-r(30px);.auto;}
// onsale-dialog
.onsale-dialog{background:rgba(0 ,0 ,0 , 0.8);.pf;left:0;top:0;.none;.w(100%);.h(100%);z-index:1000;
}
.share-img{.pf;.none;right:10px;top:0;.w(550*@px); .h(194*@px);.bgc(#331621);z-index:1100;background:url("http://d06.res.meilishuo.net/img/_o/2b/b7/d23087310a1577a9d49453be3df7_626_193.cg.png") 0 0 no-repeat;.bs100;
}