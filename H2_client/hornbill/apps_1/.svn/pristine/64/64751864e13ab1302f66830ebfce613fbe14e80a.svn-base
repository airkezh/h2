@import "../block.less";
@import "../footer.less";
@import "help-block.less";

.help-title;
.main{ .w(888px); margin: 14px auto 20px; padding: 14px 30px 20px; .border-1(#e6e6e6); .bgwhite;}
.help-crumbs{ .f(20px); padding: 24px 0; .yahei;}
.search-info{ .bgc(#f1f1f1); .h(40px); .l(40px); .mt(20px); .pl(10px); .pr(24px); .clearfix;
	p{ .left; .f(14px);}
	a{ .right; .red; .f(14px); .yahei;}
}
//搜索列表
.question-list{ .pt(20px);
	li{ .f(14px); .l(30px); list-style-type:disc; list-style-position:inside;}
}
.to-index{ .pt(30px); .f(14px); .red; .tr; .yahei;
	a{ .red;}
}
.no-results{ .pt(6px); .pt(8px); .pb(30px);
	.sorry{ .left; .w(80px); .h(80px); .border-r(80px); .bgred; .c; .white; .l(80px); .yahei; .f(20px); .mt(-8px);}
	p{ .ml(100px); .l(28px); .break-word;
		.contact-us{ .cursor; .red;}
	}
}

//详情
.help-crumbs-search{ .mt(25px); .mb(15px); .yahei;
	a{ .f(14px); .red; .right;}
	span{ .f(20px);}
}
.help-tit{ .mb(10px);
	.circle-icon{ .left; .mr(8px); .w(4px); .h(4px); .mt(4px); .border-r(4px); .bgc(#666);}
}
.help-cont{ .l(20px); .hidden;}

//公告列表
.notice-list{ .pt(20px);
	li{ .l(30px); list-style-type:disc; list-style-position:inside;
		span{ .ml(10px);}
	}
}

.page;
.pageNav{.page > .pageRed; }
.paging_panel{.pt(10px);.pb(30px);}