@import "../../block.less";
body {.bgc(#FFF);}
img {.w(100%);.block;}
.banner {background:url("@{pic_url}/images/wap/biz/groundnew/topbanner.jpg") no-repeat;background-size:100%;.w(100%);.pt(325*@w);.pb(10*@w);
	.txt {.w(392*@w);.auto;}
	.txt_weixin {.w(271*@w);.auto;}
}
.promise {.c;.f(22*@px);}
.nav_box {.c;.f(22*@px);
	a {padding:0 20*@w;}
	span {.fb;}
}
.buyers_box {.pr;}
.audio {
	&_box {.pa;.w(110*@px);.h(50*@px);bottom:210/320*100%;right:62*@w;.border-r(25px);.bgc(#ffaa05);
		.control_btn {.right;.w(40*@px);.h(40*@px);.border-r(24px);.bgwhite;.mt(5*@px);.mr(5*@px);
			span {.i_block;}
			.start {.w(11*@px);.h(20*@px);.pt(11*@px);.pl(18*@px);}
			.pause {.w(13*@px);.h(17*@px);.pt(12*@px);.pl(14*@px);}
		}
	}
	&_duration {.left;.f(30*@px);.l(25px);.white;.pl(12*@px);}
}
.arrow_right {.pa;.i_block;.w(23*@px);.h(43*@px);right:20*@w;top:138/320*100%;}
.mls_buyers {background:url("@{pic_url}/images/wap/biz/groundnew/buyers.jpg") no-repeat;background-size:100%;.w(100%);.pt(328*@w);.mt(30*@w);}
.flowstep {background:url("@{pic_url}/images/wap/biz/groundnew/flowstep.jpg")no-repeat;background-size:100%;.w(100%);.pt(308*@w);}
.weixin_pay {.c;.l(100%);.pb(50*@w);
	.pic {background:url("@{pic_url}/images/wap/biz/groundnew/weixinpay.jpg")no-repeat;background-size:100%;.w(100%);.pt(385*@w);}
	h3 {.f(24*@px);}
	p {.f(20*@px);}
}
.productContent {padding:0 0 20*@w;}
.productBox {.left;.w(50%);
	.link_box {.block;.border-1(#d9d9d9);margin:20/320*100% 10/320*100% 0;}
	figcaption {padding:10px;.bgwhite;}
}
.pro {
	&Title {.f(22*@px);.h(36px);.l(12px);.hidden;}
	&Price {padding:10px 0;
		.price {.f(30*@px);.red;
			i {.f(28*@px);font-style:normal;.mr(-2px);}
		}
		.orig_price {.f(24*@px);.gray;}
	}
	&Statis {.gray;.f(22*@px);
		.like {.w(20*@px);.h(18*@px);.mr(4px);.left;background:url("@{pic_url}/images/wap/biz/groundnew/like.png")no-repeat;background-size:100%;}
		.num {.right;}
	}
}
.keyword {
	&_nav {padding:0 10*@w;
		li {.left;.w(20%);.c;
			a {.h(30*@px);.l(30*@px);.f(22*@px);.block;.border-1(#ffaa05);.border-r(20px);color:#ffaa05;margin:8%; }
			}
		}
}
.s_banner {.w(600*@w);.auto;.pt(10*@w);.pb(20*@w);}

.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-10px);
	}
	&[status="tap"]{
		background:0 none;
	}
	&[status="stop"]{
		background:0 none;
	}
}
.goods_wall{
	.auto;
}
.starBox{ .star_box;}
.run{
	.block;
}
.jp-jplayer{
	.ml(-1000px);
}
