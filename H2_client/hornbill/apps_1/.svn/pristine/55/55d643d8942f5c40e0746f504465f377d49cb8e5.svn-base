.main {
	background-color: #fff;
	overflow: hidden;
	.form_box;
	min-height: 500px;
}
.no-need-appeal {
	margin-top: 50px;
	text-align: center;

	img {
		display: block;
		margin: 0 auto;
		width: 100px;
		height: 100px;
	}
	&>div {
		margin-top: 20px;
		font-size: 14px;
	}
}
.refund_info {
	padding: 20px;
	width: 600px;
	min-height: 500px;
	float: left;

	.wrap-top {
		background-color: #fffed0;
		padding: 5px 10px;
		border: 1px solid #f9e7a0;
		width: 580px;

		&>p {
			span {
				color: #f69;
			}
		}
		margin-bottom: 10px;
	}
	.wrap-desc {
		margin-left: 10px;
	}
	&>ul {
		.pb(10px);

		&>li {
			.hidden;
			.clearfix();
			margin-top: 10px;

			&>label {
				.w(72px);
				.tr;
				.left;
				&.has-select{
					line-height: 26px;
				}
			}
			input.txt {
				.w(110px);
				.h(23px);
				.l(23px);
				.border-1(@color: #d2d2d2);
				padding: 0 5px;
				color: #666;
			}
			.reason-tip {
				margin-left: 6em;
				color: #f69;

				p {
					line-height: 25px;
				}
			}
			.tips {
				margin-left: 6em;

				ul>li {
					list-style-type: disc;
					list-style-image: inherit;
					line-height: 25px;
					color: #999;
				}
			}
			.other-reason-wrap {
				margin-top: 10px;
				textarea{
					margin-left: 70px;
				}
			}
			&.one-line {
				padding: 15px 15px;
			}
			&>div {
				&>label {
					margin-top: 3px;
				}
			}
		}

		&>li.lh-28{
			line-height: 28px;
		}
		&>li.lh-27{
			line-height: 27px;
		}
		textarea {
			.w(300px);
			color: #666;
			.f(12px);
			.h(60px);
			border: 1px solid #d2d2d2;
			padding: 5px;
		}
	}
	.money-max {
		color: #999;
		margin-left: 5px;
	}
	.submit, .cancel {
		.border-r(@radius: 3px);
		margin: 10px 5px 0;
		.f(14px);
		.cursor;
	}
	.submit {
		.w(96px);
		.h(30px);
		border: 0;
		.bgred;
		.white;
	}
	.cancel {
		.w(94px);
		.h(28px);
		.border-1(@color: #c5c5c5);
		.bgc(#f2f2f2);
		color: #666;
	}
	.wrap-desc {
		color: #f69;
		margin-top: 10px;

		.rules {
			margin-left: 30px;
			color: #999999;
		}
	}
	.wrap-btn {
		text-align: left;
	}

	//上传图片
	.upload-wrap {

		.ntBdaolpu {
			float: left;
			margin-right: 10px;
		}
		.pic {
			width: 70px;
			height: 70px;
			float: left;
			margin-right: 5px;
			margin-bottom: 5px;
			border-radius: 5px;
			overflow: hidden;
		}
		.addBtn {
			width: 70px;
			height: 70px;
			background: url("@{pic_url}/images/hirra/upload-cross.png") no-repeat;
			background-size: 100%;
		}
		input {
			height: 70px;
		}
	}
}