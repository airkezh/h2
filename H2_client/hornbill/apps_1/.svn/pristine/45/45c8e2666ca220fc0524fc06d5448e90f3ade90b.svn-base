@import "sq.less";

.frame;
.slide;
.header;.header > .a;

.findPwd {
	// .mt(@header_top);
	fieldset { 
		form{
			padding:40*@px 20*@px;
			p{.mb(20*@px);}
			p, .checkBox, .captchaBox{
				input{.f(160%);.common_input;.w(96%);.bs;}
				.title{.f(160%);}
			}
			.checkBox{
				input{.w(50%);}
			}
			.checkImage{
				.pa;.inline;.w(148px);.ml(8px);
				span{.left;.l(36px);.h(36px);.mr(8px);.cursor;.f(140%);}	
			}
			.captchaBox{
				input{.w(40%);}
				.timeBox{.f(160%);.ml(10px);.cursor;}
			}
			.errorMessage{.red;.mt(40*@px);.c;.f(160%);}
			.submitBox {.mt(40*@px);.hidden;
				.button{.common_button; .common_button > .redBtn; .border-n; .f(200%);.fb;.w(100%);padding:20*@px;}
				a.button{.pl(0);.pr(0);.c;}
			}
		}
	}
}
