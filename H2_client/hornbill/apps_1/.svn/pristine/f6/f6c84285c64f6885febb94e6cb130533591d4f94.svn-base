@import "core/atom";
/*修改订单信息API*/
.goods_info_wrapper{
	.clearfix;.bgc(#ffffff);
	.goods_info_panel{
		.left();.w(250px);.pb(40px);.bgc(#ffffff);text-align: left;
		.panel_item{
			.clearfix;.block;.mb(10px);
			.panel_item_name{
				.left();.fc(#a0a0a0);.w(55px);.f(12px);.l(20px);text-align: right;
			}
			.panel_item_dd{
				.ml(65px);
				.panel_item_ul{
					.clearfix;
					.panel_item_list{
						.left;.mr(10px);.mb(10px);.border-1(#d2d2d2);.w(auto);min-height: (16px);.l(16px);
						padding:1px 10px;cursor: pointer;text-align: left;word-break:break-all;overflow:hidden;text-overflow:ellipsis;
						.panel_item_list_img{
						}
					}
					.panel_item_list:hover{
						border-color:#cccccc;
					}
					.panel_item_list_active:hover{
						border-color: #ff6699;
					}
					.panel_item_list_image{
						.w(44px);.h(44px);padding:2px;
					}
					.panel_item_list_active{
						border:2px solid #ff6699;
					}
					.panel_item_list_active.panel_item_list{padding:0px 9px;}
					.panel_item_list_active.panel_item_list_image{padding:1px;}
					.panel_item_list_disable{
						.fc(#e6e6e6);border: 1px dashed #e6e6e6;cursor: not-allowed;opacity:.8;
					}
				}
			}
			.panel_item_price_preview{
				.l(20px);
			}
		}
		.panel_item_footer{
			.pa();.pb(0px);.mb(0px);bottom:20px;text-align: left;
			.panel_button{
				.w(84px);.h(28px);.border-1(#ff6699);cursor:pointer;outline: none;
			}
			.panel_button_submit{
				.bgc(#ff6699);.fc(#ffffff);.ml(65px);
			}
			.panel_button_cancel{
				.bgc(#ffffff);.fc(#ff6699);.ml(10px);
			}
		}
	}
	.goods_info_preview{
		.right();.w(160px);.pr(30px);.pl(10px);.bgc(#ffffff);text-align: right;
		.goods_info_preview_img{
			.w(170px);.h(auto);
		}
	}
}