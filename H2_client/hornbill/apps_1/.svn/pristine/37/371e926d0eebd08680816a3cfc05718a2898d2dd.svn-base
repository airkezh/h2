/*
*/
@import "atom.less";
@import "window.less";

.main {
  width: 960px;
  margin: auto;
}

.title {
  height: 50px;
  line-height: 50px;

  h2 {
    margin-top: 2px;
    font-size: 24px;
    text-align: center;
  }
}

.title, .title h2 {
  border-style: solid;
  border-color: #ddd;
  border-width: 1px 0;
  box-shadow: 0 1px #fff inset,0 1px 0px #fff;
  -webkit-box-shadow: 0 1px #fff inset,0 1px 0px #fff;
}

.tip {
  min-height: 81px;
  margin-top: 15px;
  background-color: #fff;
  border-radius: 4px;
  -webkit-box-shadow: rgba(34, 25, 25, 0.2) 0px 1px 3px;
  box-shadow: 0 1px 3px rgba(34, 25, 25, 0.2);
  
  img {
    float: left;
  }

  .desc {
    padding: 20px;
    line-height: 1.3;
    font-size: 16px;
  }
}

.sec-head {
  margin-top: 14px;
  padding-bottom: 10px;
  font-size: 20px;
}

/* 列表 */
.lists {
  margin-top: 14px;
  font-size: 24px;

  .more {
    float: right;
    margin-top: 8px;
    font-size: 12px;
    color: #999;
  }

  .list {
    margin-top: 14px;
    padding-bottom: 5px;
  }

  .bd {
    overflow: hidden;
  }

  .item {
    float: left;
    width: 228px;
    margin: 14px 6px 0;
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0 1px 3px rgba(34, 25, 25, 0.2);
    -webkit-box-shadow: rgba(34, 25, 25, 0.2) 0px 1px 3px;

    .hd {
      padding: 10px 13px 0;
    }

    h3 {
      height: 21px;
      font-size: 14px;
      .ellipsis;
    }

    .num {
      float: right;
      font-size: 14px;
      color: #999;
    }

    .pic-wrap {
      display: block;
      margin-top: 8px;
      padding: 0 14px;
    }

    .ft {
      margin-top: 8px;
      padding: 8px 14px;
      background-color: #ffecef;
      text-align: center;
    }

    /* 关注按钮 */
    .btn {
      width: 101px;
      height: 32px;
      line-height: 27px;
      margin: auto;
      background: url(http://stc-tx.meiliworks.com/css/images/person/en_follow.png) 0 0 no-repeat;
      border: 0;
      font-size: 14px;
      color: #fff;
      text-align: center;
    }
  }

  .first {
    margin-left: 0;
  }

  .last {
    margin-right: 0;
  }
}

//海报墙
.wall {
  overflow: hidden;

  .column {
    float: left;
    margin: 0 6px;
  }

  .first {
    margin-left: 0;
  }

  .last {
    margin-right: 0;
  }
}

//海报
.poster {
  width: 226px;
  margin-top: 14px;
  background-color: #fff;
  box-shadow: 0 1px 3px rgba(34, 25, 25, 0.2);
  -webkit-box-shadow: rgba(34, 25, 25, 0.2) 0px 1px 3px;
  border-radius: 4px;

  .bd {
    padding: 13px 13px 0;
  }

  .info {
    padding: 8px 0;
  }

  .ft {
    background-color: #f9f9f9;
    padding: 10px 13px;
    border-bottom: 1px solid #ddd;
  }

  .avatar {
    float: left;
  }

  .content {
    margin-left: 37px;
    line-height: 1.5;

    span {
      color: #999;
    }

    a {
      color: #666;
      padding: 0 3px;
    }
  }

  .nickname {
    font-weight: bold;
    padding-right: 4px;
  }
}

//『查看更多』按钮

.big-btn, .big-btn-r {
  background: url(http://imgtest.meiliworks.com/css/images/header/btn_pic.png) no-repeat scroll 0 0 transparent;
}

.big-btn {
  position: relative;
  display: block;
  width: 130px;
  height: 40px;
  margin: 20px auto;
  line-height: 38px;
  padding-left: 6px;

  color: #fff;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  cursor: pointer;

  &:hover {
    color: #fff;
  }

  .big-btn-r {
    background-position: -394px 0;
    height: 40px;
    position: absolute;
    right: -6px;
    top: 0;
    width: 6px;
  }
}

//头像悬浮框
.face_pop { .window > .head_float; }

.red_follow,.pink_follow{
  background:url("http://i.meilishuo.net/css/images/header/mls_global140607.png") no-repeat;text-align:center;display:inline-block;line-height:31px;cursor:pointer;font-size:14px;font-weight:bold;height:30px;width:102px;
}
.red_follow{background-position:-143px -268px;color:#ffffff;}.red_follow:hover{color:#ffffff;}
.pink_follow{background-position:-143px -304px;color:#ff6699;}