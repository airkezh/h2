@import "md.less";
.ios_simple;

.pullUp{
	.pullUpDown > .common;.pullUpDown > .loading;
	&:before{
		.nowrap;
		.ml(-10px);
	}
	&[status="tap"]{
		background:0 none;	
		/*
		&:before{
			content:"上拉看更多..."	
		}
		*/
	}
	&[status="stop"]{
		background:0 none;	
		.h(2px);
		/*
		&:before{
			content:"木有了...";	
		}
		*/
	}
}

.chan_goods_wrap{
	border-top:1px solid rgba(0,0,0,0.05);border-bottom:1px solid rgba(0,0,0,0.05);.mb(20*@px);
	.chan_goods{.pt(40*@px);.pb(40*@px);.pl(30*@px);.pr(30*@px);.bgwhite;
		dl{
			dt{.left;.w(80/620*100%);.h(80/620*100%);
				img{.border-r(50%);border:1px solid rgba(0,0,0,0.03);}
   		    }
   		    dd{.pl(106/620*100%);.l(40*@px);.fc(#272727);.f(28*@px);}
   		    .preslae_brand{.pr;.pb(30*@px);.f(24*@px);
   		    		.preslae_brand_pri{.i_block;.pa;right:0px;top:5.5px;.f(28*@px);.w(130*@px);.h(54*@px);.l(54*@px);background: #d61213;.fc(#fff);.c;}
   		    }
		}
	}
}

.origin_wrap{
	.mb(20*@px);border-bottom:1px solid rgba(0,0,0,0.05);
	.origin_goods{.pt(40*@px);.pb(40*@px);.pl(30*@px);.pr(30*@px);.bgwhite;
		dl{
			dt{.left;.w(80/620*100%);.h(80/620*100%);
				img{.border-r(50%);border:1px solid rgba(0,0,0,0.03);}
   		    }
   		    dd{.pl(106/620*100%);.l(40*@px);.fc(#272727);.f(28*@px);}
   		    .origin{
				.pl(106/620*100%);.pb(30*@px);.f(24*@px);
			}
		}
	}
}

.classify_wrap{.mt(-5px);}
