@import "../../atom.less";

.target{
	border-radius: 10px;
	box-sizing: border-box;
	-webkit-box-sizing: border-box;
	position: relative;
	width: 3.2rem;
	height: 3.2rem;
	margin: 3rem 1.6rem 1rem;
	border: 0.1rem solid white;
}
.countDown{
	font-size: 1rem;
	left:1.2rem;
	top:1rem;
	color: pink;
	text-shadow: 0 0 5px white;
}
.core{
	color: pink;
	text-shadow: 0 0 5px white;
	font-size: 1rem;
	top: 1.1rem;
	width: 3.2rem;
	text-align: center;
}
.ck{
	position: fixed;
	bottom: 0.2rem;
	width: 100%;
	text-align: center;
	padding: 1rem 0;
	.f(0.48rem);
	color: pink;
	.bgc(rgba(255, 255, 255, 0.5));
}



