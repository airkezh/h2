.calendar_simple(){
	.calendarBox{
		.block;.mt(14px);.h(228px);.common_shadowBox;.hidden;
		img { .h(228px); }
	}
}
.calendar(){
	.calendarArea{
		.w(978px);.auto;.mt(14px);
	}
	.calendarBox{
		.mt(14px);.h(290px);.pr;
		.common_shadowBox;
		background: url("@{pic_url}/images/person/pg_bg2.gif");
		.calendar{.left;
			.bgwhite;
			.w(336px);padding:14px 20px;.h(262px);.l(22px);
			.month span{.pa;right:0px;}
			.week,.day{
				span{.w(64% / 7);.ml(16% / 7);.mr(16% / 7);.c;.left;}
			}
			.month,.week{
				.h(26px);.l(26px);
				.pr;
			}
			.day{
				.h(40px);.l(40px);
				border-top:1px solid #ddd;	
				.tomorrow, .acted:hover, .show, .comming samp{
					background: url("@{pic_url}/images/wap/activity/season/tomorrow2.gif") no-repeat -51px 5px;
				}
				.acted, .tomorrow{
					.cursor;	
				}
				.acted{
					.red;
					.bp(51px,5px);
				}
				.show{cursor:default;}
				.tomorrow{
					.fc(#666);
					.bp(-51px,5px);
				}
				.acted:hover, .show{
					.fc(#fff);
					.bp(0px,5px);
				}
				.calImg{.pa;right:0px;top:0px;.w(570px);.h(290px);.none;
					.img{.h(100%);}
				}
				.comming{
					cursor:default;
					samp{
						.h(196px);.w(196px);
						.pa;top:0px;right:0px;
						.bp(0px,-44px);	
					}
				}
			} 
		}
	}	
}
