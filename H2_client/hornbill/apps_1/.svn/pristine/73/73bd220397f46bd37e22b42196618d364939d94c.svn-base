@import "../block.less";
@import "rules.less";

// wrap
.wrap{
	.pb(10px);
}
// header
.header{background:#fff url('http://d05.res.meilishuo.net/img/_o/bf/83/ef5d436943e68706ba2bb299b8ef_640_560.cf.png') 0 0 no-repeat;background-size: 100% 100%;.pr;.pt(88%);
	.box{.pa;.c;left:0;top:6%;.w(100%)}
	h3{.fc(#f23456);.f(2.6rem);.fb;.mb(2%)}
	p{.fc(#000);.f(1.7rem);
		span{.bgc(#ffed26);padding:.1rem .6rem;.border-r(100%);.fc(#f23456)}
	}
	img{.w(80%);.pa;left:12%;top:3%;}
}
// tips
.tips{.mt(5%);
	p{.f(1.5rem);.fc(#000);.l(1.5);.c}
	.line{.w(0);.auto;border:1px dashed #333;.pt(10%);.mt(8px)}
	.circle{.w(8px);.h(8px);.auto;.bgc(#fff);border:1px solid #333;.border-r(100%);.mb(8px)}
}
// btn
.btn{.block;.w(80%);.bgc(#f23456);.c;.f(2rem);.fc(#fff);.l(2.5);.fb;.border-r(30px);.auto;}
