.filter_nav{
  .pf;
  .w(12.5%);
  right: 20px;
  z-index: 100;
  bottom:-100px;
  -webkit-transform: translateZ(0);
}
.filter_nav .item{
  .opacity(0);.pa;z-index: 99;top:0;left:0;
  -webkit-transform: rotateZ(0deg) translate(0, 0);
  -webkit-transition: all .6s ease-out;
  .w(100%);
  .pt(100%);
  max-height:500px;
  span{
       .w(100%);
       .pt(100%);
      .block;
      .mt(-100%);
     border-radius: 50%;
       i{
          font-style: normal;
          .mt(-40%);
          .block;.c;.fc(#fd6699);
       }
   }
}
.cloth span{
   background: white url('http://i.meilishuo.net/css/images/wap/tuan/cloth1.png') no-repeat 50% 20%;
   background-size: 40%;
}
.shoe span{
   background: white url('http://i.meilishuo.net/css/images/wap/tuan/shoe1.png') no-repeat 50% 20%;
   background-size: 40%;
}
.bag span{
   background: white url('http://i.meilishuo.net/css/images/wap/tuan/bag1.png') no-repeat 50% 20%;
   background-size: 40%;
}
.jewelry span{
   background: white url('http://i.meilishuo.net/css/images/wap/tuan/jewelry1.png') no-repeat 50% 20%;
   background-size: 40%;
}
.all span{
    background: white url('http://i.meilishuo.net/css/images/wap/tuan/all1.png') no-repeat 50% 20%;
    background-size: 40%;
}
.filter_nav_show .cloth{
  .opacity(100);
  -webkit-transform:rotateZ(270deg) translate(0, -140px);
   span{
    -webkit-transform:rotateX(0deg) rotateZ(90deg);
  }
}
.filter_nav_show .shoe{
  .opacity(100);
  -webkit-transform:rotateZ(292.5deg) translate(0, -140px);
   span{
    -webkit-transform:rotateZ(67.5deg);
  }
}
.filter_nav_show .bag{
 .opacity(100);
  -webkit-transform:rotateZ(315deg) translate(0, -140px);
   span{
    -webkit-transform:rotateZ(45deg);
  }
}
.filter_nav_show .jewelry{
  .opacity(100);
  -webkit-transform:rotateZ(337.5deg) translate(0, -140px); 
   span{
    -webkit-transform:rotateZ(22.5deg);
  }
}
.filter_nav_show .all{
  .opacity(100);
  -webkit-transform: rotateZ(360deg) translate(0, -140px);
  span{
    -webkit-transform:rotateY(0deg) rotateZ(0deg);
  }
}
.show_filter{
  z-index: 101;
  -webkit-transition: all 0.6s ease-out;
  .w(100%);.pr;.pt(100%);
  opacity:.7;
}
.masklayer{
  .w(100%);.pf;
  left:0;
  top:0;  
  z-index:90;  
 }
 .mask{
  .bgc(rgba(83,83,83,.3)); 
  -webkit-transition: background .6s ease-out;  
 }
 .filter{
  background: url('http://i.meilishuo.net/css/images/wap/tuan/filter.png') no-repeat;
  background-size: 100%;
 }
.filtered{
     background:url('http://i.meilishuo.net/css/images/wap/tuan/filtered.png') no-repeat;
     background-size:100%;
 }
 .close{
     background:url('http://i.meilishuo.net/css/images/wap/tuan/close.png') no-repeat;
     background-size:100%;
    -webkit-transform:rotateX(0deg) rotateY(0deg) rotateZ(180deg);
     -webkit-transition: all .6s ease-out;
 }

 @media only screen and (min-width: 500px) { /*当屏幕尺寸大于500px时，应用下面的CSS样式*/
    .filter_nav_show .cloth{
    .opacity(100);
    -webkit-transform: rotate(270deg) translate(0, -230px) translateZ(0);
     span{
      -webkit-transform: rotate(90deg);
    }
  }
  .filter_nav_show .shoe{
    .opacity(100);
    -webkit-transform: rotate(292.5deg) translate(0, -230px) translateZ(0);
     span{
      -webkit-transform: rotate(67.5deg);
    }
  }
  .filter_nav_show .bag{
   .opacity(100);
    -webkit-transform: rotate(315deg) translate(0, -230px) translateZ(0);
     span{
      -webkit-transform: rotate(45deg);
    }
  }
  .filter_nav_show .jewelry{
    .opacity(100);
    -webkit-transform: rotate(337.5deg) translate(0, -230px) translateZ(0); 
     span{
      -webkit-transform: rotate(22.5deg);
    }
  }
  .filter_nav_show .all{
    .opacity(100);
    -webkit-transform: rotate(360deg) translate(0, -230px) translateZ(0);
    span{
      -webkit-transform: rotate(0deg);
    }
  }
}