@import "block.less";

.frame;
.secendNav;//二级
.navBan;
.foot;
.sliderBanner;
.banner-slider-point{.none;}

.slide;

body{.bgc(#f4f1f0);}
.header{ .pr;}
.wrapper{
	.mt(66*@px);
	h3{clear:both;.left;.ml(20*@px);.h(50*@px);.w(105*@px);.mt(38/2*@px);.mb(38/2*@px);
		background-size:100%;background-repeat:no-repeat;
		&+a{.right; .l(88*@px);.f(160%);.fc(#000);.mr(20*@px);
			&:after{
				content:">";
				.fc(@red);	
				.ml(8*@px);
			}
		}
	}	
	nav{
		clear:both;
		border-top:1px solid #d2d0cf;
		border-bottom:1px solid #d2d0cf;
		.bgwhite;
		min-height:250*@px;

		img{.w(180*@w);max-width:180*@px;.left;.mr(10*@w);}
		ul{
			.hidden;
			li{.left;.f(140%);.w(78% / 3);.mt(30*@px);.c;
				a{
					.block;.w(100%);.ellipsis;
				}
				&:nth-child(4n+1){
					.tl;.w(22%);
					&:after{
						content:"";
					}
				}	
			}
			&+a{
				.f(160%);.c;.mt(30*@px);
				.red;clear:both;
				.i_block;.l(2);
				&:after{
					content:">";
					.fc(@red);	
					.ml(8*@px);
				}
			}
		}
		
	}
}



